{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "beeraycast",
  "title": "BeeRaycast",
  "description": "Manage your Beeminder goals from Raycast",
  "icon": "beelogo.png",
  "author": "vivgui",
  "license": "MIT",
  "commands": [
    {
      "name": "beeminder",
      "title": "BeeRaycast",
      "description": "Manage your Beeminder goals from Raycast",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.2",
    "date-fns": "^2.29.3",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "preferences": [
    {
      "name": "beeminderApiToken",
      "title": "Personal Auth Token",
      "description": "Your Personal Auth Token for the Beeminder API",
      "type": "password",
      "default": "",
      "required": true
    },
    {
      "name": "beeminderUsername",
      "title": "Beeminder Username",
      "description": "Your Beeminder Username",
      "type": "textfield",
      "default": "",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
