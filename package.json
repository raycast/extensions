{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tap-tempo",
  "title": "tap tempo",
  "description": "gets the bpm your tapping",
  "icon": "extension-icon.png",
  "author": "kyrregjerstad",
  "categories": [
    "Media",
    "Productivity",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "tap",
      "title": "tap",
      "description": "",
      "mode": "view",
      "preferences": [
        {
          "name": "decimalPlaces",
          "title": "Decimal Places",
          "description": "Number of decimal places to show in BPM",
          "type": "dropdown",
          "required": false,
          "default": "1",
          "data": [
            {
              "title": "0",
              "value": "0"
            },
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            }
          ]
        },
        {
          "name": "smoothingFactor",
          "title": "Smoothing",
          "description": "How much to smooth BPM values",
          "type": "dropdown",
          "required": false,
          "default": "mid",
          "data": [
            {
              "title": "None",
              "value": "none"
            },
            {
              "title": "Low",
              "value": "low"
            },
            {
              "title": "Medium",
              "value": "mid"
            },
            {
              "title": "High",
              "value": "high"
            }
          ]
        },
        {
          "name": "tempoChangeThreshold",
          "title": "Tempo Change Sensitivity",
          "description": "How sensitive the app is to tempo changes",
          "type": "dropdown",
          "required": false,
          "default": "mid",
          "data": [
            {
              "title": "High Sensitivity",
              "value": "low"
            },
            {
              "title": "Medium Sensitivity",
              "value": "mid"
            },
            {
              "title": "Low Sensitivity",
              "value": "high"
            }
          ]
        },
        {
          "name": "pauseThreshold",
          "title": "Pause Duration",
          "description": "How long of a pause indicates a potential tempo change",
          "type": "dropdown",
          "required": false,
          "default": "mid",
          "data": [
            {
              "title": "Short",
              "value": "low"
            },
            {
              "title": "Medium",
              "value": "mid"
            },
            {
              "title": "Long",
              "value": "high"
            }
          ]
        },
        {
          "name": "resetAfterPause",
          "title": "Reset After Pause",
          "description": "Whether to reset calculations after a long pause",
          "type": "checkbox",
          "required": false,
          "default": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.96.3",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^3.1.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish",
    "test": "vitest"
  }
}
