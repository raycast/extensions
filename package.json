{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github-highlight-blocks",
  "title": "GitHub Highlight Blocks",
  "description": "Generates a GitHub-markdown flavored highlight block to add to documents, pull requests, and issues.",
  "icon": "extension-icon.png",
  "author": "SamSpencer",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Highlight Block",
      "description": "Replaces selected text or clipboard content with a GitHub-flavored markdown highlight block using one of the predefined styles accepted by GitHub.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "highlightStyle",
          "type": "dropdown",
          "placeholder": "Highlight Style",
          "required": true,
          "data": [
            {
              "title": "Note",
              "value": "NOTE"
            },
            {
              "title": "Tip",
              "value": "TIP"
            },
            {
              "title": "Important",
              "value": "IMPORTANT"
            },
            {
              "title": "Warning",
              "value": "WARNING"
            },
            {
              "title": "Caution",
              "value": "CAUTION"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.66.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
