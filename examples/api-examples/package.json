{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "api-examples",
  "title": "API Examples",
  "description": "A collection of examples to explore the Raycast API.",
  "icon": "command-icon.png",
  "license": "MIT",
  "author": "raycast",
  "platforms": ["Windows", "macOS"],
  "commands": [
    {
      "name": "markdown",
      "title": "Markdown",
      "description": "Render markdown in a detail view.",
      "keywords": [
        "detail"
      ],
      "mode": "view"
    },
    {
      "name": "javascript",
      "title": "JavaScript",
      "description": "Write commands with JavaScript.",
      "mode": "no-view"
    },
    {
      "name": "static-list",
      "title": "Static List",
      "description": "List the contents of the Downloads directory.",
      "mode": "view"
    },
    {
      "name": "state",
      "title": "State Handling",
      "description": "The classic counter example.",
      "mode": "view"
    },
    {
      "name": "actions",
      "title": "Actions",
      "description": "Use built-in or custom actions.",
      "mode": "view"
    },
    {
      "name": "notifications",
      "title": "Notifications",
      "keywords": [
        "toast",
        "hud"
      ],
      "description": "Show toasts and HUDs to notify users about updates.",
      "mode": "view"
    },
    {
      "name": "form",
      "title": "Form",
      "description": "Use forms to ask for user input, ranging from text to dates.",
      "mode": "view"
    },
    {
      "name": "typeahead-search",
      "title": "Typeahead Search",
      "description": "Use custom filtering for a typeahead search.",
      "mode": "view"
    },
    {
      "name": "navigation",
      "title": "Navigation",
      "description": "Use navigation to switch between views with push and pop actions.",
      "mode": "view"
    },
    {
      "name": "script",
      "title": "Script",
      "description": "Use JavaScript to build commands without a separate view.",
      "mode": "no-view"
    },
    {
      "name": "preferences",
      "title": "Preferences",
      "description": "Use preferences to make your extensions customizable.",
      "mode": "view",
      "preferences": [
        {
          "name": "required-password",
          "type": "password",
          "required": true,
          "title": "Password",
          "description": "Your secure password",
          "placeholder": "Enter your secure password"
        },
        {
          "name": "name",
          "type": "textfield",
          "required": false,
          "title": "Name",
          "description": "Your name",
          "default": "Raycast"
        },
        {
          "name": "rememberInput",
          "type": "checkbox",
          "required": false,
          "title": "Misc",
          "label": "Remember Input",
          "default": true,
          "description": "Indicates whether form input should be stored"
        },
        {
          "name": "addSignature",
          "type": "checkbox",
          "required": false,
          "title": "",
          "label": "Add signature",
          "description": "Indicates whether a signature should be added"
        },
        {
          "name": "favoriteColor",
          "type": "dropdown",
          "required": false,
          "title": "Favorite Color",
          "data": [
            {
              "title": "Red",
              "value": "red"
            },
            {
              "title": "Green",
              "value": "green"
            },
            {
              "title": "Blue",
              "value": "blue"
            }
          ],
          "description": "Your favorite color",
          "default": "blue"
        }
      ]
    },
    {
      "name": "icons",
      "title": "Icons",
      "description": "Use different APIs to add built-in and bundled icons.",
      "mode": "view"
    },
    {
      "name": "app-picker",
      "title": "App Picker",
      "description": "Raycast smoke test",
      "mode": "view",
      "preferences": [
        {
          "name": "link",
          "type": "textfield",
          "required": false,
          "title": "Link",
          "description": "Link",
          "placeholder": "Link",
          "default": "https://duckduckgo.com/?q={Query}"
        },
        {
          "name": "openWithRequired",
          "type": "appPicker",
          "required": true,
          "title": "Open with (required)",
          "description": "Open with",
          "default": "Firefox"
        },
        {
          "name": "openWithOptional",
          "type": "appPicker",
          "required": false,
          "title": "Open with (optional)",
          "description": "Open with",
          "default": "Safari"
        },
        {
          "name": "ignoreValueProperty",
          "type": "appPicker",
          "required": false,
          "title": "Open with (optional, ignore `value`)",
          "description": "`value` property should not be fetched from the manifest file",
          "default": "Safari",
          "value": {
            "name": "Firefox",
            "bundleId": "org.mozilla.firefox",
            "path": "/Applications/Firefox.app"
          }
        }
      ]
    },
    {
      "name": "oauth",
      "title": "OAuth",
      "description": "OAuth integration",
      "mode": "view"
    },
    {
      "name": "oauth-no-view",
      "title": "OAuth (no-view)",
      "description": "OAuth integration with no-view mode",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.94.0",
    "@raycast/utils": "^1.19.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist"
  }
}
