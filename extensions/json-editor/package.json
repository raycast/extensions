{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "json-editor",
  "title": "JSON Editor",
  "description": "All JSON operations in one editor.",
  "icon": "command-icon.png",
  "author": "HerbertLu",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "edit-json",
      "title": "Edit JSON",
      "description": "Edit JSON object like filtering fields",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "json-ts": "^1.6.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
