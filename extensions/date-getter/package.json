{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "date-getter",
  "title": "Date Getter",
  "description": "Getting a formatted date in your clipboard",
  "icon": "command-icon.png",
  "author": "See2et",
  "categories": [
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "get-date",
      "title": "Get Date",
      "description": "Getting a formatted date in your clipboard",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "moment": "^2.29.4"
  },
  "preferences": [
    {
      "name": "format",
      "type": "textfield",
      "required": true,
      "title": "Date Format",
      "default": "YYYY-MM-DD",
      "description": "You can change date format as you like: YY/MM/DD"
    }
  ],
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
