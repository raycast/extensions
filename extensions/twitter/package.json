{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "twitter",
  "title": "Twitter",
  "description": "Send and search Tweets",
  "icon": "twitter.png",
  "author": "tonka3000",
  "contributors": [
    "peduarte"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "timeline",
      "title": "Recent Tweets",
      "subtitle": "Twitter",
      "description": "Show Twitter timeline",
      "mode": "view"
    },
    {
      "name": "mytweets",
      "title": "My Recent Tweets",
      "subtitle": "Twitter",
      "description": "Show My Tweets",
      "mode": "view"
    },
    {
      "name": "send",
      "title": "Send Tweet",
      "subtitle": "Twitter",
      "description": "Send a tweet",
      "mode": "view"
    },
    {
      "name": "user_search",
      "title": "Search User",
      "subtitle": "Twitter",
      "description": "Search Twitter User",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientid",
      "type": "password",
      "title": "OAuth Client ID",
      "required": true,
      "default": "",
      "description": "X OAuth Client ID From Your X Application"
    },
    {
      "name": "appkey",
      "type": "password",
      "title": "API-key",
      "required": false,
      "default": "",
      "description": "Twitter API API-key"
    },
    {
      "name": "appsecret",
      "type": "password",
      "title": "App secret",
      "required": false,
      "default": "",
      "description": "Twitter API App secret"
    },
    {
      "name": "accesstoken",
      "type": "password",
      "title": "Access token",
      "required": false,
      "default": "",
      "description": "Twitter API access token"
    },
    {
      "name": "accesssecret",
      "type": "password",
      "title": "Access secret",
      "required": false,
      "default": "",
      "description": "Twitter API access secret"
    },
    {
      "name": "listwithdetail",
      "type": "checkbox",
      "label": "Show Tweets inside a Tweets List",
      "required": false,
      "default": true,
      "title": "List Behavior",
      "description": "Show Tweets inside a Tweets List directly"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.62.0",
    "@raycast/utils": "^1.10.1",
    "node-fetch": "^3.0.0",
    "twitter-api-v2": "^1.16.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "eslint": "^7.32.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix"
  }
}
