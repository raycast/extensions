{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "my-daily-log",
  "title": "My Daily Log",
  "description": "Log what you do every day.",
  "icon": "command-icon.png",
  "author": "frugoman",
  "license": "MIT",
  "commands": [
    {
      "name": "dailyLogList",
      "title": "My Daily Log",
      "description": "List of all logs for the current day",
      "mode": "view",
      "arguments": [
        {
          "name": "date",
          "placeholder": "When (y, 2022-12-31)",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "loggedDaysInMonthList",
      "title": "Logged Days of Month",
      "description": "List of all logged days in a given month",
      "mode": "view"
    },
    {
      "name": "createLogCommand",
      "title": "New Log",
      "description": "Log something new",
      "mode": "view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.42.2",
    "@raycast/utils": "^1.4.10",
    "fs": "0.0.1-security",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "preferences": [
    {
      "name": "logPath",
      "title": "Daily Log Path",
      "description": "Path to your daily log",
      "default": "~/Documents/DailyLog",
      "type": "textfield",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
