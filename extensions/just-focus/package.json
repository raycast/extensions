{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "just-focus",
  "title": "Just Focus",
  "description": "Control Just Focus via Raycast.",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "contributors": [
    "jiengup"
  ],
  "categories": [
    "Applications",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "start-pomodoro-timer",
      "title": "Start Pomodoro Timer",
      "subtitle": "Just Focus",
      "description": "Start a pomodoro timer.",
      "mode": "no-view"
    },
    {
      "name": "stop-pomodoro-timer",
      "title": "Stop Pomodoro Timer",
      "subtitle": "Just Focus",
      "description": "Stop current pomodoro timer.",
      "mode": "no-view"
    },
    {
      "name": "take-a-short-break",
      "title": "Take a Short Break",
      "subtitle": "Just Focus",
      "description": "Take a short break.",
      "mode": "no-view"
    },
    {
      "name": "take-a-long-break",
      "title": "Take a Long Break",
      "subtitle": "Just Focus",
      "description": "Take a long break.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.79.1",
    "run-applescript": "^7.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "platforms": [
    "macOS"
  ]
}
