{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "teamgantt",
  "title": "TeamGantt",
  "description": "Finding and creating tasks in TeamGantt",
  "icon": "command-icon.png",
  "author": "knownasilya",
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Tasks",
      "subtitle": "TeamGantt",
      "description": "Performs a search which returns a number of tasks that match",
      "mode": "view"
    },
    {
      "name": "my-tasks",
      "title": "My Tasks",
      "subtitle": "TeamGantt",
      "description": "Return all tasks you are assigned to that have not been completed yet",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "type": "textfield",
      "required": true,
      "title": "ClientID",
      "description": "TeamGantt ClientID",
      "link": "https://app.teamgantt.com/admin/app-clients",
      "placeholder": "abc"
    },
    {
      "name": "clientSecret",
      "type": "password",
      "required": true,
      "title": "ClientSecret",
      "description": "TeamGantt ClientSecret",
      "link": "https://app.teamgantt.com/admin/app-clients",
      "placeholder": "123"
    },
    {
      "name": "username",
      "type": "textfield",
      "required": true,
      "title": "Username/Email",
      "description": "TeamGantt Username/Email",
      "placeholder": "me@mydomain.com"
    },
    {
      "name": "password",
      "type": "password",
      "required": true,
      "title": "Password",
      "description": "TeamGantt Password",
      "placeholder": "********"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.3",
    "got": "^12.6.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "react-devtools": "^4.27.8",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
