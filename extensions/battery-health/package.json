{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "battery-health",
  "title": "Battery Health",
  "description": "Shows live information about the battery in your Mac!",
  "icon": "battery-icon.png",
  "author": "o1y",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Battery Information",
      "description": "Shows current battery health data.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.36.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/plist": "^3.0.2",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "collect.js": "^4.34.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "execa": "^6.1.0",
    "plist": "^3.0.5",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
