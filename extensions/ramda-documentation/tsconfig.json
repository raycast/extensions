{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "include": ["src/**/*", "scripts/**/*"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "target": "ESNext",
    "strict": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  }
}
