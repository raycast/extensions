{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pm2",
  "title": "PM2",
  "type": "module",
  "description": "Advanced, production process manager for Node.js.",
  "icon": "pm2-icon.png",
  "author": "litomore",
  "contributors": [
    "pernielsentikaer"
  ],
  "categories": [
    "Developer Tools",
    "Productivity",
    "System"
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "license": "MIT",
  "commands": [
    {
      "name": "main",
      "title": "PM2 List",
      "description": "List all PM2 processes.",
      "mode": "view"
    },
    {
      "name": "api",
      "title": "PM2 API",
      "description": "Raycast PM2 API command.",
      "mode": "no-view",
      "disabledByDefault": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.78.1",
    "@raycast/utils": "^1.16.1",
    "@types/lodash": "^4.17.4",
    "date-fns": "^3.6.0",
    "execa": "^9.1.0",
    "lodash": "^4.17.21",
    "pm2": "^5.4.1",
    "pty.js": "file:./assets/fake-vendor",
    "raycast-cross-extension": "^0.2.3",
    "term.js": "file:./assets/fake-vendor"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.75",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4"
  }
}
