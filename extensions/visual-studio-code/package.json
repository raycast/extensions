{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "visual-studio-code",
  "title": "Visual Studio Code",
  "description": "Trigger Commands, Manage or Install Extensions from Visual Studio Code",
  "icon": "icon.png",
  "author": "tonka3000",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "commandpalette",
      "title": "Commands",
      "description": "Show Commands of the VSCode Command Palette",
      "mode": "view"
    },
    {
      "name": "extensions",
      "title": "Show Installed Extensions",
      "description": "Manage Installed Extensions",
      "mode": "view"
    },
    {
      "name": "installextension",
      "title": "Install Extension",
      "description": "Install Extensions from the VSCode Marketplace",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "build",
      "type": "dropdown",
      "required": false,
      "title": "Build",
      "default": "Code",
      "description": "Select which build of Visual Studio Code you wanna target",
      "data": [
        {
          "value": "Code",
          "title": "Visual Studio Code"
        },
        {
          "value": "Code - Insiders",
          "title": "Visual Studio Code - Insiders"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.1",
    "@raycast/utils": "^1.4.14"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
