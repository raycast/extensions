{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "create-remix",
  "title": "Create Remix",
  "description": "Create Remix Run Web App using create-remix",
  "icon": "command-icon-remix.png",
  "author": "nuno_costa",
  "categories": [
    "Developer Tools",
    "Web",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Create Remix App",
      "description": "Runs the create-remix cli",
      "mode": "view",
      "arguments": [
        {
          "name": "appName",
          "required": false,
          "placeholder": "my-remix-app",
          "type": "text"
        }
      ],
      "preferences": [
        {
          "name": "packageManager",
          "description": "The package manager used to run create-remix and install dependencies in the project",
          "type": "dropdown",
          "required": true,
          "default": "npm",
          "title": "Preferred package manager",
          "data": [
            {
              "title": "npm",
              "value": "npm"
            },
            {
              "title": "yarn",
              "value": "yarn"
            },
            {
              "title": "pnpm",
              "value": "pnpm"
            }
          ]
        },
        {
          "name": "directory",
          "description": "Directory where the project will be created",
          "type": "directory",
          "required": true,
          "title": "Directory"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.56.3",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
