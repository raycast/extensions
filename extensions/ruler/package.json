{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ruler",
  "title": "Ruler",
  "description": "Measure Distance Between Two Points",
  "icon": "icon.png",
  "author": "anwarulislam",
  "contributors": [
    "thomaslombart"
  ],
  "categories": [
    "Applications",
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "ruler",
      "title": "Ruler",
      "subtitle": "Measure Distance",
      "description": "Measure Distance Between Two Points",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "required": true,
      "name": "dragMode",
      "title": "Drag Mode",
      "description": "By default: Click point A and point B to measure distance",
      "type": "checkbox",
      "label": "Drag point A to point B to measure distance",
      "default": false
    },
    {
      "required": true,
      "name": "copyToClipboard",
      "title": "Copy to Clipboard",
      "description": "Copy the distance to the clipboard",
      "type": "checkbox",
      "label": "Copy the distance to the clipboard",
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.77.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
