{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "toggle-scroll-bars-visibility",
  "title": "Toggle Scroll Bars Visibility",
  "description": "Change scroll bars visibility in macOS.",
  "icon": "extension-icon.png",
  "author": "danulqua",
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "toggle",
      "title": "Toggle Scroll Bars Visibility",
      "description": "Toggles scroll bars visibility between \"Automatic\" and \"Always\".",
      "mode": "no-view"
    },
    {
      "name": "set-automatic",
      "title": "Set Scroll Bars Visibility To \"Automatic\"",
      "description": "Sets scroll bars visibility to \"Automatic\".",
      "mode": "no-view"
    },
    {
      "name": "set-when-scrolling",
      "title": "Set Scroll Bars Visibility To \"When Scrolling\"",
      "description": "Sets scroll bars visibility to \"When Scrolling\".",
      "mode": "no-view"
    },
    {
      "name": "set-always",
      "title": "Set Scroll Bars Visibility To \"Always\"",
      "description": "Sets scroll bars visibility to \"Always\".",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.57.1",
    "@raycast/utils": "^1.9.1",
    "exec-sh": "^0.4.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
