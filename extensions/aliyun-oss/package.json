{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "oss",
  "title": "OSS",
  "description": "Publish the picture in your clipboard to Aliyun oss, and return the URL.",
  "icon": "command-icon.png",
  "author": "yangxy",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Upload Picture",
      "subtitle": "Aliyun OSS",
      "description": "Upload picture from the clipboard.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accessKeyId",
      "title": "Access Key Id",
      "type": "textfield",
      "required": true,
      "description": "Your access key"
    },
    {
      "name": "accessKeySecret",
      "title": "Access Secret",
      "type": "textfield",
      "required": true,
      "description": "Your access secret"
    },
    {
      "name": "bucket",
      "title": "Bucket Name",
      "type": "textfield",
      "required": true,
      "description": "Your bucket name"
    },
    {
      "name": "region",
      "title": "Region",
      "type": "textfield",
      "required": true,
      "placeholder": "oss-cn-hangzhou",
      "description": "Your region"
    },
    {
      "name": "pngpasteFullPath",
      "title": "Pngpaste Full Path",
      "type": "textfield",
      "required": true,
      "description": "Your pngpaste full path",
      "default": "/opt/homebrew/bin/pngpaste"
    },
    {
      "name": "domain",
      "title": "Custom Domain Name",
      "type": "textfield",
      "required": false,
      "placeholder": "https://raycast.com",
      "description": "Your custom domain name"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.28.0",
    "ali-oss": "^6.17.1",
    "dayjs": "^1.10.7",
    "execa": "^6.1.0",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.16.3",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
