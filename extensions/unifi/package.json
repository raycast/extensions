{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "unifi",
  "title": "Unifi",
  "description": "Manage Unifi Controllers",
  "icon": "command-icon.png",
  "author": "tonka3000",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "devices",
      "title": "Devices",
      "description": "Get all Devices",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "controllerUrl",
      "description": "Url of your Unifi Controller",
      "type": "textfield",
      "required": true,
      "title": "Controller Url"
    },
    {
      "name": "username",
      "description": "Username of Local(!) Unifi User. Cloud accounts are not supported.",
      "type": "textfield",
      "required": true,
      "title": "Username"
    },
    {
      "name": "password",
      "description": "Password of Local Unifi User",
      "type": "password",
      "required": true,
      "title": "Password"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.57.0",
    "@raycast/utils": "^1.9.0",
    "unifi-client": "^0.9.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}