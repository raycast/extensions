{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pangu",
  "title": "Pangu",
  "description": "Text spacing for readability: inserts whitespace between CJK and half-width characters (letters, digits, symbols).",
  "icon": "command-icon.png",
  "author": "zcyan",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "text-spacing",
      "title": "Space Text",
      "description": "Inserts whitespace between CJK and half-width characters (letters, digits, symbols).",
      "mode": "no-view",
      "arguments": [
        {
          "name": "text",
          "type": "text",
          "required": false,
          "placeholder": "Text"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.60.1",
    "pangu": "^4.0.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/pangu": "^4.0.1",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
