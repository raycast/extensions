{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "one-time-password",
  "title": "One Time Password",
  "description": "Generate time-based one-time passwords",
  "icon": "icon.png",
  "author": "lachero",
  "contributors": [
    "soulevans07",
    "BalliAsghar",
    "midskyey"
  ],
  "categories": [
    "Security",
    "Productivity"
  ],
  "keywords": [
    "authentication",
    "security",
    "verification",
    "code",
    "token",
    "login",
    "two-factor authentication",
    "OTP"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "one-time-password",
      "title": "One Time Password",
      "subtitle": "Generate time-based one-time passwords",
      "description": "Generate time-based one-time passwords",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "passwordVisibility",
      "description": "Display the generated password in the Raycast window for preview",
      "label": "Toggle password visibility",
      "type": "checkbox",
      "required": true,
      "default": true
    },
    {
      "name": "primaryAction",
      "description": "The primary action to perform on an item.",
      "title": "Primary Action",
      "type": "dropdown",
      "required": false,
      "default": "copy",
      "data": [
        {
          "title": "Copy to Clipboard",
          "value": "copy"
        },
        {
          "title": "Paste to Active App",
          "value": "paste"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^2.2.0",
    "hi-base32": "^0.5.1",
    "jimp": "^0.22.7",
    "jsqr": "^1.4.0",
    "otpauth": "^9.1.1",
    "protobufjs": "^7.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
