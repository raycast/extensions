{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "iterm",
  "title": "iTerm",
  "description": "Control iTerm with Raycast",
  "icon": "command-icon.png",
  "author": "ron-myers",
  "contributors": [
    "flops",
    "papey",
    "jose-elias-alvarez"
  ],
  "license": "MIT",
  "categories": [
    "Applications",
    "Developer Tools",
    "Productivity",
    "System"
  ],
  "commands": [
    {
      "name": "new-iterm-window",
      "title": "New iTerm Window",
      "description": "Launch new window in iTerm",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "Command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "new-iterm-window-profile",
      "title": "New iTerm Window (Profile)",
      "description": "Launch new window in iTerm with selected profile",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "shell command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "new-iterm-tab",
      "title": "New iTerm Tab",
      "description": "Launch new tab in iTerm",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "shell command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "new-iterm-tab-profile",
      "title": "New iTerm Tab (Profile)",
      "description": "Launch new tab in iTerm with selected profile",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "shell command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "split-iterm-horizontally",
      "title": "Split iTerm Horizontally",
      "description": "Split Horizontally",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "shell command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "split-iterm-horizontally-profile",
      "title": "Split iTerm Horizontally (Profile)",
      "description": "Split Horizontally with selected profile",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "shell command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "split-iterm-vertically",
      "title": "Split iTerm Vertically",
      "description": "Split Vertically",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "shell command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "split-iterm-vertically-profile",
      "title": "Split iTerm Vertically (Profile)",
      "description": "Split Vertically with selected profile",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "shell command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "edit-in-iterm",
      "title": "Edit in iTerm",
      "description": "Edit the selected file(s) in iTerm using $EDITOR",
      "mode": "view"
    },
    {
      "name": "edit-in-iterm-profile",
      "title": "Edit in iTerm (Profile)",
      "description": "Edit the selected file(s) in iTerm using $EDITOR with selected profile",
      "mode": "view"
    },
    {
      "name": "open-iterm-here",
      "title": "Open iTerm Here",
      "description": "Open iTerm in the currently selected folder(s)",
      "mode": "view"
    },
    {
      "name": "open-iterm-here-profile",
      "title": "Open iTerm Here (Profile)",
      "description": "Open iTerm in the currently selected folder(s) with selected profile",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "1.65",
    "@raycast/eslint-config": "^1.0.8"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "^18.2.47",
    "eslint": "^8.56.0",
    "prettier": "^3.2.2",
    "typescript": "^5.3.3"
  },
  "pythonDependencies": {
    "iterm2": "2.7"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
