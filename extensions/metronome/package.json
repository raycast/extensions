{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "metronome",
  "title": "Metronome",
  "description": "Based on an input (integer argument) BPM, you can get a metronome that plays a sound after a certain amount of time.",
  "icon": "command-icon.png",
  "author": "Visual-Studio-Coder",
  "categories": [
    "Other",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Start Metronome",
      "subtitle": "Input the desired BPM",
      "description": "Input the desired BPM for a metronome to start ticking.",
      "mode": "view",
      "arguments": [
        {
          "name": "bpm",
          "placeholder": "BPM",
          "type": "text",
          "required": true
        },
        {
          "name": "group",
          "placeholder": "Accents",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@gibme/timer": "^1.0.4",
    "@raycast/api": "^1.57.1",
    "sound-play": "^1.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/sound-play": "^1.1.0",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
