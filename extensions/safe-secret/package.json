{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "safe-secret",
  "title": "Safe Secret",
  "description": "Safely share text over the web",
  "icon": "command-icon.png",
  "author": "melonamin",
  "categories": [
    "Productivity",
    "Security",
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "share-a-secret",
      "title": "Share Secret",
      "subtitle": "SafeSecret",
      "description": "Shares provided input securely over the web",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "serverUrl",
      "type": "textfield",
      "title": "Web Server URL",
      "default": "https://safesecret.info",
      "description": "Enter the URL of your Secrets web service.",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.2",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
