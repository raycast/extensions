{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "world-clock",
  "title": "World Clock",
  "description": "Query the current time of a region, ip or domain.",
  "icon": "command-icon.png",
  "author": "koinzhang",
  "contributors": [
    "ridemountainpig"
  ],
  "keywords": [
    "time",
    "timezone"
  ],
  "categories": [
    "Data",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "query-world-time",
      "title": "Query World Time",
      "description": "Query the current time for a timezone with region.",
      "mode": "view",
      "preferences": [
        {
          "name": "itemLayout",
          "type": "dropdown",
          "description": "Set the layout of the timezone items.",
          "required": false,
          "title": "Timezone Layout",
          "default": "List",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the timezone items. (Only works with Grid layout)",
          "required": false,
          "title": "Timezone Item Columns",
          "default": "6",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "showClock",
          "type": "checkbox",
          "required": false,
          "title": "Advanced Preferences",
          "label": "Show Clock",
          "description": "Show clock in Detail. (Only works with List layout)",
          "default": true
        },
        {
          "name": "rememberTag",
          "type": "checkbox",
          "required": false,
          "label": "Remember Filter Tag",
          "description": "Remember timezone filter tag.",
          "default": true
        }
      ]
    },
    {
      "name": "query-world-time-menu-bar",
      "title": "Menubar World Time",
      "description": "Query the current time of starred timezones from the menu bar.",
      "mode": "menu-bar",
      "interval": "10s",
      "preferences": [
        {
          "title": "Advanced",
          "name": "showFirstTimezone",
          "type": "checkbox",
          "label": "Show First Timezone",
          "description": "Show the first timezone in the menu bar.",
          "required": false,
          "default": true
        }
      ]
    },
    {
      "name": "query-ip-time",
      "title": "Query IP Time",
      "description": "Query the current time based on IP or domain.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Time Format",
      "name": "hour24",
      "type": "checkbox",
      "required": false,
      "label": "Hour 24",
      "description": "24 hour clock",
      "default": true
    },
    {
      "name": "dateFormat",
      "type": "dropdown",
      "required": false,
      "title": "Date Format",
      "description": "Date format",
      "default": "zh",
      "data": [
        {
          "title": "YYYY-MM-DD",
          "value": "zh"
        },
        {
          "title": "MM/DD/YYYY",
          "value": "en"
        },
        {
          "title": "DD/MM/YYYY",
          "value": "en-GB"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.79.1",
    "@raycast/utils": "^1.16.2",
    "axios": "^1.7.2",
    "file-url": "^4.0.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.14.12",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
