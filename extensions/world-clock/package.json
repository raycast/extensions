{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "world-clock",
  "title": "World Clock",
  "description": "Query the current time of a region, ip or domain.",
  "icon": "world-clock.png",
  "author": "koinzhang",
  "categories": [
    "Data",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "query-world-time",
      "title": "Query World Time",
      "icon": "query-world-time.png",
      "description": "Query the current time for a timezone with region.",
      "mode": "view",
      "preferences": [
        {
          "name": "itemLayout",
          "type": "dropdown",
          "description": "Set the layout of the timezone items.",
          "required": true,
          "title": "Timezone Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the timezone items. (Only works with Grid layout)",
          "required": false,
          "title": "Timezone Item Coloums",
          "default": "5",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "showClock",
          "type": "checkbox",
          "required": false,
          "title": "Advanced Preferences",
          "label": "Show Clock",
          "description": "Show clock in Detail. (Only works with List layout)",
          "default": true
        },
        {
          "name": "rememberTag",
          "type": "checkbox",
          "required": false,
          "label": "Remember Filter Tag",
          "description": "Remember timezone filter tag.",
          "default": true
        }
      ]
    },
    {
      "name": "query-world-time-menu-bar",
      "title": "Query World Time",
      "icon": "query-world-time-menu-bar.png",
      "description": "Query the current time of starred timezones.",
      "mode": "menu-bar"
    },
    {
      "name": "query-ip-time",
      "title": "Query IP Time",
      "icon": "query-ip-time.png",
      "description": "Query the current time based on IP or domain.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Time Format",
      "name": "hour24",
      "type": "checkbox",
      "required": true,
      "label": "Hour 24",
      "description": "24 hour clock",
      "default": false
    },
    {
      "name": "dateFormat",
      "type": "dropdown",
      "required": true,
      "title": "Date Format",
      "description": "Date format",
      "default": "zh",
      "data": [
        {
          "title": "YYYY-MM-DD",
          "value": "zh"
        },
        {
          "title": "MM/DD/YYYY",
          "value": "en"
        },
        {
          "title": "DD/MM/YYYY",
          "value": "en-GB"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.10.0",
    "axios": "^1.5.1",
    "file-url": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "~20.2.1",
    "@types/react": "^18.2.23",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
