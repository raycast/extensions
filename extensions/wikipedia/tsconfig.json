{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*",
    "raycast-env.d.ts"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021",
      "dom",
      "ES2021.String"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  }
}
