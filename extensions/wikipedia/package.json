{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "wikipedia",
  "title": "Wikipedia",
  "description": "Search Wikipedia articles and view them",
  "icon": "wikipedia.png",
  "author": "vimtor",
  "contributors": [
    "shubzkothekar",
    "JonathanWbn",
    "nikos",
    "menahishayan",
    "pernielsentikaer"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-page",
      "title": "Search Page",
      "subtitle": "Wikipedia",
      "description": "Search Wikipedia pages by title",
      "mode": "view"
    },
    {
      "name": "random-page",
      "title": "Open Random Page",
      "subtitle": "Wikipedia",
      "description": "Open a random Wikipedia page in browser",
      "mode": "no-view"
    },
    {
      "name": "featured-page",
      "title": "Open Featured Page",
      "subtitle": "Wikipedia",
      "description": "Open today's featured Wikipedia page in browser",
      "mode": "no-view"
    }
  ],
  "categories": [
    "Web",
    "News"
  ],
  "preferences": [
    {
      "name": "zhVariant",
      "title": "Chinese Language Variants",
      "description": "Select the default language variant for the Chinese Wikipedia",
      "required": false,
      "type": "dropdown",
      "data": [
        {
          "title": "臺灣正體",
          "value": "zh-tw"
        },
        {
          "title": "大陆简体",
          "value": "zh-cn"
        },
        {
          "title": "香港繁體",
          "value": "zh-hk"
        },
        {
          "title": "澳門繁體",
          "value": "zh-mo"
        },
        {
          "title": "大马简体",
          "value": "zh-my"
        },
        {
          "title": "新加坡简体",
          "value": "zh-sg"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.2",
    "@raycast/utils": "^1.4.16",
    "got": "^12.5.3"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
