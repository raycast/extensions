{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "email",
  "title": "Email",
  "description": "Generate a random email address",
  "icon": "command-icon.png",
  "author": "Erwan-Martin",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "random",
      "title": "Random",
      "description": "Generate a random email address",
      "mode": "no-view",
      "preferences": [
        {
          "name": "email_domain",
          "title": "Email domain",
          "description": "Domain of the email address (what is after the @)",
          "type": "textfield",
          "default": "gmail.com",
          "required": true
        }
      ]
    },
    {
      "name": "history",
      "title": "History",
      "description": "History of generated email addresses",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "@raycast/utils": "^1.5.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
