{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "merge-pdf",
  "title": "Merge PDF",
  "description": "Merge the selected PDF files into one.",
  "icon": "icon.png",
  "author": "Valde",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Merge PDF",
      "description": "Merge the selected PDF files into one.",
      "mode": "no-view",
      "icon": "icon.png",
      "arguments": [
        {
          "name": "fileName",
          "placeholder": "merged.pdf",
          "required": false,
          "type": "text"
        },
        {
          "name": "deleteOriginalFiles",
          "placeholder": "Delete original files",
          "type": "dropdown",
          "data": [
            {
              "title": "Keep original files",
              "value": "false"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "eslint-config-prettier": "^8.3.0",
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
