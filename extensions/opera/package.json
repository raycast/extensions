{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "opera",
  "title": "Opera",
  "description": "Search open tabs, bookmarks and history in Opera.",
  "icon": "opera-logo.png",
  "author": "crisboarna",
  "categories": [
    "Applications",
    "Developer Tools",
    "Web",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "new-tab",
      "title": "New Tab",
      "subtitle": "Opera",
      "description": "Open a new Opera tab.",
      "mode": "view"
    },
    {
      "name": "search-tab",
      "title": "Search Tabs",
      "subtitle": "Opera",
      "description": "List all tabs and go to the selected.",
      "mode": "view"
    },
    {
      "name": "search-history",
      "title": "Search History",
      "subtitle": "Opera",
      "description": "Search browser history.",
      "mode": "view"
    },
    {
      "name": "search-bookmarks",
      "title": "Search Bookmarks",
      "subtitle": "Opera",
      "description": "Search bookmarks.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "useOriginalFavicon",
      "title": "Fav icon",
      "label": "Extract the favicon from every open tab",
      "description": "Before enable this, you should enable 'View > Developer > Allow JavaScript from Apple Events' in every Opera profile.",
      "required": false,
      "type": "checkbox",
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.13",
    "run-applescript": "6.0.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
