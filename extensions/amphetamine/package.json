{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "amphetamine",
  "title": "Amphetamine",
  "version": "1.0.2",
  "description": "Controls Amphetamine using Raycast",
  "icon": "icon.png",
  "author": "gstvds",
  "license": "MIT",
  "commands": [
    {
      "name": "amp-start",
      "title": "Start New Session",
      "subtitle": "Amphetamine",
      "description": "Start a new default session",
      "mode": "no-view",
      "keywords": [
        "start",
        "amp",
        "amp start",
        "amphetamine",
        "ampstart"
      ]
    },
    {
      "name": "amp-end",
      "title": "End Current Session",
      "subtitle": "Amphetamine",
      "description": "End the current session",
      "mode": "no-view",
      "keywords": [
        "end",
        "amp",
        "amp end",
        "amphetamine",
        "ampend"
      ]
    },
    {
      "name": "remaining",
      "title": "Get Remaining Time",
      "subtitle": "Amphetamine",
      "description": "Get current session remaining time",
      "mode": "no-view",
      "keywords": [
        "remaining",
        "amp",
        "amp remaining",
        "amphetamine"
      ]
    },
    {
      "name": "amp-duration",
      "title": "Start New Session With Duration",
      "subtitle": "Amphetamine",
      "description": "Start a new Session with a Duration",
      "mode": "view",
      "keywords": [
        "interval",
        "amp",
        "amp interval",
        "amphetamine",
        "duration",
        "amp duration"
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.35.2",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  },
  "platforms": [
    "macOS"
  ]
}
