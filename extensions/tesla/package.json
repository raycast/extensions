{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tesla",
  "title": "Tesla",
  "description": "Control and view your Tesla",
  "icon": "icon.png",
  "author": "williamwelsh",
  "categories": [
    "Data",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "viewCar",
      "title": "View Car",
      "subtitle": "Tesla",
      "description": "View information about your Tesla",
      "mode": "view"
    },
    {
      "name": "turnClimateOn",
      "title": "Turn Climate On",
      "subtitle": "Tesla",
      "description": "Turn your AC on",
      "mode": "view"
    },
    {
      "name": "turnClimateOff",
      "title": "Turn Climate Off",
      "subtitle": "Tesla",
      "description": "Turn your AC off",
      "mode": "view"
    },
    {
      "name": "turnSentryOn",
      "title": "Turn Sentry On",
      "subtitle": "Tesla",
      "description": "Turn sentry mode on",
      "mode": "view"
    },
    {
      "name": "turnSentryOff",
      "title": "Turn Sentry Off",
      "subtitle": "Tesla",
      "description": "Turn sentry mode off",
      "mode": "view"
    },
    {
      "name": "honk",
      "title": "Honk",
      "subtitle": "Tesla",
      "description": "Honk the horn",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Your Teslascope API Key",
      "placeholder": "Teslascope API Key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.57.1",
    "@raycast/utils": "^1.9.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
