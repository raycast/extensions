{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "country-lookup",
  "title": "Country Lookup",
  "description": "Quickly lookup countries and get informational data",
  "icon": "command-icon.png",
  "author": "pernielsentikaer",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Country",
      "description": "Quickly lookup countries",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Coat of Arms",
      "name": "showCoatOfArms",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Display the Coat of Arms by default",
      "description": "Show coat of arms, looks amazing but might take some space"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.35.0",
    "node-fetch": "^3.2.4",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
