{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "jisho",
  "title": "Jisho - Japanese Dictionary",
  "description": "Search Jisho.org",
  "icon": "jisho-icon.png",
  "author": "dmacdermott",
  "license": "MIT",
  "contributors": [
    "mmtf"
  ],
  "preferences": [
    {
      "required": false,
      "name": "save-to-history-on-clear",
      "label": "Save to history on clear",
      "description": "Jisho saves the last search query to the history once the search query is cleared.",
      "type": "checkbox",
      "default": true
    }
  ],
  "commands": [
    {
      "name": "search",
      "title": "Translate Japanese",
      "subtitle": "Jisho",
      "description": "Search Jisho.org for Japanese translations",
      "mode": "view"
    },
    {
      "name": "history",
      "title": "Search History",
      "subtitle": "Jisho",
      "description": "View previous search queries and results",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.46.0",
    "@raycast/utils": "^1.4.16",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^3.0.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
