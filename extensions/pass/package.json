{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pass",
  "version": "1.1.0",
  "title": "Pass",
  "description": "An extension to handle the standard unix password manager in a convenient way using Raycast",
  "icon": "command-icon.png",
  "author": "capipo",
  "categories": [
    "Security",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Find in Pass",
      "description": "Handle the standard unix password manager",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "preferences": [
    {
      "name": "customBrewPath",
      "type": "textfield",
      "title": "Homebrew Path",
      "description": "Custom Homebrew Executable Path",
      "required": false
    },
    {
      "name": "defaultAction",
      "type": "dropdown",
      "title": "Default action",
      "description": "What should happen when you press Enter on a content row?",
      "default": "paste",
      "required": false,
      "data": [
        { "value": "paste", "title": "Paste" },
        { "value": "copy", "title": "Copy" }
      ]
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
