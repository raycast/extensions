{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "transform-utility",
  "title": "Transform Utility",
  "description": "This handy utility helps you process the input text and format it with Lodash.",
  "icon": "command-icon.png",
  "author": "yahsan2",
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Transform Text With Lodash",
      "subtitle": "Transform Utility",
      "description": "Transform clipboard text with Lodash (UpperCase / LowerCase / CapitalCase / StartCase / CamelCase / KebabCase / SnakeCase / Trim)",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.capitalize": "^4.2.1",
    "lodash.kebabcase": "^4.1.1",
    "lodash.lowercase": "^4.3.0",
    "lodash.snakecase": "^4.1.1",
    "lodash.startcase": "^4.4.0",
    "lodash.trim": "^4.5.1",
    "lodash.uppercase": "^4.3.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.184",
    "@types/lodash.camelcase": "^4.3.7",
    "@types/lodash.capitalize": "^4.2.7",
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/lodash.lowercase": "^4.3.7",
    "@types/lodash.snakecase": "^4.1.7",
    "@types/lodash.startcase": "^4.4.7",
    "@types/lodash.trim": "^4.5.7",
    "@types/lodash.uppercase": "^4.3.7",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
