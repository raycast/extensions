{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bitcoin-price",
  "title": "Bitcoin Price",
  "description": "Display bitcoin price on the system menu bar",
  "categories": [
    "Finance"
  ],
  "icon": "Logo.png",
  "author": "gutenye",
  "license": "MIT",
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "commands": [
    {
      "name": "menubar",
      "title": "Bitcoin Price",
      "description": "Bitcoin Price",
      "mode": "menu-bar",
      "interval": "1m"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.2",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  }
}