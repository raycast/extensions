{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nouns",
  "title": "Nouns",
  "description": "Explore the Nouns Ecosystem.",
  "icon": "nouns-icon.png",
  "author": "peduarte",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "nouns-search",
      "title": "Nouns Search",
      "description": "Search Nouns by traits",
      "mode": "view"
    },
    {
      "name": "nouns-menu",
      "title": "Nouns in Menu Bar",
      "description": "Display pinned Nouns in the Menu Bar",
      "mode": "menu-bar",
      "preferences": [
        {
          "name": "iconShape",
          "title": "Icon Shape",
          "description": "Choose the shape of the icon",
          "required": false,
          "type": "dropdown",
          "data": [
            {
              "title": "Circle",
              "value": "circle"
            },
            {
              "title": "Rounded Square",
              "value": "rounded"
            }
          ],
          "default": "circle"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.3",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
