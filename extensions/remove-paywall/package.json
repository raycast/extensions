{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "remove-paywall",
  "title": "Remove Paywall",
  "description": "Remove the paywall from the specified URL.",
  "icon": "command-icon.png",
  "author": "tegola",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "remove-paywall",
      "title": "Remove Paywall",
      "description": "Remove the paywall from the specified URL.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "url",
          "type": "text",
          "placeholder": "URL (or selected text)"
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "service",
      "title": "Service",
      "description": "The service to use to remove the paywall.",
      "type": "dropdown",
      "required": true,
      "default": "12ft",
      "data": [
        {
          "title": "12ft.io",
          "value": "https://12ft.io"
        },
        {
          "title": "RemovePaywall (removepaywall.com)",
          "value": "https://www.removepaywall.com"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
