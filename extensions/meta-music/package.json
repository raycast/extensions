{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "meta-music",
  "title": "Meta Music",
  "description": "Manage the ID3 tags of audio music directly in Raycast!",
  "icon": "meta-music.png",
  "author": "teziovsky",
  "categories": [
    "Media",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "manage-id3-tags",
      "title": "Manage ID3 Tags",
      "description": "Manage the ID3 tags of audio music directly in Raycast!",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "musicDir",
      "description": "The path to the music folder",
      "type": "textfield",
      "required": false,
      "title": "Default Music Dir",
      "placeholder": "~/Music",
      "default": "~/Music"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.1",
    "@raycast/utils": "^1.12.5",
    "date-fns": "^3.3.1",
    "filesize": "^10.1.0",
    "mime": "^4.0.1",
    "node-id3": "^0.2.6"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "20.11.24",
    "@types/react": "18.2.61",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "pull-contributions": "npx @raycast/api@latest pull-contributions"
  }
}