{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "omnivore",
  "title": "Omnivore",
  "description": "Interact with Omnivore read-it-later app",
  "icon": "command-icon.png",
  "author": "karolusd",
  "categories": [
    "Media",
    "Web",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "omnivore-search",
      "title": "Search Article",
      "subtitle": "Omnivore",
      "description": "Search through articles gathered in the Omnivore",
      "mode": "view"
    },
    {
      "name": "omnivore-capture",
      "title": "Quick Capture",
      "subtitle": "Omnivore",
      "description": "Quickly capture and save a url to your Omnivore inbox",
      "mode": "no-view",
      "arguments": [
        {
          "name": "url",
          "placeholder": "URL",
          "type": "text",
          "required": true
        },
        {
          "name": "labels",
          "placeholder": "labels",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "Omnivore API Key",
      "description": "Your Omnivore's API key.",
      "link": "https://omnivore.app/settings/api",
      "placeholder": "Enter your personal API key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.2",
    "@raycast/utils": "^1.10.1",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
