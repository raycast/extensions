{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "deepl",
  "title": "DeepL Translator",
  "description": "translate japanese or english by deepl",
  "icon": "deepl_icon.png",
  "author": "sugayutokyo",
  "license": "MIT",
  "preferences": [
    {
      "name": "deeplApiKey",
      "type": "password",
      "required": true,
      "title": "DeepL API Key",
      "description": "Input DeepL API key",
      "placeholder": "Visit https://www.deepl.com/ja/pro-account/summary to obtain one"
    },
    {
      "name": "isPro",
      "type": "checkbox",
      "default": false,
      "required": false,
      "label": "Pro",
      "title": "DeepL Pro",
      "description": "If you are a DeepL Pro account, please check the box.",
      "placeholder": "If you are a DeepL Pro account, please check the box."
    }
  ],
  "commands": [
    {
      "name": "toEnglish",
      "title": "Translate To English",
      "description": "Translate By DeepL",
      "mode": "view"
    },
    {
      "name": "toJapanese",
      "title": "Translate To Japanese",
      "description": "Translate By DeepL",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.1",
    "deepl": "^1.0.13"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.21.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
