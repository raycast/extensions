{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "google-drive-for-desktop-search",
  "title": "google-drive-for-desktop-search",
  "description": "",
  "icon": "google-drive-for-desktop-search.png",
  "author": "nametake",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Google Drive for Desktop Files",
      "subtitle": "Google Drive for Desktop",
      "description": "Search files of Google Drive for Desktop",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "rootPath",
      "title": "Root Path for Google Drive for Desktop",
      "description": "Google Drive for Desktop root path to search",
      "required": true,
      "placeholder": "/Volumes/GoogleDrive",
      "default": "/Volumes/GoogleDrive",
      "type": "textfield"
    },
    {
      "name": "excludePaths",
      "title": "Exclude Paths",
      "description": "Full paths to exclude from search",
      "required": false,
      "placeholder": "/Volumes/GoogleDrive/MyDrive/Secrets, /Volumes/GoogleDrive/MyDrive/Priavte, ...",
      "default": "",
      "type": "textfield"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.32.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
