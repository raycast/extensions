{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "genius-lyrics",
  "title": "Genius Lyrics",
  "description": "Search by song title to instantly view lyrics, or enter remembered lyrics to quickly find the song's title, utilizing the Genius Lyrics API.",
  "icon": "command-icon.png",
  "author": "tkdkid1000",
  "contributors": [
    "johnstclair",
    "ryanlauderbach"
  ],
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Lyrics by Title",
      "description": "Search lyrics with the Genius API.",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Query",
          "type": "text"
        }
      ]
    },
    {
      "name": "lyric-search",
      "title": "Search Song by Lyrics",
      "description": "Search for song titles using remembered lyrics with the Genius API.",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Query",
          "type": "text"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^2.2.1",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.18.6",
    "@types/react": "^19.0.10",
    "eslint": "^9.35.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "version": "0.1.0",
  "platforms": [
    "macOS"
  ]
}
