{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "wi-fi",
  "title": "Wi-Fi",
  "description": "Connect and toggle Wi-Fi via Raycast.",
  "icon": "extension-icon.png",
  "keywords": [
    "wifi",
    "network"
  ],
  "author": "koinzhang",
  "contributors": [
    "loishy"
  ],
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "scan-wifi",
      "title": "Scan Wi-Fi",
      "subtitle": "Wi-Fi",
      "description": "Scan and connect Wi-Fi.",
      "mode": "view"
    },
    {
      "name": "toggle-wi-fi",
      "title": "Toggle Wi-Fi",
      "subtitle": "Wi-Fi",
      "description": "Toggle Wi-Fi on and off.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.3",
    "node-wifi": "^2.0.16",
    "shell-env": "^4.0.1"
  },
  "devDependencies": {
    "@types/node-wifi": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
