{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "wi-fi",
  "title": "Wi-Fi",
  "description": "Connect and toggle Wi-Fi via Raycast.",
  "icon": "extension-icon.png",
  "keywords": [
    "wifi",
    "network"
  ],
  "author": "koinzhang",
  "contributors": [
    "louishuyng"
  ],
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "scan-wifi",
      "title": "Scan Wi-Fi",
      "subtitle": "Wi-Fi",
      "description": "Scan and connect Wi-Fi.",
      "mode": "view"
    },
    {
      "name": "toggle-wi-fi",
      "title": "Toggle Wi-Fi",
      "subtitle": "Wi-Fi",
      "description": "Toggle Wi-Fi on and off.",
      "mode": "no-view"
    },
    {
      "name": "wi-fi-signal",
      "title": "Wi-Fi Signal",
      "subtitle": "Wi-Fi",
      "description": "Show wifi signal strength in menu bar.",
      "mode": "menu-bar",
      "interval": "5m",
      "preferences": [
        {
          "name": "showColorfulSignal",
          "type": "checkbox",
          "label": "Show Colorful Signal",
          "required": false,
          "default": true,
          "description": "Show colorful signal in menu bar"
        },
        {
          "name": "showWifiName",
          "type": "checkbox",
          "label": "Show Wi-Fi Name",
          "required": false,
          "default": false,
          "description": "Show wifi name in menu bar"
        },
        {
          "name": "showQualityNumber",
          "type": "checkbox",
          "label": "Show Quality Number",
          "required": false,
          "default": true,
          "description": "Show quality number in menu bar"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.66.2",
    "node-wifi": "^2.0.16",
    "shell-env": "^4.0.1"
  },
  "devDependencies": {
    "@types/node-wifi": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
