{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "openai-gpt3",
  "version": "1.2.0",
  "title": "OpenAI GPT3",
  "description": "Interact with OpenAI GPT3 AI",
  "icon": "openai-logo.png",
  "author": "simicvm",
  "categories": [
    "Productivity",
    "Fun",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "ai",
      "title": "Query OpenAI GPT3",
      "description": "Interact with OpenAI GPT3 AI",
      "mode": "view",
      "preferences": [
        {
          "name": "openAiApiKey",
          "title": "OpenAI API Key",
          "description": "API Key is used to authenticate with OpenAI API",
          "type": "password",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.2",
    "openai": "3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
