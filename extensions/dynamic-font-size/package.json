{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "dynamic-font-size",
  "title": "Dynamic Font Size",
  "description": "Create dynamic font sizes using the 'clamp' CSS function",
  "icon": "clamp-icon.png",
  "author": "nils_hoenson",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Generate Font-size Using Clamp",
      "description": "Copy the generated 'clamp' function to your clipboard",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.60.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}