{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "incident-io",
  "title": "Incident.io",
  "description": "Gets the incidents from Incident.io",
  "icon": "logo.png",
  "author": "nkl",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "incident",
      "title": "Show All Incidents",
      "subtitle": "Incident.io",
      "description": "Displays all incidents from Incident.io.",
      "mode": "view",
      "path": "src/incident.tsx"
    },
    {
      "name": "live-incidents",
      "title": "Active Incidents",
      "subtitle": "Incident.io",
      "description": "Displays live incidents from Incident.io.",
      "mode": "menu-bar",
      "path": "src/live-incidents.tsx",
      "interval": "1m"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "title": "Incident.io API Key",
      "required": true,
      "description": "Provides incident.io API key to fetch the active incidents",
      "placeholder": "Enter your Incident.io API key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
