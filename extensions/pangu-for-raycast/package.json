{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pangu-for-raycast",
  "title": "Pangu for Raycast",
  "description": "Add spaces between Chinese and English, number or symbols.",
  "icon": "command-icon.png",
  "author": "avengerbevis",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "pangu",
      "title": "Format with Pangu Spaces",
      "description": "Add spaces between Chinese and English, number or symbols using https://github.com/vinta/pangu.js",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.1",
    "@types/pangu": "^4.0.2",
    "pangu": "^4.0.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@raycast/utils": "^1.13.1",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
