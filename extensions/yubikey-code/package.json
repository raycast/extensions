{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "yubikey-code",
  "title": "YubiKey Code",
  "description": "Easily get a OTP from your YubiKey",
  "icon": "yubikey-icon.png",
  "author": "yoyoyeti",
  "categories": [
    "Productivity",
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Get Code",
      "subtitle": "YubiKey",
      "description": "Get OTP from YubiKey",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "ykmanPath",
      "type": "textfield",
      "required": false,
      "title": "Override location of ykman",
      "description": "Path to ykman CLI tool",
      "placeholder": "Path to ykman CLI tool"
    },
    {
      "name": "primaryAction",
      "type": "dropdown",
      "title": "Primary Action",
      "required": true,
      "default": "copy",
      "data": [
        {
          "title": "Copy to Clipboard",
          "value": "copy"
        },
        {
          "title": "Paste to Active App",
          "value": "paste"
        }
      ],
      "description": "Set the default action for codes"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
