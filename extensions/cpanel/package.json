{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cpanel",
  "title": "cPanel",
  "description": "View Domains, DNS Zones, Email Accounts, Databases and more",
  "icon": "cpanel.png",
  "author": "xmok",
  "categories": [
    "Applications",
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "cpanel_url",
      "title": "cPanel URL w/ Port",
      "description": "cPanel URL with Port",
      "type": "textfield",
      "placeholder": "https://example.com:2083",
      "required": true
    },
    {
      "name": "cpanel_username",
      "title": "cPanel Username",
      "description": "cPanel Username",
      "type": "textfield",
      "placeholder": "user",
      "required": true
    },
    {
      "name": "api_token",
      "title": "cPanel API Token",
      "description": "cPanel API Token",
      "type": "password",
      "placeholder": "U7HMR63FHY282DQZ4H5BIH16JLYSO01M",
      "required": true
    }
  ],
  "commands": [
    {
      "name": "email-accounts",
      "title": "View Email Accounts",
      "subtitle": "cPanel",
      "description": "View Email Accounts and their Disk Information",
      "mode": "view"
    },
    {
      "name": "domains",
      "title": "View Domains",
      "subtitle": "cPanel",
      "description": "View Domains and their DNS Zones",
      "mode": "view"
    },
    {
      "name": "databases",
      "title": "View Databases",
      "subtitle": "cPanel",
      "description": "View MySQL or PostgreSQL Databases",
      "mode": "view",
      "arguments": [
        {
          "name": "database_type",
          "type": "dropdown",
          "required": true,
          "placeholder": "DATABASE_TYPE",
          "data": [
            {
              "title": "MySQL",
              "value": "Mysql"
            },
            {
              "title": "PostgreSQL",
              "value": "Postgresql"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.79.0",
    "@raycast/utils": "^1.16.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "^18.3.3",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
