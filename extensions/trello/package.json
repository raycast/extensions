{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "trello",
  "title": "Trello",
  "description": "Raycast extension for showing, searching, and interacting with cards from Trello",
  "icon": "command-icon.png",
  "author": "ChrisChinchilla",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Fetch Todos",
      "subtitle": "Trello",
      "description": "Fetch all assigned todos from Trello",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "username",
      "type": "textfield",
      "required": true,
      "title": "Trello username",
      "description": "Trello username",
      "link": "https://developer.atlassian.com/cloud/trello/guides/rest-api/api-introduction/",
      "placeholder": "Trello username"
    },
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "Personal Access Token",
      "description": "Trello Access token",
      "link": "https://developer.atlassian.com/cloud/trello/guides/rest-api/api-introduction/",
      "placeholder": "Trello Access token"
    },
    {
      "name": "apitoken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Application Trello API token",
      "link": "https://developer.atlassian.com/cloud/trello/guides/rest-api/api-introduction/",
      "placeholder": "13f8c59607ba6d82531d3db5f46999c1"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.3"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3",
    "node-fetch": "^3.1.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
