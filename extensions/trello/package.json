{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "trello",
  "title": "Trello",
  "description": "Raycast extension for showing, searching, and interacting with cards from Trello",
  "icon": "command-icon.png",
  "author": "ChrisChinchilla",
  "contributors": [
    "jimmy-b36",
    "brittanyjoiner15",
    "ajaypremshankar"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Fetch Todos",
      "subtitle": "Trello",
      "description": "Fetch all assigned todos",
      "mode": "view"
    },
    {
      "name": "searchTodos",
      "title": "Search Todos",
      "subtitle": "Trello",
      "description": "Search all todos across all your boards",
      "mode": "view"
    },
    {
      "name": "searchBoards",
      "title": "Search Boards",
      "subtitle": "Trello",
      "description": "Search all your open boards",
      "mode": "view"
    },
    {
      "name": "createTodo",
      "title": "Create a Todo",
      "subtitle": "Trello",
      "description": "Search all your open boards",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "description": "Trello Username",
      "link": "https://developer.atlassian.com/cloud/trello/guides/rest-api/api-introduction/",
      "name": "username",
      "placeholder": "Trello username",
      "required": true,
      "title": "Trello Username",
      "type": "textfield"
    },
    {
      "description": "Trello Access token",
      "link": "https://developer.atlassian.com/cloud/trello/guides/rest-api/api-introduction/",
      "name": "token",
      "placeholder": "Trello Access token",
      "required": true,
      "title": "Personal Access Token",
      "type": "password"
    },
    {
      "default": "13f8c59607ba6d82531d3db5f46999c1",
      "description": "Application Trello API token",
      "link": "https://developer.atlassian.com/cloud/trello/guides/rest-api/api-introduction/",
      "name": "apitoken",
      "placeholder": "13f8c59607ba6d82531d3db5f46999c1",
      "required": true,
      "title": "API Token",
      "type": "textfield"
    },
    {
      "name": "closedboards",
      "title": "Include closed boards",
      "required": false,
      "type": "checkbox",
      "default": false,
      "description": "Include closed board in list",
      "label": "Include closed boards"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.63.0"
  },
  "devDependencies": {
    "@types/node": "~20.10.4",
    "@types/react": "^18.2.43",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "node-fetch": "^3.3.2",
    "prettier": "3.1.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
