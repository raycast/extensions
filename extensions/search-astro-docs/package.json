{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "search-astro-docs",
  "title": "Search Astro Documentation",
  "description": "Search the Astro Documentation right from Raycast",
  "icon": "astro-search-icon.png",
  "author": "ElianCodes",
  "categories": [
    "Documentation",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Astro Documentation",
      "description": "Search the Astro documentation right from Raycast",
      "mode": "view",
      "preferences": [
        {
          "name": "language",
          "title": "Language Setting",
          "default": "en",
          "required": false,
          "description": "Set the language of your documentation searches",
          "placeholder": "en",
          "type": "dropdown",
          "data": [
            {
              "title": "English",
              "value": "en"
            },
            {
              "title": "Deutsch",
              "value": "de"
            },
            {
              "title": "Português do Brasil",
              "value": "pt-br"
            },
            {
              "title": "Español",
              "value": "es"
            },
            {
              "title": "简体中文",
              "value": "zh-cn"
            },
            {
              "title": "正體中文",
              "value": "zh-tw"
            },
            {
              "title": "Français",
              "value": "fr"
            },
            {
              "title": "हिन्दी",
              "value": "hi"
            },
            {
              "title": "العربية",
              "value": "ar"
            },
            {
              "title": "日本語",
              "value": "ja"
            },
            {
              "title": "한국어",
              "value": "ko"
            },
            {
              "title": "Polski",
              "value": "po"
            },
            {
              "title": "Русский",
              "value": "ru"
            },
            {
              "title": "Italiano",
              "value": "it"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
