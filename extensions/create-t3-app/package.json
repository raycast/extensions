{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "create-t3-app",
  "title": "Create T3 App",
  "description": "Creates a Next.js app using create-t3-app",
  "icon": "command-icon.png",
  "author": "mozzius",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Create T3 App",
      "description": "Runs the create-t3-app CLI",
      "mode": "view",
      "arguments": [
        {
          "name": "appName",
          "required": false,
          "placeholder": "my-t3-app",
          "type": "text"
        }
      ],
      "preferences": [
        {
          "name": "packageManager",
          "description": "The package manager used to run create-t3-app and install dependencies in the project",
          "type": "dropdown",
          "required": true,
          "default": "pnpm",
          "title": "Preferred package manager",
          "data": [
            {
              "title": "pnpm",
              "value": "pnpm"
            },
            {
              "title": "yarn",
              "value": "yarn"
            },
            {
              "title": "npm",
              "value": "npm"
            }
          ]
        },
        {
          "name": "directory",
          "description": "Directory where the project will be created",
          "type": "directory",
          "required": true,
          "title": "Directory"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.46.1",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
