{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "recurly",
  "title": "Recurly",
  "description": "A smallish client for the Recurly API",
  "icon": "recurly-icon.png",
  "author": "bgnfu7re",
  "license": "MIT",
  "commands": [
    {
      "name": "configureTenants",
      "title": "Configure Tenants",
      "description": "Configure tenants",
      "mode": "view"
    },
    {
      "name": "searchAccountsByEmail",
      "title": "Search Accounts By Email",
      "description": "Search for accounts by email",
      "mode": "view"
    },
    {
      "name": "searchAccountByCode",
      "title": "Search Accounts By Code",
      "description": "Search for an account by account code",
      "mode": "view"
    }
  ],
  "categories": [
    "Finance"
  ],
  "dependencies": {
    "@raycast/api": "^1.38.0",
    "recurly": "^4.17.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
