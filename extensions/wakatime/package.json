{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "wakatime",
  "title": "Wakatime",
  "description": "Show your Wakatime Activity Stats, Projects and Leaderboards",
  "icon": "icon.png",
  "author": "iammola",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "summary",
      "subtitle": "WakaTime",
      "title": "Show Summary",
      "description": "Show your WakaTime Summary",
      "mode": "view"
    },
    {
      "name": "leaderboard",
      "subtitle": "WakaTime",
      "title": "Show Public Leaderboard",
      "description": "Show your rank in the public global leaderboard",
      "mode": "view"
    },
    {
      "name": "private-leaderboards",
      "subtitle": "WakaTime",
      "title": "Show Private Leaderboards",
      "description": "Show your private leaderboards",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "required": true,
      "title": "WakaTime API Key",
      "type": "password",
      "description": "Use your WakaTime API key to use your account",
      "placeholder": "Enter your API key from https://wakatime.com/settings"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.2",
    "date-fns": "^2.29.1",
    "node-fetch": "^3.2.9"
  },
  "devDependencies": {
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
