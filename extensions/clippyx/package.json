{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "clippyx",
  "title": "CLIPPyX",
  "description": "CLIPPyX provides an OS-wide image search that supports semantic search in both image content and text on images",
  "icon": "CLIPPyX.png",
  "author": "0ssamaak0",
  "categories": [
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "caption",
      "title": "Caption Search",
      "subtitle": "CLIPPyX",
      "description": "Search images by caption",
      "mode": "view",
      "preferences": [
        {
          "name": "threshold",
          "type": "textfield",
          "required": true,
          "title": "Threshold",
          "description": "Float value between 0 and 1",
          "placeholder": "0.2",
          "default": "0.2"
        },
        {
          "name": "topK",
          "type": "textfield",
          "required": true,
          "title": "Top K",
          "description": "Integer value from 1 to 99",
          "placeholder": "5",
          "default": "5"
        }
      ]
    },
    {
      "name": "text",
      "title": "Text Content Search",
      "subtitle": "CLIPPyX",
      "description": "Serch images by text content",
      "mode": "view",
      "preferences": [
        {
          "name": "threshold",
          "type": "textfield",
          "required": true,
          "title": "Threshold",
          "description": "Float value between 0 and 1",
          "placeholder": "0.2",
          "default": "0.2"
        },
        {
          "name": "topK",
          "type": "textfield",
          "required": true,
          "title": "Top K",
          "description": "Integer value from 1 to 99",
          "placeholder": "5",
          "default": "5"
        }
      ]
    },
    {
      "name": "similar",
      "title": "Similar Image Search",
      "subtitle": "CLIPPyX",
      "description": "Enter path / URL of image to search for similar images",
      "mode": "view",
      "preferences": [
        {
          "name": "threshold",
          "type": "textfield",
          "required": true,
          "title": "Threshold",
          "description": "Float value between 0 and 1",
          "placeholder": "0.2",
          "default": "0.2"
        },
        {
          "name": "topK",
          "type": "textfield",
          "required": true,
          "title": "Top K",
          "description": "Integer value from 1 to 99",
          "placeholder": "5",
          "default": "5"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.80.0",
    "@raycast/utils": "^1.16.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "file-type": "^19.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
