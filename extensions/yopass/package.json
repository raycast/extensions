{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "yopass",
  "title": "Yopass",
  "description": "Secure sharing of secrets and passwords via Yopass",
  "icon": "icon.png",
  "author": "ricoberger",
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "encryptmessage",
      "title": "Encrypt Message",
      "description": "Encrypt your Message via Yopass",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1",
    "node-fetch": "^3.2.10",
    "openpgp": "^6.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "name": "url",
      "type": "textfield",
      "required": true,
      "title": "Yopass URL",
      "default": "https://yopass.se",
      "description": "The URL of your Yopass instance"
    },
    {
      "name": "apiUrl",
      "type": "textfield",
      "required": true,
      "title": "Yopass API URL",
      "default": "https://api.yopass.se",
      "description": "The API URL of your Yopass instance"
    }
  ]
}
