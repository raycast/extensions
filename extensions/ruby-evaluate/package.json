{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ruby-evaluate",
  "title": "Ruby Evaluate",
  "description": "Evaluate Ruby code on-the-fly",
  "icon": "icon.png",
  "author": "obahareth",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "keywords": [
    "ruby",
    "evaluate",
    "interpreter"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Evaluate Ruby Code",
      "description": "Type in any Ruby code, to see what it evaluates to",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "fastEvaluation",
      "type": "checkbox",
      "required": false,
      "title": "Evaluation Mode",
      "label": "Use Fast Evaluation (⚠️)",
      "default": false,
      "description": "Evaluates code while typing. This consumes a lot more resources as it evaluates code with every keystroke."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.23.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
