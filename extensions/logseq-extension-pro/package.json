{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "logseq-extension-pro",
  "title": "Logseq Extension Pro",
  "description": "快速添加和查询Logseq中的Todo",
  "icon": "extension-icon.png",
  "author": "ybooks_liu",
  "categories": [
    "Productivity",
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "add-todo",
      "title": "Add Todo",
      "description": "快速添加Todo到指定页面",
      "mode": "view"
    },
    {
      "name": "search-todo",
      "title": "Search Todo",
      "description": "搜索已存在的Todo,并管理Todo",
      "mode": "view"
    },
    {
      "name": "add-note",
      "title": "Add Note",
      "description": "快速添加Note到指定页面",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "logseqPath",
      "type": "textfield",
      "required": true,
      "title": "Logseq Graph Path",
      "description": "Logseq图谱的本地路径",
      "placeholder": "/Users/james.liu/Code/raycast/测试插件/"
    },
    {
      "name": "defaultPage",
      "type": "textfield",
      "required": true,
      "title": "Default Page",
      "description": "默认添加Todo的页面名称",
      "placeholder": "todos"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.2",
    "@raycast/utils": "^1.17.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/jest": "^29.5.5",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "jest",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
