{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "text-rephraser",
  "title": "Text Rephraser",
  "description": "Rephrase selected text using AI to improve your writing",
  "icon": "extension-icon.png",
  "author": "abhishek_mandilkar",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "rephrase-text",
      "title": "Rephrase Text",
      "description": "Rephrase selected text using AI",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "title": "OpenAI API Key",
      "description": "Your OpenAI API key from platform.openai.com",
      "type": "password",
      "required": true,
      "placeholder": "sk-..."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.55.2",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "~20.8.0",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@raycast/eslint-config": "1.0.6",
    "prettier": "^2.8.8",
    "typescript": "^5.2.2",
    "react-devtools": "^5.0.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "publish": "npx @raycast/api@latest publish"
  }
}