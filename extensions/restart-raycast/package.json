{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "restart-raycast",
  "title": "Restart Raycast",
  "description": "Restart Raycast application",
  "icon": "restart-raycast-icon.png",
  "author": "koinzhang",
  "categories": [
    "Applications",
    "Developer Tools",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "restart-raycast",
      "title": "Restart Raycast",
      "subtitle": "Raycast",
      "description": "Restart Raycast application",
      "mode": "no-view",
      "interval": "12h",
      "preferences": [
        {
          "name": "isAutoRestart",
          "type": "checkbox",
          "label": "Auto Restart",
          "required": false,
          "default": false,
          "description": "Restart Raycast every 12 hours"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.13.0",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
