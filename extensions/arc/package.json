{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "arc",
  "title": "Arc",
  "description": "Search and quickly navigate Arc's history and open tabs.",
  "icon": "icon-dark.png",
  "author": "thomas",
  "categories": [
    "Web",
    "Applications",
    "Productivity"
  ],
  "license": "MIT",
  "contributors": [
    "zach"
  ],
  "commands": [
    {
      "name": "search-history",
      "title": "Search History",
      "subtitle": "Arc",
      "description": "Search your browsing history.",
      "mode": "view"
    },
    {
      "name": "top-sites",
      "title": "Top Sites",
      "subtitle": "Arc",
      "description": "Search your top sites.",
      "mode": "view"
    },
    {
      "name": "sidebar",
      "title": "Search Sidebar",
      "subtitle": "Arc",
      "description": "Search your current sidebar.",
      "mode": "view"
    },
    {
      "name": "new-window",
      "title": "Open New Window",
      "description": "Creates a new window",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "new-blank-window",
      "title": "Open New Blank Window",
      "description": "Creates a new blank window",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "new-incognito-window",
      "title": "Open New Incognito Window",
      "description": "Creates a new incognito window",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "little-arc-window",
      "title": "New Little Arc Window",
      "description": "Creates a new Little Arc window",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "new-folder",
      "title": "New Arc Folder",
      "description": "Creates a new Arc folder",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "new-note",
      "title": "New Arc Note",
      "description": "Creates a new Arc note",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "new-easel",
      "title": "New Arc Easel",
      "description": "Creates a new Arc easel",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "view-archive",
      "title": "View Archive",
      "description": "Opens the Arc archive",
      "mode": "no-view",
      "subtitle": "Arc"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.0",
    "@raycast/utils": "^1.4.0",
    "run-applescript": "^6.1.0",
    "run-jxa": "^3.0.0",
    "sql.js": "^1.8.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/sql.js": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
