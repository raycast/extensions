{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "arc",
  "title": "Arc",
  "description": "Search and quickly navigate Arc's history and open tabs.",
  "icon": "icon-dark.png",
  "author": "thomas",
  "owner": "the-browser-company",
  "access": "public",
  "categories": ["Web", "Applications", "Productivity"],
  "license": "MIT",
  "contributors": ["pomdtr", "zach", "ankitchouhan1020", "pernielsentikaer"],
  "commands": [
    {
      "name": "search-history",
      "title": "Search History",
      "subtitle": "Arc",
      "description": "Search your browsing history.",
      "mode": "view"
    },
    {
      "name": "new-window",
      "title": "Open New Window",
      "description": "Create and open a new window",
      "mode": "no-view",
      "subtitle": "Arc"
    },
    {
      "name": "new-little-arc",
      "title": "Open New Little Arc Window",
      "description": "Create and open a new little arc window",
      "mode": "no-view",
      "subtitle": "Arc",
      "preferences": [
        {
          "name": "url",
          "title": "URL",
          "description": "The URL to open in the new tab",
          "type": "textfield",
          "required": false,
          "default": "https://google.com"
        }
      ],
      "arguments": [
        {
          "name": "url",
          "placeholder": "URL",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "search-spaces",
      "title": "Search Spaces",
      "subtitle": "Arc",
      "description": "Search and select your spaces.",
      "mode": "view"
    },
    {
      "name": "search-tabs",
      "title": "Search Tabs",
      "subtitle": "Arc",
      "description": "Search and select your tabs.",
      "mode": "view"
    },
    {
      "name": "new-incognito-window",
      "title": "Open New Incognito Window",
      "subtitle": "Arc",
      "description": "Create and open a new incognito window",
      "mode": "no-view"
    },
    {
      "name": "new-tab",
      "title": "Open New Tab",
      "subtitle": "Arc",
      "description": "Create and open a new tab in the current window",
      "mode": "no-view",
      "preferences": [
        {
          "name": "url",
          "title": "URL",
          "description": "The URL to open in the new tab",
          "type": "textfield",
          "required": false,
          "default": "https://google.com"
        }
      ]
    },
    {
      "name": "menu-bar",
      "title": "Access Spaces and Favorites",
      "description": "Access your spaces and favorites from the menu bar",
      "mode": "menu-bar",
      "interval": "10m"
    },
    {
      "name": "search",
      "title": "Search Arc",
      "description": "Search tabs, history and search suggestions",
      "mode": "view",
      "preferences": [
        {
          "name": "sorting",
          "title": "Sorting",
          "description": "Sorting of sections in search results",
          "type": "dropdown",
          "required": false,
          "default": "asc",
          "data": [
            {
              "title": "Tabs → History → Suggestions",
              "value": "tabsHistorySuggestions"
            },
            {
              "title": "History → Tabs → Suggestions",
              "value": "historyTabsSuggestions"
            }
          ]
        },
        {
          "name": "showFavorites",
          "title": "Sections",
          "label": "Show Favorites",
          "description": "Show favorites in search results",
          "type": "checkbox",
          "required": false,
          "default": true
        },
        {
          "name": "showPinnedTabs",
          "label": "Show Pinned Tabs",
          "description": "Show pinned tabs in search results",
          "type": "checkbox",
          "required": false,
          "default": true
        },
        {
          "name": "showUnpinnedTabs",
          "label": "Show Unpinned Tabs",
          "description": "Show unpinned tabs in search results",
          "type": "checkbox",
          "required": false,
          "default": true
        },
        {
          "name": "showHistory",
          "label": "Show History",
          "description": "Show history in search results",
          "type": "checkbox",
          "required": false,
          "default": true
        },
        {
          "name": "showSuggestions",
          "label": "Show Suggestions",
          "description": "Show suggestions in search results",
          "type": "checkbox",
          "required": false,
          "default": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.0",
    "@raycast/utils": "^1.4.16",
    "iconv-lite": "^0.6.3",
    "is-url": "^1.2.4",
    "lodash": "^4.17.21",
    "nanoid": "^4.0.0",
    "run-applescript": "^6.1.0",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/is-url": "^1.2.30",
    "@types/lodash": "^4.14.191",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.17",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.8.4",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
