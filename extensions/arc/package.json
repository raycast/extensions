  "ai": {
    "instructions": "Arc is a web browser. It contains spaces, which group tabs together. Most likely, the user assumes asking questions about the active space if they don't specify otherwise",
    "evals": [
      {
        "input": "@arc open a new window",
        "expected": [
          {
            "or": [
              {
                "callsTool": "new-window"
              },
              {
                "callsTool": "new-blank-window"
              }
            ]
          }
        ],
        "mocks": {
          "new-window": "Successfully called \"new-window\"",
          "new-blank-window": "Successfully called \"new-blank-window\"",
          "get-spaces": [
            {
              "title": "Personal",
              "id": 1,
              "isActive": false
            },
            {
              "title": "Work",
              "id": 2,
              "isActive": true
            }
          ]
        }
      },
      {
        "input": "@arc open a new window in space Work",
        "expected": [
          {
            "callsTool": {
              "name": "new-window",
              "arguments": {
                "spaceId": "2"
              }
            }
          }
        ],
        "mocks": {
          "new-window": "Successfully called \"new-window\"",
          "get-spaces": [
            {
              "title": "Personal",
              "id": 1,
              "isActive": false
            },
            {
              "title": "Work",
              "id": 2,
              "isActive": true
            }
          ]
        }
      },
      {
        "input": "@arc open a new blank window",
        "expected": [
          {
            "callsTool": {
              "name": "new-blank-window",
              "arguments": {}
            }
          }
        ],
        "mocks": {
          "new-blank-window": "Successfully called \"new-blank-window\""
        }
      },
      {
        "input": "@arc open https://www.raycast.com/ in new little Arc window",
        "mocks": {
          "new-little-arc": {
            "url": "https://www.raycast.com/"
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "new-little-arc",
              "arguments": {
                "url": "https://www.raycast.com/"
              }
            }
          }
        ]
      },
      {
        "input": "@arc google search for Raycast in the new little Arc window",
        "mocks": {
          "new-little-arc": "Successfully opened"
        },
        "expected": [
          {
            "callsTool": {
              "name": "new-little-arc",
              "arguments": {
                "url": [
                  {
                    "includes": "google"
                  },
                  {
                    "includes": "Raycast"
                  }
                ]
              }
            }
          }
        ]
      },
      {
        "input": "@arc search for Raycast in the new little Arc window using DuckDuckGo",
        "mocks": {
          "new-little-arc": {
            "url": "https://duckduckgo.com/?q=Raycast"
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "new-little-arc",
              "arguments": {
                "url": [
                  {
                    "includes": "duckduckgo"
                  },
                  {
                    "includes": "Raycast"
                  }
                ]
              }
            }
          }
        ]
      },
      {
        "input": "@arc open a new incognito window",
        "mocks": {
          "new-incognito-window": {
            "url": ""
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "new-incognito-window",
              "arguments": {}
            }
          }
        ]
      },
      {
        "input": "@arc open https://www.raycast.com/ in new incognito window",
        "mocks": {
          "new-incognito-window": {
            "url": "https://www.raycast.com/"
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "new-incognito-window",
