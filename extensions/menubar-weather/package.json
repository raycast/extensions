{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "menubar-weather",
  "title": "Menubar Weather",
  "description": "Show current weather on the menu bar.",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "contributors": [
    "r22",
    "fuksman",
    "xilopaint"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "menubar-weather",
      "title": "Menubar Weather",
      "description": "Show current weather on the menu bar",
      "mode": "menu-bar",
      "interval": "30m"
    }
  ],
  "preferences": [
    {
      "name": "iconStyle",
      "type": "dropdown",
      "title": "Icon Style",
      "description": "Choose the style of the menu bar weather icon",
      "required": false,
      "default": "raycast",
      "data": [
        {
          "title": "Raycast",
          "value": "raycast"
        },
        {
          "title": "SF Symbols",
          "value": "sf-symbols"
        }
      ]
    },
    {
      "name": "cityName",
      "type": "textfield",
      "title": "Address",
      "description": "Address. If you need more precise weather data, you can fill in the latitude and longitude in the Preferences Page of the command",
      "required": true,
      "placeholder": "Pennsylvania Avenue NW, Washington, DC"
    },
    {
      "name": "latitude",
      "type": "textfield",
      "title": "Latitude",
      "description": "Latitude. If you need more precise weather data, please fill in the latitude and longitude",
      "required": false,
      "default": "",
      "placeholder": "0.00"
    },
    {
      "name": "longitude",
      "type": "textfield",
      "title": "Longitude",
      "description": "Longitude. If you need more precise weather data, please fill in the latitude and longitude",
      "required": false,
      "default": "",
      "placeholder": "0.00"
    },
    {
      "name": "tempUnits",
      "type": "dropdown",
      "title": "Temperature Unit",
      "description": "Units of temperature",
      "required": false,
      "default": "celsius",
      "data": [
        {
          "title": "Celsius",
          "value": "celsius"
        },
        {
          "title": "Fahrenheit",
          "value": "fahrenheit"
        }
      ]
    },
    {
      "name": "windSpeedUnits",
      "type": "dropdown",
      "title": "Wind Speed Unit",
      "description": "Units of wind speed",
      "required": false,
      "default": "ms",
      "data": [
        {
          "title": "Km/h",
          "value": "kmh"
        },
        {
          "title": "m/s",
          "value": "ms"
        },
        {
          "title": "Mph",
          "value": "mph"
        },
        {
          "title": "Knots",
          "value": "kn"
        }
      ]
    },
    {
      "name": "precipitationUnits",
      "type": "dropdown",
      "title": "Precipitation Unit",
      "description": "Units of precipitation",
      "required": false,
      "default": "mm",
      "data": [
        {
          "title": "Millimeter",
          "value": "mm"
        },
        {
          "title": "Inch",
          "value": "inch"
        }
      ]
    },
    {
      "name": "tempType",
      "type": "dropdown",
      "title": "Show in Menubar",
      "description": "Temperature type",
      "required": false,
      "default": "temperature",
      "data": [
        {
          "title": "Forecast",
          "value": "temperature"
        },
        {
          "title": "Feels Like",
          "value": "apparent_temperature"
        }
      ]
    },
    {
      "name": "menuUVI",
      "type": "checkbox",
      "label": "UV Index",
      "description": "Show UV index in menu",
      "required": false,
      "default": false
    },
    {
      "name": "menuPressure",
      "type": "checkbox",
      "label": "Pressure",
      "description": "Show pressure in menu",
      "required": false,
      "default": false
    },
    {
      "name": "menuHumidity",
      "type": "checkbox",
      "label": "Humidity",
      "description": "Show humidity in menu",
      "required": false,
      "default": false
    },
    {
      "name": "menuWind",
      "type": "checkbox",
      "label": "Wind",
      "description": "Show wind in menu",
      "required": false,
      "default": false
    },
    {
      "name": "showSun",
      "type": "checkbox",
      "label": "Sunrise and Sunset",
      "title": "Show in Details",
      "description": "Show sunrise and sunset in details",
      "required": false,
      "default": true
    },
    {
      "name": "showUVI",
      "type": "checkbox",
      "label": "UV Index",
      "description": "Show UV Index in details",
      "required": false,
      "default": true
    },
    {
      "name": "showLocation",
      "type": "checkbox",
      "label": "Geolocation Information",
      "description": "Show geolocation information in details",
      "required": false,
      "default": true
    },
    {
      "name": "showForecast",
      "type": "checkbox",
      "label": "7-day Weather Forecast",
      "description": "Show 7-day weather forecast in details",
      "required": false,
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.81.2",
    "@raycast/utils": "^1.17.0",
    "axios": "^1.7.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.14.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
