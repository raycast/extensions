{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "menubar-weather",
  "title": "Menubar Weather",
  "description": "Show current weather on the menu bar",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "license": "MIT",
  "commands": [
    {
      "name": "menubar-weather",
      "title": "Menubar Weather",
      "description": "Show current weather on the menu bar",
      "mode": "menu-bar",
      "interval": "30m"
    }
  ],
  "preferences": [
    {
      "name": "cityName",
      "type": "textfield",
      "title": "City",
      "description": "City name. If you need more precise weather data, you can fill in the latitude and longitude in the Preferences Page of the command",
      "required": true,
      "placeholder": "City name. For example, New York"
    },
    {
      "name": "longitude",
      "type": "textfield",
      "title": "Longitude",
      "description": "Longitude. If you need more precise weather data, please fill in the latitude and longitude",
      "required": false,
      "default": "",
      "placeholder": "0.00"
    },
    {
      "name": "latitude",
      "type": "textfield",
      "title": "Latitude",
      "description": "Latitude. If you need more precise weather data, please fill in the latitude and longitude",
      "required": false,
      "default": "",
      "placeholder": "0.00"
    },
    {
      "name": "tempUnits",
      "type": "dropdown",
      "title": "Temperature Unit",
      "description": "Units of temperature",
      "required": true,
      "default": "celsius",
      "data": [
        {
          "title": "Celsius",
          "value": "celsius"
        },
        {
          "title": "Fahrenheit",
          "value": "fahrenheit"
        }
      ]
    },
    {
      "name": "windSpeedUnits",
      "type": "dropdown",
      "title": "Wind Speed Unit",
      "description": "Units of wind speed",
      "required": true,
      "default": "",
      "data": [
        {
          "title": "Km/h",
          "value": "kmh"
        },
        {
          "title": "m/s",
          "value": "ms"
        },
        {
          "title": "Mph",
          "value": "mph"
        },
        {
          "title": "Knots",
          "value": "kn"
        }
      ]
    },
    {
      "name": "precipitationUnits",
      "type": "dropdown",
      "title": "Precipitation Unit",
      "description": "Units of precipitation",
      "required": true,
      "default": "mm",
      "data": [
        {
          "title": "Millimeter",
          "value": "mm"
        },
        {
          "title": "Inch",
          "value": "inch"
        }
      ]
    },
    {
      "name": "showSun",
      "type": "checkbox",
      "label": "Sunrise and sunset",
      "title": "Additional Info",
      "description": "Show sunrise and sunset",
      "required": false,
      "default": true
    },
    {
      "name": "showLocation",
      "type": "checkbox",
      "label": "Geolocation Information",
      "description": "Show geolocation information",
      "required": false,
      "default": true
    },
    {
      "name": "showForecast",
      "type": "checkbox",
      "label": "7-day weather forecast",
      "description": "Show 7-day weather forecast",
      "required": false,
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "axios": "^1.1.3"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
