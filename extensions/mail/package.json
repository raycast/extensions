{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mail",
  "title": "Mail",
  "description": "Extension for Apple Mail.",
  "icon": "mail.png",
  "author": "yug2005",
  "categories": [
    "Applications",
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "primaryAction",
      "title": "Primary Action",
      "description": "The primary action to be performed on the selected message.",
      "type": "dropdown",
      "default": "seeMessage",
      "required": false,
      "data": [
        {
          "title": "See Message",
          "value": "seeMessage"
        },
        {
          "title": "Open in Mail",
          "value": "openMessage"
        }
      ]
    },
    {
      "name": "primaryMailbox",
      "title": "Primary Mailbox",
      "description": "The primary mailbox to view for accounts.",
      "type": "dropdown",
      "default": "all",
      "required": false,
      "data": [
        {
          "title": "All Mail",
          "value": "all"
        },
        {
          "title": "Recent Mail",
          "value": "recent"
        },
        {
          "title": "Inbox",
          "value": "inbox"
        },
        {
          "title": "Important Mail",
          "value": "important"
        },
        {
          "title": "Starred Mail",
          "value": "starred"
        },
        {
          "title": "Sent Mail",
          "value": "sent"
        },
        {
          "title": "Junk Mail",
          "value": "junk"
        },
        {
          "title": "Trash",
          "value": "trash"
        }
      ]
    },
    {
      "name": "saveDirectory",
      "title": "Save Attachments To",
      "description": "Directory to save mail attachments.",
      "type": "textfield",
      "default": "~/Downloads",
      "required": false
    },
    {
      "name": "selectDirectory",
      "title": "Select Attachments From",
      "description": "Directory to select mail attachments.",
      "type": "textfield",
      "default": "~/Downloads",
      "required": false
    }
  ],
  "commands": [
    {
      "name": "check-for-mail",
      "title": "Check For New Mail",
      "description": "Check for new mail for all accounts. Uses background refresh to cache information.",
      "mode": "no-view",
      "interval": "1d"
    },
    {
      "name": "new-message",
      "title": "New Message",
      "description": "Compose a new message.",
      "mode": "view"
    },
    {
      "name": "see-recent-mail",
      "title": "See Recent Mail",
      "description": "See recent unread messages.",
      "mode": "view"
    },
    {
      "name": "see-important-mail",
      "title": "See Important Mail",
      "description": "See messages in the important mailboxes.",
      "mode": "view"
    },
    {
      "name": "see-mail-accounts",
      "title": "See Mail Accounts",
      "description": "See all inboxes for all your Mail accounts.",
      "mode": "view"
    },
    {
      "name": "share-with-mail",
      "title": "Share With Mail",
      "description": "Share selected finder items with Mail.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.3",
    "clean-text-utils": "^1.1.17",
    "email-regex": "^5.0.0",
    "javascript-time-ago": "^2.5.7",
    "json2md": "^1.12.0",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.2.10",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/json2md": "^1.5.1",
    "@types/mime-types": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
