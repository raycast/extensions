{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "display-modes",
  "title": "Display Modes",
  "description": "Manage displays modes (resolution, refresh rate...).",
  "icon": "command-icon.png",
  "author": "agustin.prats",
  "contributors": [
    "rom100maim"
  ],
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Change Display Mode",
      "description": "Change the display mode (resolution, refresh rate...) of your monitors.",
      "mode": "view"
    },
    {
      "name": "quick-display-mode",
      "title": "Quickly Change Display Mode",
      "description": "Quickly change the display mode of your monitors.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "display",
          "placeholder": "Display number",
          "type": "text",
          "required": true
        },
        {
          "name": "height",
          "placeholder": "Height",
          "type": "text",
          "required": true
        },
        {
          "name": "refreshRate",
          "placeholder": "Refresh Rate",
          "type": "text"
        }
      ]
    },
    {
      "name": "display-modes-status-menu-bar",
      "title": "Display Modes Status Menu Bar",
      "description": "Change the display mode of your monitors from the status menu bar.",
      "mode": "menu-bar",
      "interval": "5m"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.4.7",
    "@types/execa": "^2.0.0",
    "color-convert": "^2.0.1",
    "execa": "^6.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "build-swift": "swift build --configuration=release --arch arm64 --arch x86_64 && mv .build/apple/Products/Release/display-modes assets",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
