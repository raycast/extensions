{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "atomic",
  "title": "Atomic Data",
  "description": "Search inside your Atomic-Server data",
  "icon": "command-icon.png",
  "author": "joepio",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Data",
      "subtitle": "Atomic Server",
      "description": "Search inside your Atomic Server data",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.3",
    "@tomic/lib": "^0.30.4",
    "@tomic/react": "^0.30.4",
    "node-fetch": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  },
  "preferences": [
    {
      "name": "server",
      "type": "textfield",
      "required": true,
      "title": "Atomic Server",
      "description": "The URL of the server to connect to.",
      "placeholder": "e.g. https://atomicdata.dev",
      "default": "https://atomicdata.dev"
    }
  ]
}
