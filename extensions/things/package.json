{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "things",
  "title": "Things",
  "version": "1.0.0",
  "description": "Search and access your Things To-Dos from Raycast",
  "icon": "things-icon.png",
  "author": "loris",
  "license": "MIT",
  "commands": [
    {
      "name": "show-today-list",
      "title": "Today",
      "subtitle": "Things",
      "description": "List your Today To-Dos",
      "mode": "view"
    },
    {
      "name": "show-inbox-list",
      "title": "Inbox",
      "subtitle": "Things",
      "description": "List your Inbox To-Dos",
      "mode": "view"
    },
    {
      "name": "show-anytime-list",
      "title": "Anytime",
      "subtitle": "Things",
      "description": "List your Anytime To-Dos",
      "mode": "view"
    },
    {
      "name": "show-upcoming-list",
      "title": "Upcoming",
      "subtitle": "Things",
      "description": "List your Upcoming To-Dos",
      "mode": "view"
    },
    {
      "name": "show-someday-list",
      "title": "Someday",
      "subtitle": "Things",
      "description": "List your Someday To-Dos",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "dayjs": "^1.10.7",
    "lodash.groupby": "^4.6.0",
    "lodash.map": "^4.6.0",
    "osascript-tag": "^0.1.2"
  },
  "devDependencies": {
    "@types/lodash.groupby": "^4.6.6",
    "@types/lodash.map": "^4.6.13",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.20.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
