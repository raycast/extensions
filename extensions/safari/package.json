{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "safari",
  "title": "Safari",
  "description": "Manage your Safari Tabs, History and Reading List",
  "categories": [
    "Applications",
    "Web"
  ],
  "icon": "safari-icon.png",
  "author": "loris",
  "contributors": [
    "thomas",
    "HelloImSteven",
    "axsuul",
    "iwex"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "cloud-tabs",
      "title": "Search Tabs",
      "subtitle": "Safari",
      "description": "Browse your open tabs",
      "mode": "view",
      "preferences": [
        {
          "name": "areRemoteTabsUsed",
          "type": "checkbox",
          "required": false,
          "title": "Devices",
          "description": "Include iCloud tabs across all your devices",
          "default": true,
          "label": "iCloud"
        }
      ]
    },
    {
      "name": "reading-list",
      "title": "Search Reading List",
      "subtitle": "Safari",
      "description": "Browse your reading list",
      "mode": "view",
      "preferences": [
        {
          "name": "groupByStatus",
          "type": "checkbox",
          "required": false,
          "label": "Group by status",
          "default": true,
          "description": "Group items by Read/Unread status"
        }
      ]
    },
    {
      "name": "add-to-reading-list",
      "title": "Add to Reading List",
      "subtitle": "Safari",
      "description": "Add an item to your reading list",
      "mode": "view"
    },
    {
      "name": "search-history",
      "title": "Search History",
      "subtitle": "Safari",
      "description": "Browse your history",
      "mode": "view"
    },
    {
      "name": "search-bookmarks",
      "title": "Search Bookmarks",
      "subtitle": "Safari",
      "description": "Browse your bookmarks",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "safariAppIdentifier",
      "type": "dropdown",
      "required": false,
      "title": "Local Safari Browser",
      "description": "Switch between Safari or Safari Technology Preview",
      "default": "Safari",
      "data": [
        {
          "value": "Safari",
          "title": "Safari"
        },
        {
          "value": "Safari Technology Preview",
          "title": "Safari Technology Preview"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.3",
    "@raycast/utils": "1.5.2",
    "bplist-creator": "^0.1.1",
    "fuse.js": "^7.0.0",
    "lodash": "^4.17.21",
    "osascript-tag": "^0.1.2",
    "simple-plist": "^1.4.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "@types/node": "~18.11.10",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^3.1.1",
    "react-devtools": "^5.3.1",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
