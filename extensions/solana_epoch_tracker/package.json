{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "solana_epoch_tracker",
  "title": "Solana Epoch Tracker",
  "description": "Shows the Current Solana Epoch for the selected Network",
  "icon": "extension-logo.png",
  "author": "matthias_schmitz",
  "categories": [
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "getSolanaEpoch",
      "title": "Solana Epoch",
      "description": "Show current epoch and remaining time",
      "mode": "menu-bar"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "@raycast/utils": "^1.4.8",
    "lucide-react": "^0.363.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "^18.2.27",
    "@types/react-dom": "^18.3.1",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
