{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "simplelogin",
  "title": "SimpleLogin",
  "description": "Mange your SimpleLogin Account, view and create aliases",
  "icon": "simplelogin_logo.png",
  "author": "adrian-schnell",
  "contributors": [
    "marcelruhf"
  ],
  "categories": [
    "Productivity"
  ],
  "preferences": [
    {
      "title": "SimpleLogin API Token",
      "name": "api_token",
      "description": "Set your SimpleLogin API Token",
      "type": "password",
      "required": true,
      "placeholder": "API Token"
    },
    {
      "title": "SimpleLogin API",
      "name": "app_url",
      "description": "Set your SimpleLogin app url",
      "type": "textfield",
      "default": "https://app.simplelogin.io",
      "required": true,
      "placeholder": "App URL"
    },
    {
      "title": "Mode",
      "name": "mode",
      "description": "Choose between UUID and word mode",
      "type": "dropdown",
      "default": "https://app.simplelogin.io",
      "data": [
        {
          "title": "Word",
          "value": "word"
        },
        {
          "title": "UUID",
          "value": "uuid"
        }
      ],
      "required": true
    }
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create_alias",
      "title": "Create Alias",
      "subtitle": "SimpleLogin",
      "description": "Shield your inbox with a new email alias.",
      "mode": "view"
    },
    {
      "name": "create_random_alias",
      "title": "Create Random Alias",
      "subtitle": "SimpleLogin",
      "description": "Shield your inbox with a new email alias.",
      "mode": "no-view"
    },
    {
      "name": "list_alias",
      "title": "List Aliases",
      "subtitle": "SimpleLogin",
      "description": "Show all your aliases.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "@raycast/utils": "^1.4.14",
    "axios": "^1.2.2",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
