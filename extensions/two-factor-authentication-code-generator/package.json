{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "two-factor-authentication-code-generator",
  "title": "Two-Factor Authentication Code Generator",
  "description": "Quickly access your two-factor authentication codes.",
  "icon": "command-icon.png",
  "author": "cjdenio",
  "license": "MIT",
  "keywords": [
    "auth",
    "2fa",
    "authentication",
    "login"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Generate 2FA Code",
      "description": "Quickly access your two-factor authentication codes.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "defaultAction",
      "description": "Set the default action",
      "type": "dropdown",
      "required": false,
      "title": "Default Action",
      "default": "copy",
      "data": [
        {
          "title": "Copy",
          "value": "copy"
        },
        {
          "title": "Paste",
          "value": "paste"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "hi-base32": "^0.5.1"
  },
  "devDependencies": {
    "@types/node": "^16.4.3",
    "@types/react": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "2.8.7",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop target"
  }
}
