{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "imessage-2fa",
  "title": "iMessage 2FA",
  "description": "View messages and two factor authentication codes",
  "icon": "iMessage-icon.png",
  "author": "yuercl",
  "contributors": [
    "thomas"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "View 2FA Codes",
      "subtitle": "Messages",
      "description": "View messages and two factor authentication codes",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.3",
    "@raycast/utils": "^1.4.9",
    "@use-it/interval": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "title": "Search last days for 2FA",
      "name": "lookBackDays",
      "type": "textfield",
      "required": false,
      "description": "For searching iMessage from N days ago and now",
      "default": "1"
    }
  ]
}
