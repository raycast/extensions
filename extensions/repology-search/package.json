{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "repology-search",
  "title": "Repology Search",
  "description": "Search packages from repology.org",
  "icon": "icon.png",
  "author": "sebdanielsson",
  "categories": [
    "Developer Tools",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Package",
      "subtitle": "Repology Search",
      "description": "Search for packages in all repos.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^2.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.15.35",
    "@types/react": "^19.1.8",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "react-devtools": "^6.1.1",
    "typescript": "~5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
