{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "repology-search",
  "title": "Repology Search",
  "description": "Search packages from repology.org",
  "icon": "icon.png",
  "author": "SebDanielsson",
  "categories": [
    "Developer Tools",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Package",
      "subtitle": "Repology Search",
      "description": "Search for packages in all repos.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.2",
    "@raycast/utils": "^1.10.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "18.18.9",
    "@types/react": "18.2.37",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
