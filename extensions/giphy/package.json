{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "giphy",
  "title": "Giphy",
  "description": "Giphy in Raycast",
  "icon": "command-icon.png",
  "author": "Amir",
  "categories": [
    "Media",
    "Data",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search",
      "subtitle": "Giphy",
      "description": "Search GIF file on Giphy",
      "mode": "view"
    },
    {
      "name": "clear-history",
      "title": "Clear History",
      "subtitle": "Gipyh",
      "description": "Delete all the items from your history",
      "mode": "no-view"
    },
    {
      "name": "clear-favorites",
      "title": "Clear Favorites",
      "subtitle": "Gipyh",
      "description": "Delete all the items from your favorites",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@giphy/js-fetch-api": "^4.2.2",
    "@raycast/api": "^1.36.0",
    "axios": "^0.27.2",
    "filesize": "^9.0.9",
    "moment": "^2.29.3",
    "node-fetch": "^3.2.6",
    "run-applescript": "^6.0.0",
    "tempy": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
