{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "include": ["src/**/*", "raycast-env.d.ts"],
  "compilerOptions": {
    "paths": {
      "@src/api": ["./src/api"],
      "@src/api/*": ["./src/api/*"],
      "@src/hooks": ["./src/hooks"],
      "@src/hooks/*": ["./src/hooks/*"],
      "@src/components/*": ["./src/components/*"],
      "@src/utils": ["./src/utils"],
      "@src/types": ["./src/types"]
    },
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  }
}
