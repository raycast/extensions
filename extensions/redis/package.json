{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "redis",
  "title": "Redis",
  "description": "Redis extension for Raycast",
  "icon": "command-icon.png",
  "author": "k8scat",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Commands",
      "subtitle": "Redis",
      "description": "Search Redis Commands and Documents",
      "mode": "view"
    },
    {
      "name": "run-command",
      "title": "Run Command",
      "subtitle": "Redis",
      "description": "Run Redis Command",
      "mode": "view",
      "preferences": [
        {
          "name": "host",
          "type": "textfield",
          "required": false,
          "title": "Host",
          "description": "Redis Host",
          "default": "localhost"
        },
        {
          "name": "port",
          "type": "textfield",
          "required": false,
          "title": "Port",
          "description": "Redis Port",
          "default": "6379"
        },
        {
          "name": "database",
          "type": "textfield",
          "required": false,
          "title": "Database",
          "description": "Redis Database"
        },
        {
          "name": "username",
          "type": "textfield",
          "required": false,
          "title": "Username",
          "description": "Redis Username"
        },
        {
          "name": "password",
          "type": "textfield",
          "required": false,
          "title": "Password",
          "description": "Redis Password"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.1",
    "@raycast/utils": "^1.4.8",
    "axios": "^0.27.2",
    "node-fetch": "^3.2.10",
    "node-html-parser": "^6.1.1",
    "redis": "^4.3.1"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
