{
  "name": "tower",
  "title": "Tower Repositories",
  "description": "Navigate and open your repositories in Tower.",
  "icon": "icon.png",
  "author": "tdwesten",
  "version": "1.0.1",
  "license": "MIT",
  "commands": [
    {
      "name": "command-my-repositiories",
      "title": "My Repositories",
      "subtitle": "Tower",
      "description": "Navigate and open your repositories in Tower.",
      "keywords": [
        "tower",
        "repositories",
        "repository",
        "repo"
      ],
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "towerCliPath",
      "title": "Tower CLI path",
      "description": "Your local Tower CLI path",
      "link": "https://www.git-tower.com/help/guides/integration/cli-tool/mac",
      "type": "textfield",
      "default": "/usr/local/bin/gittower",
      "value": "/usr/local/bin/gittower",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "node-fetch": "^2.6.1",
    "plist": "^3.0.3",
    "tildify": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.4.3",
    "@types/node-fetch": "^2.5.12",
    "@types/open": "^6.2.1",
    "@types/plist": "^3.0.2",
    "@types/react": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
