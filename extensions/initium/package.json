{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "initium",
  "title": "Initium",
  "description": "Show posts on theinitium.com",
  "icon": "command-icon.png",
  "author": "unpopular",
  "categories": [
    "News"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Latest Posts",
      "subtitle": "Initium",
      "description": "Retrieve posts from official RSS feed",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.11",
    "node-html-markdown": "^1.2.2",
    "rss-parser": "^3.12.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
