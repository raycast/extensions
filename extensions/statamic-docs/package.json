{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "statamic-docs",
  "title": "Statamic Documentation Search",
  "description": "This extension allows you to search through the Statamic docs directly from Raycast.",
  "icon": "command-icon.png",
  "author": "andrebreia",
  "categories": [
    "Documentation",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "statamic",
      "title": "Search Documentation",
      "subtitle": "Statamic",
      "description": "Search through the Statamic documentation directly from Raycast.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.41.0",
    "html-entities": "^2.5.2",
    "meilisearch": "^0.45.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
