{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pdfsearch-ripgrep",
  "title": "PDFSearch ripgrep",
  "description": "Search across collections of PDF documents.",
  "icon": "command-icon.png",
  "author": "kevin-pek",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search_v2",
      "title": "Search pdf",
      "description": "View list of document collections.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "identifier": "folderPath",
      "name": "folderPath",
      "required": true,
      "type": "directory",
      "title": "Folder Path",
      "description": "Specify the path to your folder",
      "default": "/Users/ymka/Library/Mobile Documents/com~apple~CloudDocs/Books/Shelf/Programming"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.63.0",
    "@raycast/utils": "^1.4.8",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "react-devtools": "^4.28.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
