{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "read-ai",
  "title": "Read AI - Text to Speech",
  "description": "Revolutionize your reading with OpenAI's TTS technologyâ€”bringing words to your ears, ideal for auditory learners and the visually impaired.",
  "icon": "extension-icon.png",
  "categories": [
    "Productivity"
  ],
  "author": "JungHoonGhae",
  "contributors": [
    "zezhehh"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "read-selected-text-audio-only",
      "title": "Read Selected Text | Background Audio",
      "subtitle": "Read AI - Text to Speech",
      "description": "listen to the seleted text with subtitles",
      "mode": "no-view"
    },
    {
      "name": "read-selected-text-script",
      "title": "Read Selected Text | with Script",
      "subtitle": "Read AI - Text to Speech",
      "description": "Read and listen to the seleted text with script and subtitles",
      "mode": "view"
    },
    {
      "name": "read-clipboard-image",
      "title": "Read Clipboard Image | Background Audio",
      "subtitle": "Read AI - Text to Speech",
      "description": "Read and listen to the text in the image with subtitles",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "title": "OpenAI API Key",
      "description": "Provide your OpenAI API Key here",
      "required": true,
      "label": "API Key"
    },
    {
      "name": "directRead",
      "type": "checkbox",
      "title": "Direct Read",
      "description": "Read the selected text directly without translation and script generation",
      "required": false,
      "default": false,
      "label": "Direct Read"
    },
    {
      "name": "subtitlesToggle",
      "type": "checkbox",
      "title": "Subtitles",
      "description": "Turn on or off subtitles",
      "required": true,
      "default": true,
      "label": "Subtitles"
    },
    {
      "name": "defaultVoice",
      "type": "dropdown",
      "title": "Default Voice",
      "description": "Select the default voice for text-to-speech",
      "required": true,
      "default": "alloy",
      "data": [
        {
          "value": "alloy",
          "title": "Alloy (male)"
        },
        {
          "value": "echo",
          "title": "Echo (male)"
        },
        {
          "value": "fable",
