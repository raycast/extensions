{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "wordpress-docs",
  "title": "WordPress Docs",
  "description": "Search the WordPress code reference.",
  "icon": "command-icon.png",
  "author": "tillkruss",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Code Reference",
      "description": "Search the WordPress code reference for hooks, functions, classes and methods.",
      "mode": "view"
    }
  ],
  "categories": [
    "Documentation",
    "Developer Tools"
  ],
  "dependencies": {
    "@raycast/api": "^1.49.2",
    "@raycast/utils": "^1.4.8",
    "fast-xml-parser": "^4.1.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
