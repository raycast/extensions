{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kaalam",
  "title": "Kaalam",
  "description": "Gives Current Time in all formats",
  "icon": "command-icon.png",
  "author": "heerthees",
  "contributors": [
    "ridemountainpig"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Time",
      "description": "Shows current time in list of formats",
      "mode": "view"
    },
    {
      "name": "now",
      "title": "Now",
      "description": "Paste a formatted date into current application.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "required": false,
      "name": "nowTimeFormat",
      "type": "textfield",
      "title": "Now Default Format",
      "description": "Now default format.",
      "default": "YYYY-MM-DD"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.34.1",
    "dayjs": "^1.11.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
