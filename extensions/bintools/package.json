{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bintools",
  "title": "Binary Tools",
  "description": "A calculator for binary, decimal, hex and octal numbers.",
  "icon": "command-icon.png",
  "author": "frostplexx",
  "contributors": [
    "bestemic"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Binary Calculator",
      "description": "Add, Substract, Multiply and divide with binary, decimal, hex and octal numbers!",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.53.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
