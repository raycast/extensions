{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "doccheck",
  "title": "DocCheck",
  "description": "Search through DocCheck Flexikon from Raycast",
  "icon": "doccheck.png",
  "author": "spacedog",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "openIn",
      "title": "Open In",
      "description": "Where to open the DocCheck page by default",
      "type": "dropdown",
      "data": [
        {
          "title": "Browser",
          "value": "browser"
        },
        {
          "title": "Raycast",
          "value": "raycast"
        }
      ],
      "default": "raycast",
      "required": false
    }
  ],
  "commands": [
    {
      "name": "doccheck-flexikon",
      "title": "Search Flexikon",
      "description": "Search through DocCheck Flexikon for medical terms and definitions",
      "mode": "view"
    },
    {
      "name": "open-page",
      "title": "Open Page",
      "subtitle": "DocCheck",
      "description": "Open DocCheck page in Raycast",
      "mode": "view",
      "arguments": [
        {
          "name": "prevurl",
          "placeholder": "Previous article URL",
          "type": "text",
          "required": false
        },
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text",
          "required": true
        },
        {
          "name": "url",
          "placeholder": "URL",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "@raycast/utils": "^1.5.2",
    "axios": "^1.3.4",
    "cheerio": "^1.0.0-rc.12",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.8.7",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
