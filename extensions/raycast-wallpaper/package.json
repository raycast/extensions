{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-wallpaper",
  "title": "Raycast Wallpaper",
  "description": "Get and set Raycast official wallpapers.",
  "icon": "command-icon.png",
  "author": "koinzhang",
  "contributors": [
    "samuelkraft",
    "pernielsentikaer",
    "xilopaint",
    "stelo"
  ],
  "categories": [
    "Media",
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "set-raycast-wallpaper",
      "icon": "raycast-icon.png",
      "title": "Set Raycast Wallpaper",
      "description": "Set Raycast official wallpapers as desktop wallpaper.",
      "mode": "view",
      "preferences": [
        {
          "name": "layout",
          "type": "dropdown",
          "description": "Set the layout of the wallpaper items.",
          "required": false,
          "title": "Wallpaper Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the wallpaper items. (Only works with Grid layout)",
          "required": false,
          "title": "Wallpaper Item Columns",
          "default": "4",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "applyTo",
          "title": "Apply Wallpaper To",
          "description": "Apply the wallpaper to which monitor. Valid only when you are using an extended monitor.",
          "type": "dropdown",
          "data": [
            {
              "title": "Current Monitor",
              "value": "current"
            },
            {
              "title": "Every Monitor",
              "value": "every"
            }
          ],
          "required": false,
          "default": "every"
        },
        {
          "name": "picturesDirectory",
          "title": "Wallpaper Directory",
          "description": "The directory of wallpaper to save.",
          "type": "directory",
          "required": false,
          "default": "~/Downloads"
        }
      ]
    },
    {
      "name": "auto-switch-raycast-wallpaper",
      "icon": "random-icon.png",
      "title": "Auto Switch Raycast Wallpaper",
      "description": "Switch random Raycast wallpapers as desktop wallpaper with specified refresh interval.",
      "mode": "no-view",
      "interval": "5m",
      "preferences": [
        {
          "name": "applyTo",
          "title": "Apply Wallpaper To",
          "description": "Apply the wallpaper to which monitor. Valid only when you are using an extended monitor.",
          "type": "dropdown",
          "data": [
            {
              "title": "Current Monitor",
              "value": "current"
            },
            {
              "title": "Every Monitor",
              "value": "every"
            }
          ],
          "required": false,
          "default": "every"
        },
        {
          "name": "refreshIntervalSeconds",
          "type": "dropdown",
          "description": "Set the refresh interval for switching wallpapers.",
          "required": false,
          "title": "Refresh Interval",
          "default": "3600",
          "data": [
            {
              "title": "Every 5 Minutes",
              "value": "300"
            },
            {
              "title": "Every 15 Minutes",
              "value": "900"
            },
            {
              "title": "Every 30 Minutes",
              "value": "1800"
            },
            {
              "title": "Every Hour",
              "value": "3600"
            },
            {
              "title": "Every Day",
              "value": "86400"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "respectAppearance",
      "title": "Appearance",
      "description": "Respect system appearance when setting wallpaper.",
      "type": "checkbox",
      "default": true,
      "required": false,
      "label": "Respect System Appearance"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.96.3",
    "@raycast/utils": "^1.19.1",
    "axios": "^1.9.0",
    "file-url": "^4.0.0",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "22.15.3",
    "@types/react": "19.1.2",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
