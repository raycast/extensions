{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-wallpaper",
  "title": "Raycast Wallpaper",
  "description": "Get and set Raycast official wallpapers.",
  "icon": "command-icon.png",
  "author": "koinzhang",
  "categories": [
    "Media",
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "raycast-wallpaper",
      "icon": "raycast-icon.png",
      "title": "Raycast Wallpaper",
      "description": "Set Raycast official wallpapers and capture for Raycast extension's metadata.",
      "mode": "view"
    },
    {
      "name": "random-wallpaper",
      "icon": "random-icon.png",
      "title": "Random Wallpaper",
      "description": "Set random Raycast wallpapers to desktop.",
      "mode": "no-view"
    },
    {
      "name": "capture-raycast-metadata",
      "icon": "capture-icon.png",
      "title": "Capture Raycast Metadata",
      "description": "Capture a screenshot for Raycast extension's metadata.",
      "mode": "no-view",
      "preferences": [
        {
          "name": "screenshotName",
          "title": "Screenshot Name",
          "description": "Set the screenshot name.",
          "type": "textfield",
          "required": false,
          "default": "Metadata"
        },
        {
          "name": "screenshotFormat",
          "title": "Screenshot Format",
          "description": "Set the screenshot format.",
          "type": "dropdown",
          "data": [
            {
              "title": "PNG",
              "value": "png"
            },
            {
              "title": "JPEG",
              "value": "jpg"
            },
            {
              "title": "PDF",
              "value": "pdf"
            },
            {
              "title": "TIFF",
              "value": "tiff"
            }
          ],
          "required": false,
          "default": "png"
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "applyTo",
      "title": "Apply Wallpaper To",
      "description": "Apply the wallpaper to which screen.",
      "type": "dropdown",
      "data": [
        {
          "title": "Current Desktop",
          "value": "current"
        },
        {
          "title": "Every Desktop",
          "value": "every"
        }
      ],
      "required": false,
      "default": "current"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.32.1",
    "file-url": "^4.0.0",
    "node-fetch": "^3.2.3",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
