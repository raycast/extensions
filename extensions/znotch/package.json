{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "znotch",
  "title": "Manage Macbook's Notch",
  "description": "Visibility control of your macbook's notch",
  "icon": "znotch-icon.png",
  "author": "zkondor",
  "categories": [
    "System",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "hide",
      "title": "Hide Notch",
      "description": "It makes the notch hidden.",
      "mode": "no-view"
    },
    {
      "name": "show",
      "title": "Show Notch",
      "description": "It makes the notch visible.",
      "mode": "no-view"
    },
    {
      "name": "toggle",
      "title": "Toggle Notch",
      "description": "It toggle the notch's visibility to an opposite one: hides if shown and vice versa.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
