{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sonarr",
  "title": "Sonarr",
  "description": "View your Sonarr upcoming shows.",
  "icon": "command-icon.png",
  "author": "Aayush9029",
  "categories": [
    "Media",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "View Upcoming Shows",
      "subtitle": "Sonarr",
      "description": "All upcoming shows dates",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "host",
      "title": "Host",
      "required": true,
      "description": "Hostname of the Sonarr server",
      "type": "textfield",
      "default": "localhost"
    },
    {
      "name": "port",
      "title": "Port",
      "required": true,
      "description": "The port of the Sonarr server",
      "type": "textfield",
      "default": "8989"
    },
    {
      "name": "apiKey",
      "title": "API Key",
      "required": true,
      "description": "The API key of the Sonarr server",
      "type": "textfield",
      "default": ""
    },
    {
      "name": "futureDays",
      "title": "Future Days",
      "required": false,
      "description": "The number of days from now to show upcoming shows for",
      "type": "dropdown",
      "default": "14",
      "data": [
        {
          "value": "7",
          "title": "Next week"
        },
        {
          "value": "14",
          "title": "Next 2 weeks"
        },
        {
          "value": "30",
          "title": "Next month" 
        },
        {
          "value": "180",
          "title": "Next 3 months"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}