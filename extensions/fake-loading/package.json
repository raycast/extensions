{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fake-loading",
  "title": "Fake Loading",
  "description": "Display fake loading screens in fullscreen",
  "icon": "icon.png",
  "author": "darlan_junior",
  "categories": [
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Choose Loading Screen",
      "description": "Choose from available loading screens",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.41.1",
    "react": "^17.0.2",
    "title-case": "^3.0.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^20.0.0",
    "@types/react": "^17.0.50",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
