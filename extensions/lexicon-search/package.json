{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "lexicon-search",
  "title": "AT Protocol Lexicon Search",
  "description": "Quickly look up atproto lexicons.",
  "icon": "magnisky.png",
  "author": "ftrstk",
  "categories": [
    "Developer Tools",
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Lexicons",
      "description": "Look up a lexicon type definition",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "name",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@atproto/lexicon": "^0.4.0",
    "@raycast/api": "^1.69.0",
    "@raycast/utils": "^1.16.2",
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
