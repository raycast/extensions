{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "foundry-cast-cli",
  "title": "Foundry Cast CLI",
  "description": "Use the Cast CLI directly inside Raycast",
  "icon": "foundry.png",
  "author": "merklefruit",
  "version": "0.2.2",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "AlchemyAPIKey",
      "description": "An Alchemy.com API token",
      "type": "textfield",
      "required": true,
      "title": "Alchemy API Key",
      "placeholder": "z241XEoGLXVfJ_avjhucsj6_nwdzWNPc"
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Foundry Cast",
      "subtitle": "CLI for Ethereum developers",
      "description": "CLI for Ethereum developers",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.50.3",
    "@raycast/utils": "^1.5.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
