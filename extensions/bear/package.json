{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bear",
  "title": "Bear Notes",
  "description": "Control Bear with Raycast",
  "icon": "command-icon.png",
  "author": "hmarr",
  "contributors": [
    "ron-myers"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Notes",
      "subtitle": "Bear",
      "description": "Search and open Bear notes",
      "mode": "view"
    },
    {
      "name": "new-note",
      "title": "Create Note",
      "subtitle": "Bear",
      "description": "Create a new bear note",
      "mode": "view"
    },
    {
      "name": "grab-url",
      "title": "Web Capture",
      "subtitle": "Bear",
      "description": "Create a new bear note from a web capture",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.1",
    "@types/commonmark": "^0.27.5",
    "commonmark": "^0.30.0",
    "date-fns": "^2.25.0",
    "open": "^8.4.0",
    "sql.js": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/sql.js": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "prettier": "prettier --write . && prettier --check ."
  }
}
