{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "amazon-search",
  "title": "Amazon Search",
  "description": "Amazon search with autosuggestions",
  "icon": "amazon-logo.png",
  "author": "xilopaint",
  "keywords": [
    "shopping"
  ],
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Amazon",
      "description": "Amazon search with autosuggestions",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "top_level_domain",
      "description": "Select the Amazon marketplace for your searches",
      "type": "dropdown",
      "required": true,
      "title": "Marketplace",
      "default": "com",
      "data": [
        {
          "title": "Australia",
          "value": "com.au"
        },
        {
          "title": "Belgium",
          "value": "com.be"
        },
        {
          "title": "Brazil",
          "value": "com.br"
        },
        {
          "title": "Canada",
          "value": "ca"
        },
        {
          "title": "China",
          "value": "cn"
        },
        {
          "title": "France",
          "value": "fr"
        },
        {
          "title": "Germany",
          "value": "de"
        },
        {
          "title": "India",
          "value": "in"
        },
        {
          "title": "Italy",
          "value": "it"
        },
        {
          "title": "Japan",
          "value": "co.jp"
        },
        {
          "title": "Mexico",
          "value": "com.mx"
        },
        {
          "title": "Netherlands",
          "value": "nl"
        },
        {
          "title": "Poland",
          "value": "pl"
        },
        {
          "title": "Saudi Arabia",
          "value": "sa"
        },
        {
          "title": "Singapore",
          "value": "sg"
        },
        {
          "title": "Spain",
          "value": "es"
        },
        {
          "title": "Sweden",
          "value": "se"
        },
        {
          "title": "Turkey",
          "value": "com.tr"
        },
        {
          "title": "United Kingdom",
          "value": "co.uk"
        },
        {
          "title": "United States",
          "value": "com"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.4",
    "@raycast/utils": "^1.18.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
