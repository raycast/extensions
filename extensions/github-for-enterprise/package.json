{
  "name": "github-for-enterprise",
  "title": "GitHub Enterprise",
  "description": "Visualize and manage your issues and pull requests",
  "icon": "icon.png",
  "author": "Kinbaum",
  "license": "MIT",
  "contributors": [
    "emanguy",
    "LunaticMuch",
    "pernielsentikaer"
  ],
  "commands": [
    {
      "name": "issues-create",
      "title": "Create Issue",
      "subtitle": "GitHub Enterprise",
      "description": "GitHub actions",
      "mode": "view"
    },
    {
      "name": "issues-open",
      "title": "Open Issues",
      "subtitle": "GitHub Enterprise",
      "description": "GitHub actions",
      "mode": "view"
    },
    {
      "name": "issues-search",
      "title": "Search Issues",
      "subtitle": "GitHub Enterprise",
      "description": "GitHub actions",
      "mode": "view"
    },
    {
      "name": "prs-open",
      "title": "Open Pull Requests",
      "subtitle": "GitHub Enterprise",
      "description": "GitHub actions",
      "mode": "view"
    },
    {
      "name": "prs",
      "title": "My Pull Requests",
      "subtitle": "GitHub Enterprise",
      "description": "GitHub actions",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "graphqlEndpoint",
      "type": "textfield",
      "required": true,
      "title": "GraphQL API",
      "description": "API of your GitHub GraphQL instance",
      "placeholder": "https://github.mycompany.com/api/graphql"
    },
    {
      "name": "username",
      "type": "textfield",
      "required": true,
      "title": "Username",
      "description": "Your GitHub username",
      "placeholder": "Kinbaum"
    },
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "Token",
      "description": "Your GitHub API token",
      "placeholder": "Enter your personal access token"
    },
    {
      "name": "unsafeHttps",
      "type": "checkbox",
      "required": false,
      "title": "Unsafe HTTPS",
      "description": "Activate unsafe HTTPS mode for self-signed certificates",
      "default": false,
      "label": "Enable"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.55.0",
    "debounce": "^1.2.1",
    "fuse.js": "^6.6.2",
    "graphql": "^16.7.1",
    "graphql-request": "^6.1.0",
    "gray-matter": "^4.0.3",
    "swr": "^2.2.0",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@types/debounce": "^1.2.1",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.10",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^3.0.0",
    "react-devtools": "^4.28.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
