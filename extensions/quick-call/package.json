{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quick-call",
  "title": "Quick Call",
  "description": "Make a phone call with the default telephone app.",
  "icon": "phone-icon.png",
  "author": "karbassi",
  "contributors": [
    "pernielsentikaer",
    "chrismessina"
  ],
  "categories": [
    "Communication"
  ],
  "keywords": [
    "call",
    "phone",
    "telephone",
    "facetime",
    "skype",
    "signal",
    "whatsapp",
    "microsoft teams",
    "google meet"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "quick-call",
      "title": "Quick Call",
      "description": "Make a phone call by entering a number",
      "mode": "no-view",
      "arguments": [
        {
          "name": "number",
          "placeholder": "phone number",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "call-this-number",
      "title": "Call This Number",
      "description": "Call a number from selected text or clipboard",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.80.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.5",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.9",
    "eslint": "^8.22.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
