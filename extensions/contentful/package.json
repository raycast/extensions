{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "contentful",
  "title": "Contentful",
  "description": "Browse and search Contentful content library",
  "icon": "icon.png",
  "author": "ewgenius",
  "categories": [
    "Data",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Content",
      "subtitle": "Contentful",
      "description": "Search Contentful content library",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "space",
      "title": "Contentful Space ID",
      "description": "Contentful space id",
      "type": "textfield",
      "required": true
    },
    {
      "name": "token",
      "title": "Contentful Management Token",
      "description": "Contentful management token",
      "type": "password",
      "required": true
    },
    {
      "name": "environment",
      "title": "Contentful Environment",
      "description": "If not set, will be used 'master'",
      "type": "textfield",
      "required": false,
      "default": "master"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.5",
    "@raycast/utils": "^1.5.2"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
