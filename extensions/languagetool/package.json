      "name": "endpoint",
      "title": "API Endpoint",
      "description": "The API endpoint to use",
      "type": "textfield",
      "required": true,
      "default": "https://api.languagetool.org/v2/check"
    },
    {
      "name": "apiKey",
      "title": "API Key",
      "description": "Your LanguageTool API key (optional)",
      "type": "password",
      "required": false
    },
    {
      "name": "preferredLanguage",
