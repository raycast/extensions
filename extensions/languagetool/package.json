{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "languagetool",
  "title": "LanguageTool",
  "description": "Integrates LanguageTool spell-checking directly into Raycast",
  "icon": "extension-icon.png",
  "author": "marvinvr",
  "type": "module",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "check-spelling",
      "title": "Check Spelling",
      "subtitle": "Use LanguageTool to check spelling",
      "description": "Check spelling of selected text or clipboard content", "Description": "Check spelling of selected text or clipboard content",
      "mode": "view"
    }
  ],
