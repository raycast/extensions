{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kaomoji-search",
  "title": "Kaomoji Search",
  "description": "Search and copy to the clipboard different kaomoji (ascii/unicode emotes).",
  "icon": "command-icon.png",
  "author": "yalishanda",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Kaomoji",
      "description": "Search for kaomoji by a keyword description.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "displayMode",
      "title": "Display Mode",
      "required": false,
      "description": "Choose how to display the results.",
      "default": "list",
      "type": "dropdown",
      "data": [
        {
          "title": "List",
          "value": "list"
        },
        {
          "title": "Grid",
          "value": "grid"
        }
      ]
    },
    {
      "name": "primaryAction",
      "title": "Primary action",
      "required": false,
      "description": "Choose the primary action for the results.",
      "default": "paste-to-active-app",
      "type": "dropdown",
      "data": [
        {
          "title": "Copy to Clipboard",
          "value": "copy-to-clipboard"
        },
        {
          "title": "Paste to Active App",
          "value": "paste-to-active-app"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^2.2.1",
    "asciilib": "^1.0.1",
    "nanoid": "^5.1.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  },
  "platforms": [
    "Windows",
    "macOS"
  ],
  "contributors": [
    "markwiseman"
  ]
}
