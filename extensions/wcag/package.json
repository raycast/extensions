{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "wcag",
  "title": "WCAG",
  "description": "Search the Web Content Accessibility Guidelines (WCAG) 2.2",
  "icon": "check-on-blue.png",
  "author": "fgeierst",
  "categories": [
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Success Criteria",
      "description": "List of all WCAG 2.2 Success Criteria",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "wcag-as-json": "github:tenon-io/wcag-as-json"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
