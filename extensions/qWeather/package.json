{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "qWeather",
  "title": "和风天气",
  "description": "和风天气，查询当天和未来3天的天气情况。",
  "icon": "weather.png",
  "author": "LeonKuo",
  "categories": [
    "News"
  ],
  "license": "MIT",
  "keywords": ["weather"],
  "commands": [
    {
      "name": "index",
      "title": "qWeather",
      "description": "通过和风天气API，查询当天和未来3天的天气情况。",
      "mode": "view",
      "preferences" :[
        {
          "name" : "token",
          "title" : "和风天气 token",
          "description" : "和风天气的 token , 需要自行申请。",
          "type" : "password",
          "required" : true
        },
        {
          "name" : "cityName",
          "title" : "默认城市",
          "description" : "默认查询的城市, 可以填写拼音",
          "type" : "textfield",
          "required" : true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.53.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
