{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "youtube-downloader",
  "title": "YouTube Downloader",
  "description": "Download YouTube video from Raycast",
  "type": "module",
  "icon": "youtube.png",
  "author": "vimtor",
  "contributors": [
    "pernielsentikaer",
    "d2a",
    "ridemountainpig",
    "xmorse",
    "litomore",
    "anwarulislam"
  ],
  "categories": [
    "Applications",
    "Data",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Download Video",
      "subtitle": "YouTube",
      "description": "Download YouTube video with parameters",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "downloadPath",
      "title": "Download Path",
      "description": "Path to download video",
      "type": "directory",
      "default": "~/Downloads",
      "required": true
    },
    {
      "name": "ytdlPath",
      "title": "yt-dlp Path",
      "description": "Path to the yt-dlp executable",
      "type": "textfield",
      "default": "/opt/homebrew/bin/yt-dlp",
      "required": false
    },
    {
      "name": "ffmpegPath",
      "title": "ffmpeg Path",
      "description": "Path to the ffmpeg executable",
      "type": "textfield",
      "default": "/opt/homebrew/bin/ffmpeg",
      "required": false
    },
    {
      "name": "ffprobePath",
      "title": "ffprobe Path",
      "description": "Path to the ffprobe executable. Usually installed alog with ffmpeg.",
      "type": "textfield",
      "default": "/opt/homebrew/bin/ffprobe",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.89.1",
    "@raycast/utils": "^1.18.1",
    "date-fns": "^4.1.0",
    "nano-spawn": "^0.2.0",
    "pretty-bytes": "^6.1.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.11",
    "@types/node": "22.10.9",
    "@types/react": "^18.3.18",
    "eslint": "^8.57.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "pull": "ray pull-contributions",
    "publish": "ray publish"
  }
}
