{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "leetcode",
  "title": "LeetCode",
  "description": "Search LeetCode problem, view LeetCode daily challenge, view LeetCode problem and more.",
  "icon": "leetcode.png",
  "author": "justin0u0",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "daily-challenge",
      "title": "View LeetCode Daily Challenge",
      "subtitle": "LeetCode",
      "description": "View the today daily-challenge problem.",
      "mode": "view"
    },
    {
      "name": "problem-search",
      "title": "Search LeetCode Problems",
      "subtitle": "LeetCode",
      "description": "Search and preview the LeetCode problems.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.46.1",
    "@raycast/utils": "^1.4.16",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/turndown": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
