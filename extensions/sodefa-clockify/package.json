{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sodefa-clockify",
  "title": "Sodefa Clockify",
  "description": "Control Clockify time tracking from Raycast",
  "icon": "command-icon.png",
  "author": "isma",
  "contributors": [
    "sxn"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Clockify API Key",
      "link": "https://clockify.me/user/settings"
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Time Tracking",
      "subtitle": "Sodefa Clockify",
      "description": "Manage Clockify time entries with Raycast",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.3",
    "lodash.isempty": "^4.4.0",
    "lodash.uniqwith": "^4.5.0",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/lodash.isempty": "^4.4.6",
    "@types/lodash.uniqwith": "^4.5.6",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3",
    "zod": "^3.20.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "publish": "ray publish"
  }
}
