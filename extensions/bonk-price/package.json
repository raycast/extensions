{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bonk-price",
  "title": "BONK Price",
  "description": "Shows the price of the BONK token on your macOS menu bar",
  "icon": "icon.png",
  "author": "AnishDe12020",
  "categories": [
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show BONK Price",
      "subtitle": "Crypto",
      "description": "Shows the price of the BONK token on your macOS menu bar",
      "mode": "menu-bar",
      "interval": "1m"
    }
  ],
  "preferences": [
    {
      "title": "BONK Amount",
      "name": "bonkAmount",
      "description": "How much BONK do you have?",
      "type": "textfield",
      "default": "25000000000", 
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
