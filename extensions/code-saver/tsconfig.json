{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "include": [
    "src/**/*",
    "raycast-env.d.ts"
  ],
  "exclude": [
    "src/lib/utils/*.js"
  ],
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "allowJs": true,
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  }
}