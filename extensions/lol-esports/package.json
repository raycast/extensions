{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "lol-esports",
  "title": "LoL Esports",
  "description": "Search League of Legends esports schedules and standings.",
  "icon": "extension-icon.png",
  "author": "vimtor",
  "categories": [
    "Data",
    "Media",
    "News",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "show-schedule",
      "title": "Show Schedule",
      "subtitle": "LoL Esports",
      "description": "Show LoL esports schedule",
      "mode": "view",
      "keywords": [
        "lol",
        "esports",
        "league",
        "legends",
        "matches"
      ]
    },
    {
      "name": "show-standings",
      "title": "Show Standings",
      "subtitle": "LoL Esports",
      "description": "Show LoL esports standings",
      "mode": "view",
      "keywords": [
        "lol",
        "esports",
        "league",
        "legends",
        "ranking"
      ]
    }
  ],
  "tools": [
    {
      "name": "get-leagues",
      "title": "Get Leagues",
      "description": "Get available Leagues"
    },
    {
      "name": "get-schedule",
      "title": "Get Schedule",
      "description": "Get a league schedule and matches"
    },
    {
      "name": "get-standings",
      "title": "Get Standings",
      "description": "Get a league current standings"
    }
  ],
  "ai": {
