{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "risk-reward-calculator",
  "title": "Risk Reward Calculator",
  "description": "This extension helps traders to calculate their position size based on entry, stop-loss, take-profit prices and the amount they risk.",
  "icon": "command-icon.png",
  "author": "demirtarik",
  "categories": [
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Calculate",
      "description": "Calculate your position size",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
