{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "qovery",
  "title": "Qovery",
  "description": "Interact with your Qovery organization",
  "icon": "extension-icon.png",
  "screenshots": [
    {
      "title": "Qovery Services List",
      "description": "View all services in your Qovery organization",
      "path": "metadata/service-list.png"
    },
    {
      "title": "Service Actions",
      "description": "Quick actions for each service including opening in console and viewing links",
      "path": "metadata/service-actions.png"
    },
    {
      "title": "Service Links",
      "description": "View and manage service links",
      "path": "metadata/service-links.png"
    }
  ],
  "author": "RemiBonnet",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Find Services",
      "description": "Interact with your Qovery organization",
      "mode": "view",
      "preferences": [
        {
          "name": "apiToken",
          "title": "API Token",
          "description": "Your Qovery API token",
          "type": "password",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.83.2",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "^19.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
