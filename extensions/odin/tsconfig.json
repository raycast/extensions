{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "include": [
    "src/**/*",
    "node_modules/@types/puppeteer/index.d.ts"
  ],
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  }
}