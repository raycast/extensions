{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nuget",
  "title": "NuGet",
  "description": "Simple extension to search for NuGet packages and copy command to install them to clipboard",
  "icon": "icon.png",
  "author": "lbergantin",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search NuGet Packages",
      "description": "Search for NuGet packages",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Command to copy",
      "description": "Command to be used when copying to clipboard",
      "name": "command-to-copy",
      "type": "dropdown",
      "required": true,
      "default": "dotnet-cli",
      "data": [
        {
          "title": "Package Manager",
          "value": "package-manager"
        },
        {
          "title": ".NET CLI",
          "value": "dotnet-cli"
        },
        {
          "title": "Package Reference",
          "value": "package-reference"
        },
        {
          "title": "Packet CLI",
          "value": "packet-cli"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.36.1",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.6"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
