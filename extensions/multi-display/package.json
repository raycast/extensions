{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "multi-display",
  "title": "Multi display",
  "description": "A utility about multi-display input source switching and window switching",
  "icon": "icon.png",
  "author": "gaoyang",
  "categories": [
    "Productivity",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "switch-source-typec",
      "icon": "icon.png",
      "title": "Switch To Type-C",
      "subtitle": "Display Input Source",
      "description": "Display Input Source To Type-C",
      "mode": "no-view"
    },
    {
      "name": "switch-source-hdmi",
      "icon": "icon.png",
      "title": "Switch To HDMI",
      "subtitle": "Display Input Source",
      "description": "Display Input Source To HDMI",
      "mode": "no-view"
    },
    {
      "name": "switch-source-dp",
      "icon": "icon.png",
      "title": "Switch To DP",
      "subtitle": "Display Input Source",
      "description": "Display Input Source To DisplayPort",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
