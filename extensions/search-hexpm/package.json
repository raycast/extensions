{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "search-hex",
  "title": "Search Hex",
  "description": "A Raycast extension that enables you to quickly look up package information from Hex",
  "icon": "command-icon.png",
  "author": "jordelver",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Hex",
      "subtitle": "Erlang ecosystem Package Manager",
      "description": "Search Hex for package information",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.1",
    "node-fetch": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
