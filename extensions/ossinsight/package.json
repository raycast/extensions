{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ossinsight",
  "title": "OSS Insight",
  "description": "OSS Insight extension for Raycast",
  "icon": "icon.png",
  "author": "k8scat",
  "contributors": [
    "pernielsentikaer"
  ],
  "keywords": [
    "Open Source",
    "GitHub"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Trending Repos",
      "subtitle": "OSS Insight",
      "description": "Search GitHub Trending Repos",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Period",
      "description": "Query Period",
      "required": false,
      "name": "period",
      "type": "dropdown",
      "default": "past_24_hours",
      "data": [
        {
          "title": "Past 24 Hours",
          "value": "past_24_hours"
        },
        {
          "title": "Past Week",
          "value": "past_week"
        },
        {
          "title": "Past Month",
          "value": "past_month"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.1",
    "@raycast/utils": "^1.9.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
