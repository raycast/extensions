{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "airport-weather",
  "title": "Airport Weather - METARs and TAFs",
  "description": "Access METAR and TAF for an airport. Data is provided by NOAA.",
  "icon": "command-icon.png",
  "author": "LunaticMuch",
  "categories": [
    "Other",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "current-metar",
      "title": "Current METAR",
      "subtitle": "Get the current METAR for an airport",
      "description": "Get the current METAR for an airport",
      "mode": "view",
      "arguments": [
        {
          "name": "airportCode",
          "type": "text",
          "placeholder": "KSEA",
          "required": false
        }
      ],
      "preferences": [
        {
          "name": "defaultAirportCode",
          "type": "textfield",
          "required": false,
          "default": "",
          "title": "Default Airport Code",
          "label": "Airport",
          "description": "Default Airport Code"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.50.0",
    "@raycast/utils": "^1.5.2",
    "fast-xml-parser": "^4.2.2",
    "got": "^12.6.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
