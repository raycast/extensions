{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-motion-preview",
  "title": "Motion Preview",
  "description": "Preview Lottie and Rive Animations in Raycast",
  "icon": "command-icon.png",
  "author": "ayarse",
  "categories": [
    "Developer Tools",
    "Design Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "preview-animation",
      "title": "Preview Animation",
      "subtitle": "Motion Preview",
      "description": "Quickly preview animation files in selected in Finder. Supports Lottie (JSON and dotLottie) and Rive files.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.79.1",
    "@raycast/utils": "^1.16.2",
    "stream-chain": "^2.2.5",
    "stream-json": "^1.8.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "@types/stream-chain": "^2.1.0",
    "@types/stream-json": "^1.7.7",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
