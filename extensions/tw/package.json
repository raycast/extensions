{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tw",
  "title": "TW - TaskWarrior",
  "description": "A TaskWarrior extension",
  "icon": "extension_icon.png",
  "author": "roalcantara",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Tasks",
      "subtitle": "TW - TaskWarrior",
      "description": "Search TaskWarrior's tasks, projects & tags",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "custom_task_path",
      "type": "textfield",
      "title": "Custom Executable Path",
      "default": "/usr/local/bin/task",
      "description": "Set this if your task executable is in a non-standard location",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.53.4",
    "@raycast/utils": "^1.8.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.6",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "eslint": "^8.43.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
