{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ask-chatgpt",
  "title": "Ask ChatGPT",
  "description": "ChatGPT integration for Raycast command by Ex10si0n",
  "icon": "command-icon.png",
  "author": "Ex10si0n",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "chat",
      "title": "Chat",
      "description": "Ask ChatGPT using Raycast prompt",
      "mode": "view",
      "arguments": [
        {
          "name": "prompt",
          "placeholder": "prompt",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.5",
    "openai": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "preferences": [
    {
      "name": "openaiApiToken",
      "title": "OpenAI API Token",
      "description": "Your OpenAI API Token",
      "type": "password",
      "default": "",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
