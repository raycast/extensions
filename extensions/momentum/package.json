{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "momentum",
  "title": "Momentum",
  "description": "Create a new project and open it in your favourite editor",
  "icon": "icons/main.png",
  "author": "leondaz",
  "categories": [
    "Developer Tools"
  ],
  "access": "public",
  "license": "MIT",
  "commands": [
    {
      "name": "project-empty",
      "title": "Create Empty Project",
      "description": "Create an Empty project",
      "mode": "no-view",
      "arguments": [
        {
          "name": "projectName",
          "placeholder": "my_new_project",
          "type": "text",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "pkgManager",
          "title": "Default package Manager",
          "placeholder": "npm",
          "description": "Package Manager",
          "default": "npm",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "npm",
              "value": "npm"
            },
            {
              "title": "yarn",
              "value": "yarn"
            },
            {
              "title": "pnpm",
              "value": "pnpm"
            },
            {
              "title": "bun",
              "value": "bun"
            }
          ]
        },
        {
          "title": "Preferred IDE",
          "name": "editor",
          "type": "appPicker",
          "placeholder": "code",
          "default": "Visual Studio Code",
          "description": "Choose your favourite IDE",
          "required": true
        },
        {
          "name": "projectsLocation",
          "title": "Projects location",
          "default": "~/projects",
          "required": true,
          "description": "Location to save your newly created projects",
          "type": "directory",
          "placeholder": "~/projects"
        }
      ]
    },
