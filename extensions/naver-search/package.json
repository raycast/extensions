{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "naver-search",
  "title": "Naver Search",
  "description": "Naver search extension for Raycast",
  "icon": "command-icon.png",
  "author": "magneto",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "naver-search",
      "title": "Naver Search",
      "description": "Naver search with autosuggestions",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "rememberSearchHistory",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Remember Search History",
      "description": "Enable this checkbox to locally store Naver search history."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.8",
    "iconv-lite": "^0.6.3",
    "nanoid": "^4.0.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-config-prettier": "^8.7.0",    
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
