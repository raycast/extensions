{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ip-geolocation",
  "title": "IP Geolocation",
  "description": "Show local and public IPv4/IPv6 address.\nQuery geolocation for any IP address or domain.",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "contributors": [
    "foof"
  ],
  "categories": [
    "Developer Tools",
    "Web"
  ],
  "keywords": [
    "myip",
    "ip",
    "my ip"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "query-ip-geolocation",
      "title": "Query IP Geolocation",
      "icon": "query-ip-geolocation.png",
      "description": "Query geolocation for any IP address or domain.",
      "mode": "view",
      "arguments": [
        {
          "name": "ipAddress",
          "placeholder": "IP Address or Domain",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "my-ip-geolocation",
      "title": "My IP Geolocation",
      "icon": "my-ip-geolocation.png",
      "description": "Show geolocation for local and public IPv4/IPv6 address.",
      "mode": "view",
      "preferences": [
        {
          "name": "showIPv6",
          "type": "checkbox",
          "required": false,
          "label": "Show IPv6 Address",
          "description": "Query and display IPv6 address. Can cause information loading speed to drop.",
          "default": false
        }
      ]
    },
    {
      "name": "copy-ip",
      "title": "Copy IP",
      "icon": "copy-ip.png",
      "description": "Copy local/public IPv4/IPv6 address.",
      "mode": "no-view",
      "interval": "1h",
      "arguments": [
        {
          "name": "ipType",
          "type": "dropdown",
          "required": false,
          "placeholder": "Local",
          "data": [
            {
              "title": "Public",
              "value": "Public"
            }
          ]
        },
        {
          "name": "ipVersion",
          "type": "dropdown",
          "required": false,
          "placeholder": "IPv4",
          "data": [
            {
              "title": "IPv6",
              "value": "IPv6"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "language",
      "title": "Language",
      "description": "Language of location information display.",
      "type": "dropdown",
      "data": [
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "Deutsch (German)",
          "value": "de"
        },
        {
          "title": "Español (Spanish)",
          "value": "es"
        },
        {
          "title": "Português - Brasil (Portuguese)",
          "value": "pt-BR"
        },
        {
          "title": "Français (French)",
          "value": "fr"
        },
        {
          "title": "日本語 (Japanese)",
          "value": "ja"
        },
        {
          "title": "中国 (Chinese)",
          "value": "zh-CN"
        },
        {
          "title": "Русский (Russian)",
          "value": "ru"
        }
      ],
      "required": false,
      "default": "en"
    },
    {
      "name": "coordinatesFormat",
      "title": "Coordinates Format",
      "description": "Coordinate format of location information display.",
      "type": "dropdown",
      "data": [
        {
          "title": "Latitude, Longitude",
          "value": "latLon"
        },
        {
          "title": "Longitude, Latitude",
          "value": "lonLat"
        }
      ],
      "required": false,
      "default": "latLon"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.80.0",
    "axios": "^1.7.3",
    "public-ip": "^7.0.1",
    "@raycast/utils": "^1.16.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "22.1.0",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
