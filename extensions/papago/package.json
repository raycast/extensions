{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "translate",
  "title": "Papago Translate",
  "description": "Translate a sentence using Papago API",
  "icon": "papago-icon.png",
  "author": "woogler",
  "license": "MIT",
  "commands": [
    {
      "name": "translate",
      "title": "Translate",
      "subtitle": "Papago Translate",
      "description": "Translate a sentence via Naver Papago",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "type": "textfield",
      "required": true,
      "title": "Papago Client ID",
      "description": "Papago Client ID"
    },
    {
      "name": "clientSecret",
      "type": "textfield",
      "required": true,
      "title": "Papago Client Secret",
      "description": "Papago Client Secret"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.28.0",
    "@types/qs": "^6.9.7",
    "axios": "^0.25.0",
    "qs": "^6.10.3"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
