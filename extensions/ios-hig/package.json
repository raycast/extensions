{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-ios-hig",
  "title": "iOS Human Interface Guidelines",
  "description": "Shows you the iOS HIG's info for quick reference",
  "icon": "icon.png",
  "author": "eliperkins",
  "categories": [
    "Developer Tools",
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Fonts",
      "description": "Shows you the iOS HIG's font sizes for quick reference",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.3",
    "match-sorter": "^6.3.1"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
