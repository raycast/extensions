{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tailwindcss",
  "title": "Tailwind CSS",
  "description": "Utilities to work with Tailwind CSS",
  "icon": "tailwind-icon.png",
  "author": "vimtor",
  "contributors": [
    "cy-98",
    "emilsharier",
    "pernielsentikaer",
    "erich2s",
    "ridemountainpig",
    "jor",
    "garrill",
    "olafvanmidden",
    "hyftar"
  ],
  "license": "MIT",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "commands": [
    {
      "name": "search-documentation",
      "title": "Search Documentation",
      "subtitle": "Tailwind CSS",
      "keywords": [
        "css"
      ],
      "description": "Search documentation and open it in the browser",
      "mode": "view"
    },
    {
      "name": "search-classes",
      "title": "Search Classes",
      "subtitle": "Tailwind CSS",
      "keywords": [
        "css"
      ],
      "description": "Search Tailwind CSS utility classes",
      "mode": "view",
      "preferences": [
        {
          "name": "measuringUnit",
          "title": "Measuring Unit",
          "description": "Measuring unit to use for spacing-related properties",
          "type": "dropdown",
          "required": true,
          "default": "rem",
          "data": [
            {
              "title": "REM",
              "value": "rem"
            },
            {
              "title": "Pixels",
              "value": "px"
            }
          ]
        },
        {
          "name": "defaultAction",
          "title": "Default Action",
          "description": "Action to perform when pressing enter",
          "type": "dropdown",
          "required": false,
          "default": "selector",
          "data": [
            {
              "title": "Copy Selector",
              "value": "selector"
            },
            {
              "title": "Copy CSS",
              "value": "css"
            },
            {
              "title": "Copy Class Name",
              "value": "class"
            }
          ]
        }
      ]
    },
    {
      "name": "search-colors",
      "title": "Search Colors",
      "subtitle": "Tailwind CSS",
      "keywords": [
        "css"
      ],
      "description": "Search Tailwind CSS default color palette",
      "mode": "view",
      "preferences": [
        {
          "name": "defaultAction",
          "title": "Default Action",
          "description": "Action to perform when pressing enter",
          "type": "dropdown",
          "required": false,
          "default": "color-name",
          "data": [
            {
              "title": "Copy Color Name",
              "value": "color-name"
            },
            {
              "title": "Copy HEX",
              "value": "value-hex"
            },
            {
              "title": "Copy RGB",
              "value": "value-rgb"
            },
            {
              "title": "Copy HSL",
              "value": "value-hsl"
            },
            {
              "title": "Copy Background Class",
              "value": "bg-class"
            },
            {
              "title": "Copy Text Class",
              "value": "text-class"
            },
            {
              "title": "Copy Border Class",
              "value": "border-class"
            },
            {
              "title": "Copy Shadow Class",
              "value": "shadow-class"
            },
            {
              "title": "Copy Ring Class",
              "value": "ring-class"
            },
            {
              "title": "Copy Outline Class",
              "value": "outline-class"
            }
          ]
        }
      ]
    },
    {
      "name": "search-components",
      "title": "Search Components",
      "subtitle": "Tailwind UI",
      "keywords": [
        "css"
      ],
      "description": "Search Tailwind UI components",
      "mode": "view"
    }
  ],
  "categories": [
    "Documentation",
    "Developer Tools"
  ],
  "dependencies": {
    "@raycast/api": "^1.57.2",
    "color-convert": "^2.0.1",
    "css": "^3.0.0",
    "lodash": "^4.17.21",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@types/color-convert": "^2.0.0",
    "@types/css": "^0.0.33",
    "@types/lodash": "^4.14.188",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish",
    "generate": "npx tailwindcss -i ./generator/input.css -o ./generator/output.css && node ./generator/index.js"
  }
}
