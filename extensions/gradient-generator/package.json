{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "version": "1.0.0",
  "name": "gradient-generator",
  "title": "Gradient Generator",
  "description": "Create, preview, randomize, save and export gradients, using them in your next project.",
  "icon": "icon.png",
  "author": "smcnab1",
  "contributors": [],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "platforms": [
    "macOS"
  ],
  "commands": [
    {
      "name": "create-gradient",
      "title": "Create Gradient",
      "description": "Create a gradient and preview it.",
      "mode": "view"
    },
    {
      "name": "preview-gradient",
      "title": "Preview Gradient",
      "description": "Preview a gradient with copy actions.",
      "mode": "view"
    },
    {
      "name": "random-gradient",
      "title": "Random Gradient",
      "description": "Show a random gradient.",
      "mode": "view"
    },
    {
      "name": "saved-gradients",
      "title": "Saved Gradients",
      "description": "View and manage saved gradients.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "1.102.4",
    "@raycast/utils": "2.2.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.3.3",
    "typescript": "^4.9.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}

 