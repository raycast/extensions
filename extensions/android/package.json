{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "android",
  "title": "Android",
  "description": "Useful Android commands to list projects and emulators",
  "icon": "command-icon.png",
  "author": "mibrahimdev",
  "contributors": [
    "3llomi"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "list-android",
      "title": "List Projects",
      "subtitle": "Android",
      "description": "show android projects in directory",
      "icon": "list-android.png",
      "mode": "view"
    },
    {
      "name": "list-emulators",
      "title": "List Emulators",
      "subtitle": "Android",
      "description": "show android emulators",
      "icon": "list-android.png",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "expand-tilde": "^2.0.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/expand-tilde": "^2.0.0",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "preferences": [
    {
      "title": "Android Projects Directory",
      "name": "androidProjectsDirectory",
      "description": "Locate your Android Projects",
      "placeholder": "/Users/{user-name}/AndroidStudioProjects",
      "type": "textfield",
      "required": true,
      "default": ""
    },
    {
      "title": "Android SDK",
      "name": "androidSDK",
      "description": "Locate Android SDK path",
      "type": "textfield",
      "required": true,
      "default": "~/Library/Android/sdk"
    },
    {
      "title": "Android AVD",
      "name": "androidAVD",
      "description": "Locate Android AVD path",
      "type": "textfield",
      "required": true,
      "default": "~/.android/avd"
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
