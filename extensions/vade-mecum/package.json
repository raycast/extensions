{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "vade-mecum",
  "title": "Vade Mecum",
  "description": "Quickly access and navigate relevant Brazilian legislation",
  "icon": "extension-icon.png",
  "author": "xilopaint",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Look Up Legislation",
      "subtitle": "Vade Mecum",
      "description": "Look up relevant Brazilian legislation",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "get-laws",
      "title": "Get Laws",
      "description": "Get a list of all laws available in the extension"
    },
    {
      "name": "get-articles",
      "title": "Get Articles",
      "description": "Retrieve articles from the laws relevant to the query"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.96.1",
    "@raycast/utils": "^1.19.1",
    "cheerio": "^1.0.0",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "20.8.10",
    "@types/react": "19.1.0",
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "evals": "ray evals",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
