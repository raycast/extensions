{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "apple-devices",
  "title": "Apple Devices",
  "description": "Quickly look up Apple Devices and control Simulators",
  "icon": "extension_icon.png",
  "author": "madza",
  "categories": [
    "Design Tools",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Device",
      "description": "Search all devices and control Simulators",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "device",
      "type": "dropdown",
      "required": false,
      "title": "Default Device Type",
      "description": "Initial filter by device type",
      "data": [
        {
          "title": "Latest used",
          "value": "latest"
        },
        {
          "title": "All",
          "value": "all"
        },
        {
          "title": "iPhone",
          "value": "iPhone"
        },
        {
          "title": "iPad",
          "value": "iPad"
        },
        {
          "title": "iPod touch",
          "value": "iPod"
        },
        {
          "title": "Apple Watch",
          "value": "Apple Watch"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.53.4",
    "@raycast/utils": "^1.8.0",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.12",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
