{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "exif",
  "title": "Exif Viewer",
  "description": "Show metadata (EXIF) for images from clipboard or URL",
  "icon": "command-icon.png",
  "author": "j3lte",
  "keywords": [
    "exif",
    "image",
    "metadata",
    "exiftool",
    "clipboard"
  ],
  "categories": [
    "Developer Tools",
    "Media",
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "show-exif-data-for-image",
      "title": "Show Metadata for Image",
      "subtitle": "Exif Viewer",
      "description": "Show Metadata for Image (EXIF) from clipboard or a url",
      "mode": "view",
      "arguments": [
        {
          "type": "text",
          "name": "url",
          "description": "The image to show EXIF data for (url or path)",
          "placeholder": "<Optional URL>",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.4",
    "exifreader": "^4.20.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
