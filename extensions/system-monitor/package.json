{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-system-monitor",
  "title": "System Monitor",
  "description": "Show information and usage related to CPU , Memory , Power and Network",
  "icon": "command-icon.png",
  "author": "hossammourad",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "contributors": [
    "Crayon144",
    "pernielsentikaer",
    "lucasmezencio"
  ],
  "commands": [
    {
      "name": "system-monitor",
      "title": "System Monitor",
      "description": "Show information and usage related to CPU , Memory , Power and Network",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.3",
    "@raycast/utils": "^1.13.6",
    "os-utils": "0.0.14",
    "systeminformation": "^5.22.7",
    "usehooks-ts": "^3.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.12.5",
    "@types/os-utils": "0.0.4",
    "@types/react": "18.2.74",
    "eslint": "^9.0.0",
    "plist": "^3.1.0",
    "prettier": "^3.2.5",
    "react-devtools": "^4.28.4",
    "typescript": "4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint --fix"
  },
  "preferences": [
    {
      "name": "defaultView",
      "description": "Select active tab upon launch",
      "type": "dropdown",
      "required": false,
      "title": "Default tab",
      "placeholder": "placeHolder",
      "data": [
        {
          "title": "System Info",
          "value": "system-info"
        },
        {
          "title": "CPU",
          "value": "cpu"
        },
        {
          "title": "Memory",
          "value": "memory"
        },
        {
          "title": "Power",
          "value": "power"
        },
        {
          "title": "Network",
          "value": "network"
        }
      ]
    }
  ]
}
