{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "clockify",
  "title": "Clockify",
  "description": "Control Clockify time tracking from Raycast",
  "icon": "command-icon.png",
  "author": "isma",
  "contributors": [
    "sxn",
    "kuddl",
    "azlekov",
    "sebboer"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Clockify API Key",
      "link": "https://app.clockify.me/user/preferences#advanced"
    },
    {
      "name": "region",
      "title": "Region",
      "description": "Clockify Region",
      "type": "dropdown",
      "required": true,
      "data": [
        {
          "title": "Global",
          "value": "GLOBAL"
        },
        {
          "title": "USA",
          "value": "USA"
        },
        {
          "title": "AU",
          "value": "AU"
        },
        {
          "title": "EU",
          "value": "EU"
        },
        {
          "title": "UK",
          "value": "UK"
        }
      ],
      "default": "GLOBAL"
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Time Tracking",
      "subtitle": "Clockify",
      "description": "Manage Clockify time entries with Raycast",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "1.76.0",
    "lodash.isempty": "^4.4.0",
    "lodash.uniqwith": "^4.5.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/lodash.isempty": "^4.4.9",
    "@types/lodash.uniqwith": "^4.5.9",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1"
  }
}
