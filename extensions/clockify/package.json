{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "clockify",
  "title": "Clockify",
  "description": "Control Clockify time tracking from Raycast",
  "icon": "command-icon.png",
  "author": "isma",
  "contributors": [
    "sxn",
    "kuddl"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Clockify API Key",
      "link": "https://clockify.me/user/settings"
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Time Tracking",
      "subtitle": "Clockify",
      "description": "Manage Clockify time entries with Raycast",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "1.27.0",
    "lodash.isempty": "^4.4.0",
    "lodash.uniqwith": "^4.5.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/lodash.isempty": "^4.4.9",
    "@types/lodash.uniqwith": "^4.5.9",
    "@types/node": "~16.10.9",
    "@types/react": "^17.0.80",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint-config-prettier": "^8.10.0",
    "prettier": "^3.0.3",
    "eslint": "^7.32.0",
    "react-devtools": "^4.28.5",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
