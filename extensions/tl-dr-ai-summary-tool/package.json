{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tl-dr-ai-summary-tool",
  "title": "TL;DR (Too Long; Didn't Read)",
  "description": "Let AI help you read articles from url.",
  "icon": "extension_icon.png",
  "author": "chessjoe",
  "license": "MIT",
  "categories": [
    "Productivity",
    "Developer Tools",
    "Web",
    "Fun",
    "Finance",
    "Other"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Article Summarizer",
      "description": "Use AI to summarize articles.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "zhipuApiKey",
      "description": "The format of the API Key is `xxx.yy`. Get your key from https://open.bigmodel.cn/usercenter/apikeys.",
      "type": "textfield",
      "title": "ZHIPU API Key",
      "placeholder": "xxx.yy",
      "required": true
    },
    {
      "name": "useStream",
      "label": "Enable streaming completions",
      "description": "Stream the completions of the generated answer",
      "type": "checkbox",
      "title": "Stream Completion",
      "default": true,
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "axios": "^1.6.5",
    "cheerio": "^1.0.0-rc.12",
    "env-cmd": "^10.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
