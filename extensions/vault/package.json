{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "vault-manager",
  "title": "Vault Manager",
  "description": "Vault extension for Raycast",
  "icon": "vault.png",
  "author": "fonimus",
  "contributors": [
    "ricoberger",
    "pernielsentikaer"
  ],
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "vault",
      "title": "Vault Manager",
      "description": "Explore, display, edit, delete vault secrets, list entities",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "url",
      "title": "Vault url",
      "description": "Vault url",
      "type": "textfield",
      "default": "http://localhost:8200",
      "required": true
    },
    {
      "name": "secretEngine",
      "title": "Secret engine",
      "description": "Used only if not set by 'List Engines' action",
      "type": "textfield",
      "default": "secret",
      "required": true
    },
    {
      "name": "loginMethod",
      "title": "Login method",
      "description": "Login method (ldap, token)",
      "type": "dropdown",
      "default": "ldap",
      "data": [
        {
          "title": "Ldap",
          "value": "ldap"
        },
        {
          "title": "Token",
          "value": "token"
        }
      ],
      "required": false
    },
    {
      "name": "ldap",
      "title": "Ldap",
      "description": "Ldap identifier (only for ldap method)",
      "type": "textfield",
      "required": false
    },
    {
      "name": "password",
      "title": "Password",
      "description": "Ldap password (only for ldap method)",
      "type": "password",
      "required": false
    },
    {
      "name": "token",
      "title": "Token",
      "description": "Token (only for token method)",
      "type": "password",
      "required": false
    },
    {
      "name": "technicalPaths",
      "title": "Technical paths",
      "description": "Technical paths to hide, separated by space",
      "type": "textfield",
      "required": false
    },
    {
      "name": "favoriteNamespaces",
      "title": "Favorite namespaces",
      "description": "Favorite namespaces, separated by space (for easy switch)",
      "type": "textfield",
      "required": false
    },
    {
      "name": "enableWrite",
      "title": "Enable write",
      "label": "Enable write",
      "description": "Enable write",
      "type": "checkbox",
      "default": true,
      "required": true
    },
    {
      "name": "enableDelete",
      "title": "Enable delete",
      "label": "Enable delete",
      "description": "Enable delete",
      "type": "checkbox",
      "default": false,
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "1.52.1",
    "@raycast/utils": "1.7.0",
    "got": "12.5.3",
    "human-date": "1.4.0",
    "node-vault": "0.9.22"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/human-date": "1.4.2",
    "@types/node": "18.14.2",
    "@types/react": "18.0.28",
    "eslint": "8.35.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "2.8.4",
    "typescript": "4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
