{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "converter-tool",
  "title": "Converter Tool",
  "description": "date、timestamp、hex..conversion",
  "icon": "extension-icon.png",
  "author": "xiaooojun",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "hexadecimal-conversion",
      "title": "Xj: Hex、Decimal Converter",
      "subtitle": "Hex、Decimal Converter",
      "description": "binary, decimal, hexadecimal conversion",
      "mode": "view"
    },
    {
      "name": "date-timestamp-conversion",
      "title": "Xj: Date、Timestamp Converter",
      "subtitle": "Date、Timestamp Converter",
      "description": "date、timestamp conversion。。。。。",
      "mode": "view"
    },
    {
      "name": "menuBar",
      "title": "Xj: StatusBar Tool",
      "subtitle": "StatusBar Tool",
      "description": "StatusBar Tool。。。。。",
      "mode": "menu-bar"
    },
    {
      "name": "openFinder",
      "title": "Xj: Show in Finder",
      "subtitle": "directory configured in Settings",
      "description": "directory configured in Settings",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "type": "directory",
      "name": "finderDirectory",
      "title": "Open Finder Directory",
      "description": "Open Finder Directory....",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.96.1",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "dayjs": "^1.11.13"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
