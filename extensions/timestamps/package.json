{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "timestamps",
  "title": "Timestamps",
  "description": "Helpers to work with timestamps",
  "icon": "timestamps-icon.png",
  "author": "kaili",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "timestamp",
      "title": "Paste Timestamp",
      "description": "Paste the current timestamp",
      "mode": "no-view"
    },
    {
      "name": "to-date",
      "title": "Convert Timestamp to Date",
      "description": "Convert timestamp on your clipboard to human readable date",
      "mode": "view"
    },
    {
      "name": "today",
      "title": "Paste Today's Date",
      "description": "Paste today's date in the format of yyyy-mm-dd ddd",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
