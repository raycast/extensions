{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "paste-as-plain-text",
  "title": "Paste as Plain Text",
  "description": "Paste text from the clipboard as plain text.",
  "icon": "paste-icon.png",
  "author": "koinzhang",
  "contributors": ["pantajoe"],
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "preferences": [
    {
      "title": "Format",
      "label": "Clean line breaks",
      "name": "cleanLineBreaks",
      "type": "checkbox",
      "description": "Replace all line breaks with spaces",
      "default": false,
      "required": false
    },
    {
      "title": "Trim",
      "name": "trim",
      "type": "dropdown",
      "description": "Trim leading and trailing spaces",
      "default": "none",
      "data": [
        {
          "title": "None",
          "value": "none"
        },
        {
          "title": "Leading spaces",
          "value": "leading"
        },
        {
          "title": "Trailing spaces",
          "value": "trailing"
        },
        {
          "title": "Both",
          "value": "both"
        }
      ],
      "required": false
    }
  ],
  "commands": [
    {
      "name": "paste-as-plain-text",
      "title": "Paste as Plain Text",
      "description": "Paste text from the clipboard as plain text.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
