{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bitly-url-shortener",
  "title": "Bitly URL Shortener",
  "description": "Quickly shorten the selected URL or current clipboard URL with Bitly",
  "icon": "command-icon.png",
  "author": "blessanm86",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Shorten URL",
      "subtitle": "Bitly",
      "description": "Overwrite the clipboard contents with a shortened URL",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your Bitly access token.",
      "placeholder": "Can be found at https://app.bitly.com/settings/api"
    },
    {
      "name": "pasteAfterShortening",
      "type": "checkbox",
      "required": false,
      "default": false,
      "label": "Automatically paste shortened URL",
      "description": "Automatically paste the shortened URL after shortening it."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "node-fetch": "^3.1.0",
    "prettier": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
