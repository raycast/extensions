{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "afs-zeiterfassung-raycast",
  "title": "AFS-Zeiterfassung",
  "description": "Stempel-Status ändern für die AFS-Zeiterfassung.",
  "icon": "extension-icon.png",
  "author": "silas_manns",
  "license": "MIT",
  "commands": [
    {
      "name": "zeiterfassung",
      "title": "zeiterfassung",
      "description": "Öffnet die Liste der Stempel-Status.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.4",
    "@raycast/utils": "^1.17.0",
    "axios": "^1.7.9",
    "jwt-decode": "^4.0.0"
  },
  "preferences": [
    {
      "name": "server",
      "title": "Server",
      "description": "Url des Servers Ihrere Zeiterfassung",
      "type": "textfield",
      "required": true,
      "placeholder": "https://deinezeiterfassung.app"
    },
    {
      "name": "username",
      "title": "Benutzername",
      "description": "Ihr Benutzername in der AFS-Zeiterfassung",
      "type": "textfield",
      "required": true,
      "placeholder": "Max..."
    },
    {
      "name": "password",
      "title": "Passwort",
      "description": "Ihr Passwort in der AFS-Zeiterfassung",
      "type": "password",
      "required": false,
      "placeholder": "**********"
    }
  ],
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
