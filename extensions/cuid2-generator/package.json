{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cuid2-generator",
  "title": "Cuid2 Generator",
  "description": "Generate cuid2 ids",
  "icon": "command-icon.png",
  "author": "gilbarbara",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "generate",
      "title": "Generate Cuid2",
      "description": "Copy generated Cuid2 to the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "numberOfIdsToGenerate",
          "type": "text",
          "placeholder": "1",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.46.0",
    "@paralleldrive/cuid2": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
