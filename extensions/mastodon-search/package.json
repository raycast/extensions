{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "mastodon-search",
    "title": "Mastodon Search - Search for People or Hashtags on Mastodon.",
    "description": "Mastodon search extension for Raycast.",
    "icon": "command-icon.png",
    "author": "daveverwer",
    "categories": [
        "Communication",
        "Web"
    ],
    "license": "MIT",
    "commands": [
        {
            "name": "search",
            "title": "Search Mastodon",
            "subtitle": "‍‍",
            "description": "Search Mastodon for people or hashtags.",
            "mode": "view"
        }
    ],
    "preferences": [
        {
            "name": "instance",
            "title": "Instance",
            "description": "The Mastodon instance to search.",
            "type": "textfield",
            "required": true,
            "default": "mastodon.social"
        }
    ],
    "dependencies": {
        "@raycast/api": "^1.49.3",
        "@raycast/utils": "^1.5.2"
    },
    "devDependencies": {
        "@raycast/eslint-config": "1.0.5",
        "@types/node": "18.8.3",
        "@types/react": "18.0.9",
        "eslint": "^7.32.0",
        "prettier": "^2.5.1",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "build": "ray build -e dist",
        "dev": "ray develop",
        "fix-lint": "ray lint --fix",
        "lint": "ray lint",
        "publish": "ray publish"
    }
}
