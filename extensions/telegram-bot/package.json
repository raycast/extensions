{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "telegrambot",
  "title": "Telegram Bot",
  "description": "send message from telegram bot",
  "icon": "telegram.png",
  "author": "xiaoheiwowo",
  "categories": [
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "tg-bot-send-message",
      "title": "Send Message",
      "subtitle": "Telegram Bot",
      "description": "send message from telegram bot",
      "mode": "view"
    },
    {
      "name": "tg-bot-send-clipboard",
      "title": "Send Clipboard",
      "subtitle": "Telegram Bot",
      "description": "send clipboard content from telegram bot",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "botToken",
      "type": "textfield",
      "required": true,
      "default": "",
      "title": "Bot Token",
      "description": "Get the bot token from telegram."
    },
    {
      "name": "userID",
      "type": "textfield",
      "required": true,
      "default": "",
      "title": "User ID",
      "description": "Get your telegram userID"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.43.2",
    "axios": "^1.1.3"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
