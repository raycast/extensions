{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "open-in-sublime-text",
  "title": "Open in Sublime Text",
  "description": "Open current Finder directory, selected folder or file in Sublime Text.",
  "icon": "icon.png",
  "author": "anfalas",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Open in Sublime Text",
      "description": "Open current Finder directory, selected folder or file in Sublime Text.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}