{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "version": "0.0.2",
  "name": "openverse",
  "title": "Openverse",
  "description": "Openverse is a search engine for openly-licensed media.",
  "icon": "openverse-icon.png",
  "author": "dhruvkb",
  "categories": [
    "Media",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "images",
      "title": "Search Images",
      "subtitle": "Openverse",
      "description": "Search openly-licensed images on Openverse.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "title": "Client ID",
      "description": "Get your client ID from https://api.openverse.engineering/v1/#tag/auth/operation/register",
      "type": "password",
      "required": true
    },
    {
      "name": "clientSecret",
      "title": "Client secret",
      "description": "Get your client secret from https://api.openverse.engineering/v1/#tag/auth/operation/register",
      "type": "password",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.3",
    "node-fetch": "^3.3.1",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "lint:fix": "ray lint --fix",
    "publish": "npx @raycast/api@latest publish"
  }
}
