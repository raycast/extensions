{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "input-source-switcher",
  "title": "Input Source Switcher",
  "description": "Switch input source (English/Ukraine) of the provided text if you forgot to do it before typing.",
  "icon": "extension-icon.png",
  "author": "danulqua",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Switch Input Source",
      "description": "Switch input source of the provided text from one language to another.",
      "mode": "no-view",
      "preferences": [
        {
          "name": "langFrom",
          "title": "Language from",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "ðŸ‡¬ðŸ‡§ English",
              "value": "eng"
            },
            {
              "title": "ðŸ‡ºðŸ‡¦ Ukrainian",
              "value": "ukr"
            }
          ],
          "description": "Language to switch from",
          "default": "eng"
        },
        {
          "name": "langTo",
          "title": "Language to",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "ðŸ‡¬ðŸ‡§ English",
              "value": "eng"
            },
            {
              "title": "ðŸ‡ºðŸ‡¦ Ukrainian",
              "value": "ukr"
            }
          ],
          "description": "Language to switch to",
          "default": "ukr"
        },
        {
          "name": "defaultAction",
          "title": "Default action",
          "required": true,
          "type": "dropdown",
          "data": [
            {
              "title": "Paste to Active App",
              "value": "paste"
            },
            {
              "title": "Copy to clipboard",
              "value": "copy"
            }
          ],
          "description": "Action to perform when executed",
          "default": "paste"
        }
      ]
    },
    {
      "name": "form",
      "title": "Switch Input Source Form",
      "description": "Switch input source of the provided text from one language to another.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.56.1",
    "@raycast/utils": "^1.9.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "pull": "npx @raycast/api@latest pull-contributions"
  }
}
