{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "everhour",
  "title": "Everhour Time Tracking",
  "description": "Track time against projects",
  "icon": "everhour-logo.png",
  "author": "farisaziz12",
  "license": "MIT",
  "keywords": [
    "everhour"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Track Projects",
      "subtitle": "Everhour",
      "description": "List active projects that you can track time against",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "Everhour Token",
      "description": "Your Everhour Token. You can find it in your Everhour profile",
      "placeholder": "Enter your Everhour token"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
