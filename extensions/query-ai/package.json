{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "query-ai",
  "title": "Query AI",
  "description": "Send prompts to ChatGPT, Claude, Grok, Perplexity, or Bing Copilot in the browser using your existing accounts.",
  "categories": ["Productivity", "Web"],
  "icon": "extension-icon.png",
  "author": "timmm",
  "license": "MIT",
  "commands": [
    {
      "name": "query",
      "title": "Query AI",
      "subtitle": "Query AI in browser",
      "description": "Open a new chat in the browser with your prompt",
      "mode": "no-view",
      "arguments": [
        {
          "name": "service",
          "type": "dropdown",
          "placeholder": "Select service",
          "required": false,
          "data": [
            { "title": "ChatGPT", "value": "chatgpt" },
            { "title": "Claude", "value": "claude" },
            { "title": "Grok", "value": "grok" },
            { "title": "Perplexity", "value": "perplexity" },
            { "title": "Bing Copilot", "value": "bing" }
          ]
        },
        {
          "name": "prompt",
          "type": "text",
          "placeholder": "Enter prompt",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "defaultService",
          "title": "Default Service",
          "description": "Used when you don't choose a service via argument",
          "type": "dropdown",
          "required": false,
          "default": "chatgpt",
          "data": [
            { "title": "ChatGPT", "value": "chatgpt" },
            { "title": "Claude", "value": "claude" },
            { "title": "Grok", "value": "grok" },
            { "title": "Perplexity", "value": "perplexity" },
            { "title": "Bing Copilot", "value": "bing" }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.5",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the `prepublishOnly` script and rerun `npm publish` again.\\nIf you wanted to publish it to the Raycast Store instead, use `npm run publish` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}