{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "one-thing",
  "title": "One Thing",
  "description": "Put a single task or goal in your menu bar",
  "icon": "command-icon.png",
  "author": "pernielsentikaer",
  "contributors": ["mathieudutour"],
  "license": "MIT",
  "commands": [
    {
      "name": "show-one-thing",
      "title": "One Thing",
      "description": "Put a single task or goal in your menu bar",
      "mode": "menu-bar",
      "interval": "1m"
    },
    {
      "name": "set-one-thing",
      "title": "Set One Thing",
      "description": "set a single task or goal to show in your menu bar",
      "mode": "view",
      "arguments": [
        {
          "type": "text",
          "placeholder": "thing",
          "name": "oneThing"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.42.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
