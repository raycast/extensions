{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "otter",
  "title": "Otter",
  "description": "View, search and add Otter",
  "subtitle": "Otter",
  "icon": "command-icon.png",
  "author": "mrmartineau",
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search",
      "subtitle": "Otter",
      "description": "Search Otter",
      "mode": "view"
    },
    {
      "name": "recent",
      "title": "Recent",
      "subtitle": "Otter",
      "description": "View recently added Otter",
      "mode": "view",
      "interval": "10m"
    },
    {
      "name": "add",
      "title": "Add Bookmark",
      "subtitle": "Otter",
      "description": "Add new bookmark",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "loginEmail",
      "type": "textfield",
      "required": true,
      "title": "Email",
      "description": "Your email on otter.zander.wtf",
      "placeholder": "joe@doe.com"
    },
    {
      "name": "loginPassword",
      "type": "password",
      "required": true,
      "title": "Password",
      "description": "Your password on otter.zander.wtf",
      "placeholder": "********"
    },
    {
      "name": "otterBasePath",
      "type": "textfield",
      "title": "Otter instance url",
      "description": "e.g. https://otter.zander.wtf",
      "required": true,
      "default": "https://otter.zander.wtf"
    },
    {
      "name": "supabaseUrl",
      "type": "textfield",
      "title": "Supabase project url",
      "description": "Find this in your Supabase project API settings. e.g. https://ffpbylcvwtyozyrplqic.supabase.co",
      "required": true,
      "default": ""
    },
    {
      "name": "supabaseAnonKey",
      "type": "textfield",
      "title": "Supabase Anon API Key",
      "description": "Find this in your Supabase project API settings",
      "required": true,
      "default": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.10.0",
    "@supabase/supabase-js": "^2.39.2",
    "node-fetch": "^3.3.2",
    "proper-url-join": "^2.1.1",
    "run-applescript": "^6.1.0",
    "tiny-relative-date": "^1.3.0",
    "title": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.5",
    "@types/proper-url-join": "^2.1.2",
    "@types/react": "^18.2.28",
    "@types/title": "^3.4.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "react-devtools": "^4.28.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
