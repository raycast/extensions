{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "spotify-controls",
  "title": "Spotify Controls",
  "description": "Control the Spotify app for macOS with your keyboard.",
  "icon": "icon.png",
  "author": "thomas",
  "license": "MIT",
  "commands": [
    {
      "name": "searchTracks",
      "title": "Search Tracks",
      "subtitle": "Spotify",
      "description": "Search & Play tracks in Spotify",
      "mode": "view",
      "preferences": [
        {
          "name": "clientId",
          "type": "password",
          "required": true,
          "title": "Personal Client ID",
          "description": "Your clientId value from Spotify",
          "placeholder": "Enter your clientId"
        },
        {
          "name": "secret",
          "type": "password",
          "required": true,
          "title": "Client id's secret",
          "description": "Your secret value from Spotify",
          "placeholder": "Enter your secret"
        }
      ]
    },
    {
      "name": "play",
      "title": "Play",
      "subtitle": "Spotify",
      "description": "Plays current track in Spotify.",
      "mode": "no-view"
    },
    {
      "name": "pause",
      "title": "Pause",
      "subtitle": "Spotify",
      "description": "Pause current track in Spotify.",
      "mode": "no-view"
    },
    {
      "name": "playPause",
      "title": "Toggle Play/Pause",
      "subtitle": "Spotify",
      "description": "Toggles play or pause of current track in Spotify.",
      "mode": "no-view"
    },
    {
      "name": "previousTrack",
      "title": "Previous Track",
      "subtitle": "Spotify",
      "description": "Skips to the previous track in Spotify.",
      "mode": "no-view"
    },
    {
      "name": "nextTrack",
      "title": "Next Track",
      "subtitle": "Spotify",
      "description": "Skips to the next track in Spotify.",
      "mode": "no-view"
    },
    {
      "name": "current",
      "title": "Current Track",
      "subtitle": "Spotify",
      "description": "Currently playing track in Spotify.",
      "mode": "no-view"
    },
    {
      "name": "copyUrl",
      "title": "Copy Current Track URL",
      "subtitle": "Spotify",
      "description": "Currently playing song's URL in Spotify.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/spotify-web-api-node": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "js-base64": "^3.6.1",
    "open": "^8.2.1",
    "prettier": "2.4.1",
    "spotify-web-api-node": "^5.0.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}