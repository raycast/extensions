{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "say",
  "title": "Say - Text to Speech",
  "type": "module",
  "description": "Use the macOS built-in TTS (Spoken Content) to say the text you provide.",
  "icon": "say-icon.png",
  "author": "litomore",
  "categories": [
    "Communication",
    "Productivity",
    "System",
    "Fun"
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "license": "MIT",
  "commands": [
    {
      "name": "configureSay",
      "title": "Configure Say",
      "description": "Configure the Say extension.",
      "mode": "view"
    },
    {
      "name": "selectedTextToSay",
      "title": "Selected Text to Say",
      "description": "Say the selected text on any application.",
      "mode": "no-view"
    },
    {
      "name": "textToSay",
      "title": "Text to Say",
      "description": "Input your text or paragraph and say.",
      "mode": "view"
    },
    {
      "name": "typeToSay",
      "title": "Type to Say",
      "description": "Quick type your text and say.",
      "mode": "no-view",
      "arguments": [
        {
          "type": "text",
          "name": "content",
          "placeholder": "Type to Say",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.84.3",
    "@raycast/utils": "^1.18.0",
    "bplist-parser": "^0.3.2",
    "lodash": "^4.17.21",
    "mac-say": "^0.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/lodash": "^4.17.12",
    "@types/node": "^22.8.1",
    "@types/react": "^18.3.12",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
