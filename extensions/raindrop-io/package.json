{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raindrop-io",
  "title": "Raindrop.io",
  "version": "1.0.0",
  "description": "Search your Raindrop.io bookmarks",
  "icon": "raindrop-icon-big.png",
  "author": "lardissone",
  "contributors": [
    "shubham",
    "pernielsentikaer"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "latest_bookmarks",
      "title": "Latest Bookmarks",
      "subtitle": "Raindrop.io",
      "description": "Display your latest bookmarks",
      "mode": "view"
    },
    {
      "name": "search",
      "title": "Search Bookmarks",
      "subtitle": "Raindrop.io",
      "description": "Search bookmarks using operators",
      "mode": "view"
    },
    {
      "name": "add",
      "title": "Add Bookmarks",
      "subtitle": "Raindrop.io",
      "description": "Add bookmarks to Raindrop",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your Raindrop.io Test Access Token.",
      "link": "https://developer.raindrop.io/v1/authentication/token",
      "placeholder": "Enter your Randrop.io Test Access token."
    },
    {
      "name": "titleOnly",
      "type": "checkbox",
      "required": false,
      "title": "Search",
      "description": "Search on title only.",
      "default": false,
      "label": "Search on title only"
    },
    {
      "name": "useLastCollection",
      "type": "checkbox",
      "required": false,
      "title": "Collections",
      "description": "Always use the last selected collection instead of All Bookmarks.",
      "default": false,
      "label": "Use always the last selected collection"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.4",
    "@raycast/utils": "^1.18.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.5",
    "@types/node": "^22.10.2",
    "@types/react": "18.3.17",
    "eslint": "8.57.1",
    "prettier": "2.8.8",
    "typescript": "5.7.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
