            "url": "https://example.com/issue/ISS-2",
            "description": "Create a user profile page with editable fields and avatar upload functionality",
            "priority": 2,
            "priorityLabel": "High",
            "state": {
              "id": "STATE-1",
              "type": "backlog",
              "name": "Backlog",
              "color": "#FFFF00"
