{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sequel-ace",
  "title": "Sequel Ace",
  "description": "search and connect databases in Sequel Ace",
  "icon": "icon.png",
  "author": "nagauta",
  "contributors": [
    "macbookandrew"
  ],
  "categories": [
    "Productivity",
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "database_list",
      "title": "Search Databases",
      "subtitle": "Sequel Ace",
      "description": "List all databases",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "path",
      "type": "textfield",
      "required": false,
      "title": "Sequel Ace data directory",
      "placeholder": "Leave blank for default location",
      "description": "If you moved the data directory\r\n(must be full-paths or tidle-prefixed ones)"
    },
    {
      "name": "searchByGroupName",
      "type": "checkbox",
      "required": false,
      "default": false,
      "title": "Search by Group Name",
      "description": "Toggle the Ability to Search by Group Name.",
      "label": "Search by Group Name"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "expand-tilde": "^2.0.2",
    "plist": "^3.0.6"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/expand-tilde": "^2.0.0",
    "@types/node": "18.8.3",
    "@types/plist": "^3.0.2",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
