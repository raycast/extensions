{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "openjike",
  "title": "OpenJike",
  "version": "0.1.0",
  "description": "Submit and browse posts of OpenJike.",
  "icon": "command-icon.png",
  "license": "MIT",
  "author": "sxzz",
  "categories": [
    "Applications",
    "Web",
    "Communication",
    "News"
  ],
  "commands": [
    {
      "name": "login",
      "title": "Login Jike",
      "description": "Login Jike as a new user",
      "mode": "view"
    },
    {
      "name": "post",
      "title": "Post",
      "description": "Create a new post",
      "mode": "view"
    },
    {
      "name": "user-list",
      "title": "User List",
      "description": "List all users",
      "mode": "view"
    },
    {
      "name": "feeds",
      "title": "Feeds",
      "description": "posts of users you followed",
      "mode": "view"
    },
    {
      "name": "like-top",
      "title": "Like Top",
      "description": "Leaderboard of likes",
      "mode": "view"
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  },
  "dependencies": {
    "@raycast/api": "^1.38.2",
    "execa": "^6.1.0",
    "jike-sdk": "^0.19.6",
    "react-use": "^17.4.0",
    "undici": "^5.8.0"
  },
  "devDependencies": {
    "@sxzz/eslint-config-prettier": "^2.3.5",
    "@sxzz/eslint-config-ts": "^2.3.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "eslint": "^8.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.7.4"
  }
}
