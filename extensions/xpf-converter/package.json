{
  "name": "xpf-converter",
  "title": "XPF to EUR Converter",
  "description": "Convert Franc Pacifique (XPF) to Euros (EUR) with instant clipboard copy",
  "icon": "icon.png",
  "author": "vincent_perrot",
  "categories": [
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "convert",
      "title": "Convert XPF to EUR",
      "description": "Convert Franc Pacifique to Euros",
      "mode": "no-view",
      "arguments": [
        {
          "name": "amount",
          "placeholder": "Amount in XPF",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
