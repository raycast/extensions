{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pilotutils",
  "title": "PilotUtils",
  "description": "Gets the Metar of an ICAO identified airport",
  "icon": "extension_icon.png",
  "author": "souradeep_bhattacharya_gogol",
  "categories": [
    "Communication",
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "metar",
      "title": "METAR",
      "subtitle": "METAR",
      "description": "Gets the METAR of a local Airport",
      "mode": "view",
      "arguments": [
        {
          "name": "icao",
          "placeholder": "ICAO",
          "type": "text",
          "description": "ICAO code of the airport",
          "required": true
        }
      ]
    },
    {
      "name": "taf",
      "title": "TAF",
      "subtitle": "TAF",
      "description": "Gets the TAF of a local airport",
      "mode": "view",
      "arguments": [
        {
          "name": "icao",
          "placeholder": "ICAO",
          "type": "text",
          "description": "ICAO code of the airport",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.66.2",
    "@raycast/utils": "^1.12.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
