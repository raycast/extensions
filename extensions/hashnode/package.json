{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hashnode",
  "title": "Hashnode",
  "description": "Read, search and create stories from Raycast.",
  "icon": "command-icon.png",
  "author": "dpnick",
  "license": "MIT",
  "commands": [
    {
      "name": "featured",
      "title": "Read Featured",
      "subtitle": "Hashnode",
      "description": "read featured posts",
      "mode": "view"
    },
    {
      "name": "best",
      "title": "Read Best",
      "subtitle": "Hashnode",
      "description": "read best posts",
      "mode": "view"
    },
    {
      "name": "new",
      "title": "Read New",
      "subtitle": "Hashnode",
      "description": "read new posts",
      "mode": "view"
    },
    {
      "name": "new_story",
      "title": "Create Draft Story",
      "subtitle": "Hashnode",
      "description": "create a new story",
      "mode": "no-view"
    },
    {
      "name": "my_stories",
      "title": "Get My Stories",
      "subtitle": "Hashnode",
      "description": "get all my stories",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Get or generate a Hashnode PAT (Personal Access Token) and paste it here.",
      "link": "https://hashnode.com/settings/developer",
      "placeholder": "Enter your Hashnode token."
    },
    {
      "name": "username",
      "type": "textfield",
      "required": true,
      "title": "Username",
      "description": "Get your Hashnode username from: Profile > Profile Identity > Username.",
      "link": "https://hashnode.com/settings",
      "placeholder": "Enter your Hashnode username."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.0",
    "node-fetch": "^3.1.1",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
