{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "catppuccin",
  "title": "Catppuccin",
  "description": "Quickly view the Catppuccin color palette, userstyles, ports, and documentation.",
  "icon": "extension-icon.png",
  "author": "dvhsh",
  "categories": [
    "Developer Tools",
    "Documentation",
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "open-docs",
      "title": "Open Docs",
      "subtitle": "Catppuccin",
      "description": "Open the Catppuccin documentation in your browser",
      "keywords": [
        "catppuccin",
        "documentation",
        "specification",
        "colors",
        "style",
        "guide"
      ],
      "mode": "no-view"
    },
    {
      "name": "search-ports",
      "title": "Search Ports",
      "subtitle": "Catppuccin",
      "description": "Search through Catppuccin ports",
      "keywords": [
        "ports",
        "catppuccin"
      ],
      "mode": "view"
    },
    {
      "name": "search-userstyles",
      "title": "Search Userstyles",
      "subtitle": "Catppuccin",
      "description": "Search through Catppuccin userstyles",
      "keywords": [
        "user",
        "styles",
        "catppuccin"
      ],
      "mode": "view"
    },
    {
      "name": "search-palette",
      "title": "Search Palette",
      "subtitle": "Catppuccin",
      "description": "Search the Catppuccin palette by flavor",
      "keywords": [
        "catppuccin",
        "colors",
        "palette"
      ],
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "gridSize",
      "title": "Grid Size",
      "description": "Set the grid size for displaying colors",
      "type": "dropdown",
      "required": false,
      "default": "8",
      "data": [
        {
          "value": "8",
          "title": "Small"
        },
        {
          "value": "5",
          "title": "Medium"
        },
        {
          "value": "3",
          "title": "Large"
        }
      ]
    },
    {
      "name": "flavor",
      "type": "dropdown",
      "required": false,
      "title": "Catppuccin Flavor",
      "description": "Select your favorite Catppuccin flavor to default to",
      "default": "mocha",
      "data": [
        {
          "title": "Mocha",
          "value": "mocha"
        },
        {
          "title": "Macchiato",
          "value": "macchiato"
        },
        {
          "title": "Frapp√©",
          "value": "frappe"
        },
        {
          "title": "Latte",
          "value": "latte"
        }
      ]
    }
  ],
  "dependencies": {
    "@catppuccin/palette": "^1.2.0",
    "@raycast/api": "^1.81.2",
    "@raycast/utils": "^1.16.3",
    "ajv": "^8.17.1",
    "axios": "^1.7.7",
    "fuse.js": "^7.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
