{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github-menu-bar",
  "title": "GitHub Commits Menu",
  "description": "Show new Git commits in the macOS menu bar.",
  "icon": "command-icon.png",
  "author": "fe9lix",
  "owner": "raycast",
  "license": "MIT",
  "commands": [
    {
      "name": "menu",
      "title": "Show Commits",
      "subtitle": "GitHub",
      "description": "Shows new Git commits in the macOS menu bar.",
      "mode": "menu-bar",
      "interval": "10m",
      "preferences": [
        {
          "name": "githubPAT",
          "type": "password",
          "required": true,
          "title": "GitHub Token",
          "description": "Your GitHub Personal Access Token",
          "placeholder": "GitHub Personal Access Token (scope: repo)"
        },
        {
          "name": "githubRepo",
          "type": "textfield",
          "required": true,
          "title": "GitHub Repo",
          "description": "Your GitHub Repository",
          "placeholder": "Enter in format owner/repo (e.g.: raycast/extensions)"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.38.1",
    "octokit": "^2.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
