{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "git-repos",
  "title": "Git Repos",
  "description": "Quickly access your local git repositories and open them in your favorite editor or any app",
  "icon": "git-repos-icon.png",
  "author": "moored",
  "license": "MIT",
  "private": true,
  "commands": [
    {
      "name": "list",
      "title": "List Repos",
      "description": "Quickly access your local git repositories and open them in your favorite editor or any app",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "repoScanPath",
      "type": "textfield",
      "required": true,
      "default": "",
      "title": "Path to scan for Git Repos",
      "description": "Path to scan for Git Repos. ~/ is expanded. Use : to seperate multiple paths"
    },
    {
      "name": "repoScanDepth",
      "type": "dropdown",
      "required": true,
      "title": "Max scan depth",
      "data": [
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5",
          "value": "5"
        },
        {
          "title": "6",
          "value": "6"
        }
      ],
      "description": "Maximnum depth to scan for repos",
      "default": "3"
    },
    {
      "name": "includeSubmodules",
      "type": "checkbox",
      "required": true,
      "title": "Scan options",
      "label": "Include submodules",
      "default": false,
      "description": "Include submodules in scan"
    },
    {
      "name": "openWith1",
      "type": "appPicker",
      "required": true,
      "title": "Open with (required), shortcut: ⏎",
      "description": "Open with",
      "default": "Visual Studio Code"
    },
    {
      "name": "openWith2",
      "type": "appPicker",
      "required": true,
      "title": "Open with (required), shortcut: ⌘⏎",
      "description": "Open with",
      "default": "Finder"
    },
    {
      "name": "openWith3",
      "type": "appPicker",
      "required": false,
      "title": "Open with (optional), shortcut: ⌥⏎",
      "description": "Open with",
      "default": ""
    },
    {
      "name": "openWith4",
      "type": "appPicker",
      "required": false,
      "title": "Open with (optional), shortcut: ＾⏎",
      "description": "Open with",
      "default": ""
    },
    {
      "name": "openWith5",
      "type": "appPicker",
      "required": false,
      "title": "Open with (optional), shortcut: ⇧⏎",
      "description": "Open with",
      "default": ""
    }
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "dependencies": {
    "@raycast/api": "^1.31.0",
    "default-browser": "^3.0.0",
    "node-fetch": "^3.0.0",
    "parse-git-config": "^3.0.0",
    "parse-github-url": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.10.0",
    "@types/node-fetch": "^2.5.12",
    "@types/parse-git-config": "^3.0.1",
    "@types/parse-github-url": "^1.0.0",
    "@types/react": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "dev": "ray develop",
    "lint": "ray lint",
    "build": "ray build -e dist"
  }
}
