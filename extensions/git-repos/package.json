{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "git-repos",
  "title": "Git Repos",
  "description": "Quickly access your local git repositories and open them in your favorite editor or any app",
  "icon": "git-repos-icon.png",
  "author": "moored",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "private": true,
  "commands": [
    {
      "name": "list",
      "title": "List Repos",
      "description": "Quickly access your local git repositories and open them in your favorite editor or any app",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "repoScanPath",
      "type": "textfield",
      "required": true,
      "default": "",
      "title": "Path to scan for Git Repos",
      "description": "Path to scan for Git Repos. ~/ is expanded. Use : to seperate multiple paths"
    },
    {
      "name": "repoScanDepth",
      "type": "dropdown",
      "required": true,
      "title": "Max scan depth",
      "data": [
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5",
          "value": "5"
        },
        {
          "title": "6",
          "value": "6"
        }
      ],
      "description": "Maximnum depth to scan for repos",
      "default": "3"
    },
    {
      "name": "includeSubmodules",
      "type": "checkbox",
      "required": true,
      "title": "Scan options",
      "label": "Include submodules",
      "default": false,
      "description": "Include submodules in scan"
    },
    {
      "name": "openWith1",
      "type": "appPicker",
      "required": true,
      "title": "Open with (required), shortcut: ⏎",
      "description": "Open with",
      "default": "Visual Studio Code"
    },
    {
      "name": "openWith2",
      "type": "appPicker",
      "required": true,
      "title": "Open with (required), shortcut: ⌘⏎",
      "description": "Open with",
      "default": "Finder"
    },
    {
      "name": "openWith3",
      "type": "appPicker",
      "required": false,
      "title": "Open with (optional), shortcut: ⌥⏎",
      "description": "Open with",
      "default": ""
    },
    {
      "name": "openWith4",
      "type": "appPicker",
      "required": false,
      "title": "Open with (optional), shortcut: ＾⏎",
      "description": "Open with",
      "default": ""
    },
    {
      "name": "openWith5",
      "type": "appPicker",
      "required": false,
      "title": "Open with (optional), shortcut: ⇧⏎",
      "description": "Open with",
      "default": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.3",
    "@raycast/utils": "^1.5.2",
    "default-browser": "^4.0.0",
    "parse-git-config": "^3.0.0",
    "parse-github-url": "^1.0.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3",
    "@types/parse-git-config": "^3.0.1",
    "@types/parse-github-url": "^1.0.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
