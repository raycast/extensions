{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "unix-timestamp",
  "title": "Unix Timestamp",
  "description": "Convert between unix timestamp and human readable form date",
  "icon": "command-icon.png",
  "author": "destiner",
  "license": "MIT",
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  },
  "commands": [
    {
      "name": "current-timestamp",
      "title": "Get Current Timestamp",
      "description": "Saves current timestamp to the clipboard",
      "mode": "no-view"
    },
    {
      "name": "timestamp-to-date",
      "title": "Convert Timestamp to Date",
      "description": "Converts unix timestamp to date",
      "mode": "view"
    },
    {
      "name": "date-to-timestamp",
      "title": "Convert Date to Timestamp",
      "description": "Converts date to unix timestamp",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "format",
      "type": "dropdown",
      "required": false,
      "title": "Format",
      "description": "Format of the timestamp",
      "default": "seconds",
      "data": [
        {
          "title": "Seconds",
          "value": "seconds"
        },
        {
          "title": "Milliseconds",
          "value": "milliseconds"
        }
      ]
    },
    {
      "name": "isUTC",
      "type": "checkbox",
      "required": false,
      "title": "Timezone",
      "description": "If checked, UTC timezone will be used. Otherwise, local timezone will be used.",
      "default": true,
      "label": "Use UTC"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  }
}
