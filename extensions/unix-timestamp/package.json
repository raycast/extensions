{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "unix-timestamp",
  "title": "Unix Timestamp",
  "description": "Convert between unix timestamp and human readable form date",
  "icon": "command-icon.png",
  "author": "destiner",
  "contributors": [
    "zvi"
  ],
  "categories": ["Data", "Developer Tools"],
  "license": "MIT",
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  },
  "commands": [
    {
      "name": "current-timestamp",
      "title": "Get Current Timestamp",
      "description": "Saves current timestamp to the clipboard",
      "mode": "no-view"
    },
    {
      "name": "timestamp-to-date",
      "title": "Convert Timestamp to Date",
      "description": "Converts unix timestamp to date",
      "mode": "view",
      "arguments": [
        {
          "name": "timestamp",
          "placeholder": "Timestamp",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "date-to-timestamp",
      "title": "Convert Date to Timestamp",
      "description": "Converts date to unix timestamp",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "format",
      "type": "dropdown",
      "required": false,
      "title": "Format",
      "description": "Format of the timestamp",
      "default": "seconds",
      "data": [
        {
          "title": "Seconds",
          "value": "seconds"
        },
        {
          "title": "Milliseconds",
          "value": "milliseconds"
        }
      ]
    },
    {
      "name": "isUTC",
      "type": "checkbox",
      "required": false,
      "title": "Timezone",
      "description": "If checked, UTC timezone will be used. Otherwise, local timezone will be used.",
      "default": true,
      "label": "Use UTC"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.78.1"
  },
  "devDependencies": {
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "@raycast/eslint-config": "^1.0.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
