{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "grab-a-cursor",
  "title": "Grab a Cursor",
  "description": "Grab that SVG cursors for your designs, presentations, contents and more",
  "icon": "extension-icon.png",
  "author": "tuu",
  "categories": [
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-cursor",
      "title": "Search Cursor",
      "description": "Grab that SVG cursor",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "displaySize",
      "type": "dropdown",
      "required": true,
      "title": "Display Size",
      "description": "Choose the grid display size",
      "default": "small",
      "data": [
        {
          "title": "Small",
          "value": "small"
        },
        {
          "title": "Medium",
          "value": "medium"
        },
        {
          "title": "Large",
          "value": "large"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.60.1",
    "@raycast/utils": "^1.10.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@raycast/eslint-config": "^1.0.11",
    "@types/jest": "^29.5.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "lint": "ray lint",
    "lint:fix": "ray lint --fix",
    "format": "prettier --write .",
    "publish": "npx @raycast/api@latest publish",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch"
  }
}
