{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "claude-code-opener",
  "title": "Claude Code Opener",
  "description": "Quickly open Claude Code in any directory with your preferred terminal.",
  "icon": "icon.png",
  "author": "stephendolan",
  "categories": ["Developer Tools", "Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "open-claude-code",
      "title": "Open with Claude Code",
      "description": "Open a Claude Code shell in your favorite directories.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "claudeBinaryPath",
      "title": "Claude Binary Path",
      "description": "Path to the Claude executable",
      "type": "textfield",
      "required": false,
      "default": "~/.claude/local/claude",
      "placeholder": "~/.claude/local/claude"
    },
    {
      "name": "terminalApp",
      "title": "Terminal Application",
      "description": "Choose your preferred terminal application",
      "type": "dropdown",
      "required": false,
      "default": "Terminal",
      "data": [
        {
          "title": "Terminal.app",
          "value": "Terminal"
        },
        {
          "title": "Alacritty",
          "value": "Alacritty"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.3",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}