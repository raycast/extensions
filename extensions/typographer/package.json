{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "typographer",
  "title": "Typographer: make text pretty",
  "description": "Make your text's typography pretty: fix quotes, dashes and spaces. Works offline.",
  "icon": "raycast-typographer.png",
  "author": "mikeozornin",
  "categories": [
    "Design Tools", "Text Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Typograph Selected Text",
      "description": "Process text and paste it in the most foreground app",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.31.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3",
    "typograf": "6.14.1"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
