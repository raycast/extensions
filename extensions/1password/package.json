{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "1password",
  "title": "1Password",
  "description": "Search, open or edit your 1Password passwords from Raycast",
  "icon": "1password-icon.png",
  "author": "khasbilegt",
  "categories": [
    "Security"
  ],
  "contributors": [
    "thomas",
    "dteare",
    "pernielsentikaer",
    "cb372",
    "Davidwalser"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "item-list",
      "title": "My Passwords",
      "subtitle": "1Password",
      "description": "List of all your 1Password items. Then open in your default browser, view items in 1Password, or open items in 1Password for editing.",
      "mode": "view",
      "keywords": [
        "1p",
        "1password",
        "password",
        "login"
      ]
    }
  ],
  "preferences": [
    {
      "name": "version",
      "type": "dropdown",
      "title": "1Password App Version",
      "description": "Select the version of the 1Password app you want to use",
      "data": [
        {
          "title": "1Password 8",
          "value": "v8"
        },
        {
          "title": "1Password 7",
          "value": "v7"
        }
      ],
      "required": true
    },
    {
      "data": [
        {
          "title": "Open In 1Password",
          "value": "open-in-1password"
        },
        {
          "title": "Open In Browser",
          "value": "open-in-browser"
        },
        {
          "title": "Copy Username",
          "value": "copy-username"
        },
        {
          "title": "Copy Password",
          "value": "copy-password"
        }
      ],
      "description": "Primary action for 1Password login items (v8 only)",
      "name": "primaryAction",
      "required": false,
      "default": "open-in-1password",
      "title": "Primary Action",
      "type": "dropdown"
    },
    {
      "data": [
        {
          "title": "Open In 1Password",
          "value": "open-in-1password"
        },
        {
          "title": "Open In Browser",
          "value": "open-in-browser"
        },
        {
          "title": "Copy Username",
          "value": "copy-username"
        },
        {
          "title": "Copy Password",
          "value": "copy-password"
        }
      ],
      "description": "Secondary action for 1Password login items (v8 only)",
      "name": "secondaryAction",
      "required": false,
      "default": "open-in-browser",
      "title": "Secondary Action",
      "type": "dropdown"
    },
    {
      "name": "cliPath",
      "type": "textfield",
      "title": "1Password CLI path",
      "description": "Enter the CLI binary path",
      "default": "/usr/local/bin/op",
      "placeholder": "e.g., /usr/local/bin/op",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.41.1",
    "@raycast/utils": "^1.4.9",
    "fast-glob": "^3.2.12"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
