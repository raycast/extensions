{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shiori",
  "title": "Shiori",
  "description": "Interact with Shiori the bookmark manager",
  "version": "0.1.0",
  "icon": "shiori-icon.png",
  "author": "namiwang",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@raycast/api": "^1.65.1",
    "got": "^14.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "hostUrl",
      "title": "Shiori instance URL",
      "description": "URL for your Shiori instance",
      "placeholder": "URL for your Shiori instance",
      "type": "textfield",
      "required": true
    },
    {
      "name": "username",
      "title": "Username",
      "description": "Enter your Shiori username",
      "placeholder": "Your Shiori username",
      "type": "textfield",
      "required": true
    },
    {
      "name": "password",
      "title": "Password",
      "description": "Enter your Shiori password",
      "placeholder": "Your Shiori password",
      "type": "password",
      "required": true
    }
  ],
  "commands": [
    {
      "name": "addBookmark",
      "title": "Add Bookmark to Shiori",
      "description": "Add a bookmark to Shiori",
      "mode": "view"
    }
  ]
}
