{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "readwise-reader",
  "title": "Readwise Reader",
  "description": "Interact with Readwise Reader",
  "icon": "reader-logo.png",
  "author": "zach",
  "categories": [
    "Productivity",
    "Media",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "open-inbox",
      "title": "Open Inbox",
      "description": "Opens Reader Inbox",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-later",
      "title": "Open Later",
      "description": "Opens Reader to the later page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-archive",
      "title": "Open Archive",
      "description": "Opens Reader to the archive page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-home",
      "title": "Open Home",
      "description": "Opens Reader to the home page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "save-link",
      "title": "Save Link",
      "description": "Save a URL to Reader",
      "mode": "no-view",
      "icon": "reader-logo.png",
      "arguments": [
        {
          "name": "url",
          "placeholder": "URL",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "save-selection",
      "title": "Save Selection",
      "description": "Save the currently selected URL",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "save-clipboard",
      "title": "Save Clipboard",
      "description": "Save a URL from the clipboard",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "search",
      "title": "Search",
      "description": "Search Reader Library",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-shortlist",
      "title": "Open Shortlist",
      "description": "Opens Reader to the shortlist page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.5.2",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "name": "token",
      "description": "Readwise Access Token",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "placeholder": "Access Token"
    }
  ]
}