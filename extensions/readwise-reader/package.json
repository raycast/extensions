{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "readwise-reader",
  "title": "Readwise Reader",
  "description": "Interact with Readwise Reader",
  "icon": "reader-logo.png",
  "author": "zach",
  "contributors": [
    "neil_brown",
    "nicolas-marien",
    "Civ2boss"
  ],
  "categories": [
    "Productivity",
    "Media",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "open-inbox",
      "title": "Open Inbox",
      "description": "Opens Reader Inbox",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-later",
      "title": "Open Later",
      "description": "Opens Reader to the later page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-archive",
      "title": "Open Archive",
      "description": "Opens Reader to the archive page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-home",
      "title": "Open Home",
      "description": "Opens Reader to the home page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "save-link",
      "title": "Save Link",
      "description": "Save a URL to Reader",
      "mode": "no-view",
      "icon": "reader-logo.png",
      "arguments": [
        {
          "name": "url",
          "placeholder": "URL",
          "type": "text",
          "required": true
        },
        {
          "name": "author",
          "placeholder": "Author",
          "type": "text",
          "required": false
        },
        {
          "name": "tags",
          "placeholder": "Tags",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "save-links",
      "title": "Save Links",
      "description": "Save URLs to Reader",
      "mode": "view",
      "icon": "reader-logo.png"
    },
    {
      "name": "save-selection",
      "title": "Save Selection",
      "description": "Save the currently selected URL",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "save-clipboard",
      "title": "Save Clipboard",
      "description": "Save a URL from the clipboard",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "search",
      "title": "Search",
      "description": "Search Reader Library",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "open-shortlist",
      "title": "Open Shortlist",
      "description": "Opens Reader to the shortlist page",
      "mode": "no-view",
      "icon": "reader-logo.png"
    },
    {
      "name": "list-documents",
      "title": "List Documents",
      "description": "List documents stored in Reader",
      "mode": "view",
      "icon": "reader-logo.png",
      "preferences": [
        {
          "name": "defaultListLocation",
          "data": [
            {
              "title": "New",
              "value": "new"
            },
            {
              "title": "Shortlist",
              "value": "shortlist"
            },
            {
              "title": "Feed",
              "value": "feed"
            },
            {
              "title": "Later",
              "value": "later"
            },
            {
              "title": "Archive",
              "value": "archive"
            }
          ],
          "required": false,
          "default": "shortlist",
          "type": "dropdown",
          "description": "The default location to use when listing content",
          "title": "Default list location"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.91.2",
    "@raycast/utils": "1.18.1",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "name": "token",
      "description": "Readwise Access Token",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "placeholder": "Access Token"
    },
    {
      "name": "openInDesktopApp",
      "description": "Open links in desktop app instead of browser",
      "type": "checkbox",
      "required": false,
      "title": "Desktop App",
      "label": "Open links in desktop app",
      "default": false
    }
  ]
}
