{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ohdear",
  "title": "Oh Dear",
  "description": "Manage your Oh Dear sites easy directly from Raycast",
  "icon": "command-icon.png",
  "author": "andreaselia",
  "contributors": [
    "pernielsentikaer"
  ],
  "categories": [
    "Web",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Sites",
      "subtitle": "Oh Dear",
      "description": "Shows sites added in Oh Dear and allowing you to control it directly",
      "mode": "view"
    },
    {
      "name": "add",
      "title": "Add Site",
      "description": "Adds a new site to the Oh Dear monitor",
      "mode": "view",
      "subtitle": "Oh Dear",
      "icon": "command-icon.png"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Your Oh Dear API Key"
    },
    {
      "name": "showGroups",
      "type": "checkbox",
      "description": "Show Sites in Their Respective Groups",
      "required": false,
      "title": "Groups",
      "placeholder": "Show Groups",
      "label": "Show Sites in Groups",
      "default": true
    },
    {
      "name": "uptime",
      "description": "Check Uptime",
      "type": "checkbox",
      "required": false,
      "title": "Default Checks",
      "label": "Uptime",
      "default": true
    },
    {
      "name": "performance",
      "description": "Check Performance",
      "type": "checkbox",
      "required": false,
      "label": "Check Performance",
      "default": true
    },
    {
      "name": "certificate_health",
      "description": "Check Certificate Health",
      "type": "checkbox",
      "required": false,
      "label": "Check Certificate Health",
      "default": true
    },
    {
      "name": "broken_links",
      "description": "Check Broken Links",
      "type": "checkbox",
      "required": false,
      "label": "Check Broken Links",
      "default": true
    },
    {
      "name": "mixed_content",
      "description": "Check Mixed Content",
      "type": "checkbox",
      "required": false,
      "label": "Check Mixed Content"
    },
    {
      "name": "application_health",
      "description": "Check Application Health",
      "type": "checkbox",
      "required": false,
      "label": "Check Application Health"
    },
    {
      "name": "cron",
      "description": "Check Scheduled Tasks",
      "type": "checkbox",
      "required": false,
      "label": "Check Scheduled Tasks"
    },
    {
      "name": "certificate_transparency",
      "description": "Check Certificate Transparency",
      "type": "checkbox",
      "required": false,
      "label": "Check Certificate Transparency"
    },
    {
      "name": "dns",
      "description": "Check DNS",
      "type": "checkbox",
      "required": false,
      "label": "Check DNS"
    },
    {
      "name": "domain",
      "description": "Check Domain",
      "type": "checkbox",
      "required": false,
      "label": "Check Domain"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1",
    "@raycast/utils": "^1.1.0",
    "dayjs": "^1.11.5",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/node-localstorage": "^1.3.0",
    "@types/react": "^18.0.14",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
