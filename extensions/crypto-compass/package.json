{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "crypto-compass",
    "title": "Crypto Compass",
    "description": "Navigate the crypto landscape with precision. Convert SLIP-0044 IDs, convert amounts, and get real-time prices.",
    "categories": [
        "Developer Tools",
        "Productivity",
        "Finance"
    ],
    "icon": "assets/icon.png",
    "version": "1.0.0",
    "license": "MIT",
    "keywords": [
        "cryptocurrency",
        "crypto",
        "slip44",
        "converter",
        "blockchain",
        "tokens",
        "networks",
        "prices"
    ],
    "commands": [
        {
            "name": "convert",
            "title": "Convert Slip-0044",
            "subtitle": "ID â‡„ Network Name",
            "mode": "view",
            "path": "src/convert.tsx",
            "description": "Convert SLIP-0044 coin type IDs to network names and vice versa",
            "keywords": [
                "slip44",
                "coin type",
                "network",
                "convert",
                "crypto",
                "blockchain"
            ],
            "arguments": [
                {
                    "name": "query",
                    "type": "text",
                    "label": "Query",
                    "placeholder": "Type network name or coin type (e.g., 0, bitcoin, eth)...",
                    "required": false
                }
            ]
        }
    ],
    "permissions": [
        "clipboard"
    ],
    "preferences": [
        {
            "name": "showTestnets",
            "type": "checkbox",
            "title": "Show Testnets",
            "label": "Show Testnets",
            "description": "Include testnet networks in search results",
            "default": true,
            "required": false
        }
    ],
    "author": "afshin_honari",
    "repository": "https://github.com/AfshinHonari/crypto-compass",
    "scripts": {
        "build": "ray build",
        "dev": "ray develop",
        "fix-lint": "ray lint --fix",
        "lint": "ray lint",
        "publish": "npx @raycast/api@latest publish"
    },
    "dependencies": {
        "@raycast/api": "^1.64.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",

        "@raycast/eslint-config": "^1.0.6",
        "@types/node": "^18.15.11",
        "@types/react": "^18.0.28",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "eslint": "^8.57.1",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.3.0",
        "jiti": "^2.5.1",
        "prettier": "^2.8.8",
        "react": "^18.2.0",
        "typescript": "^4.9.5",
        "typescript-eslint": "^8.39.1"
    },
    "packageManager": "npm@11.4.1+sha512.fcee43884166b6f9c5d04535fb95650e9708b6948a1f797eddf40e9778646778a518dfa32651b1c62ff36f4ac42becf177ca46ca27d53f24b539190c8d91802b"
}
