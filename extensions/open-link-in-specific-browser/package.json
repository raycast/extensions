{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "open-link-in-specific-browser",
  "title": "Open Link in Specific Browser",
  "description": "Open link or search text in specific browsers, email clients, App Store or others.",
  "icon": "open-link.png",
  "author": "koinzhang",
  "categories": [
    "Developer Tools",
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "open-link-in-specific-browser",
      "title": "Open Link in Specific Browser",
      "description": "Open link or search text in specific browsers, email clients, App Store or others.",
      "mode": "view",
      "preferences": [
        {
          "name": "layout",
          "type": "dropdown",
          "description": "Set the layout of the app items.",
          "required": true,
          "title": "App Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the app items. (Only works with Grid layout)",
          "required": false,
          "title": "App Item Coloums",
          "default": "8",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "itemInset",
          "type": "dropdown",
          "description": "Set the inset of the app items. (Only works with Grid layout)",
          "required": false,
          "title": "App Item Inset",
          "default": "sm",
          "data": [
            {
              "title": "No Inset",
              "value": ""
            },
            {
              "title": "Small",
              "value": "sm"
            },
            {
              "title": "Medium",
              "value": "md"
            },
            {
              "title": "Large",
              "value": "lg"
            }
          ]
        },
        {
          "name": "surfEngine",
          "type": "dropdown",
          "required": false,
          "title": "Search Engine",
          "description": "Search Engine for SelectedText (default: Google).",
          "default": "Google",
          "data": [
            {
              "title": "Google",
              "value": "Google"
            },
            {
              "title": "Bing",
              "value": "Bing"
            },
            {
              "title": "Baidu",
              "value": "Baidu"
            },
            {
              "title": "Brave",
              "value": "Brave"
            },
            {
              "title": "DuckDuckGo",
              "value": "DuckDuckGo"
            }
          ]
        },
        {
          "name": "sortBy",
          "type": "dropdown",
          "required": false,
          "title": "Sort by",
          "description": "Surfboard sorting method (default: Rank).",
          "default": "Rank",
          "data": [
            {
              "title": "Rank",
              "value": "Rank"
            },
            {
              "title": "Name ↑",
              "value": "Name+"
            },
            {
              "title": "Name ↓",
              "value": "Name-"
            }
          ]
        }
      ]
    },
    {
      "name": "open-link-in-specific-browser-menu-bar",
      "title": "Open Link in Specific Browser",
      "icon": "open-link-menu-bar.png",
      "description": "Open link or search text in specific browsers, email clients, App Store or others.",
      "mode": "menu-bar",
      "preferences": [
        {
          "name": "surfEngine",
          "type": "dropdown",
          "required": false,
          "title": "Search Engine",
          "description": "Search Engine for SelectedText (default: Google).",
          "default": "Google",
          "data": [
            {
              "title": "Google",
              "value": "Google"
            },
            {
              "title": "Bing",
              "value": "Bing"
            },
            {
              "title": "Baidu",
              "value": "Baidu"
            },
            {
              "title": "Brave",
              "value": "Brave"
            },
            {
              "title": "DuckDuckGo",
              "value": "DuckDuckGo"
            }
          ]
        },
        {
          "name": "sortBy",
          "type": "dropdown",
          "required": false,
          "title": "Sort by",
          "description": "Surfboard sorting method (default: Rank).",
          "default": "Rank",
          "data": [
            {
              "title": "Rank",
              "value": "Rank"
            },
            {
              "title": "Name ↑",
              "value": "Name+"
            },
            {
              "title": "Name ↓",
              "value": "Name-"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "showBrowser",
      "type": "checkbox",
      "required": false,
      "default": true,
      "title": "Recommended Apps",
      "label": "Browser",
      "description": "Whether to show the browser in the recommended apps"
    },
    {
      "name": "showEmail",
      "type": "checkbox",
      "required": false,
      "default": false,
      "label": "Email Client",
      "description": "Whether to show the email client in the recommended apps"
    },
    {
      "name": "showOther",
      "type": "checkbox",
      "required": false,
      "default": false,
      "label": "Other Apps",
      "description": "Whether to show other apps in the recommended apps"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
