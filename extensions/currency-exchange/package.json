{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "currency-exchange",
  "title": "Currency Exchange",
  "description": "Simple Currency Exchange, uses Exchange Rate API as the data source",
  "icon": "currency.png",
  "author": "xeric",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Currency Exchange",
      "description": "Calculate with Exchange Rate",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "api_key",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "You can get API Key at https://app.exchangerate-api.com/dashboard",
      "placeholder": "Exchange Rate API Key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.2",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.3",
    "@types/react": "^18.0.33",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "react-devtools": "^4.27.4",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
