{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "banca-d-italia-currency-converter",
  "title": "Banca d'Italia Currency Converter",
  "description": "Convert currencies based on the Banca d'Italia exchange rates.",
  "icon": "command-icon.png",
  "author": "FezVrasta",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Convert Currency",
      "subtitle": "Banca d'Italia",
      "description": "Convert a currency to another using the exchange rate at a given date.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.0",
    "@types/papaparse": "^5.3.1",
    "node-fetch": "^3.2.0",
    "papaparse": "^5.3.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  },
  "preferences": [
    {
      "name": "decimals",
      "title": "Decimals",
      "required": false,
      "description": "Number of decimals to display.",
      "type": "textfield",
      "default": "6"
    }
  ]
}
