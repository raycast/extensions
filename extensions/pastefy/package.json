{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pastefy",
  "title": "Pastefy",
  "description": "Use Pastefy in Raycast to create and list pastes",
  "icon": "extension-icon.png",
  "author": "julian_gojani",
  "owner": "interaapps",
  "access": "public",
  "categories": [
    "Developer Tools",
    "Web",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "pastefy",
      "title": "Paste to Pastefy",
      "description": "Create a paste",
      "mode": "view"
    },
    {
      "name": "pastefy-list",
      "title": "Show Pastefy List",
      "description": "List your created pastes",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "label": "Pastefy API Key",
      "description": "Enter your personal Pastefy Key (pastefy.app/apikeys)",
      "type": "password",
      "title": "API Key",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.82.5",
    "@raycast/utils": "^1.16.3",
    "axios": "^1.7.7",
    "crypto-js": "^4.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist -o dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
