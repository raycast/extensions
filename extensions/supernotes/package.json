{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "supernotes",
  "title": "Supernotes",
  "description": "Interact with the Supernotes platform in Raycast.",
  "icon": "supernotes-icon.png",
  "author": "acnebs",
  "license": "MIT",
  "categories": [
    "Applications",
    "Data",
    "Productivity"
  ],
  "commands": [
    {
      "name": "create",
      "title": "Create Card",
      "subtitle": "Supernotes",
      "description": "Quickly create a Supernotes card.",
      "mode": "view"
    },
    {
      "name": "search",
      "title": "Search Cards",
      "subtitle": "Supernotes",
      "description": "Search your cards on Supernotes.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "title": "API Key",
      "description": "Get your API key from Supernotes.",
      "type": "password",
      "required": true
    }
  ],
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "supernotes"
    }
  },
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "node-fetch": "^3.2.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "import-sort-style-supernotes": "^0.4.1",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}