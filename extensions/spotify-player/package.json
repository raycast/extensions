{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "spotify-player",
  "title": "Spotify Player",
  "description": "Search and Play Spotify music from the Raycast",
  "icon": "icon.png",
  "author": "mattisssa",
  "license": "MIT",
  "commands": [
    {
      "name": "searchTracks",
      "title": "Search Tracks",
      "subtitle": "Spotify",
      "description": "Search & Play tracks in Spotify",
      "mode": "view",
      "preferences": [
        {
          "name": "clientId",
          "type": "password",
          "required": true,
          "title": "Personal Client ID",
          "description": "Your clientId value from Spotify",
          "placeholder": "Enter your clientId"
        },
        {
          "name": "secret",
          "type": "password",
          "required": true,
          "title": "Client id's secret",
          "description": "Your secret value from Spotify",
          "placeholder": "Enter your secret"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/spotify-web-api-node": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "js-base64": "^3.6.1",
    "open": "^8.2.1",
    "react-devtools": "^4.19.2",
    "spotify-web-api-node": "^5.0.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
