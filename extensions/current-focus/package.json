{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "current-focus",
  "title": "Current Focus",
  "description": "Get reminded on what is your current focus",
  "icon": "command-icon.png",
  "author": "vimtor",
  "categories": [
    "Productivity",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "menu-bar",
      "title": "Menu Bar Focus",
      "description": "See current focus in the menu bar",
      "mode": "menu-bar",
      "interval": "1m"
    },
    {
      "name": "set-focus",
      "title": "Set Focus",
      "description": "Set current focus",
      "mode": "no-view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "required": true,
          "type": "text"
        }
      ]
    },
    {
      "name": "show-focus",
      "title": "Show Focus",
      "description": "Show current focus",
      "mode": "no-view",
      "interval": "10s"
    },
    {
      "name": "clear-focus",
      "title": "Clear Focus",
      "description": "Clear current focus",
      "mode": "no-view"
    },
    {
      "name": "clipboard-focus",
      "title": "Clipboard Focus",
      "description": "Set clipboard content as current focus",
      "mode": "no-view"
    },
    {
      "name": "hide-reminder",
      "title": "Hide Reminder",
      "description": "Hide reminder",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "type": "checkbox",
      "name": "reminder",
      "title": "Missing Focus",
      "description": "Show a reminder when there is no focus set",
      "default": true,
      "required": true,
      "label": "Show a reminder when there is no focus set"
    },
    {
      "type": "dropdown",
      "name": "interval",
      "title": "Reminder Interval",
      "description": "How often to show the reminder",
      "default": "1m",
      "data": [
        {
          "title": "10 seconds",
          "value": "10s"
        },
        {
          "title": "30 seconds",
          "value": "30s"
        },
        {
          "title": "1 minute",
          "value": "1m"
        },
        {
          "title": "3 minutes",
          "value": "3m"
        },
        {
          "title": "5 minutes",
          "value": "5m"
        },
        {
          "title": "10 minutes",
          "value": "10m"
        },
        {
          "title": "30 minutes",
          "value": "30m"
        }
      ],
      "required": true,
      "label": "Show reminder"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.5"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}