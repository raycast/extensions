{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "current-focus",
  "title": "Current Focus",
  "description": "Get reminded on what is your current focus",
  "icon": "command-icon.png",
  "author": "vimtor",
  "categories": [
    "Productivity",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "menu-bar",
      "title": "Menu Bar Focus",
      "description": "See current focus in the menu bar",
      "mode": "menu-bar",
      "interval": "1m"
    },
    {
      "name": "set-focus",
      "title": "Set Focus",
      "description": "Set current focus",
      "mode": "no-view",
      "interval": "1m",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "required": true,
          "type": "text"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.3",
    "@raycast/utils": "^1.4.5"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}