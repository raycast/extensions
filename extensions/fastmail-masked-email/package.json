{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fastmail-masked-email",
  "title": "Fastmail Masked Email",
  "description": "Create a masked email address with Fastmail.",
  "icon": "mask.png",
  "author": "LightQuantum",
  "categories": [
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "api_token",
      "title": "Fastmail API Token",
      "description": "Enter your Fastmail API Token.",
      "type": "password",
      "required": true
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Create Masked Email",
      "subtitle": "Fastmail",
      "description": "Generate a new masked email address",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.3",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
