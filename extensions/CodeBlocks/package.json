{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "codeblocks",
  "title": "CodeBlocks",
  "description": "Set or modify the programming language in markdown code blocks in batch.",
  "icon": "CodeBlocks.png",
  "author": "isfeng",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Set Language",
      "subtitle": "CodeBlocks",
      "description": "Set or modify the programming language in markdown code blocks in batch.",
      "mode": "view"
    }
  ],
  "keywords": [
    "markdown",
    "codeblock",
    "programming",
    "language"
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3",
    "@types/react": "^18.0.15",
    "@types/node": "~16.10.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
