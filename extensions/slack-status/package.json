{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "slack-status",
  "title": "Slack Status",
  "description": "Quickly change your Slack status",
  "icon": "slack-icon.png",
  "author": "petr",
  "contributors": [
    "jhjr",
    "thomas",
    "pernielsentikaer",
    "ramsay",
    "henrik"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "setStatus",
      "title": "Set Status",
      "subtitle": "Slack",
      "description": "Quickly change your Slack status",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "type": "password",
      "title": "Access Token",
      "description": "Your Slack access token for manual installation of the extension",
      "placeholder": "See README.md for manual setup",
      "required": false
    }
  ],
  "categories": [
    "Communication",
    "Productivity"
  ],
  "dependencies": {
    "@raycast/api": "^1.60.0",
    "@raycast/utils": "^1.14.1",
    "@slack/web-api": "^6.4.0",
    "moment": "^2.29.1",
    "nanoid": "^5.0.5",
    "node-fetch": "^3.3.2",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^18.8.4",
    "@types/pluralize": "^0.0.30",
    "@types/react": "^18.2.27",
    "eslint": "^7.32.0",
    "react": "^18.2.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
