{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "clear-clipboard",
  "title": "Clear Clipboard",
  "description": "Clears your clipboard so you don't accidentally paste things into work chat.",
  "icon": "command-icon.png",
  "author": "d3caf",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Clear Now",
      "subtitle": "Clipboard",
      "description": "Clears your clipboard right now!",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.29.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
