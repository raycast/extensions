{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "auto-quit-app",
  "title": "Auto Quit App",
  "description": "Automatically quit the application after all windows are closed",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "categories": [
    "Applications",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "set-auto-quit-app",
      "title": "Set Auto Quit App",
      "description": "Set the applications that need to exit automatically",
      "mode": "view",
      "preferences": [
        {
          "name": "layout",
          "type": "dropdown",
          "description": "Set the layout of the app items.",
          "required": false,
          "title": "App Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the app items. (Only works with Grid layout)",
          "required": false,
          "title": "App Item Coloums",
          "default": "8",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "itemInset",
          "type": "dropdown",
          "description": "Set the inset of the app items. (Only works with Grid layout)",
          "required": false,
          "title": "App Item Inset",
          "default": "sm",
          "data": [
            {
              "title": "No Inset",
              "value": ""
            },
            {
              "title": "Small",
              "value": "sm"
            },
            {
              "title": "Medium",
              "value": "md"
            },
            {
              "title": "Large",
              "value": "lg"
            }
          ]
        }
      ]
    },
    {
      "name": "auto-quit-app-menubar",
      "title": "Auto Quit App",
      "description": "Automatically quit the application after all windows are closed",
      "mode": "menu-bar",
      "interval": "5m",
      "preferences": [
        {
          "name": "refreshInterval",
          "type": "dropdown",
          "description": "Set the refresh interval for auto-quit app extensions.",
          "required": false,
          "title": "Refresh Interval",
          "default": "5",
          "data": [
            {
              "title": "5m",
              "value": "5"
            },
            {
              "title": "10m",
              "value": "10"
            },
            {
              "title": "15m",
              "value": "15"
            },
            {
              "title": "20m",
              "value": "20"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.66.2",
    "run-applescript": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "20.11.16",
    "@types/react": "18.2.52",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
