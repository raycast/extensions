{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "auto-quit-app",
  "title": "Auto Quit App",
  "description": "Automatically quit the application after all windows are closed",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "categories": [
    "Applications",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "auto-quit-app",
      "title": "Auto Quit App",
      "description": "Automatically quit the application after all windows are closed",
      "mode": "menu-bar",
      "interval": "10m",
      "preferences": [
        {
          "name": "notes",
          "type": "checkbox",
          "title": "Auto-Quit Apps",
          "label": "Notes",
          "default": true,
          "description": "Auto exit Notes app",
          "required": false
        },
        {
          "name": "preview",
          "type": "checkbox",
          "label": "Preview",
          "default": true,
          "description": "Auto exit Preview app",
          "required": false
        },
        {
          "name": "textEdit",
          "type": "checkbox",
          "label": "TextEdit",
          "default": true,
          "description": "Auto exit TextEdit app",
          "required": false
        },
        {
          "name": "messages",
          "type": "checkbox",
          "label": "Messages",
          "default": true,
          "description": "Auto exit Messages app",
          "required": false
        },
        {
          "name": "terminal",
          "type": "checkbox",
          "label": "Terminal",
          "default": true,
          "description": "Auto exit Terminal app",
          "required": false
        },
        {
          "name": "shortcuts",
          "type": "checkbox",
          "label": "Shortcuts",
          "default": true,
          "description": "Auto exit Shortcuts app",
          "required": false
        },
        {
          "name": "tv",
          "type": "checkbox",
          "label": "TV",
          "default": true,
          "description": "Auto exit TV app",
          "required": false
        },
        {
          "name": "quickTimePlayer",
          "type": "checkbox",
          "label": "QuickTime Player",
          "default": true,
          "description": "Auto exit QuickTime Player app",
          "required": false
        },
        {
          "name": "mail",
          "type": "checkbox",
          "label": "Mail",
          "default": false,
          "description": "Auto exit Mail app",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
