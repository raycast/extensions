{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "trefle",
  "title": "Trefle",
  "description": "Lookup information about plants",
  "icon": "command-icon.png",
  "author": "j3lte",
  "categories": [
    "Data"
  ],
  "keywords": [
    "plants",
    "trefle"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-plants",
      "title": "Search Plants",
      "subtitle": "Trefle",
      "description": "Search Plant information",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "title": "Access Token",
      "description": "Your Trefle API access token",
      "type": "password",
      "placeholder": "Enter your Trefle API access token",
      "required": true
    },
    {
      "name": "showAs",
      "title": "Show as",
      "description": "How to display the results",
      "type": "dropdown",
      "data": [
        {
          "title": "Grid",
          "value": "grid"
        },
        {
          "title": "List",
          "value": "list"
        }
      ],
      "defaultValue": "grid",
      "required": false
    }
  ],
  "tools": [],
  "dependencies": {
    "@raycast/api": "^1.76.0",
    "@raycast/utils": "^1.15.0",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@raycast/eslint-config": "^1.0.8",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.3.1",
    "rimraf": "^5.0.7",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "generate": "npm run clean-api && openapi-generator-cli generate --skip-validate-spec -g typescript-axios -i ./schema/swagger.yaml -o ./src/api/trefle && npm run after-generate",
    "clean-api": "rimraf ./src/api/trefle",
    "after-generate": "rimraf ./src/api/trefle/.gitignore ./src/api/trefle/.npmignore ./src/api/trefle/.openapi-generator-ignore ./src/api/trefle/.openapi-generator ./src/api/trefle/git_push.sh",
    "fetch-schema": "curl -o ./schema/swagger.yaml https://docs.trefle.io/swagger.yaml",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
