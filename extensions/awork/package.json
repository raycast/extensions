{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "awork",
  "title": "awork",
  "description": "Search for tasks & projects and log time in awork.",
  "icon": "icon.png",
  "access": "public",
  "owner": "hypercode",
  "author": "hypercode-dev",
  "contributors": [
    "malte_18",
    "eay",
    "jens_von_der_heydt"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "projects",
      "title": "Projects",
      "subtitle": "awork",
      "description": "Search your projects",
      "mode": "view"
    },
    {
      "name": "tasks",
      "title": "Tasks",
      "subtitle": "awork",
      "description": "Search your tasks",
      "mode": "view"
    },
    {
      "name": "logTime",
      "title": "Log Time",
      "subtitle": "awork",
      "description": "Log time on a project or task",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "description": "Enter the Client ID of your workspace",
      "type": "textfield",
      "required": true,
      "title": "Client ID",
      "placeholder": "my-client-id"
    },
    {
      "name": "clientSecret",
      "description": "Enter the Client Secret of your workspace",
      "type": "password",
      "required": true,
      "title": "Client Secret",
      "placeholder": "my-client-secret"
    },
    {
      "name": "showDoneTasks",
      "title": "Preferences",
      "label": "Show done tasks",
      "description": "Show tasks marked as done",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "showDoneProjects",
      "label": "Show closed projects",
      "description": "Show projects marked as closed",
      "type": "checkbox",
      "required": false,
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.87.4",
    "@raycast/utils": "^1.18.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^29.7.0",
    "@raycast/eslint-config": "^1.0.11",
    "@types/jest": "^29.5.14",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-devtools": "^5.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "test": "jest",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
