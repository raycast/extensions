{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ticktick",
  "title": "TickTick",
  "description": "Check and search tasks in TickTick via Raycast",
  "icon": "tick-logo.png",
  "author": "appest",
  "contributors": [
    "viduycheung",
    "Alireza",
    "yakitrak",
    "ridemountainpig",
    "zbqlovewxq"
  ],
  "license": "MIT",
  "categories": [
    "Productivity"
  ],
  "ai": {
    "instructions": "As a task parser, parse the natural language input into structured task data. Please follow these rules:\n- Keep task titles concise and clear\n- Don't add dates if not specified\n- Set as all-day task if no specific time is given\n- Priority: Use high priority when containing \"urgent\", \"important\" or exclamation mark\n- Project assignment: Support using # or @ symbol for projects, e.g. #work or @work\n- Time parsing:\n  - 'morning' defaults to '08:00'\n  - 'afternoon' defaults to '14:00'\n  - 'evening' defaults to '20:00'\n  - If specified time is earlier than current time and no date specified, assume tomorrow\n- Don't ask for optional information",
    "evals": [
      {
        "input": "@ticktick meeting tomorrow at 3pm",
        "expected": [
          {
            "meetsCriteria": "Task title is 'meeting', set for tomorrow at 3pm, not an all-day task"
          }
        ]
      },
      {
        "input": "@ticktick #work prepare report due Friday!",
        "expected": [
          {
            "meetsCriteria": "Task title is 'prepare report', added to work project, set high priority, due date is this Friday"
          }
        ]
      },
      {
        "input": "@ticktick watch movie tonight at 8",
        "expected": [
          {
            "meetsCriteria": "Task title is 'watch movie', set for tonight at 8pm, not an all-day task"
          }
        ]
      }
    ]
  },
  "preferences": [
    {
      "name": "defaultTitle",
      "description": "Default title for new task.",
      "defaultValue": "none",
      "title": "Default Title",
      "required": true,
      "type": "dropdown",
      "data": [
        {
          "title": "None",
          "value": "none"
        },
        {
          "title": "Clipboard",
          "value": "clipboard"
        },
        {
          "title": "Selection",
          "value": "selection"
        }
      ]
    },
    {
      "name": "defaultDate",
      "type": "dropdown",
      "data": [
        {
          "title": "None",
          "value": "none"
        },
        {
          "title": "Today",
          "value": "today"
        },
        {
          "title": "Tomorrow",
          "value": "tomorrow"
        },
        {
          "title": "Day after Tomorrow",
          "value": "dayAfterTomorrow"
        },
        {
          "title": "Next Week",
          "value": "nextWeek"
        }
      ],
      "default": "none",
      "required": false,
      "title": "Default Date",
      "description": "Default date for new task."
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Today",
      "subtitle": "TickTick",
      "description": "Show today to-do tasks.",
      "mode": "view"
    },
    {
      "name": "next7Days",
      "title": "Next 7 Days",
      "subtitle": "TickTick",
      "description": "Show next 7 days to-do tasks.",
      "mode": "view"
    },
    {
      "name": "inbox",
      "title": "Inbox",
      "subtitle": "TickTick",
      "description": "Show Inbox to-do tasks.",
      "mode": "view"
    },
    {
      "name": "search",
      "title": "Search Tasks",
      "subtitle": "TickTick",
      "description": "Search tasks.",
      "mode": "view"
    },
    {
      "name": "create",
      "title": "Add Task",
      "subtitle": "TickTick",
      "description": "Add task in TickTick.",
      "mode": "view",
      "preferences": [
        {
          "name": "autoFillEnabled",
          "description": "Automatically fill the task fields using Raycast AI (Requires Pro)",
          "type": "checkbox",
          "defaultValue": false,
          "label": "Auto Fill with AI",
          "required": false
        }
      ]
    },
    {
      "name": "quickAdd",
      "title": "Quick Add Task",
      "subtitle": "TickTick",
      "description": "Quick way to add task in TickTick.",
      "mode": "no-view",
      "preferences": [
        {
          "name": "dontUseAI",
          "type": "checkbox",
          "label": "Don't use AI parsing",
          "description": "When enabled, the input text will be directly used as the task title and added to the default list.",
          "default": false,
          "required": false
        },
        {
          "name": "shouldCloseMainWindow",
          "type": "checkbox",
          "label": "Close window after adding",
          "description": "When enabled, the Raycast window will close immediately after the task is added.",
          "default": true,
          "required": false
        }
      ],
      "arguments": [
        {
          "name": "text",
          "placeholder": "Title",
          "type": "text",
          "required": true
        },
        {
          "name": "description",
          "placeholder": "Description",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.36.0",
    "@raycast/utils": "^1.8.0",
    "chrono-node": "^2.8.0",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.44",
    "run-applescript": "^6.0.0",
    "similarity": "^1.2.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/similarity": "^1.2.1",
    "@types/sql.js": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.8.7",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}