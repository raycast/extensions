{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pokedex",
  "title": "Pokédex",
  "description": "Search for a Pokémon by name or using its National Pokédex number.",
  "icon": "icon.png",
  "author": "anhthang",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Pokémon",
      "subtitle": "Pokédex",
      "description": "Search for a Pokémon by name or using its National Pokédex number.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "language",
      "title": "Language",
      "description": "Your prefered language",
      "required": false,
      "type": "dropdown",
      "default": "9",
      "data": [
        {
          "title": "English",
          "value": "9"
        },
        {
          "title": "French",
          "value": "5"
        },
        {
          "title": "German",
          "value": "6"
        },
        {
          "title": "Italian",
          "value": "8"
        },
        {
          "title": "Japanese",
          "value": "1"
        },
        {
          "title": "Korean",
          "value": "3"
        },
        {
          "title": "Spanish",
          "value": "7"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.29.0",
    "axios": "^0.26.0",
    "json2md": "^1.12.0",
    "lodash.groupby": "^4.6.0"
  },
  "devDependencies": {
    "@types/json2md": "^1.5.1",
    "@types/lodash.groupby": "^4.6.6",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
