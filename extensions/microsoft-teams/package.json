{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "microsoft-teams",
  "title": "Microsoft Teams",
  "description": "Set your Microsoft Teams presence via Raycast.",
  "icon": "teams.png",
  "author": "sven",
  "categories": [
    "Applications",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "setPresence",
      "title": "Set Presence",
      "description": "Set your Microsoft Teams presence.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "name": "tenantId",
      "title": "Directory ID",
      "description": "The \"Directory (tenant) ID\" (see extension's documentation)",
      "required": true
    },
    {
      "type": "textfield",
      "name": "clientId",
      "title": "Application ID",
      "description": "The \"Application (client) ID\" (see extension's documentation)",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "@raycast/utils": "^1.5.2",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
