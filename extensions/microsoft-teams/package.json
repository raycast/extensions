{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "microsoft-teams",
  "title": "Microsoft Teams",
  "description": "Control your meeting with the keyboard, even when Microsoft Teams is in the background. Toggle microphone, camera and background blur and send reactions.",
  "icon": "teams.png",
  "author": "sven",
  "categories": [
    "Applications",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "setPresence",
      "title": "Set Presence",
      "description": "Set your Microsoft Teams presence.",
      "mode": "view"
    },
    {
      "name": "controlMeeting",
      "title": "Control Meeting",
      "subtitle": "Microsoft Teams Meeting",
      "description": "All available commands in one place.",
      "mode": "view"
    },
    {
      "name": "toggleMute",
      "title": "Toggle Microphone",
      "subtitle": "Microsoft Teams Meeting",
      "description": "Toggle your microphone (mute/unmute)",
      "icon": "mute.png",
      "mode": "no-view"
    },
    {
      "name": "toggleVideo",
      "title": "Toggle Camera",
      "subtitle": "Microsoft Teams Meeting",
      "description": "Toggle your camera",
      "icon": "video.png",
      "mode": "no-view"
    },
    {
      "name": "leaveCall",
      "title": "Leave Call",
      "subtitle": "Microsoft Teams Meeting",
      "description": "Leave the current call",
      "icon": "leave-call.png",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "name": "tenantId",
      "title": "Tenant ID",
      "description": "The \"Directory (tenant) ID\" (see extension's documentation)",
      "required": true
    },
    {
      "type": "textfield",
      "name": "clientId",
      "title": "Client ID",
      "description": "The \"Application (client) ID\" (see extension's documentation)",
      "required": true
    },
    {
      "name": "apiToken",
      "title": "API Token",
      "description": "Get this from your Teams client in Settings → Privacy → Manage API",
      "type": "textfield",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "@raycast/utils": "^1.5.2",
    "node-fetch": "^3.3.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/ws": "^8.5.4",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
