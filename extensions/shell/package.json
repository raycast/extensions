{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shell",
  "title": "Shell",
  "description": "Run shell commands from Raycast",
  "icon": "bash-icon.png",
  "author": "asubbotin",
  "contributors": [
    "emiara",
    "kevin_manca",
    "mohamedk1",
    "anirudh_gupta",
    "pernielsentikaer"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "keywords": [
    "command line",
    "commandline",
    "terminal"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Execute Shell Command",
      "description": "Execute shell command and display output",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "Command",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "tools": [
    {
      "name": "execute-shell-command",
      "title": "Execute Shell Command",
      "description": "Execute Shell Command"
    }
  ],
  "ai": {
    "evals": [
      {
        "input": "@shell how many files do I have in downloads folder?",
        "expected": [
          {
            "callsTool": {
              "arguments": {
                "command": [
                  {
                    "includes": "ls"
                  },
                  {
                    "includes": "~/Downloads"
                  },
                  {
                    "includes": "wc"
                  }
                ]
              },
              "name": "execute-shell-command"
            }
          }
        ],
        "mocks": {
          "execute-shell-command": {
            "stdout": "34",
            "stderr": ""
          }
        }
      },
      {
        "input": "@shell show the latest commit message in ~/projects/raycast",
        "expected": [
          {
            "callsTool": {
              "arguments": {
                "command": [
                  {
                    "includes": "~/projects/raycast"
                  },
                  {
                    "includes": "git"
                  },
                  {
                    "includes": "log"
                  }
                ]
              },
              "name": "execute-shell-command"
            }
          }
        ],
        "mocks": {
          "execute-shell-command": {
            "stdout": "Initial Commit",
            "stderr": ""
          }
        }
      },
      {
        "input": "@shell toggle system appearance using apple script",
        "expected": [
          {
            "callsTool": {
              "arguments": {
                "command": [
                  {
                    "includes": "osascript"
                  },
                  {
                    "includes": "\"System Events\""
                  },
                  {
                    "includes": "appearance preferences to set dark mode"
                  }
                ]
              },
              "name": "execute-shell-command"
            }
          }
        ],
        "mocks": {
          "execute-shell-command": {}
        }
      }
    ]
  },
  "preferences": [
    {
      "name": "arguments_terminal",
      "type": "checkbox",
      "required": false,
      "title": "Arguments Settings:",
      "description": "Decide if you want to run commands inside raycast or inside a terminal application",
      "default": false,
      "label": "Use Terminal/iTerm"
    },
    {
      "name": "arguments_terminal_type",
      "type": "dropdown",
      "required": false,
      "title": "Decide which Terminal Application you want to use",
      "description": "If iTerm, Warp or kitty is available, you can use them instead of Terminal.",
      "data": [
        {
          "title": "Terminal",
          "value": "Terminal"
        },
        {
          "title": "iTerm",
          "value": "iTerm"
        },
        {
          "title": "kitty",
          "value": "kitty"
        },
        {
          "title": "Warp",
          "value": "Warp"
        },
        {
          "title": "Ghostty",
          "value": "ghostty"
        }
      ],
      "default": "Terminal"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.89.1",
    "raycast-toolkit": "^1.0.6",
    "run-applescript": "^6.0.0",
    "shell-env": "^4.0.1",
    "shell-history": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^18.2.46",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  },
  "platforms": [
    "macOS"
  ]
}
