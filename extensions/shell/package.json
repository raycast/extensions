{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shell",
  "title": "Shell",
  "description": "Run shell commands from Raycast",
  "icon": "bash-icon.png",
  "author": "asubbotin",
  "categories": ["Developer Tools"],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Execute Shell Command",
      "description": "Execute shell command and display output",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "Command",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "arguments_terminal",
      "type": "checkbox",
      "required": false,
      "title": "Arguments Settings:",
      "description": "Decide if you want to run commands inside raycast or inside a terminal application",
      "default": false,
      "label": "Use Terminal/iTerm"
    },
    {
      "name": "arguments_terminal_type",
      "type": "dropdown",
      "required": false,
      "title": "Decide which Terminal Application you want to use",
      "description": "If iTerm or Warp is available, you can use them instead of Terminal.",
      "data": [{
        "title": "Terminal",
        "value": "Terminal"
      },
        {
          "title": "iTerm",
          "value": "iTerm"
        },
        {
          "title": "Warp",
          "value": "Warp"
        }
      ],
      "default": "Terminal"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.2",
    "raycast-toolkit": "^1.0.4",
    "run-applescript": "^6.0.0",
    "shell-env": "^4.0.1",
    "shell-history": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
