{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*", "raycast-env.d.ts", "vitest.setup.ts"],
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "commonjs",
    "target": "ES2022",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    // MEMO: この部分似た書き方色々見るけど、基本的には同じ意味らしい。中でも以下の書き方が一般的らしい。（ChatGPTに聞いた：https://chatgpt.com/share/67d5762b-20a8-8007-9023-f36b5223fef1）
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
