{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pocket",
  "title": "Pocket",
  "description": "Manage Pocket bookmarks from Raycast",
  "icon": "pocket-logo.png",
  "author": "vimtor",
  "license": "MIT",
  "preferences": [
    {
      "name": "defaultOpen",
      "title": "Default App",
      "type": "dropdown",
      "description": "What should be the primary action",
      "default": "pocket-website",
      "required": false,
      "data": [
        {
          "title": "Browser",
          "value": "browser"
        },
        {
          "title": "Pocket Website",
          "value": "pocket-website"
        }
      ]
    }
  ],
  "categories": [
    "Applications",
    "Productivity"
  ],
  "commands": [
    {
      "name": "search",
      "title": "Search Bookmarks",
      "subtitle": "Pocket",
      "description": "Search Pocket unread bookmarks",
      "mode": "view",
      "arguments": [
        {
          "type": "text",
          "name": "title",
          "placeholder": "Title",
          "required": false
        }
      ]
    },
    {
      "name": "random",
      "title": "Open Random Bookmark",
      "subtitle": "Pocket",
      "description": "Opens a random unread bookmark",
      "mode": "no-view"
    },
    {
      "name": "latest",
      "title": "Open Latest Bookmark",
      "subtitle": "Pocket",
      "description": "Opens the latest added unread bookmark",
      "mode": "no-view"
    },
    {
      "name": "create",
      "title": "Create Bookmark",
      "subtitle": "Pocket",
      "description": "Create bookmark manually",
      "mode": "view"
    },
    {
      "name": "menu-bookmarks",
      "title": "Menu Bar Bookmarks",
      "subtitle": "Pocket",
      "description": "See your latest bookmarks at a glance",
      "mode": "menu-bar",
      "interval": "5m"
    },
    {
      "name": "clipboard",
      "title": "Save Clipboard",
      "subtitle": "Pocket",
      "description": "Create bookmark from clipboard contents",
      "mode": "no-view"
    },
    {
      "name": "browser-tab",
      "title": "Save Current Tab",
      "subtitle": "Pocket",
      "description": "Create bookmark from active browser tab",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "@raycast/utils": "^1.10.1",
    "got": "^12.0.1",
    "is-url": "^1.2.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/is-url": "^1.2.32",
    "@types/lodash": "^4.14.200",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
