{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tableplus",
  "title": "TablePlus",
  "description": "Search and open database connections in TablePlus",
  "version": "1.2.1",
  "icon": "icon.png",
  "author": "pernielsentikaer",
  "license": "MIT",
  "commands": [
    {
      "name": "database_list",
      "title": "Search Databases",
      "subtitle": "TablePlus",
      "description": "List all databases",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "path",
      "type": "textfield",
      "required": false,
      "title": "TablePlus data directory",
      "placeholder": "Leave blank for default location",
      "description": "If you moved the data directory\r\n(must be full-paths or tidle-prefixed ones)"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.31.0",
    "plist": "^3.0.4"
  },
  "devDependencies": {
    "@types/expand-tilde": "^2.0.0",
    "@types/node": "~16.10.0",
    "@types/plist": "^3.0.2",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "expand-tilde": "^2.0.2",
    "react-devtools": "^4.21.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
