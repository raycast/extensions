{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quick-surf",
  "title": "Surf with Specific Browser",
  "description": "Specify browser to surf the URL and text from the selected text or clipboard.",
  "icon": "quick-surf.png",
  "author": "koinzhang",
  "license": "MIT",
  "commands": [
    {
      "name": "quick-surf",
      "title": "Surf with...",
      "subtitle": "Browser",
      "description": "Quick search or open URL with Safari, Chrome, Edge or FireFox...",
      "icon": "surf-with.png",
      "mode": "view",
      "preferences": [
        {
          "name": "SurfEngine",
          "type": "dropdown",
          "required": false,
          "title": "Surf Engine",
          "description": "Search Engine for SelectedText(default: Google).",
          "default": "Google",
          "data": [
            {
              "title": "Google",
              "value": "Google"
            },
            {
              "title": "Bing",
              "value": "Bing"
            },
            {
              "title": "Baidu",
              "value": "Baidu"
            },
            {
              "title": "DuckDuckGo",
              "value": "DuckDuckGo"
            }
          ]
        },
        {
          "name": "SortBy",
          "type": "dropdown",
          "required": false,
          "title": "Sort by",
          "description": "Surf browser sorting method, effective after one search.",
          "default": "Rank",
          "data": [
            {
              "title": "Rank Search",
              "value": "Rank"
            },
            {
              "title": "Name Ascend",
              "value": "Name+"
            },
            {
              "title": "Name Descend",
              "value": "Name-"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.29.1",
    "react-devtools-core": "^4.23.0",
    "run-applescript": "^6.0.0",
    "yarn": "^1.22.17"
  },
  "resolutions": {
    "react-devtools-core": "4.23.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.21.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
