{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quick-surf",
  "title": "Quick Surf",
  "description": "Quick Surf between browsers or email clients.",
  "icon": "quick-surf.png",
  "author": "koinzhang",
  "categories": [
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "quick-surf",
      "title": "Quick Surf",
      "description": "Quick Surf between browsers or email clients.",
      "icon": "quick-surf.png",
      "mode": "view",
      "preferences": [
        {
          "name": "SurfEngine",
          "type": "dropdown",
          "required": false,
          "title": "Surf Engine",
          "description": "Search Engine for SelectedText (default: Google).",
          "default": "Google",
          "data": [
            {
              "title": "Google",
              "value": "Google"
            },
            {
              "title": "Bing",
              "value": "Bing"
            },
            {
              "title": "Baidu",
              "value": "Baidu"
            },
            {
              "title": "Brave",
              "value": "Brave"
            },
            {
              "title": "DuckDuckGo",
              "value": "DuckDuckGo"
            }
          ]
        },
        {
          "name": "SortBy",
          "type": "dropdown",
          "required": false,
          "title": "Sort by",
          "description": "Surfboard sorting method (default: Rank).",
          "default": "Rank",
          "data": [
            {
              "title": "Rank",
              "value": "Rank"
            },
            {
              "title": "Name ↑",
              "value": "Name+"
            },
            {
              "title": "Name ↓",
              "value": "Name-"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.31.0"
  },
  "resolutions": {
    "react-devtools-core": "4.23.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.21.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
