{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "workouts",
  "title": "Workouts",
  "description": "Stay on top of your workouts",
  "tags": [
    "strava",
    "activities",
    "log",
    "workout",
    "exercise"
  ],
  "icon": "icon.png",
  "author": "samuelkraft",
  "categories": [
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "workouts",
      "title": "Search Workouts",
      "description": "See your recent workouts from Strava",
      "mode": "view"
    },
    {
      "name": "ask",
      "title": "Ask Workout AI",
      "description": "Ask AI about your 100 most recent workouts",
      "mode": "view",
      "icon": "ask-ai-icon.png",
      "arguments": [
        {
          "name": "question",
          "title": "Question",
          "description": "Ask a question to the Workout AI",
          "type": "text",
          "placeholder": "Mileage this week?",
          "required": true
        }
      ]
    },
    {
      "name": "menubar-totals",
      "title": "Workouts Totals",
      "description": "See your total distance and time for your workouts",
      "mode": "menu-bar",
      "interval": "1d",
      "icon": "stats-icon.png",
      "preferences": [
        {
          "name": "primary_sport",
          "title": "Primary Sport",
          "description": "The sport you want to see totals for in the menu bar",
          "type": "dropdown",
          "default": "Run",
          "required": true,
          "data": [
            {
              "value": "Run",
              "title": "Run"
            },
            {
              "value": "Ride",
              "title": "Ride"
            },
            {
              "value": "Swim",
              "title": "Swim"
            }
          ]
        },
        {
          "name": "primary_stat",
          "title": "Primary Stat",
          "description": "The stat you want to see in the menu bar",
          "type": "dropdown",
          "default": "recent",
          "required": true,
          "data": [
            {
              "value": "recent",
              "title": "Last 4 weeks"
            },
            {
              "value": "year",
              "title": "This Year"
            },
            {
              "value": "all",
              "title": "All time"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "distance_unit",
      "title": "Distance Unit",
      "description": "Choose unit for displaying distance",
      "type": "dropdown",
      "default": "km",
      "data": [
        {
          "value": "km",
          "title": "Kilometers"
        },
        {
          "value": "mi",
          "title": "Miles"
        }
      ],
      "required": true
    },
    {
      "name": "mapbox_access_token",
      "title": "Mapbox Access Token",
      "placeholder": "pk.abc123",
      "description": "To display maps of your activities. You can create an access token at https://account.mapbox.com/access-tokens/",
      "type": "textfield",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.71.0",
    "@raycast/utils": "^1.14.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
