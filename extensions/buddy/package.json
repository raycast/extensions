{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "buddy",
  "title": "Buddy",
  "description": "Control Buddy with your keyboard.",
  "icon": "command-icon.png",
  "author": "lamalamaMark",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "List Projects",
      "subtitle": "Buddy",
      "description": "Quickly find a Buddy project",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "ACCESS_TOKEN",
      "type": "password",
      "required": true,
      "title": "Personal Access Token",
      "description": "Log in to Buddy and click on your avatar and head to the API tab"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
