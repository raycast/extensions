{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "rsync-commands",
  "title": "Rsync Commands",
  "description": "Save your commonly used rsync commands in one place and run them with ease.",
  "icon": "command-icon.png",
  "author": "fahl",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "rsync-commands",
      "title": "Rsync Commands",
      "description": "Run and edit your commonly used rsync commands.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "noVerifyCommands",
      "label": "Skip verification",
      "description": "Skip verfification of new or updated commands",
      "type": "checkbox",
      "required": false,
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.35.1",
    "sugar": "^2.0.6",
    "uuid": "^8.3.2",
    "zustand": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.21.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
