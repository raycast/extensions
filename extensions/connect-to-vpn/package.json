{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "connect-to-vpn",
  "title": "Connect to VPN",
  "description": "Connect to/disconnect from VPN",
  "icon": "command-icon.png",
  "author": "rasmusbe",
  "contributors": [
    "sato11",
    "stonerl",
    "vyacheslav",
    "yshmeel"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Network Services",
      "subtitle": "VPN",
      "description": "Shortcut to your Network Preferences",
      "mode": "view"
    },
    {
      "name": "menu-bar",
      "title": "Network Services",
      "subtitle": "VPN",
      "description": "View your Network Services at a glance",
      "mode": "menu-bar",
      "interval": "30s"
    }
  ],
  "preferences": [
    {
      "name": "hideInvalidDevices",
      "title": "Filter Non-VPN Services",
      "description": "Tick this to hide non-VPN services from the list.",
      "label": "Hide non-VPN services",
      "type": "checkbox",
      "required": false,
      "default": true
    },
    {
      "name": "sortBy",
      "title": "Sort By",
      "description": "Choose how to sort the services",
      "type": "dropdown",
      "required": false,
      "default": "ascService",
      "data": [
        {
          "title": "Ascending by Name",
          "value": "ascService"
        },
        {
          "title": "Descending by Name",
          "value": "descService"
        },
        {
          "title": "Ascending by Type",
          "value": "ascType"
        },
        {
          "title": "Descending by Type",
          "value": "descType"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.77.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-devtools": "^5.2.0",
    "typescript": "^5.5.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
