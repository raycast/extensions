{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "claude-code-config",
  "title": "Claude Code Config Selector",
  "description": "Select and switch between different Claude Code API configurations",
  "icon": "icon.png",
  "author": "MorgDam",
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "api",
    "configuration",
    "environment",
    "switcher",
    "config",
    "raycast",
    "developer-tools"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Select Claude Code Config",
      "description": "Quick switch Claude Code API configuration",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "configurations",
      "type": "textfield",
      "required": false,
      "title": "Claude Code Configurations",
      "description": "JSON array of Claude Code configurations. Example: [{\"alias\":\"Production\",\"emoji\":\"ðŸš€\",\"ANTHROPIC_BASE_URL\":\"https://api.anthropic.com\",\"ANTHROPIC_AUTH_TOKEN\":\"your_token\",\"ANTHROPIC_MODEL\":\"claude-3-opus-20240229\",\"ANTHROPIC_SMALL_FAST_MODEL\":\"claude-3-haiku-20240307\"}]",
      "default": "[\n  {\n    \"alias\": \"Production\",\n    \"emoji\": \"ðŸš€\",\n    \"ANTHROPIC_BASE_URL\": \"https://api.anthropic.com\",\n    \"ANTHROPIC_AUTH_TOKEN\": \"your_production_token_here\",\n    \"ANTHROPIC_MODEL\": \"claude-3-opus-20240229\",\n    \"ANTHROPIC_SMALL_FAST_MODEL\": \"claude-3-haiku-20240307\"\n  },\n  {\n    \"alias\": \"Staging\",\n    \"emoji\": \"ðŸ§ª\",\n    \"ANTHROPIC_BASE_URL\": \"https://api.staging.anthropic.com\",\n    \"ANTHROPIC_AUTH_TOKEN\": \"your_staging_token_here\",\n    \"ANTHROPIC_MODEL\": \"claude-3-sonnet-20240229\",\n    \"ANTHROPIC_SMALL_FAST_MODEL\": \"claude-3-haiku-20240307\"\n  },\n  {\n    \"alias\": \"Development\",\n    \"emoji\": \"ðŸ”§\",\n    \"ANTHROPIC_BASE_URL\": \"https://api.dev.anthropic.com\",\n    \"ANTHROPIC_AUTH_TOKEN\": \"your_dev_token_here\",\n    \"ANTHROPIC_MODEL\": \"claude-3-haiku-20240307\",\n    \"ANTHROPIC_SMALL_FAST_MODEL\": \"claude-3-haiku-20240307\"\n  },\n  {\n    \"alias\": \"Local\",\n    \"emoji\": \"ðŸ’»\",\n    \"ANTHROPIC_BASE_URL\": \"http://localhost:8080\",\n    \"ANTHROPIC_AUTH_TOKEN\": \"your_local_token_here\",\n    \"ANTHROPIC_MODEL\": \"claude-3-haiku-20240307\",\n    \"ANTHROPIC_SMALL_FAST_MODEL\": \"claude-3-haiku-20240307\"\n  }\n]",
      "placeholder": "Enter JSON array of configurations"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.6",
    "@raycast/utils": "^2.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.1.12",
    "eslint": "^9.34.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
