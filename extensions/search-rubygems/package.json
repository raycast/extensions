{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "search-rubygems",
  "title": "Search RubyGems",
  "description": "A Raycast extension that enables you to quickly look up gem information from RubyGems.org.",
  "icon": "command-icon.png",
  "author": "aleks",
  "contributors": [
    "pernielsentikaer"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search RubyGems",
      "description": "A Raycast extension that enables you to quickly look up gem information from RubyGems.org.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.94.0",
    "node-fetch": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "prettier": "^3.5.3",
    "react": "^18.2.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "prettier:format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'"
  }
}
