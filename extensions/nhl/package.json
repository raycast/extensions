{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nhl",
  "title": "NHL",
  "description": "Get today's NHL games, scores, matchups, and statistics.",
  "icon": "extension-icon.png",
  "author": "Rob",
  "categories": [
    "Fun",
    "News"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "nhlScores",
      "title": "NHL Scores",
      "description": "Get the latest NHL scores",
      "mode": "view"
    },
    {
      "name": "nhlStandings",
      "title": "NHL Standings",
      "description": "Get the latest NHL standings",
      "mode": "view"
    },
    {
      "name": "searchPlayers",
      "title": "Search NHL Players",
      "description": "Search for NHL players",
      "mode": "view",
      "arguments": [
        {
          "name": "name",
          "title": "Player Name",
          "description": "Enter the player's name",
          "type": "text",
          "required": true,
          "placeholder": "Wayne Gretzky"
        },
        {
          "name": "playerType",
          "title": "Player Type",
          "type": "dropdown",
          "required": false,
          "default": "true",
          "placeholder": "Active",
          "data": [
            {
              "title": "Active",
              "value": "true"
            },
            {
              "title": "All",
              "value": "false"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "timezone",
      "title": "Timezone",
      "description": "Choose your timezone",
      "type": "dropdown",
      "required": false,
      "default": "America/New_York",
      "data": [
        {
          "title": "Eastern",
          "value": "America/New_York"
        },
        {
          "title": "Central",
          "value": "America/Chicago"
        },
        {
          "title": "Mountain",
          "value": "America/Denver"
        },
        {
          "title": "Pacific",
          "value": "America/Los_Angeles"
        }
      ]
    },
    {
      "name": "team",
      "title": "Favorite Team",
      "description": "Choose your favorite NHL team",
