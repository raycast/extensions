{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "easydict",
  "title": "Easy Dictionary",
  "description": "Easily look up words or translate text, support 23 languages, support Linguee and Youdao dictionary, support DeepL, Google, Apple Baidu, Tencent, Youdao and Caiyun translation.",
  "icon": "Eudic.png",
  "author": "isfeng",
  "license": "MIT",
  "commands": [
    {
      "name": "easydict",
      "title": "Search Word",
      "subtitle": "Easydict",
      "description": "Automatically detect the input text language, and query preferred language dictionary or translate the text.",
      "mode": "view"
    }
  ],
  "categories": [
    "Applications",
    "Productivity",
    "Developer Tools",
    "Web"
  ],
  "keywords": [
    "dictionary",
    "linguee",
    "translate",
    "deepl",
    "google",
    "apple",
    "youdao",
    "baidu",
    "tencent",
    "caiyun",
    "eudic",
    "shortcuts"
  ],
  "dependencies": {
    "@raycast/api": "^1.38.0",
    "@vitalets/google-translate-api": "^8.0.0",
    "axios": "^0.25.0",
    "cheerio": "^1.0.0-rc.12",
    "crypto-js": "^4.1.1",
    "franc": "^6.0.0",
    "https-proxy-agent": "^5.0.1",
    "mac-system-proxy": "^1.0.4",
    "node-html-parser": "^5.3.3",
    "play-sound": "^1.1.5",
    "tencentcloud-sdk-nodejs-tmt": "^4.0.354"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/crypto-js": "^4.1.1",
    "@types/node": "~16.10.0",
    "@types/play-sound": "^1.1.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.5.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "lint-staged": "lint-staged",
    "prepare": "cd .. && cd .. && husky install extensions/easydict/.huskyrc",
    "eslint": "eslint src/** --fix --ext .ts,.tsx,.js,.jsx"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "npm run eslint",
    "**/*": [
      "prettier --write . --ignore-unknown"
    ]
  },
