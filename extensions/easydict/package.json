{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "easydict",
  "title": "Easy Dictionary",
  "description": "Easily look up words or translate text, support 48+ languages, support Linguee and Youdao dictionary, support OpenAI, DeepL, Google, Bing, Apple, Baidu, Tencent, Volcano, Youdao and Caiyun translation.",
  "icon": "Eudic.png",
  "author": "isfeng",
  "license": "MIT",
  "contributors": [
    "ViGeng",
    "maxchang3"
  ],
  "commands": [
    {
      "name": "easydict",
      "title": "Search Word",
      "subtitle": "Easydict",
      "description": "Automatically detect the input text language, and query preferred language dictionary or translate the text.",
      "mode": "view",
      "arguments": [
        {
          "name": "queryText",
          "placeholder": "Query",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "ocr",
      "title": "OCR Translate",
      "icon": "ocr.png",
      "subtitle": "Query text from image",
      "description": "Screenshot OCR, and query text from image.",
      "mode": "no-view"
    }
  ],
  "categories": [
    "Applications",
    "Productivity",
    "Developer Tools",
    "Web"
  ],
  "keywords": [
    "dictionary",
    "translate",
    "linguee",
    "deepl",
    "google",
    "bing",
    "apple",
    "youdao",
    "baidu",
    "tencent",
    "openai",
    "gemini"
  ],
  "dependencies": {
    "@deeplx/core": "^0.1.3",
    "@raycast/api": "^1.100.3",
    "@vitalets/google-translate-api": "^9.2.1",
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "crypto-js": "^4.2.0",
    "eventsource": "^4.0.0",
    "eventsource-parser": "^3.0.2",
    "execa": "^7.1.0",
    "file-type": "^21.0.0",
    "franc": "^6.2.0",
    "hpagent": "^1.2.0",
    "mac-system-proxy": "^1.0.4",
    "node-fetch": "^3.3.2",
    "node-html-parser": "^7.0.1",
    "play-sound": "^1.1.6",
    "qs": "^6.14.0",
    "run-applescript": "^7.0.0",
    "tencentcloud-sdk-nodejs-tmt": "^4.1.39"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@raycast/eslint-config": "^2.0.4",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "22.13.10",
    "@types/play-sound": "^1.1.2",
    "@types/qs": "^6.14.0",
    "@types/react": "19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "react": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "build-swift": "swift build --configuration=release --arch arm64 --arch x86_64 && mv .build/apple/Products/Release/recognizeText assets",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "eslint": "eslint src/** --fix --ext .ts,.tsx,.js,.jsx"
  },
  "overrides": {
    "whatlang-node": "file:overrides/whatlang-node"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "npm run eslint",
    "**/*": [
      "prettier --write . --ignore-unknown"
    ]
  },
