{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "easydict",
  "title": "Easy Dictionary",
  "description": "Look up words or translate text in an easy way, especially optimized for English and Chinese words.",
  "icon": "eudic-icon.png",
  "author": "isfeng",
  "license": "MIT",
