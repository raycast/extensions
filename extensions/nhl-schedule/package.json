{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nhl-schedule",
  "title": "NHL Schedule",
  "description": "Fetches the NHL Schedule",
  "icon": "nhl-icon.png",
  "author": "rreichel3",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "schedule",
      "title": "NHL Schedule",
      "subtitle": "Fetch Today's Games",
      "description": "Fetches today's NHL games",
      "mode": "view"
    },
    {
      "name": "team-schedule",
      "title": "NHL Team Schedules",
      "subtitle": "Fetch a team's schedule",
      "description": "Fetches a team's schedule",
      "mode": "view"
    },
    {
      "name": "standings",
      "title": "NHL Standings",
      "subtitle": "Fetch current standings",
      "description": "Fetches current standings",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.2",
    "@raycast/utils": "^1.10.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "react-devtools": "^4.28.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
