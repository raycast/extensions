{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "notion_researcher",
  "title": "Notion Researcher",
  "description": "An extension to supercharge your research workflow with Notion",
  "icon": "command-icon.png",
  "author": "raz_gaon",
  "license": "MIT",
  "commands": [
    {
      "name": "addPaper",
      "title": "Add a research paper",
      "description": "Add a research paper from Arxiv to a Notion database with all the metadata included.",
      "mode": "view",
      "preferences": [
        {
          "name": "notionApiKey",
          "title": "Notion Token",
          "placeholder": "Your Notion api token...",
          "description": "Notion token to allow access to the database",
          "type": "password",
          "required": true
        },
        {
          "name": "databaseKey",
          "title": "Notion Database Key",
          "placeholder": "Your Database Key...",
          "description": "Notion database identifier",
          "type": "textfield",
          "required": true
        },
        {
          "name": "readerApiKey",
          "title": "Readwise Reader Key",
          "placeholder": "Your Readwise Reader Key...",
          "description": "Readwise Reader Api Token",
          "type": "textfield",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@notionhq/client": "^2.2.9",
    "@raycast/api": "^1.56.0",
    "@raycast/utils": "^1.9.0",
    "arxivjs": "^0.0.11",
    "got": "^11.8.2",
    "notion-types": "^6.16.0",
    "use-debounce": "^9.0.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "dotenv": "^16.3.1",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}