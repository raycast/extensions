{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "simple-icons",
  "title": "Brand Icons - simpleicons.org",
  "type": "module",
  "description": "Browse, Search, and Copy 3200+ popular brand icons from Simple Icons.",
  "icon": "simpleicons-icon.png",
  "author": "litomore",
  "categories": [
    "Design Tools",
    "Media"
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Brand Icons",
      "description": "Browse, search, and copy 3200+ free SVG icons for popular brands from Simple Icons",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "defaultDetailAction",
      "title": "Default detail action",
      "description": "The default action when viewing detail of an item",
      "required": false,
      "type": "dropdown",
      "data": [
        {
          "value": "OpenWith",
          "title": "Open With"
        },
        {
          "value": "CopySvg",
          "title": "Copy SVG"
        },
        {
          "value": "CopyColor",
          "title": "Copy Color"
        },
        {
          "value": "CopySlug",
          "title": "Copy Slug"
        },
        {
          "value": "CopyCdn",
          "title": "Copy CDN link"
        },
        {
          "value": "CopyJsdelivr",
          "title": "Copy jsDelivr link"
        },
        {
          "value": "CopyUnpkg",
          "title": "Copy unpkg link"
        }
      ]
    },
    {
      "name": "defaultLoadSvgAction",
      "title": "Default action for copying/opening SVG",
      "description": "The default action when copying/opening SVG",
      "required": false,
      "type": "dropdown",
      "data": [
        {
          "value": "WithBrandColor",
          "title": "With Brand Color"
        },
        {
          "value": "PureSvg",
          "title": "Pure SVG (no color specified)"
        }
      ]
    },
    {
      "name": "enableAiSearch",
      "title": "Enable AI search",
      "label": "Enabled",
      "description": "Enable AI on searching icons",
      "required": false,
      "type": "checkbox",
      "default": true
    },
    {
      "name": "displaySimpleIconsFontFeatures",
      "title": "Display Simple Icons Font Features",
      "label": "Enabled",
      "description": "Display Simple Icons Font Features, such as font Copy Character, Copy HTML Code, and Copy UTF Code",
      "required": false,
      "type": "checkbox",
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.4",
    "@raycast/utils": "^1.18.1",
    "execa": "^9.5.2",
    "fast-fuzzy": "^1.12.0",
    "got": "^14.4.5",
    "lodash": "^4.17.21",
    "raycast-cross-extension": "^0.2.3",
    "simple-icons": "^14.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/lodash": "^4.17.14",
    "@types/react": "^18.3.18",
    "eslint": "^8.57.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
