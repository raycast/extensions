{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "dice-roller",
  "title": "Dice Roller",
  "description": "Roll any dice combo with a single command",
  "icon": "command-icon.png",
  "author": "swalrus",
  "categories": ["Fun"],
  "license": "MIT",
  "commands": [
    {
      "name": "roll-dice",
      "title": "Roll Dice",
      "description": "Copies roll result to the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "expression",
          "placeholder": "1d4 + 1",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@dice-roller/rpg-dice-roller": "^5.5.0",
    "@raycast/api": "^1.66.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
