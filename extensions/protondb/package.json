{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "protondb",
  "title": "ProtonDB",
  "type": "module",
  "description": "Browse game information for Proton, Linux, Steam Deck, and SteamOS.",
  "icon": "protondb-icon.png",
  "author": "litomore",
  "categories": [
    "Data",
    "Fun"
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "license": "MIT",
  "commands": [
    {
      "name": "browse",
      "title": "Browse ProtonDB",
      "description": "Browse information for Proton, Linux, Steam Deck, and SteamOS.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.83.1",
    "change-case": "^5.4.4",
    "got": "^14.4.2",
    "lodash": "^4.17.21",
    "raycast-cross-extension": "^0.2.3",
    "sort-keys": "^5.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.8",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}
