{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "text-shortcuts",
  "title": "Text Shortcuts",
  "description": "Use Text Shortcuts to handle text from the selection or clipboard",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "shortcut-library",
      "icon": "shortcut-library.png",
      "title": "Shortcut Library",
      "subtitle": "Text Shortcuts",
      "description": "Search and run text shortcut.",
      "mode": "view",
      "preferences": [
        {
          "name": "rememberTag",
          "type": "checkbox",
          "required": false,
          "title": "Advanced Preferences",
          "label": "Remember Filter Tag",
          "description": "Remember Shortcut Filter Tag.",
          "default": true
        },
        {
          "name": "showDetail",
          "type": "checkbox",
          "required": false,
          "label": "Show Shortcut Detail",
          "description": "Show Shortcut's text on the right.",
          "default": true
        },
        {
          "name": "showTag",
          "type": "checkbox",
          "required": false,
          "label": "Show Shortcut Tag",
          "description": "Show Shortcut's first tag on the right.",
          "default": true
        },
        {
          "name": "annotation",
          "type": "checkbox",
          "required": false,
          "title": "Show Build-in Shortcuts",
          "label": "Annotation",
          "description": "Show Annotation shortcuts.",
          "default": true
        },
        {
          "name": "caser",
          "type": "checkbox",
          "required": false,
          "label": "Case",
          "description": "Show Case shortcuts.",
          "default": true
        },
        {
          "name": "coder",
          "type": "checkbox",
          "required": false,
          "label": "Encode & Encode",
          "description": "Show Encode & Encode shortcuts.",
          "default": true
        },
        {
          "name": "format",
          "type": "checkbox",
          "required": false,
          "label": "Format",
          "description": "Show Format shortcuts.",
          "default": true
        },
        {
          "name": "markdown",
          "type": "checkbox",
          "required": false,
          "label": "Markdown",
          "description": "Show Markdown shortcuts.",
          "default": true
        },
        {
          "name": "time",
          "type": "checkbox",
          "required": false,
          "label": "Time",
          "description": "Show Time shortcuts.",
          "default": true
        }
      ]
    },
    {
      "name": "create-shortcut",
      "icon": "create-icon.png",
      "title": "Create Shortcut",
      "subtitle": "Text Shortcuts",
      "description": "Create text shortcut.",
      "mode": "view"
    },
    {
      "name": "run-shortcut-now",
      "icon": "run-icon-now.png",
      "title": "Run Shortcut Now",
      "subtitle": "Text Shortcuts",
      "description": "Create text shortcut.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "closeMainWindow",
      "type": "checkbox",
      "required": false,
      "title": "Advanced Preferences",
      "label": "Close Main Window",
      "description": "Close the Raycast main window after running a shortcut.",
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.35.0",
    "ts-md5": "^1.2.11"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
