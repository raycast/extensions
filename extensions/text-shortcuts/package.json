{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "text-shortcuts",
  "title": "Text Shortcuts",
  "description": "Use Text Shortcuts to handle text from the selection or clipboard",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "contributors": [
    "snptrs",
    "Undolog"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "run-shortcut-now",
      "icon": "run-icon-now.png",
      "title": "Run Shortcut Now",
      "subtitle": "Text Shortcuts",
      "description": "Run text shortcut.",
      "mode": "view",
      "preferences": [
        {
          "name": "primaryAction",
          "type": "dropdown",
          "description": "Set the primary action after running shortcut.",
          "required": false,
          "title": "Primary action",
          "default": "Paste",
          "data": [
            {
              "title": "Paste to Active App",
              "value": "Paste"
            },
            {
              "title": "Copy to Clipboard",
              "value": "Copy"
            }
          ]
        },
        {
          "name": "closeMainWindow",
          "type": "checkbox",
          "required": false,
          "title": "Advanced Preferences",
          "label": "Close Main Window",
          "description": "Close the Raycast main window after running a shortcut.",
          "default": true
        }
      ]
    },
    {
      "name": "shortcut-library",
      "icon": "shortcut-library.png",
      "title": "Shortcut Library",
      "subtitle": "Text Shortcuts",
      "description": "Search and run text shortcut.",
      "mode": "view",
      "preferences": [
        {
          "name": "layout",
          "type": "dropdown",
          "description": "Set the layout of the shortcut items.",
          "required": true,
          "title": "Shortcut Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the shortcut items. (Only works with Grid layout)",
          "required": false,
          "title": "Shortcut Item Coloums",
          "default": "8",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "itemInset",
          "type": "dropdown",
          "description": "Set the inset of the shortcut items. (Only works with Grid layout)",
          "required": false,
          "title": "Shortcut Item Inset",
          "default": "sm",
          "data": [
            {
              "title": "No Inset",
              "value": ""
            },
            {
              "title": "Small",
              "value": "sm"
            },
            {
              "title": "Medium",
              "value": "md"
            },
            {
              "title": "Large",
              "value": "lg"
            }
          ]
        },
        {
          "name": "primaryAction",
          "type": "dropdown",
          "description": "Set the primary action after running shortcut.",
          "required": false,
          "title": "Primary action",
          "default": "Paste",
          "data": [
            {
              "title": "Paste to Active App",
              "value": "Paste"
            },
            {
              "title": "Copy to Clipboard",
              "value": "Copy"
            }
          ]
        },
        {
          "name": "closeMainWindow",
          "type": "checkbox",
          "required": false,
          "title": "Advanced Preferences",
          "label": "Close Main Window",
          "description": "Close the Raycast main window after running a shortcut.",
          "default": true
        },
        {
          "name": "rememberTag",
          "type": "checkbox",
          "required": false,
          "label": "Remember Filter Tag",
          "description": "Remember Shortcut Filter Tag.",
          "default": true
        },
        {
          "name": "showDetail",
          "type": "checkbox",
          "required": false,
          "label": "Show Shortcut Detail",
          "description": "Show Shortcut's text on the right. (Only works with List layout)",
          "default": true
        },
        {
          "name": "showTag",
          "type": "checkbox",
          "required": false,
          "label": "Show Shortcut Tag",
          "description": "Show Shortcut's first tag on the right. (Only works with List layout)",
          "default": true
        },
        {
          "name": "annotation",
          "type": "checkbox",
          "required": false,
          "title": "Show Build-in Shortcuts",
          "label": "Annotation",
          "description": "Show Annotation shortcuts.",
          "default": true
        },
        {
          "name": "caser",
          "type": "checkbox",
          "required": false,
          "label": "Case",
          "description": "Show Case shortcuts.",
          "default": true
        },
        {
          "name": "coder",
          "type": "checkbox",
          "required": false,
          "label": "Encode & Encode",
          "description": "Show Encode & Encode shortcuts.",
          "default": true
        },
        {
          "name": "deletion",
          "type": "checkbox",
          "required": false,
          "label": "Deletion",
          "description": "Show Deletion shortcuts.",
          "default": true
        },
        {
          "name": "format",
          "type": "checkbox",
          "required": false,
          "label": "Format",
          "description": "Show Format shortcuts.",
          "default": true
        },
        {
          "name": "markdown",
          "type": "checkbox",
          "required": false,
          "label": "Markdown",
          "description": "Show Markdown shortcuts.",
          "default": true
        },
        {
          "name": "time",
          "type": "checkbox",
          "required": false,
          "label": "Time",
          "description": "Show Time shortcuts.",
          "default": true
        }
      ]
    },
    {
      "name": "shortcut-library-menu-bar",
      "icon": "shortcuts-library-menu-bar.png",
      "title": "Shortcut Library Menu Bar",
      "subtitle": "Text Shortcuts",
      "description": "Run text shortcut from the menu bar.",
      "mode": "menu-bar",
      "preferences": [
        {
          "name": "primaryAction",
          "type": "dropdown",
          "description": "Set the primary action after running shortcut.",
          "required": false,
          "title": "Primary action",
          "default": "Paste",
          "data": [
            {
              "title": "Paste to Active App",
              "value": "Paste"
            },
            {
              "title": "Copy to Clipboard",
              "value": "Copy"
            }
          ]
        },
        {
          "name": "annotation",
          "type": "checkbox",
          "required": false,
          "title": "Show Build-in Shortcuts",
          "label": "Annotation",
          "description": "Show Annotation shortcuts.",
          "default": true
        },
        {
          "name": "caser",
          "type": "checkbox",
          "required": false,
          "label": "Case",
          "description": "Show Case shortcuts.",
          "default": true
        },
        {
          "name": "coder",
          "type": "checkbox",
          "required": false,
          "label": "Coder",
          "description": "Show Encode & Encode shortcuts.",
          "default": true
        },
        {
          "name": "deletion",
          "type": "checkbox",
          "required": false,
          "label": "Deletion",
          "description": "Show Deletion shortcuts.",
          "default": true
        },
        {
          "name": "format",
          "type": "checkbox",
          "required": false,
          "label": "Format",
          "description": "Show Format shortcuts.",
          "default": true
        },
        {
          "name": "markdown",
          "type": "checkbox",
          "required": false,
          "label": "Markdown",
          "description": "Show Markdown shortcuts.",
          "default": true
        },
        {
          "name": "replacement",
          "type": "checkbox",
          "required": false,
          "label": "Replacement",
          "description": "Show Replacement shortcuts.",
          "default": true
        },
        {
          "name": "time",
          "type": "checkbox",
          "required": false,
          "label": "Time",
          "description": "Show Time shortcuts.",
          "default": true
        },
        {
          "name": "other",
          "type": "checkbox",
          "required": false,
          "label": "Other",
          "description": "Show Other shortcuts.",
          "default": true
        }
      ]
    },
    {
      "name": "create-shortcut",
      "icon": "create-icon.png",
      "title": "Create Shortcut",
      "subtitle": "Text Shortcuts",
      "description": "Create text shortcut.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.84.10",
    "@raycast/utils": "^1.17.0",
    "title": "^3.5.3",
    "ts-md5": "^1.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "@types/title": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
