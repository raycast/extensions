{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "clipmenu",
  "title": "ClipMenu",
  "description": "Show Current Clipboard Content on Menu Bar",
  "icon": "command-icon.png",
  "author": "Envl",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Clipboard Content",
      "description": "Show latest clipboard content in menu bar",
      "mode": "menu-bar",
      "interval": "1m"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.62.1",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "preferences": [
    {
      "name": "preview",
      "label": "Preview current content in menu bar",
      "description": "Show what's currently in the clipboard",
      "required": false,
      "type": "checkbox",
      "default": true
    },
    {
      "name": "truncate",
      "title": "Limit Visible Text Length",
      "description": "How many characters to show in menu bar",
      "required": false,
      "type": "dropdown",
      "default": "60",
      "data": [
        {
          "title": "15",
          "value": "15"
        },
        {
          "title": "30",
          "value": "30"
        },
        {
          "title": "45",
          "value": "45"
        },
        {
          "title": "60",
          "value": "60"
        },
        {
          "title": "No Limit",
          "value": "1000"
        }
      ]
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
