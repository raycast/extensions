{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sip",
  "title": "Sip",
  "description": "Access these Sip color management app features from Raycast: show color picker, open contrast checker, open settings, check contrast between two hex values, and add hex color to history.",
  "icon": "sip-icon.png",
  "author": "jameslyons",
  "categories": [
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "show-color-picker",
      "title": "Show Color Picker",
      "subtitle": "Sip",
      "description": "Shows Sip's color picker",
      "mode": "no-view"
    },
    {
      "name": "open-check-contrast",
      "title": "Open Contrast Checker",
      "subtitle": "Sip",
      "description": "Opens Sip's color contrast checker",
      "mode": "no-view"
    },
    {
      "name": "open-settings",
      "title": "Open Settings",
      "subtitle": "Sip",
      "description": "Opens Sip's settings",
      "mode": "no-view"
    },
    {
      "name": "check-contrast-hex",
      "title": "Check Hex Contrast",
      "subtitle": "Sip",
      "description": "Checks the contrast ratio of two hex values in Sip's contrast checker",
      "mode": "view"
    },
    {
      "name": "add-hex-to-history",
      "title": "Add Hex Color to History",
      "subtitle": "Sip",
      "description": "Adds a hex color to Sip's color history",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.34.1",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}