{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "gitmoji",
  "title": "Gitmoji Search",
  "description": "Gitmoji is an emoji guide for your commit messages",
  "icon": "icon.png",
  "author": "ricoberger",
  "license": "MIT",
  "commands": [
    {
      "name": "gitmoji",
      "title": "Gitmoji",
      "description": "Search your Gitmoji",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "copy",
      "type": "dropdown",
      "required": false,
      "title": "Copy",
      "data": [
        {
          "title": "Emoji âœ¨",
          "value": "emoji"
        },
        {
          "title": "Code :sparkles:",
          "value": "code"
        }
      ],
      "description": "Copy the emoji or copy the code",
      "default": "emoji"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1",
    "gitmojis": "^3.12.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
