#!/bin/sh

PWD=$(osascript -e 'display dialog "To make changes to encrypted volumes, the extension needs administrator privileges to use the \"System\" keychain.\n\nEnter login password:" default answer "" with hidden answer with icon file "System:Library:Frameworks:SecurityInterface.framework:Versions:A:Resources:Keychain_Locked@2x.png" buttons {"Deny", "Allow"} default button "Allow" with title "Raycast Disk Utility"' | cut -d: -f3)

BUNDLE_IDENTIFIER=$RAYCAST_BUNDLE
if [ ! -z $BUNDLE_IDENTIFIER ] ; then
    open -b $BUNDLE_IDENTIFIER
fi

echo $PWD
