{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "binance",
  "title": "Binance Portfolio",
  "description": "Track your Binance portfolio",
  "icon": "binance-logo.png",
  "author": "grzegorzkrukowski",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "My Portfolio",
      "subtitle": "Binance",
      "description": "Show your Binance portfolio with current value in USDT for each currency",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "binance_api_key",
      "type": "password",
      "required": true,
      "title": "Binance API Key",
      "description": "Generate on: https://www.binance.com/en/my/settings/api-management",
      "placeholder": "www.binance.com/en/my/settings/api-management"
    },
    {
      "name": "binance_api_secret",
      "type": "password",
      "required": true,
      "title": "Binance API Secret",
      "description": "Generate on: https://www.binance.com/en/my/settings/api-management",
      "placeholder": "www.binance.com/en/my/settings/api-management"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "node-binance-api": "^0.13.0",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
