{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bettertouchtool",
  "title": "BetterTouchTool",
  "description": "Run BTT actions from Raycast",
  "icon": "command-icon.png",
  "author": "dnnsmnstrr",
  "categories": [
    "Applications",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "trigger",
      "title": "Run BTT Named Trigger",
      "subtitle": "Search for and run named trigger in BTT",
      "description": "Find a named trigger in BetterTouchTool",
      "mode": "view"
    },
    {
      "name": "action",
      "title": "Run BTT Action",
      "subtitle": "Search for and run an action in BTT",
      "description": "Find an action in BetterTouchTool",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.3",
    "@raycast/utils": "^1.4.18"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
