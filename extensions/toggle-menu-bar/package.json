{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "toggle-menu-bar",
  "title": "Toggle Menu Bar",
  "description": "Show/Hide menu bar",
  "icon": "command-icon.png",
  "author": "iamyeizi",
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "toggle",
      "title": "Toggle Menu Bar",
      "description": "Auto hide/show menu bar: In Full Screen Only/Always",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.50.4",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}