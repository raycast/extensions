{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "toggle-menu-bar",
  "title": "Toggle Menu Bar",
  "description": "Switch between show/hide menu bar options",
  "icon": "command-icon.png",
  "author": "iamyeizi",
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "toggle",
      "title": "Toggle Menu Bar",
      "description": "Toggle auto hide/show menu bar between two options of your choice.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "closeWindow",
      "default": false,
      "type": "checkbox",
      "label": "Close Raycast window",
      "description": "Should the main Raycast window close when triggering a command?",
      "required": false
    },
    {
      "name": "optionOne",
      "title": "Select option 1️⃣",
      "data": [
        {
          "title": "Always",
          "value": "always"
        },
        {
          "title": "On Desktop Only",
          "value": "ondesk"
        },
        {
          "title": "In Full Screen Only",
          "value": "infull"
        },
        {
          "title": "Never",
          "value": "never"
        }
      ],
      "type": "dropdown",
      "description": "Select \"Automatically hide and show the menu bar\" option.",
      "required": true,
      "default": "always"
    },
    {
      "name": "optionTwo",
      "title": "Select option 2️⃣",
      "data": [
        {
          "title": "Always",
          "value": "always"
        },
        {
          "title": "On Desktop Only",
          "value": "ondesk"
        },
        {
          "title": "In Full Screen Only",
          "value": "infull"
        },
        {
          "title": "Never",
          "value": "never"
        }
      ],
      "type": "dropdown",
      "description": "Select \"Automatically hide and show the menu bar\" option.",
      "required": true,
      "default": "infull"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.58.1",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
