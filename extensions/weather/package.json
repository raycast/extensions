{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "weather",
  "title": "Weather",
  "version": "0.3.0",
  "description": "Weather forecast via wttr.in",
  "icon": "weather.png",
  "author": "tonka3000",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Weather",
      "description": "Weather forecast via wttr.in",
      "mode": "view"
    },
    {
      "name": "menubar",
      "title": "Weather Menu Bar",
      "description": "Show weather in menu bar",
      "mode": "menu-bar",
      "interval": "30m",
      "preferences": [
        {
          "name": "showmenuicon",
          "description": "Show Icon",
          "type": "checkbox",
          "required": false,
          "title": "Appearance",
          "label": "Show Icon",
          "default": true
        },
        {
          "name": "showmenutext",
          "description": "Show Text",
          "type": "checkbox",
          "required": false,
          "label": "Show Text",
          "default": true
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "unitsystem",
      "type": "dropdown",
      "title": "Unit System",
      "required": false,
      "default": "metric",
      "description": "Unit System",
      "data": [
        {
          "title": "Metric System",
          "value": "metric"
        },
        {
          "title": "Imperial Units",
          "value": "imperial"
        }
      ]
    },
    {
      "name": "defaultquery",
      "type": "textfield",
      "title": "Default query",
      "placeholder": "Empty or location (e.g. London)",
      "required": false,
      "default": "",
      "description": "Default query when search bar is empty. Same content as in the search bar."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.42.0",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.5",
    "raycast": "^1.0.8"
  },
  "devDependencies": {
    "@types/moment": "^2.13.0",
    "@types/node": "^18.8.3",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix"
  }
}