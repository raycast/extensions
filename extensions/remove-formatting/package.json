{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "remove-formatting",
  "title": "Remove Formatting",
  "description": "Remove all formatting from the last copied element in your clipboard.",
  "icon": "icon.png",
  "access": "public",
  "author": "itsmingjie",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Remove Formatting",
      "subtitle": "From Clipboard",
      "description": "Remove all formatting from the last copied element in your clipboard.",
      "mode": "no-view",
      "keywords": [
        "clear",
        "formatting",
        "remove",
        "clipboard"
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
