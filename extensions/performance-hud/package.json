{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "performance-hud",
  "title": "Metal Performance HUD",
  "description": "Toggle macOS's built-in Metal performance HUD",
  "icon": "metal_profiler.png",
  "author": "say4n",
  "categories": [
    "System",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Toggle Performance HUD",
      "description": "Toggles macOS's built-in Metal performance HUD",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}