{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "badges",
  "title": "Badges - shields.io",
  "type": "module",
  "description": "Concise, consistent, and legible badges.",
  "icon": "badges-icon.png",
  "author": "litomore",
  "categories": [
    "Documentation",
    "Design Tools",
    "Developer Tools",
    "Media"
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "license": "MIT",
  "commands": [
    {
      "name": "createStaticBadge",
      "title": "Create Static Badge",
      "description": "Create a static badge with shields.io",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "resetOnCopy",
      "label": "Reset on Copy",
      "required": false,
      "description": "Reset the badge after copying to the clipboard.",
      "type": "checkbox",
      "defaultValue": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.3",
    "@raycast/utils": "^1.14.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.75",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4"
  }
}
