{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "qbitorrent",
  "title": "QBitorrent",
  "description": "a qBitorrent client",
  "icon": "qbittorrent.png",
  "author": "J3n5en",
  "contributors": [
    "timmevandermeer"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "torrents",
      "title": "List Torrents",
      "subtitle": "qBittorrent",
      "description": "list qBitorrent torrents",
      "mode": "view"
    },
    {
      "name": "add-torrents",
      "title": "Add Torrents",
      "subtitle": "qBittorrent",
      "description": "add qBitorrent torrents",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "address",
      "title": "address",
      "description": "qBitorrent webui address",
      "placeholder": "http://example.com:8080",
      "type": "textfield",
      "required": true
    },
    {
      "name": "username",
      "title": "username",
      "description": "qBitorrent webui username",
      "placeholder": "admin",
      "type": "textfield",
      "required": true
    },
    {
      "name": "password",
      "title": "password",
      "description": "qBitorrent webui password",
      "type": "password",
      "placeholder": "adminadmin",
      "required": true
    },
    {
      "name": "timeout",
      "title": "Refresh timeout in seconds",
      "description": "Refresh timeout in seconds, 0 to disable",
      "type": "textfield",
      "placeholder": "0",
      "default": "0",
      "required": false
    }
  ],
  "dependencies": {
    "@ctrl/qbittorrent": "^9.4.0",
    "@raycast/api": "^1.92.1",
    "change-case": "^5.4.4",
    "filesize": "^10.1.6"
  },
  "devDependencies": {
    "@types/node": "~22.13.5",
    "@types/react": "18.3.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
