{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zipper-run",
  "title": "Run Zipper Applet",
  "description": "Run a zipper applet",
  "icon": "zipper-icon.png",
  "author": "ariel_conti",
  "contributors": [
    "pernielsentikaer"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Run Applet",
      "subtitle": "Zipper",
      "description": "Run applet on Zipper",
      "mode": "view",
      "arguments": [
        {
          "name": "appletName",
          "type": "text",
          "placeholder": "Crontab generator",
          "description": "The name of the applet to run",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.60.1",
    "@raycast/utils": "^1.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
