{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "life-progress",
  "title": "Life Progress",
  "description": "View life progress and custom Countdown Date. See how much time is left.",
  "icon": "life-progress-icon.png",
  "author": "koinzhang",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "life-progress",
      "title": "Life Progress",
      "description": "View life progress and custom Countdown Date. See how much time is left.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "showDailyWord",
      "type": "checkbox",
      "required": false,
      "title": "Advanced Preferences",
      "label": "Show Quote of the Day",
      "description": "Show quote of the day.",
      "default": true
    },
    {
      "name": "showProgressBar",
      "type": "checkbox",
      "required": false,
      "label": "Show Progress Bar",
      "description": "Show life progress bar.",
      "default": true
    },
    {
      "name": "countdownDateFirst",
      "type": "checkbox",
      "required": false,
      "label": "Countdown Date First",
      "description": "Show Countdown Date first.",
      "default": true
    },
    {
      "name": "birthdayEveryDay",
      "type": "checkbox",
      "required": false,
      "label": "Birthday Every Day",
      "description": "Birthday every day!!!",
      "default": false
    },
    {
      "name": "birthday",
      "type": "textfield",
      "required": true,
      "title": "Birthday",
      "description": "For calculating life progress, the birthday's format is 1995-01-01.",
      "placeholder": "1995-01-01",
      "default": "1995-01-01"
    },
    {
      "name": "weekStart",
      "title": "Week Start",
      "description": "The week starts on the day of the week.",
      "type": "dropdown",
      "data": [
        {
          "title": "Sunday",
          "value": "Sunday"
        },
        {
          "title": "Monday",
          "value": "Monday"
        },
        {
          "title": "Tuesday",
          "value": "Tuesday"
        },
        {
          "title": "Wednesday",
          "value": "Wednesday"
        },
        {
          "title": "Thursday",
          "value": "Thursday"
        },
        {
          "title": "Friday",
          "value": "Friday"
        },
        {
          "title": "Saturday",
          "value": "Saturday"
        }
      ],
      "required": true,
      "default": "Sunday"
    },
    {
      "name": "iconTheme",
      "title": "Icon Theme",
      "description": "Themes of date icons.",
      "type": "dropdown",
      "data": [
        {
          "title": "Random",
          "value": "random"
        },
        {
          "title": "Bird",
          "value": "bird"
        },
        {
          "title": "Pixel",
          "value": "pixel"
        },
        {
          "title": "Simple",
          "value": "simple"
        },
        {
          "title": "Rainbow",
          "value": "rainbow"
        }
      ],
      "required": false,
      "default": "simple"
    },
    {
      "name": "progressSymbol",
      "title": "Progress Bar Symbol",
      "description": "Symbols for the composition of the progress bar.",
      "type": "dropdown",
      "data": [
        {
          "title": "■",
          "value": "■"
        },
        {
          "title": "●",
          "value": "●"
        },
        {
          "title": "♥︎",
          "value": "♥︎"
        },
        {
          "title": "✿",
          "value": "✿"
        },
        {
          "title": "★",
          "value": "★"
        },
        {
          "title": "✪",
          "value": "✪"
        },
        {
          "title": "✔",
          "value": "✔"
        },
        {
          "title": "⚉",
          "value": "⚉"
        },
        {
          "title": "☀︎",
          "value": "☀︎"
        },
        {
          "title": "❄",
          "value": "❄︎"
        }
      ],
      "required": false,
      "default": "■"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.0",
    "node-fetch": "^3.2.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
