{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sound-source",
  "title": "Sound Source",
  "description": "Extension to change your sound source",
  "icon": "extension-icon.png",
  "author": "antoinevivies",
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "sound-source",
      "title": "Sound Source",
      "description": "change your sound source",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.90.0",
    "@raycast/utils": "^1.18.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "prerequisites": [
    {
      "name": "SwitchAudioSource",
      "description": "Required to switch between audio devices",
      "command": "which SwitchAudioSource",
      "path": "/opt/homebrew/bin/SwitchAudioSource",
      "type": "app",
      "installationInstructions": {
        "manual": [
          "Install Homebrew (if not already installed):",
          "```bash",
          "/bin/bash -c \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)\"",
          "```",
          "Then install SwitchAudioSource:",
          "```bash",
          "brew install switchaudio-osx",
          "```"
        ]
      }
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
