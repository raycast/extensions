{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zed-recent-projects",
  "title": "Zed",
  "description": "Search and open recent projects from Zed",
  "icon": "icon.png",
  "author": "ewgenius",
  "contributors": ["tleo19", "jylamont"],
  "categories": ["Developer Tools"],
  "license": "MIT",
  "commands": [
    {
      "name": "open",
      "title": "Open with Zed",
      "subtitle": "Zed",
      "description": "Opens the currently selected Finder item with Zed",
      "mode": "no-view"
    },
    {
      "name": "search",
      "title": "Search Recent Projects",
      "subtitle": "Zed",
      "description": "Search and open recent projects with Zed",
      "mode": "view"
    },
    {
      "name": "open-new-window",
      "title": "Open New Window",
      "subtitle": "Zed",
      "description": "Opens a new Zed window.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "build",
      "type": "dropdown",
      "required": false,
      "title": "Build",
      "default": "Code",
      "description": "Select which build of Zed to use",
      "data": [
        {
          "value": "Zed",
          "title": "Zed"
        },
        {
          "value": "Zed Preview",
          "title": "Zed Preview"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.4",
    "@raycast/utils": "^1.10.1",
    "tildify": "^3.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
