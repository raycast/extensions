{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zed-recent-projects",
  "title": "Zed",
  "description": "Search and open recent projects from Zed",
  "icon": "icon.png",
  "author": "ewgenius",
  "contributors": [
    "tleo19",
    "jylamont",
    "pernielsentikaer",
    "tm.wrnr",
    "true-real-michael",
    "xmorse"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "open",
      "title": "Open with Zed",
      "subtitle": "Zed",
      "description": "Opens the currently selected Finder item with Zed",
      "mode": "no-view"
    },
    {
      "name": "search",
      "title": "Search Recent Projects",
      "subtitle": "Zed",
      "description": "Search and open recent projects with Zed",
      "mode": "view"
    },
    {
      "name": "open-new-window",
      "title": "Open New Window",
      "subtitle": "Zed",
      "description": "Opens a new Zed window.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "build",
      "type": "dropdown",
      "required": false,
      "title": "Build",
      "default": "Zed",
      "description": "Select which build of Zed to use",
      "data": [
        {
          "value": "Zed",
          "title": "Zed"
        },
        {
          "value": "Zed Preview",
          "title": "Zed Preview"
        },
        {
          "value": "Zed Dev",
          "title": "Zed Dev"
        }
      ]
    },
    {
      "name": "showGitBranch",
      "type": "checkbox",
      "title": "Git Integration",
      "required": false,
      "label": "Show Git Branch",
      "default": true,
      "description": "Display the current Git branch for files and folders in Git repositories"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.7",
    "@raycast/utils": "^2.2.1",
    "tildify": "^3.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "2.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "create-fixtures": "./scripts/create-fixtures.sh",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish",
    "test": "vitest"
  },
  "platforms": [
    "macOS"
  ]
}
