{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "grpn-jira-helper",
  "title": "GRPN Jira Helper",
  "description": "Create Jira tickets effortlessly using AI-powered descriptions and smart project detection for Groupon teams",
  "icon": "extension-icon.png",
  "author": "lukas_vaic",
  "license": "MIT",
  "preferences": [
    {
      "name": "openaiApiKey",
      "type": "password",
      "required": true,
      "title": "OpenAI API Key",
      "description": "Your OpenAI API key for GPT-4o-mini integration"
    },
    {
      "name": "jiraEmail",
      "type": "textfield",
      "required": true,
      "title": "Jira Email",
      "description": "Your Jira account email"
    },
    {
      "name": "jiraApiToken",
      "type": "password",
      "required": true,
      "title": "Jira API Token",
      "description": "Your Jira API token"
    },
    {
      "name": "jiraBaseUrl",
      "type": "textfield",
      "required": true,
      "title": "Jira Base URL",
      "description": "Your Jira instance URL (e.g., https://your-domain.atlassian.net)"
    },
    {
      "name": "defaultTeam",
      "type": "dropdown",
      "required": true,
