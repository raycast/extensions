{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "farcaster",
  "title": "Farcaster",
  "description": "Most comprehensive extension for Forecaster. Search for casts, profiles and more.",
  "icon": "command-icon.png",
  "author": "artivilla",
  "categories": [
    "Web",
    "Media",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-trending-casts",
      "title": "Search Trending Casts",
      "description": "Search trending casts filtered by keywords",
      "mode": "view"
    },
    {
      "name": "search-profiles",
      "title": "Search Profiles",
      "description": "Search profiles by fid, username and display names",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "description": "Neynar account API key",
      "type": "password",
      "required": true,
      "title": "Neynar API Key",
      "placeholder": "Enter your API key",
      "link": "https://dev.neynar.com"
    },
    {
      "name": "farcasterClient",
      "description": "Select Farcaster client to use",
      "type": "dropdown",
      "required": true,
      "title": "Farcaster Client",
      "default": "warpcast",
      "data": [
        {
          "title": "Warpcast",
          "value": "warpcast"
        },
        {
          "title": "Supercast",
          "value": "supercast"
        },
        {
          "title": "Nook",
          "value": "nook"
        }
      ]
    },
    {
      "name": "walletAddressClient",
      "description": "How to inpsect ethereum address",
      "type": "dropdown",
      "required": true,
      "title": "Account Viewer",
      "default": "etherscan",
      "data": [
        {
          "title": "Etherscan",
          "value": "etherscan"
        },
        {
          "title": "Zapper",
          "value": "zapper"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.94.0",
    "@raycast/utils": "^1.15.0",
    "dedupe": "^4.0.3",
    "linkify-it": "^5.0.0",
    "tlds": "^1.252.0",
    "use-debounce": "^10.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/linkify-it": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "react-devtools": "^6.1.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
