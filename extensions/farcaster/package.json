{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "farcaster",
  "title": "Farcaster",
  "description": "Most comprehensive extension for Farecaster. Create and search your casts, frames, channels and more. Stay on top of your notifications.",
  "icon": "command-icon.png",
  "author": "artivilla",
  "categories": [
    "Web",
    "Media",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-trending-casts",
      "title": "Search Trending Casts",
      "description": "Search trending casts filtered by keywords",
      "mode": "view"
    },
    {
      "name": "search-profiles",
      "title": "Search Profiles",
      "description": "Search profiles by fid, username and display names",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "description": "Neynar account API key",
      "type": "password",
      "required": true,
      "title": "API Key",
      "placeholder": "Enter your API key",
      "link": "https://dev.neynar.com"
    },
    {
      "name": "farcasterClient",
      "description": "Select Farcaster client to use",
      "type": "dropdown",
      "required": true,
      "title": "Farcaster Client",
      "default": "warpcast",
      "data": [
        {
          "title": "Warpcast",
          "value": "warpcast"
        },
        {
          "title": "Supercast",
          "value": "supercast"
        }
      ]
    },
    {
      "name": "walletAddressClient",
      "description": "How to inpsect ethereum address",
      "type": "dropdown",
      "required": true,
      "title": "Account Viewer",
      "default": "etherscan",
      "data": [
        {
          "title": "Etherscan",
          "value": "etherscan"
        },
        {
          "title": "Zapper",
          "value": "zapper"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "@raycast/utils": "^1.13.1",
    "@types/linkify-it": "^3.0.5",
    "dedupe": "^4.0.3",
    "linkify-it": "^5.0.0",
    "tlds": "^1.251.0",
    "use-debounce": "^10.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
