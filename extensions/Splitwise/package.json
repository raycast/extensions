{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "splitwise",
  "title": "Splitwise",
  "description": "View the balances and add expenses to Splitwise",
  "icon": "command-icon.png",
  "author": "ilian",
  "contributors": [
    "diogo_ferrer",
    "djpowers",
    "damian_duchnowski"
  ],
  "categories": ["Finance"],
  "license": "MIT",
  "commands": [
    {
      "name": "add-expense",
      "title": "Add Expense",
      "subtitle": "View balances and add expenses",
      "description": "Add new expense to Splitwise",
      "mode": "view"
    },
    {
      "name": "list-expenses",
      "title": "List Expenses",
      "subtitle": "View expenses",
      "description": "View Splitwise expenses",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "personalAccessToken",
      "title": "Personal Access Token",
      "placeholder": "API Key",
      "description": "See the extension's README for instructions about how to create a token",
      "type": "password",
      "required": true
    },
    {
      "name": "loadingLimit",
      "title": "Loading Limit",
      "default": "250",
      "data": [
        {
          "value": "100",
          "title": "100"
        },
        {
          "value": "250",
          "title": "250"
        },
        {
          "value": "500",
          "title": "500"
        },
        {
          "value": "750",
          "title": "750"
        },
        {
          "value": "1000",
          "title": "1000"
        }
      ],
      "description": "Limits the number of expenses to load",
      "type": "dropdown",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.2",
    "@raycast/utils": "^1.4.16",
    "axios": "^1.8.4",
    "got": "^12.5.3"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
