{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "easy-new-file",
  "title": "Easy New File",
  "description": "Quickly create file in the current Finder window or on the desktop.",
  "icon": "easy-new-file-icon.png",
  "author": "koinzhang",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "new-file-here",
      "icon": "new-file-here-icon.png",
      "title": "New File Here",
      "subtitle": "Easy New File",
      "description": "Create a new file in the current Finder window or on the desktop.",
      "mode": "view",
      "preferences": [
        {
          "name": "layout",
          "type": "dropdown",
          "description": "Set the layout of the file items.",
          "required": true,
          "title": "File Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "itemSize",
          "type": "dropdown",
          "description": "Set the size of the file items. (Only works with Grid layout)",
          "required": false,
          "title": "File Item Size",
          "default": "small",
          "data": [
            {
              "title": "Small",
              "value": "small"
            },
            {
              "title": "Medium",
              "value": "medium"
            },
            {
              "title": "Large",
              "value": "large"
            }
          ]
        },
        {
          "name": "itemInset",
          "type": "dropdown",
          "description": "Set the inset of the file items. (Only works with Grid layout)",
          "required": false,
          "title": "File Item Inset",
          "default": "md",
          "data": [
            {
              "title": "No Inset",
              "value": ""
            },
            {
              "title": "Small",
              "value": "sm"
            },
            {
              "title": "Medium",
              "value": "md"
            },
            {
              "title": "Large",
              "value": "lg"
            }
          ]
        },
        {
          "name": "createdActions",
          "type": "dropdown",
          "required": false,
          "title": "Actions after Creation",
          "description": "Operations after file creation.",
          "default": "open",
          "data": [
            {
              "title": "No Action",
              "value": "no"
            },
            {
              "title": "Open File",
              "value": "open"
            },
            {
              "title": "Show in Finder",
              "value": "show"
            }
          ]
        },
        {
          "name": "showDocument",
          "type": "checkbox",
          "required": false,
          "title": "Show File Template",
          "description": "Show file templates for document types.",
          "default": true,
          "label": "Document"
        },
        {
          "name": "showCode",
          "type": "checkbox",
          "required": false,
          "description": "Show file templates for code types.",
          "default": true,
          "label": "Code"
        },
        {
          "name": "showScript",
          "type": "checkbox",
          "required": false,
          "description": "Show file templates for script types.",
          "default": true,
          "label": "Script"
        }
      ]
    },
    {
      "name": "new-file-with-text",
      "icon": "new-file-with-text-icon.png",
      "title": "New File With Text",
      "subtitle": "Easy New File",
      "description": "Create a new file with selected or clipboard text now.",
      "mode": "no-view",
      "preferences": [
        {
          "name": "createdActions",
          "type": "dropdown",
          "required": false,
          "title": "Actions after Creation",
          "description": "Operations after file creation.",
          "default": "show",
          "data": [
            {
              "title": "No Action",
              "value": "no"
            },
            {
              "title": "Open File",
              "value": "open"
            },
            {
              "title": "Show in Finder",
              "value": "show"
            }
          ]
        },
        {
          "name": "fileType",
          "type": "dropdown",
          "required": false,
          "title": "File Type",
          "description": "Type of the new file created.",
          "default": "txt",
          "data": [
            {
              "title": "Text",
              "value": "txt"
            },
            {
              "title": "Markdown",
              "value": "md"
            },
            {
              "title": "Java",
              "value": "java"
            },
            {
              "title": "Javascript",
              "value": "js"
            },
            {
              "title": "Typescript",
              "value": "ts"
            },
            {
              "title": "Json",
              "value": "json"
            },
            {
              "title": "XML",
              "value": "xml"
            },
            {
              "title": "CSS",
              "value": "css"
            },
            {
              "title": "Html",
              "value": "html"
            },
            {
              "title": "SVG",
              "value": "svg"
            },
            {
              "title": "Apple",
              "value": "applescript"
            },
            {
              "title": "Groovy",
              "value": "groovy"
            },
            {
              "title": "Perl",
              "value": "pl"
            },
            {
              "title": "PHP",
              "value": "php"
            },
            {
              "title": "Python",
              "value": "py"
            },
            {
              "title": "Ruby",
              "value": "rb"
            },
            {
              "title": "Shell",
              "value": "sh"
            }
          ]
        },
        {
          "name": "saveDirectory",
          "title": "Save Directory",
          "description": "The directory of file to save. Path format: /Users/Username/Downloads or ~/Desktop.",
          "type": "textfield",
          "required": true,
          "placeholder": "~/Desktop",
          "default": "~/Desktop"
        }
      ]
    },
    {
      "name": "add-file-template",
      "icon": "add-file-template-icon.png",
      "title": "Add File Template",
      "subtitle": "Easy New File",
      "description": "Add a file template that you can use in the New File Here command.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.0",
    "fs-extra": "^10.1.0",
    "run-applescript": "^6.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
