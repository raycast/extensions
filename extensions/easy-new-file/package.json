{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "easy-new-file",
  "title": "Easy New File",
  "description": "Quickly create file in the open Finder window.",
  "icon": "easy-new-file-icon.png",
  "author": "koinzhang",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "new-file-now",
      "icon": "new-file-now.png",
      "title": "New File Now",
      "subtitle": "Easy New File",
      "description": "Create a new file with selected or clipboard text now.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "fileName",
          "type": "text",
          "required": false,
          "placeholder": "txt, .txt or filename.txt"
        },
        {
          "name": "fileContent",
          "type": "text",
          "required": false,
          "placeholder": "file content"
        }
      ],
      "preferences": [
        {
          "name": "nullArgumentsAction",
          "type": "dropdown",
          "required": false,
          "title": "Action When Empty Arguments",
          "description": "Action when the file name and file contents (all arguments of the command) are empty.",
          "default": "createWithTemplate",
          "data": [
            {
              "title": "Open New File With Template",
              "value": "createWithTemplate"
            },
            {
              "title": "Create With Default File Type",
              "value": "createWithDefault"
            }
          ]
        },
        {
          "name": "defaultFileType",
          "type": "dropdown",
          "required": false,
          "title": "Default File Type",
          "description": "Default file type when the file name (the first argument of the command) is empty.",
          "default": "txt",
          "data": [
            {
              "title": "Text",
              "value": "txt"
            },
            {
              "title": "Markdown",
              "value": "md"
            },
            {
              "title": "Java",
              "value": "java"
            },
            {
              "title": "Javascript",
              "value": "js"
            },
            {
              "title": "Typescript",
              "value": "ts"
            },
            {
              "title": "Json",
              "value": "json"
            },
            {
              "title": "XML",
              "value": "xml"
            },
            {
              "title": "CSS",
              "value": "css"
            },
            {
              "title": "Html",
              "value": "html"
            },
            {
              "title": "SVG",
              "value": "svg"
            },
            {
              "title": "Apple",
              "value": "applescript"
            },
            {
              "title": "Groovy",
              "value": "groovy"
            },
            {
              "title": "Perl",
              "value": "pl"
            },
            {
              "title": "PHP",
              "value": "php"
            },
            {
              "title": "Python",
              "value": "py"
            },
            {
              "title": "Ruby",
              "value": "rb"
            },
            {
              "title": "Shell",
              "value": "sh"
            }
          ]
        },
        {
          "name": "defaultFileContent",
          "type": "dropdown",
          "required": false,
          "title": "Default File Content",
          "description": "Default file content when the file content (the second argument of the command)  is empty.",
          "default": "selectedFirst",
          "data": [
            {
              "title": "Empty",
              "value": "empty"
            },
            {
              "title": "Selected First",
              "value": "selectedFirst"
            },
            {
              "title": "Clipboard First",
              "value": "clipboardFirst"
            }
          ]
        },
        {
          "name": "createdAction",
          "type": "dropdown",
          "required": false,
          "title": "Action After Creation",
          "description": "Action after the file is created.",
          "default": "show",
          "data": [
            {
              "title": "No Action",
              "value": "no"
            },
            {
              "title": "Open File",
              "value": "open"
            },
            {
              "title": "Show in Finder",
              "value": "show"
            }
          ]
        }
      ]
    },
    {
      "name": "new-file-with-template",
      "icon": "new-file-with-template-icon.png",
      "title": "New File With Template",
      "subtitle": "Easy New File",
      "description": "Create a new file with templates in the open Finder window.",
      "mode": "view",
      "preferences": [
        {
          "name": "layout",
          "type": "dropdown",
          "description": "Set the layout of the file items.",
          "required": false,
          "title": "File Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the file items. (Only works with Grid layout)",
          "required": false,
          "title": "File Item Columns",
          "default": "8",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        },
        {
          "name": "itemInset",
          "type": "dropdown",
          "description": "Set the inset of the file items. (Only works with Grid layout)",
          "required": false,
          "title": "File Item Inset",
          "default": "sm",
          "data": [
            {
              "title": "No Inset",
              "value": ""
            },
            {
              "title": "Small",
              "value": "sm"
            },
            {
              "title": "Medium",
              "value": "md"
            },
            {
              "title": "Large",
              "value": "lg"
            }
          ]
        },
        {
          "name": "createdActions",
          "type": "dropdown",
          "required": false,
          "title": "Actions after Creation",
          "description": "Operations after file creation.",
          "default": "open",
          "data": [
            {
              "title": "No Action",
              "value": "no"
            },
            {
              "title": "Open File",
              "value": "open"
            },
            {
              "title": "Show in Finder",
              "value": "show"
            }
          ]
        },
        {
          "name": "showDocument",
          "type": "checkbox",
          "required": false,
          "title": "Show File Template",
          "description": "Show file templates for document types.",
          "default": true,
          "label": "Document"
        },
        {
          "name": "showCode",
          "type": "checkbox",
          "required": false,
          "description": "Show file templates for code types.",
          "default": true,
          "label": "Code"
        },
        {
          "name": "showScript",
          "type": "checkbox",
          "required": false,
          "description": "Show file templates for script types.",
          "default": true,
          "label": "Script"
        }
      ]
    },
    {
      "name": "add-file-template",
      "icon": "add-file-template-icon.png",
      "title": "Add File Template",
      "subtitle": "Easy New File",
      "description": "Add a file template that you can use in the New File With Template command.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.74.1",
    "fs-extra": "^11.2.0",
    "run-applescript": "^7.0.0",
    "xlsx": "^0.18.5",
    "file-url": "^4.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
