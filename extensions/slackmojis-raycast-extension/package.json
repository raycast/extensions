{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "slackmojis-raycast-extension",
  "title": "Slackmoji Search",
  "description": "Looks up emojis on Slackmojis.com",
  "icon": "slackmojis-logo.png",
  "author": "samwalshnz",
  "categories": [
    "Fun",
    "Media",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Slackmojis",
      "description": "Search for emojis on Slackmojis.com, and download them, or copy the URL",
      "mode": "view",
      "icon": "slackmojis-logo.png"
    }
  ],
  "preferences": [
    {
      "name": "downloadDirectory",
      "type": "directory",
      "default": "~/Downloads",
      "key": "downloadDirectory",
      "title": "Download Directory",
      "description": "The directory where the emoji will be downloaded to",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.76.0",
    "@raycast/utils": "^1.16.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
