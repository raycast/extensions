{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hestiacp-admin",
  "title": "HestiaCP Admin",
  "description": "Manage Users, Domains, Mail Domains, Databases, and more, in your HestiaCP instance",
  "icon": "hestia.png",
  "author": "xmok",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "hostname",
      "description": "HestiaCP URL",
      "title": "Hostname",
      "type": "textfield",
      "required": true,
      "placeholder": "https://demo.hestiacp.com:8083"
    },
    {
      "name": "username",
      "description": "HestiaCP Admin Username",
      "title": "Username",
      "type": "textfield",
      "required": true,
      "placeholder": "admin"
    },
    {
      "name": "access_key",
      "description": "HestiaCP API Access Key",
      "title": "Access Key",
      "type": "textfield",
      "required": true,
      "placeholder": "3II...MYT"
    },
    {
      "name": "secret_key",
      "description": "HestiaCP API Secret Key",
      "title": "Secret Key",
      "type": "password",
      "required": true,
      "placeholder": "hB...=s"
    }
  ],
  "commands": [
    {
      "name": "list-users",
      "title": "List Users",
      "description": "Manage Users, View Logs and Navigate to Domains, DBs, and more",
      "mode": "view"
    },
    {
      "name": "list-user-packages",
      "title": "List User Packages",
      "description": "View and Copy User Packages",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^2.2.0",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
