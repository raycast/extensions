{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hestia-admin",
  "title": "Hestia Admin",
  "description": "",
  "icon": "hestia.png",
  "author": "xmok",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "hostname",
      "description": "HestiaCP URL",
      "title": "Hostname",
      "type": "textfield",
      "required": true,
      "placeholder": "demo.hestiacp.com"
    },
    {
      "name": "username",
      "description": "HestiaCP Admin Username",
      "title": "Username",
      "type": "textfield",
      "required": true,
      "placeholder": "admin"
    },
    {
      "name": "access_key",
      "description": "HestiaCP API Access Key",
      "title": "Access Key",
      "type": "textfield",
      "required": true
    },
    {
      "name": "secret_key",
      "description": "HestiaCP API Secret Key",
      "title": "Secret Key",
      "type": "password",
      "required": true
    }
  ],
  "commands": [
    {
      "name": "list-users",
      "title": "List Users",
      "description": "List Users",
      "mode": "view"
    },
    {
      "name": "list-user-packages",
      "title": "List User Packages",
      "description": "",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.67.1",
    "@raycast/utils": "^1.12.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
