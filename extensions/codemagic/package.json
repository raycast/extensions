{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "codemagic",
  "title": "Codemagic",
  "description": "See your Codemagic apps right in Raycast.",
  "version": "1.0.0",
  "icon": "icon.png",
  "author": "rrroyal",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Codemagic",
      "description": "Search Codemagic apps",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "API token",
      "description": "Codemagic API token",
      "placeholder": "API token"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
