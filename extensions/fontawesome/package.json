{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "font-awesome",
  "title": "Font Awesome",
  "description": "Search Font Awesome icons",
  "icon": "command-icon.png",
  "author": "dutzi",
  "contributors": [
    "GLaDO8",
    "danielferguson",
    "ridemountainpig",
    "yusifaliyevpro"
  ],
  "categories": [
    "Design Tools",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Font Awesome",
      "description": "Search Font Awesome icons",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "API_TOKEN",
      "type": "password",
      "required": false,
      "title": "API Token (For Font Awesome Pro Accounts)",
      "description": "Optionally Use Font Awesome Pro icons by providing an API Token, not necessary to access free icons."
    },
    {
      "name": "STYLE_PREFERENCE",
      "type": "dropdown",
      "default": "fas",
      "required": false,
      "data": [
        {
          "title": "Classic, Solid",
          "value": "fas"
        },
        {
          "title": "Classic, Regular (Pro only)",
          "value": "far"
        },
        {
          "title": "Classic, Light (Pro only)",
          "value": "fal"
        },
        {
          "title": "Classic, Thin (Pro only)",
          "value": "fat"
        },
        {
          "title": "Classic, Brands",
          "value": "fab"
        },
        {
          "title": "Duotone, Solid (Pro only)",
          "value": "fad"
        },
        {
          "title": "Sharp, Solid (Pro only)",
          "value": "fass"
        },
        {
          "title": "Sharp, Regular (Pro only)",
          "value": "fasr"
        },
        {
          "title": "Sharp, Light (Pro only)",
          "value": "fasl"
        },
        {
          "title": "Sharp, Thin (Pro only)",
          "value": "fast"
        }
      ],
      "title": "Icon family and style preference",
      "description": "Choose which icon family and style you prefer."
    },
    {
      "name": "PRIMARY_ACTION",
      "type": "dropdown",
      "default": "copyIconName",
      "required": false,
      "data": [
        {
          "title": "Copy Icon Name",
          "value": "copyIconName"
        },
        {
          "title": "Copy Icon Classes",
          "value": "copyIconClasses"
        },
        {
          "title": "Copy as Svg",
          "value": "copyAsSvg"
        },
        {
          "title": "Copy Icon Glyph",
          "value": "copyIconGlyph"
        },
        {
          "title": "Copy Icon Unicode",
          "value": "copyIconUnicode"
        }
      ],
      "title": "Icon primary action",
      "description": "Choose which action to perform when selecting an icon."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.7",
    "@raycast/utils": "^2.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^20.19.13",
    "@types/react": "^19.1.12",
    "change-case": "^4.1.2",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "svg-to-png": "^4.0.0",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
