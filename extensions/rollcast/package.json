{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "rollcast",
  "title": "Rollcast",
  "description": "Roll dice for your D&D games from Raycast!",
  "icon": "command-icon.png",
  "author": "troalexis",
  "contributors": [
    "pernielsentikaer"
  ],
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Dice Roll",
      "description": "Roll different dice variations",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "name": "copy_to_clipboard",
      "description": "Copy the dice result to clipboard when rolling",
      "type": "checkbox",
      "required": true,
      "title": "Options",
      "label": "Copy dice result to clipboard when rolling"
    }
  ]
}
