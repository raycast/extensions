{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "inertiajs-documentation",
  "title": "InertiaJS Documentation",
  "description": "InertiaJS Documentation Search",
  "icon": "inertiajs-icon.png",
  "author": "danyelkeddah",
  "license": "MIT",
  "contributors": [],
  "commands": [
    {
      "name": "inertiajs",
      "title": "Search Documentation",
      "subtitle": "Inertiajs",
      "description": "Searches Documentation for InertiaJS",
      "mode": "view",
      "preferences": [
        {
          "name": "inertiajsVersion",
          "type": "dropdown",
          "required": true,
          "title": "InertiaJS Version",
          "description": "Specify the InertiaJS version it will search the docs for.",
          "default": "v1.x",
          "data": [
            {
              "title": "v1.x",
              "value": "v1.x"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.0",
    "algoliasearch": "^4.12.0",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
