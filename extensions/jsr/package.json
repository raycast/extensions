{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "jsr",
  "title": "JSR",
  "description": "Search through JSR, the Open Source Package Registry for Javascript/Typescript",
  "icon": "command-icon.png",
  "author": "j3lte",
  "contributors": [
    "litomore"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-jsr",
      "title": "Search Packages",
      "description": "Search for packages on JSR.io",
      "subtitle": "JSR",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "openWebsiteByDefault",
      "description": "Open JSR.io istead of showing the details",
      "type": "checkbox",
      "defaultValue": false,
      "required": false,
      "label": "Open Website by Default"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.71.4",
    "@raycast/utils": "^1.14.0",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^3.6.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cheerio": "^0.22.35",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e ./dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
