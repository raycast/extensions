{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "looped",
  "title": "Looped",
  "description": "A Raycast command that checks if loop is open. If it is, quit it and reopen it. If it's not open, open it.",
  "icon": "command-icon.png",
  "author": "Kami",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Loop It",
      "description": "If loop has an error, this command restarts Loop and removes the settings popup",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.1",
    "@raycast/utils": "^1.13.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
