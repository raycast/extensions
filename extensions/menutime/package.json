{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "menu-time",
  "title": "Menu Time",
  "description": "Jazz up your menubar with customization your way!",
  "icon": "command-icon.png",
  "author": "Ek217",
  "license": "MIT",
  "preferences": [
    {
      "name": "input",
      "title": "Input your message here! Leave blank for nothing",
      "description": "Input your message here! Leave blank for nothing",
      "type": "textfield",
      "required": false,
      "default": "✏️ Change your message in preferences!"
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "MenuTime",
      "description": "Template for showing a menu bar extra",
      "mode": "menu-bar"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.2",
    "@raycast/utils": "^1.4.1"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}