{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "git-commands",
  "title": "Git Commands",
  "description": "Quickly use and learn Git commands and Oh My Zsh alias.",
  "icon": "icon.png",
  "author": "manumorante",
  "categories": [
    "Documentation",
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-commands",
      "title": "Search Commands",
      "description": "Search command, description or alias.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "MaxRecentAliases",
      "description": "Maximum number of recent aliases to remember",
      "type": "textfield",
      "required": false,
      "title": "Max Recent Aliases",
      "placeholder": "3",
      "default": "3",
      "validation": {
        "type": "number",
        "min": 1,
        "max": 5
      }
    },
    {
      "name": "MaxFavoriteAliases",
      "description": "Maximum number of favorites aliases to remember",
      "type": "textfield",
      "required": false,
      "title": "Max Favorites Aliases",
      "placeholder": "3",
      "default": "3",
      "validation": {
        "type": "number",
        "min": 1,
        "max": 5
      }
    },
    {
      "name": "ItemAliasTypeColor",
      "label": "Show command type color",
      "description": "Displays colors according to the impact the command produces.",
      "required": false,
      "type": "checkbox",
      "default": true
    },
    {
      "name": "SubtlitleOption",
      "description": "Show description, command or none",
      "type": "dropdown",
      "required": false,
      "title": "Subtitle Option",
      "data": [
        {
          "title": "Description",
          "value": "description"
        },
        {
          "title": "Command",
          "value": "command"
        }
      ],
      "default": "description"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.8",
    "@types/node": "20.13.0",
    "@types/react": "18.3.3",
    "eslint": "^9.4.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
