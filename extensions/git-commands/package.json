{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "git-commands",
  "title": "Git Commands",
  "description": "Quickly use and learn Git commands and Oh My Zsh alias.",
  "icon": "icon.png",
  "author": "manumorante",
  "categories": [
    "Documentation",
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-commands",
      "title": "Search Commands",
      "description": "Search command, description or alias.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "ItemAliasShowDescription",
      "label": "Show command description",
      "description": "Displays the command description.",
      "required": false,
      "type": "checkbox",
      "default": true
    },
    {
      "name": "ItemAliasTypeColor",
      "label": "Show command type color",
      "description": "Displays colors according to the impact the command produces.",
      "required": false,
      "type": "checkbox",
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "1.50.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
