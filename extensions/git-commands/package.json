{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "git-commands",
  "title": "Git Commands",
  "description": "Quickly use and learn Git commands and Oh My Zsh alias.",
  "icon": "icon.png",
  "author": "manumorante",
  "categories": [
    "Documentation",
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-commands",
      "title": "Search Commands",
      "description": "Search command, description or alias.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "IconPinColored",
      "title": "Colors",
      "type": "checkbox",
      "required": false,
      "label": "Pin icon in yellow",
      "description": "If it is active, it shows the pinned alias icon in yellow, otherwise in gray",
      "default": true
    },
    {
      "name": "ShowTypeIcon",
      "type": "checkbox",
      "required": false,
      "label": "Show type dot icon",
      "description": "Show a dot icon with colors according to the impact the command produces",
      "default": true
    },
    {
      "name": "MaxRecent",
      "description": "Maximum number of recent aliases to show",
      "type": "dropdown",
      "required": false,
      "title": "Total recent to show",
      "data": [
        {
          "title": "None",
          "value": "0"
        },
        {
          "title": "1",
          "value": "1"
        },
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5",
          "value": "5"
        },
        {
          "title": "6",
          "value": "6"
        },
        {
          "title": "7",
          "value": "7"
        }
      ],
      "default": "3"
    },
    {
      "name": "MaxPins",
      "description": "Save as many as you want and show the amount you choose here",
      "type": "dropdown",
      "required": false,
      "title": "Total pinned to show",
      "data": [
        {
          "title": "None",
          "value": "0"
        },
        {
          "title": "1",
          "value": "1"
        },
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5",
          "value": "5"
        },
        {
          "title": "6",
          "value": "6"
        },
        {
          "title": "7",
          "value": "7"
        }
      ],
      "default": "3"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
