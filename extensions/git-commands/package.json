{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "git-commands",
  "title": "Git Commands",
  "description": "Quickly use and learn Git commands and Oh My Zsh alias.",
  "icon": "icon.png",
  "author": "manumorante",
  "categories": [
    "Documentation",
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-commands",
      "title": "Search Commands",
      "description": "Search command, description or alias.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "MaxRecent",
      "description": "Maximum number of recent aliases to remember",
      "type": "textfield",
      "required": false,
      "title": "Total recents to show",
      "placeholder": "3",
      "default": "3",
      "validation": {
        "type": "number",
        "min": 1,
        "max": 5
      }
    },
    {
      "name": "MaxFavorites",
      "description": "Maximum number of favorites aliases to remember",
      "type": "textfield",
      "required": false,
      "title": "Total favorites to show",
      "placeholder": "3",
      "default": "3",
      "validation": {
        "type": "number",
        "min": 1,
        "max": 5
      }
    },
    {
      "name": "ItemAliasTypeColor",
      "label": "Show the type tag with colors",
      "description": "Alias with colors according to the impact the command produces.",
      "required": false,
      "type": "checkbox",
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
