{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "braid",
  "title": "Braid Design System",
  "description": "Search and use Braid Components and Iconography from Raycast",
  "icon": "braid-raycast-icon.png",
  "author": "felixhabib",
  "categories": [
    "Documentation",
    "Developer Tools",
    "Design Tools",
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-docs",
      "title": "Search Docs",
      "description": "Search and open Docs in Braid Design System",
      "mode": "view"
    },
    {
      "name": "search-iconography",
      "title": "Search Iconography",
      "description": "Search and open Iconography in Braid Design System",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.84.2",
    "@raycast/utils": "^1.18.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.11",
    "@types/node": "22.7.5",
    "@types/react": "18.3.11",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "cheerio": "1.0.0",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "tsm": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "generate-icons": "tsm scripts/darkify-icons.ts",
    "format": "ray lint --fix"
  }
}
