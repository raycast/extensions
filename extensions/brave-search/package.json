{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "brave-search",
  "title": "Brave Search",
  "description": "Brave search with autosuggestions",
  "icon": "command-icon.png",
  "author": "VishwasShashidhar",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Brave Search",
      "subtitle": "Brave Search",
      "description": "Brave search with autosuggestions",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "rememberSearchHistory",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Remember Search History",
      "description": "Enable this checkbox to locally store Brave search history."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "iconv-lite": "^0.6.3",
    "nanoid": "^4.0.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
