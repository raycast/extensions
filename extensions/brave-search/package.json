{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "brave-search",
  "title": "Brave Search",
  "description": "Brave search with autosuggestions",
  "icon": "command-icon.png",
  "author": "VishwasShashidhar",
  "contributors": [
    "0xChain",
    "justiniscoding"
  ],
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Brave Search",
      "subtitle": "Brave Search",
      "description": "Brave search with autosuggestions",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "rememberSearchHistory",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Remember Search History",
      "description": "Enable this checkbox to locally store Brave search history."
    },
    {
      "name": "enableSearchForURLs",
      "type": "checkbox",
      "required": false,
      "default": false,
      "label": "Enable URL search",
      "description": "When enabled, typing a url into the search bar will search the url. However, when disabled, typing the url in the search bar will instead open it, instead of searching for it with brave search."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.60.0",
    "iconv-lite": "^0.6.3",
    "nanoid": "^4.0.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "^18.8.4",
    "@types/react": "^18.2.27",
    "eslint": "^7.32.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
