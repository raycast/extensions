{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shellyeah",
  "title": "Shellyeah",
  "description": "Generates CLI commands from natural language.",
  "icon": "icon.png",
  "author": "vladstudio",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "screenshots": [
    {
      "path": "assets/shot-1.jpg",
      "title": "Enter your command description in natural language"
    },
    {
      "path": "assets/shot-2.jpg",
      "title": "View generated shell commands"
    },
    {
      "path": "assets/shot-3.jpg",
      "title": "Copy commands to clipboard with one click"
    }
  ],
  "commands": [
    {
      "name": "generate-cli-command",
      "title": "Generate CLI Command",
      "description": "Generate CLI commands from natural language",
      "mode": "view"
    },
    {
      "name": "reset",
      "title": "Reset",
      "description": "Erase all preferences",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "title": "OpenAI API Key",
      "description": "Your OpenAI API key",
      "type": "password",
      "required": true
    },
    {
      "name": "shell",
      "title": "Shell",
      "description": "Your preferred shell",
      "type": "dropdown",
      "data": [
        {
          "title": "Bash",
          "value": "bash"
        },
        {
          "title": "Zsh",
          "value": "zsh"
        },
        {
          "title": "Fish",
          "value": "fish"
        }
      ],
      "required": true,
      "default": "bash"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.98.5",
    "@raycast/utils": "^1.17.0",
    "openai": "^4.100.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\n\nIt seems like you are trying to publish the Raycast extension to npm.\n\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\n\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  },
  "ai": {
    "evals": [
      {
        "input": "How to find all text files in current directory",
        "expected": [
          {
            "contains": [
              "find",
              "ls",
              "grep",
              "search"
            ]
          }
        ]
      },
      {
        "input": "How to compress a folder",
        "expected": [
          {
            "contains": [
              "tar",
              "zip",
              "compress"
            ]
          }
        ]
      },
      {
        "input": "How to check disk space usage",
        "expected": [
          {
            "contains": [
              "df",
              "du"
            ]
          }
        ]
      }
    ]
  }
}
