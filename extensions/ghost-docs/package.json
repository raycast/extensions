{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ghost-docs",
  "title": "Ghost - Docs Search",
  "description": "Search Ghost help center, developer docs, tutorials, changelog, and publisher resources",
  "icon": "icon.png",
  "author": "ryan_feigenbaum",
  "categories": [
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Docs",
      "subtitle": "Ghost",
      "description": "Search Ghost help center, developer docs, tutorials, changelog, and publisher resources",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.62.1",
    "@raycast/utils": "^1.4.8",
    "algoliasearch": "^4.20.0",
    "instantsearch.js": "^4.60.0",
    "micromark": "^4.0.0",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
