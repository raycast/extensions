{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "youtube",
  "title": "YouTube",
  "description": "Search Videos, Channels, and more...",
  "icon": "youtube.png",
  "author": "tonka3000",
  "contributors": [
    "HelloImSteven",
    "madza"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-videos",
      "title": "Search Videos",
      "subtitle": "YouTube",
      "description": "Search YouTube Videos",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Search Query",
          "required": false,
          "type": "text"
        }
      ]
    },
    {
      "name": "search-channel",
      "title": "Search Channels",
      "subtitle": "YouTube",
      "description": "Search YouTube Channels",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Search Query",
          "required": false,
          "type": "text"
        }
      ]
    },
    {
      "name": "popular-videos",
      "title": "Popular Videos",
      "subtitle": "YouTube",
      "description": "Show Popular YouTube Videos",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apikey",
      "type": "password",
      "title": "API Key",
      "placeholder": "Your YouTube enabled Google API key",
      "required": true,
      "description": "YouTube enabled Google API key"
    },
    {
      "name": "view",
      "type": "dropdown",
      "title": "View Layout",
      "required": false,
      "default": "grid",
      "data": [
        {
          "title": "Grid",
          "value": "grid"
        },
        {
          "title": "List",
          "value": "list"
        }
      ],
      "description": "Set the default view"
    },
    {
      "name": "griditemsize",
      "type": "dropdown",
      "title": "Grid Item Size",
      "required": false,
      "default": "5",
      "data": [
        {
          "title": "Small",
          "value": "6"
        },
        {
          "title": "Medium",
          "value": "5"
        },
        {
          "title": "Large",
          "value": "4"
        }
      ],
      "description": "Set the default grid item size"
    },
    {
      "name": "primaryaction",
      "type": "dropdown",
      "title": "Primary Action",
      "required": false,
      "default": "detail",
      "data": [
        {
          "title": "Show Details",
          "value": "detail"
        },
        {
          "title": "Open in Browser",
          "value": "browser"
        }
      ],
      "description": "Set the default action"
    },
    {
      "title": "Recent Videos and Channels",
      "name": "showRecentVideos",
      "label": "Show Recent Videos",
      "type": "checkbox",
      "required": false,
      "default": true,
      "description": "Show recent videos in the video search."
    },
    {
      "name": "showRecentChannels",
      "label": "Show Recent Channels",
      "type": "checkbox",
      "required": false,
      "default": true,
      "description": "Show recent channels in the channel search."
    }
  ],
  "dependencies": {
    "@google-cloud/local-auth": "^1.0.1",
    "@googleapis/youtube": "^2.0.0",
    "@raycast/api": "^1.49.0",
    "duration-iso-8601": "^1.1.0",
    "he": "^1.2.0",
    "javascript-time-ago": "^2.3.10",
    "node-fetch": "^3.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/he": "^1.1.2",
    "@types/node": "^18.8.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3",
    "prettier": "^3.0.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
