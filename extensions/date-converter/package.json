{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "date-converter",
  "title": "Date Converter",
  "description": "Convert a variety of date formats",
  "icon": "extension-icon.png",
  "author": "asportnoy",
  "contributors": [
    "vineus"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "keywords": [
    "date",
    "epoch",
    "unix",
    "seconds",
    "milliseconds",
    "iso",
    "timestamp",
    "convert"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Convert Date",
      "description": "Parse and convert a date",
      "mode": "view",
      "keywords": [
        "date",
        "epoch",
        "unix",
        "seconds",
        "milliseconds",
        "iso",
        "timestamp",
        "convert"
      ],
      "preferences": [
        {
          "name": "defaultFormat",
          "title": "Preferred Machine Format",
          "description": "Default machine-readable output format to use when converting a human-readable date",
          "type": "dropdown",
          "default": "unix-ms",
          "required": false,
          "data": [
            {
              "title": "Unix Timestamp (ms)",
              "value": "unix-ms"
            },
            {
              "title": "Unix Timestamp (seconds)",
              "value": "unix-s"
            },
            {
              "title": "ISO Date",
              "value": "iso"
            }
          ]
        },
        {
          "name": "copyAction",
          "title": "Copy Action",
          "description": "Action to take when copying the converted date",
          "type": "dropdown",
          "default": "both",
          "required": false,
          "data": [
            {
              "title": "Copy to clipboard",
              "value": "copy"
            },
            {
              "title": "Paste to frontmost app",
              "value": "paste"
            },
            {
              "title": "Copy and paste to frontmost app",
              "value": "both"
            }
          ]
        },
        {
          "name": "hour24",
          "title": "Human-readable Time Format",
          "description": "Use 24-hour time format",
          "type": "checkbox",
          "label": "24-hour Time",
          "default": false,
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.53.3",
    "chrono-node": "^2.6.3",
    "javascript-time-ago": "^2.5.10"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.6",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
