{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "toggle-desktop-visibility",
  "title": "Toggle Desktop Visibility",
  "description": "Toggle Desktop file or folder visible and hidden",
  "icon": "logo.png",
  "author": "Haojen",
  "license": "MIT",
  "categories": [
    "System",
    "Applications"
  ],
  "commands": [
    {
      "name": "toggle-desktop-icons",
      "title": "Toggle Icon Visibility",
      "subtitle": "Desktop",
      "description": "Toggle Desktop icons visible or hidden",
      "mode": "no-view"
    },
    {
      "name": "show-desktop-icons",
      "title": "Show Icons",
      "subtitle": "Desktop",
      "description": "Show Desktop icons",
      "mode": "no-view",
      "disabledByDefault": true
    },
    {
      "name": "hide-desktop-icons",
      "title": "Hide Icons",
      "subtitle": "Desktop",
      "description": "Hide Desktop icons",
      "mode": "no-view",
      "disabledByDefault": true
    },
    {
      "name": "toggle-desktop-widgets",
      "title": "Toggle Widget Visibility",
      "subtitle": "Desktop",
      "description": "Toggle Desktop widgets visible or hidden",
      "mode": "no-view"
    },
    {
      "name": "show-desktop-widgets",
      "title": "Show Widgets",
      "subtitle": "Desktop",
      "description": "Show Desktop widgets",  
      "mode": "no-view",
      "disabledByDefault": true
    },
    {
      "name": "hide-desktop-widgets",
      "title": "Hide Widgets",
      "subtitle": "Desktop",
      "description": "Hide Desktop widgets",
      "mode": "no-view",
      "disabledByDefault": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.6",
    "@types/node": "20.8.0",
    "@types/react": "18.2.24",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
