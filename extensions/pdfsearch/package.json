{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pdfsearch",
  "title": "PDFSearch",
  "description": "Perform semantic search across collections of PDF documents.",
  "icon": "command-icon.png",
  "author": "kevin-pek",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "collections",
      "title": "Manage Collections",
      "description": "View list of current collections.",
      "mode": "view"
    },
    {
      "name": "search",
      "title": "Search Collection",
      "description": "Search the current collection.",
      "mode": "view",
      "arguments": [
        {
          "name": "collection",
          "placeholder": "collection",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.63.0",
    "@raycast/utils": "^1.4.8",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "react-devtools": "^4.28.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "build-swift": "swift build --configuration=release --arch arm64 && cp .build/arm64-apple-macosx/release/SearchIndex assets && cp .build/arm64-apple-macosx/release/IndexDocument assets && cp Sources/VectorStore/Resources/vocab.txt assets",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
