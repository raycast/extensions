{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "workflows",
  "title": "Workflows",
  "description": "Create and run workflows that combine Deeplinks, AI, AppleScript and more",
  "icon": "extension_icon.png",
  "author": "Remco",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "list",
      "title": "Manage Workflows",
      "description": "Manage workflows",
      "subtitle": "Workflows",
      "mode": "view"
    },
    {
      "name": "run",
      "title": "Run",
      "description": "Run a workflow",
      "mode": "no-view",
      "arguments": [
        {
            "type": "text",
            "name": "uuid",
            "placeholder": "Workflow UUID",
            "required": true
        }
      ]
    },
    {
      "name": "run-visual",
      "title": "Run While Showing Progress",
      "description": "Run a workflow, but with a view",
      "subtitle": "Workflows",
      "mode": "view",
      "arguments": [
        {
            "type": "text",
            "name": "uuid",
            "placeholder": "Workflow UUID",
            "required": true
        }
      ]
    },
    {
      "name": "search-manifest",
      "title": "Search Manifest",
      "description": "Search for a manifest",
      "subtitle": "Raycast Extension Manifests",
      "mode": "view",
      "disabledByDefault": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.85.0",
    "@raycast/utils": "^1.18.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
