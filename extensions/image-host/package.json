{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "image-host",
  "title": "Image Host",
  "description": "Host an image on imgBB",
  "icon": "logo.png",
  "author": "efeclk",
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "host-image",
      "title": "Host Image",
      "description": "Host an image on imgBB",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "title": "IMGBB API Key",
      "description": "Your imgBB API key",
      "required": true,
      "type": "password",
      "defaultValue": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.1",
    "@raycast/utils": "^1.11.1",
    "imgbb-uploader": "^1.5.1",
    "imgur-uploader": "^4.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
