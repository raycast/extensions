{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sf-symbols-search",
  "title": "SF Symbols Search",
  "description": "Search and copy SF Symbols",
  "icon": "command-icon.png",
  "author": "jffrykkn",
  "contributors": [
    "xilopaint"
  ],
  "pastContributors": [
    "peteschaffner"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search SF Symbols",
      "description": "Search and copy SF Symbols",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "primaryAction",
      "type": "dropdown",
      "title": "Primary Action",
      "description": "Choose a primary action",
      "required": false,
      "data": [
        {
          "title": "Copy Symbol to Clipboard",
          "value": "copySymbol"
        },
        {
          "title": "Paste Symbol to Active App",
          "value": "pasteSymbol"
        },
        {
          "title": "Copy Name to Clipboard",
          "value": "copyName"
        },
        {
          "title": "Paste Name to Active App",
          "value": "pasteName"
        }
      ],
      "default": "copySymbol"
    },
    {
      "name": "gridColumns",
      "type": "dropdown",
      "title": "Grid Size",
      "description": "Size of the grid items for displaying SF Symbols",
      "required": false,
      "data": [
        {
          "title": "Small",
          "value": "8"
        },
        {
          "title": "Medium",
          "value": "5"
        }
      ],
      "default": "8"
    },
    {
      "name": "showName", 
      "type": "checkbox", 
      "title": "Show Symbol Names",
      "label": "Show Name", 
      "description": "Show SF Symbols name in grid view",
      "required": false, 
      "default": true
    },
    {
      "name": "minimumVersionOS", 
      "type": "dropdown",
      "title": "Show Minimum OS Version (Show Name required)",
      "description": "Show the minimum OS version that's required for an SF Symbol below its name",
      "data": [
        { "title": "iOS", "value": "iOS"},
        { "title": "macOS", "value": "macOS"},
        { "title": "watchOS", "value": "watchOS"},
        { "title": "tvOS", "value": "tvOS"},
        { "title": "visionOS", "value": "visionOS"},
        { "title": "Disabled", "value": "disabled"}
      ],
      "required": false,
      "default": "iOS"
    },
    {
      "name": "showRecent", 
      "type": "checkbox", 
      "title": "Show Recent Symbols",
      "label": "Show Recent", 
      "description": "Show recently used SF Symbols",
      "required": false, 
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.92.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
