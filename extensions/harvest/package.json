{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "harvest",
  "title": "Harvest",
  "description": "Access Harvest Time Entries",
  "icon": "harvest-logo-icon.png",
  "author": "eluce2",
  "contributors": [
    "bchopson"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "new",
      "icon": "add.png",
      "title": "New Time Entry",
      "subtitle": "Harvest",
      "description": "Start a new Timer",
      "mode": "view"
    },
    {
      "name": "listTimeEntries",
      "icon": "timer.png",
      "title": "Today's Timesheet",
      "preferences": [
        {
          "name": "sortBy",
          "title": "Sort By",
          "description": "How should the time entries in your timesheet be sorted?",
          "required": false,
          "default": "updated-desc",
          "value": "updated-desc",
          "type": "dropdown",
          "data": [
            {
              "title": "Updated Time - Newest First",
              "value": "updated-desc"
            },
            {
              "title": "Updated Time - Oldest First",
              "value": "updated-asc"
            },
            {
              "title": "Created Time - Newest First",
              "value": "created-desc"
            },
            {
              "title": "Created Time - Oldest First",
              "value": "created-asc"
            },
            {
              "title": "No Sorting",
              "value": "none"
            }
          ]
        }
      ],
      "subtitle": "Harvest",
      "description": "Start a new Timer",
      "mode": "view"
    },
    {
      "name": "stopTimer",
      "icon": "stop.png",
      "title": "Stop Timer",
      "subtitle": "Harvest",
      "description": "Stop your running timer",
      "mode": "no-view"
    },
    {
      "name": "toggleTimer",
      "icon": "toggle.png",
      "title": "Toggle Timer",
      "subtitle": "Harvest",
      "description": "Toggles the most recently used Harvest Timer",
      "mode": "no-view"
    },
    {
      "name": "menu-bar",
      "title": "Running Timer",
      "subtitle": "Harvest",
      "description": "See your active Harvest timer at a glance",
      "mode": "menu-bar",
      "interval": "1m",
      "disabledByDefault": true,
      "preferences": [
        {
          "name": "showTimerInMenuBar",
          "label": "Show Timer in Menu Bar",
          "title": "Options",
          "description": "Show your running timer in the menu bar",
          "type": "checkbox",
          "default": true,
          "required": false
        },
        {
          "name": "statusFolder",
          "title": "Status Folder",
          "type": "directory",
          "description": "Folder to write status files to. See README for more info.",
          "required": false,
          "label": "Status Folder",
          "placeholder": "Select a directory"
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "token",
      "title": "Personal Access Token",
      "description": "Harvest Token",
      "required": true,
      "link": "https://id.getharvest.com/developers",
      "type": "password"
    },
    {
      "name": "accountID",
      "title": "Harvest Account ID",
      "required": true,
      "description": "Harvest Account ID",
      "link": "https://id.getharvest.com/developers",
      "type": "textfield"
    },
    {
      "name": "showClient",
      "description": "in the time entry form",
      "required": false,
      "label": "Show Client Name above selected project",
      "type": "checkbox"
    },
    {
      "name": "timeFormat",
      "title": "Time Format",
      "required": false,
      "description": "Time Format",
      "type": "dropdown",
      "default": "company",
      "data": [
        {
          "title": "Company Default",
          "value": "company"
        },
        {
          "title": "Hours/Minutes",
          "value": "hours_minutes"
        },
        {
          "title": "Decimal",
          "value": "decimal"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.0",
    "@raycast/utils": "^1.3.1",
    "axios": "^0.23.0",
    "dayjs": "^1.11.11",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.5",
    "@types/lodash": "^4.14.175",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "eslint": "^7.32.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
