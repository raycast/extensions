{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quip",
  "title": "Quip",
  "description": "Search and View Quip Documents",
  "icon": "quip.png",
  "author": "justin0u0",
  "contributors": [
    "liznear"
  ],
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Document Search",
      "subtitle": "Quip",
      "description": "Search the Quip Document.",
      "mode": "view",
      "preferences": [
        {
          "name": "onlyMatchTitles",
          "type": "checkbox",
          "label": "Only Match Titles",
          "required": false,
          "default": true,
          "description": "If set to true, the search will match words in document titles rather than content. Typically much faster if you only want to get documents with a certain title."
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "personalAccessToken",
      "type": "password",
      "required": true,
      "title": "Personal Access Token",
      "description": "Quip Personal Access Token. You can get it from https://quip.com/dev/token."
    },
    {
      "name": "endpoint",
      "type": "textfield",
      "required": false,
      "title": "Quip endpoint",
      "default": "https://platform.quip.com",
      "description": "Quip endpoint. Default value is https://platform.quip.com."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.2",
    "@raycast/utils": "^1.4.16",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.0",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.1",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
