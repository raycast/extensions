{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "memos",
  "title": "Memos",
  "description": "Manage Your Memos",
  "icon": "logo.png",
  "author": "JakeYu",
  "contributors": [
    "littlequartz"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "sendMemo",
      "title": "Send Memo",
      "description": "Send your thoughts to Memos",
      "mode": "no-view",
      "subtitle": "Memos",
      "arguments": [
        {
          "name": "text",
          "placeholder": "Text",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "sendMemoForm",
      "title": "Send Memo Form",
      "description": "Edit memo Detail",
      "mode": "view",
      "subtitle": "Memos",
      "icon": "logo.png"
    },
    {
      "name": "openMemoWebsite",
      "title": "Open Website",
      "description": "Open Memos Website",
      "mode": "no-view",
      "subtitle": "Memos",
      "icon": "logo.png"
    },
    {
      "name": "memosList",
      "title": "Memos List",
      "description": "Show Memos List",
      "mode": "view",
      "subtitle": "Memos"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0",
    "axios": "^1.8.4",
    "form-data": "^4.0.0",
    "mime": "^3.0.0",
    "qs": "^6.11.0",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/mime": "^3.0.1",
    "@types/node": "20.8.10",
    "@types/qs": "^6.9.7",
    "@types/react": "18.2.27",
    "@types/url-parse": "^1.4.8",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "react-devtools": "^4.24.6",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "name": "host",
      "description": "Your memo website domain.",
      "placeholder": "https://demo.usememos.com",
      "type": "textfield",
      "required": false,
      "title": "Host (memo >= 0.22.0)"
    },
    {
      "name": "token",
      "description": "Your token can be found in memo settings.",
      "placeholder": "eyJh*******ZNTU",
      "type": "textfield",
      "required": false,
      "title": "Token (memo >= 0.22.0)"
    }
  ]
}
