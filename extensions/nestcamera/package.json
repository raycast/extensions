{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nestcamera",
  "title": "Nest Camera Viewer",
  "version": "1.0.0",
  "description": "View your Nest Cam Indoor (1st gen) feeds directly in Raycast with RTSP streaming",
  "icon": "command-icon.png",
  "author": "chad_walters",
  "categories": [
    "Security",
    "Applications"  
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "View Nest Cameras",
      "description": "List and view your Nest cameras",
      "mode": "view"
    },
    {
      "name": "quick-access",
      "title": "Quick Access Camera",
      "description": "Open your favorite Nest camera instantly",
      "mode": "no-view"
    },
    {
      "name": "reset-credentials",
      "title": "Reset Oauth Credentials",
      "description": "Clear authentication tokens and re-authenticate",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "projectId",
      "type": "textfield",
      "required": true,
      "title": "Google Project ID",
      "description": "Your Google Device Access project ID",
      "placeholder": "Enter your project ID"
    },
    {
      "name": "clientId",
      "type": "textfield",
      "required": true,
      "title": "OAuth Client ID",
      "description": "Your Google OAuth client ID",
      "placeholder": "Enter your client ID"
    },
    {
      "name": "clientSecret",
      "type": "password",
      "required": true,
      "title": "OAuth Client Secret",
      "description": "Your Google OAuth client secret",
      "placeholder": "Enter your client secret"
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "publish": "ray publish",
    "postinstall": "./scripts/install-dependencies.sh",
    "prebuild": "./scripts/copy-app.sh || true"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/static": "^8.1.1",
    "@raycast/api": "^1.64.4",
    "@raycast/utils": "^1.12.5",
    "@types/node-static": "^0.7.11",
    "fastify": "^5.2.1",
    "node-fetch": "^2.7.0",
    "node-static": "^0.7.11"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^20.17.19",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "assets": [
    "assets"
  ]
}
