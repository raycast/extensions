{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "node-development-projects",
  "version": "1.0.0",
  "title": "Node Development Projects",
  "description": "Perform actions on Node projects in your development directory. Open projects in VSCode or Hyper Terminal.",
  "icon": "nodejs.png",
  "author": "grantcodesgg",
  "license": "MIT",
  "commands": [
    {
      "name": "nd",
      "title": "Node Dev",
      "description": "List projects in the development directory.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "preferences": [
    {
      "name": "devDir",
      "title": "Development Directory",
      "description": "Root path to development Direcotry",
      "type": "textfield",
      "default": "",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
