{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nodemodules-cleaner",
  "title": "Node Modules Cleaner",
  "description": "Cleanup useless node_modules folders",
  "icon": "command-icon.png",
  "author": "ninjiacoder",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Node Modules Cleaner",
      "description": "Show folders containing node_modules",
      "mode": "view"
    },
    {
      "name": "configuration",
      "title": "Configuration",
      "description": "Configuration of node_modules cleaner",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.3",
    "dayjs": "^1.11.7"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
