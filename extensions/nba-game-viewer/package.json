{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nba-viewer",
  "title": "NBA Viewer",
  "description": "View upcoming NBA games and NBA team standings",
  "icon": "command-icon.png",
  "author": "AbhinavPalacharla",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "upcoming-games",
      "title": "View Upcoming Games",
      "description": "Fetches upcoming NBA games",
      "subtitle": "NBA",
      "mode": "view"
    },
    {
      "name": "standings",
      "title": "View Standings",
      "description": "Fetches NBA standings",
      "subtitle": "NBA",
      "mode": "view"
    },
    {
      "name": "headlines",
      "title": "View Headlines",
      "description": "Fetches NBA league headlines from ESPN",
      "subtitle": "NBA",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.35.1",
    "axios": "^0.27.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
