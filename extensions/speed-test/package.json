{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "speed-test",
  "title": "Speed Test",
  "description": "Network Speed Test",
  "icon": "logo.png",
  "author": "Haojen",
  "license": "MIT",
  "commands": [
    {
      "name": "speed-test",
      "title": "Speed Test",
      "subtitle": "Network",
      "description": "Test your Network Speed",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "title": "SpeedTest Install Path",
      "name": "SpeedTestInstallPath",
      "required": false,
      "default": "/opt/homebrew/opt/speedtest/bin",
      "description": "Homebrew SpeedTest install path"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.29.1",
    "morse": "^0.1.0",
    "morsee": "^1.0.9",
    "morsify": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
