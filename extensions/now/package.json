{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "now",
  "title": "Now",
  "description": "Show current or specified time in multiple locations",
  "icon": "now-icon.png",
  "author": "lukasoppermann",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "What's the Time in ...",
      "description": "Convert your current time or a specific time in your location into the time in different cities.",
      "mode": "view",
      "preferences": [
        {
          "name": "hourFormat",
          "type": "checkbox",
          "required": false,
          "title": "24-hour notation",
          "label": "24-hour notation",
          "description": "Show time in 24-hour notation",
          "default": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "city-timezones": "^1.2.0",
    "country-emoji": "^1.5.6",
    "fuse.js": "^6.6.2",
    "moment-timezone": "^0.5.34"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
