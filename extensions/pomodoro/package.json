    },
    {
      "name": "giphyTag",
      "type": "textfield",
      "required": false,
      "title": "Giphy Tag",
      "description": "Tag to use for Giphy API. Default is 'success'.",
      "default": "success"
    },
    {
      "name": "giphyRating",
      "type": "dropdown",
      "required": false,
      "title": "Giphy Rating",
      "description": "Rating to use for Giphy API. Default is 'g'.",
      "default": "g",
