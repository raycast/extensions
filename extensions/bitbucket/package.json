{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bitbucket",
  "title": "Bitbucket Search",
  "description": "The extension allow you to quickly access repositories, pipelines and pull-requests in Bitbucket",
  "icon": "bitbucket-logo.png",
  "author": "Francois",
  "contributors": [
    "earmstrong42"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "searchRepositories",
      "title": "Search Repositories",
      "subtitle": "Bitbucket",
      "description": "Showing bitbucket results on repositories search",
      "mode": "view"
    },
    {
      "name": "searchMyOpenPullRequests",
      "title": "Search My Open Pull Requests",
      "subtitle": "Bitbucket",
      "description": "Showing open pull requests for the current user",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "workspace",
      "type": "textfield",
      "title": "Workspace",
      "required": true,
      "default": "my-organization",
      "description": "Bitbucket workspace",
      "placeholder": "my-organization"
    },
    {
      "name": "accountName",
      "type": "textfield",
      "title": "Account Name",
      "required": true,
      "default": "accountName",
      "description": "Bitbucket Account Name",
      "placeholder": "john_doe"
    },
    {
      "name": "appPassword",
      "type": "password",
      "title": "App Password",
      "required": true,
      "default": "",
      "description": "Bitbucket App password",
      "placeholder": "bXlzZWNyZXRhcGlrZXkqwd"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.1",
    "bitbucket": "^2.7.0",
    "dot-object": "^2.1.4",
    "node-fetch": "^3.0.0",
    "node-localstorage": "^2.2.1",
    "swr": "1.1.2-beta.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/node-localstorage": "^1.3.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
