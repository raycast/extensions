{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zen-mode",
  "title": "Zen Mode",
  "description": "Hide Everything. Mute Everything.",
  "icon": "zenmode-icon.png",
  "author": "pradeepb28",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "activate",
      "title": "Activate",
      "subtitle": "Zen Mode",
      "description": "It activates zen mode based on your app preferences.",
      "mode": "no-view"
    },
    {
      "name": "deactivate",
      "title": "Deactivate",
      "subtitle": "Zen Mode",
      "description": "It deactivates zen mode based on your app preferences.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.35.2",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
