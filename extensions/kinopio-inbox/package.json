{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kinopio-inbox",
  "title": "Kinopio Inbox",
  "description": "Add cards to your Kinopio inbox",
  "icon": "kinopio-icon.png",
  "author": "pirijan",
  "categories": [
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "add-card",
      "title": "Add Card",
      "description": "Add cards to your Kinopio inbox",
      "mode": "view"
    },
    {
      "name": "open-inbox",
      "title": "Open Inbox",
      "description": "Open your Kinopio inbox",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "description": "Your Kinopio API Key. Open Kinopio and get it from User → Settings → API Key",
      "type": "password",
      "required": true,
      "title": "API Key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.8.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
