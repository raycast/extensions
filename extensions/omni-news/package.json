{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "omni-news",
  "title": "Omni News",
  "description": "Fetching news from omni.se",
  "icon": "omni_icon.png",
  "author": "MacRayCast",
  "categories": [
    "News",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Read News",
      "subtitle": "Omni",
      "description": "Fetch news from Omni",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.46.0",
    "json2md": "^2.0.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/json2md": "^1.5.1",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.8.3",
    "typescript": "^4.4.3"
  },
  "preferences": [
    {
      "name": "OmniNewsLimit",
      "title": "News Limit",
      "description": "The amount of articles to be fetched",
      "type": "textfield",
      "default": "10",
      "required": false
    },
    {
      "name": "OmniNewsShowAds",
      "title": "Ads",
      "description": "Remove ads from result",
      "type": "checkbox",
      "default": true,
      "required": false,
      "label": "Hide Ads"
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
