{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-focus-stats",
  "title": "Raycast Focus Stats",
  "description": "View Raycast's Focus session statistics.",
  "icon": "icon.png",
  "author": "dinocosta",
  "contributor": [
    "pernielsentikaer"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "view-sessions",
      "title": "View Sessions",
      "subtitle": "Raycast Focus",
      "description": "Lists Focus Sessions by date",
      "mode": "view"
    },
    {
      "name": "view-summaries",
      "title": "View Summaries",
      "subtitle": "Raycast Focus",
      "description": "Focus Sessions summaries by date",
      "mode": "view"
    },
    {
      "name": "sync-sessions",
      "title": "Sync Sessions",
      "description": "Updates the data regarding the focus sessions. Enable 'Background Refresh' for this command to ensure that this information is automatically fetch every 5 minutes.",
      "mode": "no-view",
      "interval": "5m"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.97.1",
    "@raycast/utils": "^1.17.0",
    "@types/proper-lockfile": "^4.1.4",
    "better-sqlite3-multiple-ciphers": "^11.10.0",
    "drizzle-orm": "^0.43.1",
    "proper-lockfile": "^4.1.2",
    "tar-stream": "^3.1.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "@types/tar-stream": "^3.1.3",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
