{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "open-in-visual-studio-code",
  "title": "Open in Visual Studio Code",
  "description": "Open current Finder directory, selected folder or file in Visual Studio Code.",
  "icon": "icon.png",
  "author": "shubzkothekar",
  "contributors": [
    "thomas",
    "ErikFisher"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Open in Visual Studio Code",
      "description": "Open current Finder directory, selected folder or file in Visual Studio Code.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "VSCodeVariant",
      "description": "VSCode variant to open the selected finder into.",
      "type": "dropdown",
      "title": "Visual Studio Code Variant",
      "required": false,
      "default": "Visual Studio Code",
      "data": [
        {
          "title": "Visual Studio Code",
          "value": "com.microsoft.VSCode"
        },
        {
          "title": "Visual Studio Code - Insiders",
          "value": "com.microsoft.VSCodeInsiders"
        },
        {
          "title": "VSCodium",
          "value": "com.vscodium"
        },
        {
          "title": "Cursor",
          "value": "com.todesktop.230313mzl4w4u92"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "platforms": [
    "macOS"
  ]
}
