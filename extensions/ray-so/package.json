{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ray-so",
  "title": "ray.so",
  "description": "Create beautiful images of your code using ray.so",
  "icon": "icon.png",
  "author": "garrett",
  "contributors": [
    "RSO",
    "dgrzedzielski",
    "emlez",
    "samuelkraft",
    "benoit.grelard",
    "sdorra",
    "sebdanielsson"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create-a-snippet",
      "title": "Create Image from Code",
      "subtitle": "ray.so",
      "description": "Use Ray.so to create beautiful images of your code",
      "mode": "view"
    },
    {
      "name": "generate-image",
      "title": "Generate Image",
      "subtitle": "ray.so",
      "description": "Use Ray.so to create beautiful images of your code",
      "mode": "no-view",
      "preferences": [
        {
          "name": "theme",
          "title": "Theme",
          "type": "dropdown",
          "required": false,
          "description": "Change the background color",
          "default": "candy",
          "data": [
            {
              "title": "Vercel",
              "value": "vercel"
            },
            {
              "title": "Evil Rabbit",
              "value": "rabbit"
            },
            {
              "title": "Supabase",
              "value": "supabase"
            },
            {
              "title": "Tailwind",
              "value": "tailwind"
            },
            {
              "title": "Bitmap",
              "value": "bitmap"
            },
            {
              "title": "Noir",
              "value": "noir"
            },
            {
              "title": "Ice",
              "value": "ice"
            },
            {
              "title": "Sand",
              "value": "sand"
            },
            {
              "title": "Forest",
              "value": "forest"
            },
            {
              "title": "Mono",
              "value": "mono"
            },
            {
              "title": "Breeze",
              "value": "breeze"
            },
            {
              "title": "Candy",
              "value": "candy"
            },
            {
              "title": "Crimson",
              "value": "crimson"
            },
            {
              "title": "Falcon",
              "value": "falcon"
            },
            {
              "title": "Meadow",
              "value": "meadow"
            },
            {
              "title": "Midnight",
              "value": "midnight"
            },
            {
              "title": "Raindrop",
              "value": "raindrop"
            },
            {
              "title": "Sunset",
              "value": "sunset"
            }
          ]
        },
        {
          "name": "padding",
          "title": "Padding",
          "type": "dropdown",
          "required": false,
          "description": "Set the padding around the code",
          "default": "64",
          "data": [
            {
              "title": "16",
              "value": "16"
            },
            {
              "title": "32",
              "value": "32"
            },
            {
              "title": "64",
              "value": "64"
            },
            {
              "title": "128",
              "value": "128"
            }
          ]
        },
        {
          "name": "darkMode",
          "title": "Dark Mode",
          "type": "checkbox",
          "description": "Set the theme to light or dark mode",
          "required": false,
          "default": true,
          "label": "Enabled"
        },
        {
          "name": "background",
          "title": "Background",
          "type": "checkbox",
          "description": "Select whether you want a gradient background or not",
          "required": false,
          "default": true,
          "label": "Enabled"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "~1.102.3",
    "@raycast/utils": "^2.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.1",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "typescript": "~5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
