{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ray-so",
  "title": "ray.so",
  "description": "Create beautiful images of your code using ray.so",
  "icon": "icon.png",
  "author": "garrett",
  "contributors": [
    "RSO",
    "vette"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create-a-snippet",
      "title": "Create Image From Code",
      "subtitle": "ray.so",
      "description": "Use Ray.so to create beautiful images of your code",
      "mode": "view"
    },
    {
      "name": "generate-image",
      "title": "Generate Image",
      "subtitle": "ray.so",
      "description": "Use Ray.so to create beautiful images of your code",
      "mode": "no-view",
      "preferences": [
        {
          "name": "theme",
          "title": "Theme",
          "type": "dropdown",
          "required": false,
          "description": "Change the background color",
          "default": "candy",
          "data": [
            {
              "title": "Candy",
              "value": "candy"
            },
            {
              "title": "Breeze",
              "value": "breeze"
            },
            {
              "title": "Crimson",
              "value": "crimson"
            },
            {
              "title": "Falcon",
              "value": "falcon"
            },
            {
              "title": "Meadow",
              "value": "meadow"
            },
            {
              "title": "Midnight",
              "value": "midnight"
            },
            {
              "title": "Raindrop",
              "value": "raindrop"
            },
            {
              "title": "Sunset",
              "value": "sunset"
            }
          ]
        },
        {
          "name": "padding",
          "title": "Padding",
          "type": "dropdown",
          "required": false,
          "description": "Set the padding around the code",
          "default": "64",
          "data": [
            {
              "title": "16",
              "value": "16"
            },
            {
              "title": "32",
              "value": "32"
            },
            {
              "title": "64",
              "value": "64"
            },
            {
              "title": "128",
              "value": "128"
            }
          ]
        },
        {
          "name": "darkMode",
          "title": "Dark Mode",
          "type": "checkbox",
          "description": "Set the theme to light or dark mode",
          "required": false,
          "default": true,
          "label": "Enabled"
        },
        {
          "name": "background",
          "title": "Background",
          "type": "checkbox",
          "description": "Select whether you want a gradient background or not",
          "required": false,
          "default": true,
          "label": "Enabled"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.3",
    "js-base64": "^3.7.2",
    "node-fetch": "^3.2.0",
    "open": "^8.4.0",
    "run-applescript": "^6.0.0",
    "tempy": "^2.0.0",
    "url-safe-base64": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
