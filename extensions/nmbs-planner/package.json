{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nmbs-planner",
  "title": "NMBS Planner",
  "description": "Plan your trainrides with NMBS",
  "icon": "train_icon.png",
  "author": "Samuel3865",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "trainride",
      "title": "Trainride",
      "description": "Plan your trainride",
      "mode": "view",
      "arguments": [
        {
          "name": "from",
          "placeholder": "Origin",
          "type": "text",
          "required": true
        },
        {
          "name": "to",
          "placeholder": "Destination",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.4",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
