{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "unsplash",
  "title": "Unsplash",
  "description": "Search images or collections on Unsplash, download, copy or set them as wallpaper without leaving Raycast!",
  "icon": "command-icon.png",
  "author": "eggsy",
  "contributors": [
    "Kang"
  ],
  "license": "MIT",
  "keywords": [
    "wallpaper",
    "photo",
    "desktop"
  ],
  "commands": [
    {
      "name": "images",
      "title": "Search Images",
      "subtitle": "Unsplash",
      "description": "Search images on Unsplash.",
      "mode": "view"
    },
    {
      "name": "collections",
      "title": "Search Collections",
      "subtitle": "Unsplash",
      "description": "Search collections on Unsplash.",
      "mode": "view"
    },
    {
      "name": "likes",
      "title": "Liked Images",
      "subtitle": "Unsplash",
      "description": "View your liked images on Unsplash.",
      "mode": "view"
    },
    {
      "name": "random",
      "title": "Set Random Wallpaper",
      "subtitle": "Unsplash",
      "description": "Set a random wallpaper from Unsplash.",
      "mode": "no-view",
      "interval": "10m"
    }
  ],
  "preferences": [
    {
      "name": "accessKey",
      "title": "Access Key",
      "description": "Get your API key from https://unsplash.com/app/api",
      "type": "password",
      "required": true
    },
    {
      "name": "username",
      "title": "Username",
      "placeholder": "Your Unsplash username",
      "description": "Your username on Unsplash. Needed to list your lists.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "gridItemSize",
      "title": "Grid Item Size",
      "description": "The size of the grid items.",
      "type": "dropdown",
      "default": "medium",
      "required": false,
      "data": [
        {
          "value": "small",
          "title": "Small"
        },
        {
          "value": "medium",
          "title": "Medium"
        },
        {
          "value": "large",
          "title": "Large"
        }
      ]
    },
    {
      "name": "showImageTitle",
      "label": "Show Image Title",
      "description": "Show the image title in the grid view.",
      "type": "checkbox",
      "default": false,
      "required": false
    },
    {
      "name": "orientation",
      "title": "Image Orientation",
      "description": "The orientation of images that will be displayed as result.",
      "type": "dropdown",
      "data": [
        {
          "title": "All",
          "value": "all"
        },
        {
          "title": "Landscape",
          "value": "landscape"
        },
        {
          "title": "Portrait",
          "value": "portrait"
        },
        {
          "title": "Squarish",
          "value": "squarish"
        }
      ],
      "required": false,
      "default": "all"
    },
    {
      "name": "applyTo",
      "title": "Apply Wallpaper To",
      "description": "Set the wallpaper on all screens.",
      "type": "dropdown",
      "data": [
        {
          "title": "Current Desktop",
          "value": "current"
        },
        {
          "title": "Every Desktop",
          "value": "every"
        }
      ],
      "required": false,
      "default": "current"
    },
    {
      "name": "downloadSize",
      "title": "Default Download Size",
      "description": "The default size of the image to download. This might not be effective on every image, it will be applied where possible.",
      "type": "dropdown",
      "data": [
        {
          "title": "Original",
          "value": "raw"
        },
        {
          "title": "Full",
          "value": "full"
        },
        {
          "title": "Regular",
          "value": "regular"
        },
        {
          "title": "Small",
          "value": "small"
        }
      ],
      "required": false,
      "default": "full"
    },
    {
      "name": "collections",
      "title": "Custom Collections",
      "placeholder": "Collection IDs, comma & space separated",
      "description": "Leave blank for pre-selected ones - Collections to search for images on Set Random Wallpaper. Comma & space separated list of collection IDs.",
      "type": "textfield",
      "required": false,
      "default": ""
    },
    {
      "name": "includeDefaults",
      "title": "Include Default Collections",
      "type": "dropdown",
      "description": "If you're using custom collections, select whether to include the default ones or not.",
      "data": [
        {
          "title": "Yes",
          "value": "yes"
        },
        {
          "title": "No",
          "value": "no"
        }
      ],
      "required": false,
      "default": "no"
    },
    {
      "name": "wallpaperPath",
      "title": "Wallpaper Path",
      "placeholder": "~/Pictures/Wallpapers",
      "description": "The folder to store wallpapers.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "updateTime",
      "title": "Update Random Image",
      "description": "Set the time when the random image is updated.",
      "type": "dropdown",
      "default": "none",
      "required": false,
      "data": [
        {
