{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "xid",
  "title": "xid",
  "description": "Quickly create an xid from Raycast.",
  "icon": "icon.png",
  "author": "rosszurowski",
  "categories": [
    "Developer Tools",
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Generate xid",
      "description": "Creates a new xid and copies it to the clipboard.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.36.1",
    "base32-encode": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
