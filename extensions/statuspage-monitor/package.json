{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "statuspage-monitor",
  "title": "Statuspage Monitor",
  "description": "Monitor the status and view incidents of services using Atlassian Statuspage",
  "icon": "command-icon.png",
  "author": "coding",
  "categories": [
    "Data",
    "Developer Tools",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "viewStatus",
      "title": "View Status",
      "description": "View the status of your added services",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "node-fetch": "^3.2.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
