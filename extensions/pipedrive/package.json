{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pipedrive",
  "title": "Pipedrive Search",
  "description": "Search Pipedrive deals, people and organizations",
  "icon": "command-icon.png",
  "author": "ahp",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Pipedrive",
      "subtitle": "Pipedrive",
      "description": "Search Pipedrive deals, people and organizations",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "domain",
      "type": "textfield",
      "required": true,
      "title": "Pipedrive Domain",
      "description": "Your Pipedrive Domain",
      "placeholder": "yourcompany.pipedrive.com"
    },
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Your Pipedrive API Token",
      "placeholder": "Enter your Pipedrive API Token"
    },
    {
      "name": "limit",
      "type": "textfield",
      "required": true,
      "title": "Result Limit",
      "description": "Maximum number of results",
      "placeholder": "20"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "react": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
