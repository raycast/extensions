{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pipedrive",
  "title": "Pipedrive Search",
  "description": "Search Pipedrive Deals, People and Organiations",
  "icon": "command-icon.png",
  "author": "stephendolan",
  "contributors": [
    "ahp"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Deals, People and Organizations",
      "subtitle": "Pipedrive",
      "description": "Search Pipedrive deals, people and organizations",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "domain",
      "type": "textfield",
      "required": true,
      "title": "Pipedrive Domain",
      "description": "Your Pipedrive Domain",
      "placeholder": "yourcompany.pipedrive.com"
    },
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Your Pipedrive API Token",
      "placeholder": "Enter your Pipedrive API Token"
    },
    {
      "name": "limit",
      "type": "textfield",
      "required": true,
      "title": "Result Limit",
      "description": "Maximum number of results",
      "placeholder": "20"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.2",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
