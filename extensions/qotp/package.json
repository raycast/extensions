{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "qotp",
  "title": "QOTP",
  "description": "QOTP is a simple tool to generate OTP code",
  "icon": "qotp.png",
  "author": "ariesly15",
  "license": "MIT",
  "commands": [
    {
      "name": "qotp-panel",
      "title": "QOTP",
      "description": "QOTP is a simple tool to generate OTP code",
      "keywords": [
        "otp",
        "qotp",
        "ff"
      ],
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "required": true,
      "name": "pin",
      "title": "PinCode",
      "type": "password",
      "description": "qotp.corp 平台中用户设置的6位密码",
      "placeholder": "qotp.corp 平台中用户设置的6位密码"
    },
    {
      "required": true,
      "name": "secret",
      "title": "Secret",
      "type": "password",
      "description": "Your Secret",
      "placeholder": "Enter Your Secret"
    },
    {
      "required": false,
      "name": "passphrase",
      "title": "passphrase(跳板机登录线上机器的密码)",
      "type": "password",
      "description": "跳板机登录线上机器的密码"
    },
    {
      "required": false,
      "name": "genCodeCount",
      "title": "生成的code数量",
      "type": "textfield",
      "default": "3",
      "description": "生成的code数量",
      "placeholder": "请填写数字"
    }
  ],
  "categories": [
    "Productivity",
    "Security"
  ],
  "dependencies": {
    "@raycast/api": "^1.49.3",
    "cheetah-core": "^1.0.1",
    "otplib": "^12.0.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
