{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "office-lights",
  "title": "Office Lights",
  "description": "Toogle office lights",
  "icon": "command-icon.png",
  "author": "rauberdaniel",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "lights-off",
      "title": "Lights off",
      "description": "Office Lights off",
      "mode": "no-view"
    },
    {
      "name": "lights-auto",
      "title": "Lights auto",
      "description": "Office Lights auto",
      "mode": "no-view"
    },
    {
      "name": "lights-on",
      "title": "Lights on",
      "description": "Office Lights on",
      "mode": "no-view"
    },
    {
      "name": "blinds-up",
      "title": "Blinds up",
      "description": "Office Blinds up",
      "mode": "no-view"
    },
    {
      "name": "blinds-down",
      "title": "Blinds down",
      "description": "Office Blinds down",
      "mode": "no-view"
    },
    {
      "name": "blinds-stop",
      "title": "Blinds stop",
      "description": "Office Blinds stop",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
