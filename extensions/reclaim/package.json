{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "reclaim",
  "title": "Reclaim",
  "description": "Quickly create Tasks, see your scheule, & share Scheduling Links from Reclaim",
  "icon": "command-icon.png",
  "author": "webergnr",
  "owner": "reclaimai",
  "categories": [
    "Productivity",
    "Applications"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "apiToken",
      "title": "Reclaim.ai API Token",
      "description": "Your API token from reclaim.ai",
      "type": "textfield",
      "default": "",
      "placeholder": "Ex: 1234567890-ABCDEFG-1234567890",
      "required": true
    },
    {
      "name": "apiUrl",
      "title": "Reclaim.ai API URL",
      "description": "Your API URL",
      "type": "textfield",
      "default": "https://api.app.reclaim.ai/api",
      "placeholder": "Ex: https://api.app.reclaim.ai/api",
      "required": true
    },
    {
      "name": "upcomingEventsCount",
      "title": "Number of Upcoming Events",
      "description": "The number of events Reclaim will show in your menu bar",
      "type": "textfield",
      "default": "5",
      "placeholder": "Ex: 5, 10, 12, 42..",
      "required": false
    }
  ],
  "commands": [
    {
      "name": "notifications",
      "title": "Calendar Menu Bar",
      "description": "Show events & notifications in the menu bar",
      "mode": "menu-bar",
      "subtitle": "Reclaim",
      "icon": "command-icon.png",
      "interval": "1m"
    },
    {
      "name": "quick-task",
      "title": "Quick Task",
      "description": "Quickly create a Task",
      "mode": "no-view",
      "arguments": [
        {
          "type": "text",
          "name": "event",
          "title": "event",
          "placeholder": "Task (Meeting prep)",
          "required": false
        },
        {
          "type": "text",
          "name": "time",
          "title": "time",
          "placeholder": "Time (15min, 2h)",
          "required": false
        }
      ]
    },
    {
      "name": "my-calendar",
      "title": "My Calendar",
      "description": "See your upcoming calendar events",
      "mode": "view"
    },
    {
      "name": "task-form",
      "title": "Create Task",
      "description": "Create a Task with a few more options",
      "mode": "view"
    },
    {
      "name": "scheduling-links",
      "title": "Scheduling Links",
      "description": "Quickly share your Scheduling Links",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "@raycast/utils": "^1.8.0",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/date-fns": "^2.6.0",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}