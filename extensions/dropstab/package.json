{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "dropstab",
  "title": "DropsTab",
  "description": "Get crypto coin data and navigate to official sites or X. Instantly view your wallets via blockchain explorers.",
  "icon": "command-icon.png",
  "author": "nikolayqwerty",
  "license": "MIT",
  "commands": [
    {
      "name": "search-crypto",
      "title": "Search Crypto",
      "description": "Search DropsTab for coins and price.",
      "mode": "view"
    },
    {
      "name": "search-wallet",
      "title": "Wallet Explorer",
      "description": "Wallet Explorer Dropstab.",
      "mode": "view",
      "arguments": [
        {
          "name": "startAddress",
          "description": "Wallet address",
          "placeholder": "Enter wallet address",
          "type": "text"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.80.0",
    "@raycast/eslint-config": "^1.0.11",
    "node-fetch": "^3.0.0",
    "node-localstorage": "^3.0.5",
    "react": "^18.3.1"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "devDependencies": {
    "@types/node-localstorage": "^1.3.3"
  }
}