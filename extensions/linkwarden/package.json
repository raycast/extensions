{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "linkwarden",
  "title": "Linkwarden",
  "description": "This extension allows you to manage your Linkwarden bookmarks directly from Raycast. You can add new bookmarks and search through your existing ones effortlessly.",
  "icon": "extension_icon.png",
  "author": "leodbrs",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Linkwarden",
      "subtitle": "Linkwarden",
      "description": "Search your Linkwarden Bookmarks",
      "mode": "view"
    },
    {
      "name": "add",
      "title": "Add Website to Linkwarden",
      "subtitle": "Linkwarden",
      "description": "Add a new bookmark to Linkwarden",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.1",
    "@raycast/utils": "^1.12.5",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "preferences": [
    {
      "name": "LinkwardenUrl",
      "title": "Linkwarden URL",
      "description": "Your Linkwarden URL",
      "type": "textfield",
      "placeholder": "https://linkwarden.com",
      "required": true
    },
    {
      "name": "LinkwardenApiKey",
      "title": "Linkwarden API Key",
      "description": "Your Linkwarden API Key",
      "type": "password",
      "placeholder": "API Key",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
