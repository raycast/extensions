{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "noteplan-3",
  "title": "NotePlan 3",
  "description": "Allows you to see your daily plan, search notes and launch straight into NotePlan.",
  "icon": "command-icon.png",
  "author": "shakedlokits",
  "categories": [
    "Productivity",
    "Applications",
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Notes",
      "description": "Search all notes",
      "subtitle": "NotePlan 3",
      "mode": "view"
    },
    {
      "name": "today",
      "title": "Daily Plan",
      "description": "Show today's note",
      "keywords": ["today"],
      "subtitle": "NotePlan 3",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.32.1",
    "date-fns": "^2.28.0",
    "fast-glob": "^3.2.11",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.181",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.21.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
