{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kagi-fastgpt",
  "title": "Kagi FastGPT",
  "description": "Ask questions to Kagi's FastGPT AI engine.",
  "icon": "command-icon.png",
  "author": "http.james",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "ask",
      "title": "Ask FastGPT",
      "description": "Ask a question to FastGPT with web search enabled.",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "type": "text",
          "placeholder": "Who is Vladimir Prevolac?",
          "required": true
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "title": "Kagi API Key",
      "description": "Your Kagi developer API key.",
      "type": "password",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
