{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sound-manager",
  "title": "Sound Manager",
  "description": "Manage your Mac's sound input and output devices.",
  "icon": "command-icon.png",
  "author": "zepelinmad",
  "license": "MIT",
  "commands": [
    {
      "name": "list-devices",
      "title": "List Sound Devices",
      "description": "List and manage sound input and output devices",
      "mode": "view",
      "handler": "src/index.tsx"
    }
  ],
  "categories": [
    "System"
  ],
  "dependencies": {
    "@raycast/api": "^1.77.1",
    "@raycast/utils": "^1.16.1",
    "execa": "^6.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
