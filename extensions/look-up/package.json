{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "look-up",
  "title": "Look Up",
  "description": "Translate text with smart display timing - translations appear instantly in a non-disruptive HUD that adjusts visibility duration based on text length, keeping you in your workflow.",
  "icon": "extension-icon.png",
  "author": "mohammad_taleb",
  "keywords": [
    "translate",
    "language",
    "translation",
    "multilingual",
    "text",
    "utility"
  ],
  "categories": [
    "Productivity",
    "Communication",
    "Developer Tools"
  ],
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "look-up",
      "title": "Look Up",
      "subtitle": "Translate selected text",
      "description": "Translate selected text to your preferred language",
      "mode": "no-view",
      "preferences": [
        {
          "name": "targetLanguage",
          "title": "Target Language",
          "description": "The language to translate text into",
          "type": "dropdown",
          "required": true,
          "default": "ar",
          "data": [
            {
              "title": "Arabic",
              "value": "ar"
            },
            {
              "title": "Spanish",
              "value": "es"
            },
            {
              "title": "French",
              "value": "fr"
            },
            {
              "title": "German",
              "value": "de"
            },
            {
              "title": "Chinese",
              "value": "zh"
            },
            {
              "title": "Japanese",
              "value": "ja"
            },
            {
              "title": "Russian",
              "value": "ru"
            },
            {
              "title": "Italian",
              "value": "it"
            },
            {
              "title": "Portuguese",
              "value": "pt"
            },
            {
              "title": "Korean",
              "value": "ko"
            }
          ]
        },
        {
          "name": "sourceLanguage",
          "title": "Source Language",
          "description": "The source language of text (default: auto-detect)",
          "type": "dropdown",
          "required": false,
          "default": "auto",
          "data": [
            {
              "title": "Auto-detect",
              "value": "auto"
            },
            {
              "title": "English",
              "value": "en"
            },
            {
              "title": "Arabic",
              "value": "ar"
            },
            {
              "title": "Spanish",
              "value": "es"
            },
            {
              "title": "French",
              "value": "fr"
            },
            {
              "title": "German",
              "value": "de"
            },
            {
              "title": "Chinese",
              "value": "zh"
            },
            {
              "title": "Japanese",
              "value": "ja"
            },
            {
              "title": "Russian",
              "value": "ru"
            },
            {
              "title": "Italian",
              "value": "it"
            },
            {
              "title": "Portuguese",
              "value": "pt"
            },
            {
              "title": "Korean",
              "value": "ko"
            }
          ]
        },
        {
          "name": "enableCopyToClipboard",
          "label": "Copy translations to clipboard",
          "title": "Copy to Clipboard",
          "description": "Automatically copy translations to clipboard",
          "type": "checkbox",
          "required": false,
          "default": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.2",
    "@raycast/utils": "^1.17.0",
    "node-fetch": "^2.7.0",
    "translate": "^3.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.45",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
