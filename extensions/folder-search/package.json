{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "folder-search",
  "title": "Folder Search",
  "description": "Search for folders on your Mac",
  "icon": "folder-search.png",
  "author": "GastroGeek",
  "license": "MIT",
  "categories": [
    "Productivity",
    "System"
  ],
  "keywords": [
    "folders",
    "search"
  ],
  "commands": [
    {
      "name": "search",
      "title": "Folder Search",
      "description": "Search for folders on your Mac",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "maxResults",
      "title": "Maximum Results",
      "description": "The maximum number of search results that Folder Search should return",
      "type": "textfield",
      "required": false,
      "default": "250"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.2",
    "node-spotlight": "^0.1.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
