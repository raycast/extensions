{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "stardew-valley-wiki",
  "title": "Stardew Vally Character Search",
  "description": "Search and open Stardew Valley's characters in the wiki",
  "icon": "Duckk.png",
  "keywords": [
    "Stardew",
    "Valley",
    "SV"
  ],
  "author": "pokie",
  "license": "MIT",
  "contributors": [
    "Razberrycake"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Search SV Characters",
      "description": "Search and open Stardew Valley's characters in the wiki",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "showName",
      "type": "checkbox",
      "title": "Show Character Name",
      "label": "Show Name",
      "description": "Show SV Character's name in grid view",
      "required": false,
      "default": true
    },
    {
      "name": "showRecent",
      "type": "checkbox",
      "title": "Show Recent Characters",
      "label": "Show Recent",
      "description": "Show recently used Characters",
      "required": false,
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "node-fs": "^0.1.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
