{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "masked-fastmail",
  "title": "Masked Fastmail",
  "description": "Create new Fastmail masked emails.",
  "icon": "icon.png",
  "author": "kpa",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "mask",
      "title": "Create Masked Email",
      "description": "Create a Fastmail masked email",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "A FastMail API token with at least “Masked Email” scope"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.33.2",
    "node-fetch": "^3.2.4"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
