{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "papago-translate",
  "title": "Papago Translate",
  "description": "Language translation extension using Papago",
  "icon": "command-icon.png",
  "author": "rita_mordio",
  "categories": [
    "Applications"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "clientId",
      "title": "Papago Client ID",
      "description": "Papago Client ID",
      "type": "textfield",
      "required": true
    },
    {
      "name": "clientSecret",
      "title": "Papago Client Secret",
      "description": "Papago Client Secret",
      "type": "password",
      "required": true
    },
    {
      "name": "sourceLanguage",
      "title": "Source Language",
      "description": "Language to be translated",
      "type": "dropdown",
      "default": "en",
      "data": [
        {
          "title": "Korea",
          "value": "ko"
        },
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "japan",
          "value": "pa"
        }
      ],
      "required": false
    },
    {
      "name": "targetLanguage",
      "title": "Target Language",
      "description": "A translated language",
      "type": "dropdown",
      "default": "ko",
      "data": [
        {
          "title": "Korea",
          "value": "ko"
        },
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "japan",
          "value": "pa"
        }
      ],
      "required": false
    },
    {
      "name": "korEngMode",
      "title": "Option",
      "label": "Korea / English Mode",
      "description": "Detects the language and automatically converts it",
      "type": "checkbox",
      "default": true,
      "required": false
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Translate",
      "subtitle": "Papago",
      "description": "Papago Translate extension for Raycast",
      "mode": "view",
      "arguments": [
        {
          "name": "initializeText",
          "placeholder": "Word or Sentence",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.58.1",
    "axios": "^1.5.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/lodash": "^4.14.198",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
