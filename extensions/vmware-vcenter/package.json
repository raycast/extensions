{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "vmware-vcenter",
  "title": "VMware VCenter",
  "description": "Manage VMware vCenter",
  "icon": "command-icon.png",
  "author": "massimiliano_pasquini",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MassimilianoPasquini97/raycast_vmware_vcenter.git"
  },
  "preferences": [
    {
      "name": "certificate",
      "description": "Uncheck for Disable Certificate Validation",
      "type": "checkbox",
      "required": false,
      "default": false,
      "label": "Certificate Validation Enabled"
    }
  ],
  "commands": [
    {
      "name": "vm",
      "title": "Virtual Machines",
      "subtitle": "vCenter",
      "description": "List all available vm on VCenter",
      "mode": "view"
    },
    {
      "name": "host",
      "title": "Hosts",
      "subtitle": "vCenter",
      "description": "List all available hosts on vCenter",
      "mode": "view"
    },
    {
      "name": "network",
      "title": "Networks",
      "subtitle": "vCenter",
      "description": "List all available networks on vCenter",
      "mode": "view"
    },
    {
      "name": "datastore",
      "title": "Datastores",
      "subtitle": "vCenter",
      "description": "List all available datastores on vCenter",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.56.0",
    "@raycast/utils": "^1.10.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
