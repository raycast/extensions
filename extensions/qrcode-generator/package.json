{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "qrcode-generator",
  "title": "QR Code Generator",
  "description": "Generate QR code for an URL",
  "icon": "command-icon.png",
  "author": "Melvynx",
  "contributors": [
    "d2a",
    "pernielsentikaer",
    "theopheliart"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Generate QR Code",
      "description": "Generate a QR code from a URL that will be automatically opened in Finder. Supports PNG, SVG, UTF-8.",
      "mode": "view",
      "preferences": [
        {
          "name": "primaryAction",
          "description": "Set the primary action, the other will be secondary",
          "type": "dropdown",
          "required": false,
          "title": "Primary Action",
          "data": [
            {
              "title": "Save to disk",
              "value": "save"
            },
            {
              "title": "Show inline",
              "value": "inline"
            }
          ]
        },
        {
          "name": "fileType",
          "description": "Set the file type used to save.",
          "type": "dropdown",
          "required": false,
          "title": "File Type",
          "data": [
            {
              "title": "SVG",
              "value": "svg"
            },
            {
              "title": "PNG",
              "value": "png"
            },
            {
              "title": "UTF8",
              "value": "utf8"
            }
          ]

        }
      ]
    },
    {
      "name": "clipboard",
      "title": "Generate QR Code from Clipboard",
      "description": "Generate a QR Code from Clipboard and show it directly in Raycast",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.77.0",
    "@raycast/utils": "^1.16.0",
    "mac-open": "^0.1.3",
    "open": "^10.1.0",
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "^20.8.10",
    "@types/qrcode": "^1.5.1",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
