{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "singularityapp",
  "title": "SingularityApp",
  "description": "Добавление задач через Raycast",
  "icon": "command-icon.png",
  "author": "Baranov",
  "categories": [
    "Productivity",
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "quickaddtask",
      "title": "Quick Add Task",
      "mode": "no-view",
      "description": "Добавить новую задачу",
      "arguments": [
        {
          "name": "title",
          "type": "text",
          "placeholder": "Название",
          "mode": "single",
          "required": true
        },
        {
          "name": "description",
          "type": "text",
          "placeholder": "Описание",
          "mode": "single",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
