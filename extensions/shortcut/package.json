{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shortcut",
  "title": "Shortcut",
  "description": "Raycast extension for Shortcut",
  "icon": "command-icon.png",
  "author": "Yukai",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "assigned-stories",
      "title": "Assigned Stories",
      "subtitle": "Shortcut",
      "description": "Show assigned stories",
      "mode": "view"
    },
    {
      "name": "show-iterations",
      "title": "Show Iterations",
      "subtitle": "Shortcut",
      "description": "Show iterations",
      "mode": "view"
    },
    {
      "name": "show-epics",
      "title": "Show Epics",
      "subtitle": "Shortcut",
      "description": "Show Epics in current workspace",
      "mode": "view"
    },
    {
      "name": "create-story",
      "title": "Create Story",
      "subtitle": "Shortcut",
      "description": "Create a story on Shortcut",
      "mode": "view"
    },
    {
      "name": "search-stories",
      "title": "Search Stories",
      "description": "Search Stories on Shortcut",
      "mode": "view",
      "subtitle": "Shortcut"
    }
  ],
  "preferences": [
    {
      "name": "apiToken",
      "description": "The API token for the Shortcut",
      "required": true,
      "title": "API Token",
      "type": "password"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.1",
    "@raycast/utils": "^1.0.6",
    "@useshortcut/client": "^1.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
