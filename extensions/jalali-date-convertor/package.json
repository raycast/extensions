{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "jalali-date-convertor",
  "title": "Jalali Date Convertor",
  "description": "Converts Shamsi (Jalali) calendar dates to/from Gregorian calendar",
  "icon": "command-icon.png",
  "author": "amin_saedi",
  "categories": [
    "Data",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Convert Shamsi (Jalali) Date",
      "description": "Convert Jalali (Shamsi) calendar dates to/from Gregorian calendar",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.56.1",
    "jalali-moment": "^3.3.11"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
