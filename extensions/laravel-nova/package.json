{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "laravel-nova",
  "title": "Laravel Nova",
  "description": "Laravel Nova Docs",
  "icon": "command-icon.png",
  "author": "plank",
  "license": "MIT",
  "commands": [
    {
      "name": "nova",
      "title": "Search Documentation",
      "subtitle": "Laravel Nova",
      "description": "Search Laravel Nova docs directly from Raycast.",
      "mode": "view",
      "preferences": [
        {
        "name": "novaVersion",
        "type": "dropdown",
        "required": false,
        "title": "Default Nova Version",
        "description": "Specify the default Laravel Nova version to search docs for.",
        "default": "3.0.0",
        "data": [
          {
            "title": "4.0",
            "value": "4.0.0"
          },
          {
            "title": "3.0",
            "value": "3.0.0"
          },
          {
            "title": "2.0",
            "value": "2.0.0"
          },
          {
            "title": "1.0",
            "value": "1.0.0"
          }
        ]
      },
        {
          "name": "hitLimit",
          "description": "Indicate the number of results to display from your queries. Minimum of 1 and maximum of 100.",
          "type": "textfield",
          "required": false,
          "title": "Number of results to display (1â€“100)",
          "default": "20"
        }
    ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.32.0",
    "algoliasearch": "^4.12.1",
    "lodash": "^4.17.21",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
