{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "easy-prompt-for-chatgpt",
  "title": "EasyPrompt",
  "description": "Easily search prompt for ChatGPT",
  "icon": "command-icon.png",
  "author": "alanoy",
  "categories": [
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "ChatGPT Prompts Search",
      "description": "Easily search prompt for ChatGPT",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "primaryAction",
      "type": "dropdown",
      "description": "The primary action to perform on a selected prompt.",
      "required": false,
      "title": "Primary Action",
      "default": "copy",
      "data": [
        {
          "title": "Paste to Active App",
          "value": "paste"
        },
        {
          "title": "Copy to Clipboard",
          "value": "copy"
        }
      ]
    },
    {
      "name": "lang",
      "type": "dropdown",
      "description": "The language of the prompt, Defaults is English.",
      "required": false,
      "title": "Preffered language",
      "default": "en",
      "data": [
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "简体中文",
          "value": "zh-cn"
        },
        {
          "title": "繁体中文",
          "value": "zh-tw"
        }
      ]
    },
    {
      "name": "customSources",
      "description": "Customize your prompts source URL, support both JSON or CSV. For multiple sources, separate URLs with a comma.",
      "type": "textfield",
      "required": false,
      "title": "Custom prompts",
      "placeholder": "https://example.com/custom.json"
    },
    {
      "name": "refetchTimeout",
      "description": "The timeout period for re-fetching the prompts, measured in minutes. By default, this value is set to 360 minutes.",
      "type": "textfield",
      "required": false,
      "title": "Re-fetch Timeout(in minutes)",
      "placeholder": "360",
      "default": "360"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.50.5",
    "axios": "^1.4.0",
    "csv-parse": "^5.3.10"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
