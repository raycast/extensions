{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "govee",
  "title": "Govee",
  "description": "Control your Govee Lights",
  "icon": "govee.png",
  "author": "j3lte",
  "categories": [
    "Fun",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "control-govee-lights",
      "title": "Control Govee Lights",
      "subtitle": "Govee",
      "description": "Control your Govee Lights",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Device discovery timeout",
      "name": "deviceDiscoveryTimeout",
      "type": "textfield",
      "description": "Timeout in milliseconds for device discovery (default: 5000)",
      "required": false
    }
  ],
  "dependencies": {
    "@j3lte/govee-lan-controller": "^1.0.5",
    "@raycast/api": "^1.79.1",
    "@raycast/utils": "^1.16.3",
    "colord": "^2.9.3",
    "nanoid": "^5.0.7",
    "p-queue": "^8.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "22.0.0",
    "@types/react": "18.3.3",
    "eslint": "^8.51.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
