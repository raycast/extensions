{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "adguard-home",
  "title": "Adguard Home",
  "description": "Control your AdGuard Home instance",
  "icon": "command-icon.png",
  "version": "1.0.0",
  "author": "theplgeek",
  "homepage": "https://plgeek.com",
  "repository": "https://github.com/subsy/raycast-adguard-home",
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist",
    "publish": "npx @raycast/api@latest publish",
    "lint": "ray lint",
    "test": "jest"
  },
  "commands": [
    {
      "name": "toggle-protection",
      "title": "Toggle Protection",
      "description": "Enable or disable AdGuard Home protection",
      "mode": "view"
    },
    {
      "name": "view-stats",
      "title": "View Statistics",
      "description": "View DNS query statistics",
      "mode": "view"
    },
    {
      "name": "top-clients",
      "title": "Top Clients",
      "description": "View top DNS clients",
      "mode": "view"
    },
    {
      "name": "top-queried",
      "title": "Top Queried Domains",
      "description": "View most queried domains",
      "mode": "view"
    },
    {
      "name": "top-blocked",
      "title": "Top Blocked Domains",
      "description": "View most blocked domains",
      "mode": "view"
    },
    {
      "name": "top-upstreams",
      "title": "Top Upstreams",
      "description": "View most used upstream DNS servers",
      "mode": "view"
    },
    {
      "name": "query-log",
      "title": "Query Log",
      "description": "View recent DNS queries",
      "mode": "view"
    },
    {
      "name": "manage-rules",
      "title": "Manage Rules",
      "description": "View and manage custom filtering rules",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "serverUrl",
      "type": "textfield",
      "required": true,
      "title": "Server URL",
      "description": "Your AdGuard Home server URL (e.g., http://localhost:3000)",
      "placeholder": "http://localhost:3000"
    },
    {
      "name": "username",
      "type": "textfield",
      "required": true,
      "title": "Username",
      "description": "AdGuard Home username"
    },
    {
      "name": "password",
      "type": "password",
      "required": true,
      "title": "Password",
      "description": "AdGuard Home password"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.89.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.71",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.3.18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.5"
  }
}
