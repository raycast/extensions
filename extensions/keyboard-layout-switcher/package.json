{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "input-switcher",
  "title": "Keyboard Layout Switcher",
  "description": "Extension to switch keyboard layouts",
  "icon": "command-icon.png",
  "author": "lucaschultz",
  "license": "MIT",
  "commands": [
    {
      "name": "switch",
      "title": "Switch Layouts",
      "subtitle": "Keyboard",
      "description": "Show the active keyboard layout and switch to other available layouts",
      "mode": "view"
    },
    {
      "name": "toggle",
      "title": "Toggle Next Layout",
      "subtitle": "Keyboard",
      "description": "Toggle to the next keyboard layout",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.29.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}