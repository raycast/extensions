{
     "$schema": "https://json.schemastore.org/tsconfig",
     "include": ["src/**/*"],
     "compilerOptions": {
       "lib": ["ES2021"],
       "module": "commonjs",
       "target": "ES2021",
       "strict": true,
       "isolatedModules": true,
       "esModuleInterop": true,
       "skipLibCheck": true,
       "forceConsistentCasingInFileNames": true,
       "jsx": "react-jsx",
       "moduleResolution": "node",
       "allowSyntheticDefaultImports": true
     }
}
