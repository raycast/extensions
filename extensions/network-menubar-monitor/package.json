{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "network-menubar-monitor",
  "title": "Network Menubar Monitor",
  "description": "Show current network bandwith",
  "icon": "command-icon.png",
  "author": "iaroslav_naiden",
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Network Menubar",
      "description": "Show network bandwith in menubar",
      "mode": "menu-bar",
      "interval": "10s"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.4.8",
    "pretty-bytes": "^6.1.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
