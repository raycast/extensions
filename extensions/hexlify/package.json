{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hexlify",
  "title": "Hexlify",
  "description": "Convert between hex and binary representations",
  "icon": "command-icon.png",
  "author": "gkpln3",
  "license": "MIT",
  "commands": [
    {
      "name": "hexlify",
      "title": "Hexlify",
      "description": "Convert binary to hex string",
      "mode": "no-view"
    },
    {
      "name": "unhexlify",
      "title": "Unhexlify",
      "description": "Convert hex string to binary",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.3",
    "binascii": "^0.0.2",
    "execa": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
