{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "beeminder",
  "title": "Beeminder",
  "description": "Manage your Beeminder goals from Raycast",
  "icon": "beelogo.png",
  "categories": [
    "Productivity",
    "Web"
  ],
  "author": "vivgui",
  "license": "MIT",
  "commands": [
    {
      "name": "beeminder",
      "title": "Manage Beeminder Goals",
      "description": "Manage your Beeminder goals from Raycast",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.76.0",
    "@raycast/utils": "^1.15.0",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "20.14.2",
    "@types/react": "18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.1",
    "typescript": "^5.4.5"
  },
  "preferences": [
    {
      "name": "beeminderApiToken",
      "title": "Personal Auth Token",
      "description": "Your Personal Auth Token for the Beeminder API",
      "type": "password",
      "default": "",
      "required": true
    },
    {
      "name": "beeminderUsername",
      "title": "Beeminder Username",
      "description": "Your Beeminder Username",
      "placeholder": "https://www.beeminder.com/settings/account",
      "type": "textfield",
      "default": "",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
