{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zoom",
  "title": "Zoom",
  "description": "Start, schedule and join Zoom meetings.",
  "icon": "zoom.png",
  "author": "thomaslombart",
  "owner": "raycast",
  "access": "public",
  "categories": [
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "schedule-meeting",
      "title": "Schedule Meeting",
      "description": "Schedule a new Zoom meeting.",
      "mode": "view"
    },
    {
      "name": "start-meeting",
      "title": "Start Meeting",
      "description": "Start a new Zoom meeting.",
      "mode": "no-view"
    },
    {
      "name": "upcoming-meetings",
      "title": "Upcoming Meetings",
      "description": "List of you upcoming Zoom meetings.",
      "mode": "view"
    },
    {
      "name": "join-meeting",
      "title": "Join Meeting",
      "description": "Join a Zoom meeting.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "meetingId",
          "placeholder": "Meeting ID",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "this-week-meetings",
      "title": "This Week's Meetings",
      "description": "See your Zoom meetings for this week in the Menu Bar.",
      "mode": "menu-bar",
      "icon": "zoom.png",
      "interval": "15m"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.2",
    "@raycast/utils": "^1.0.8",
    "date-fns": "^2.28.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
