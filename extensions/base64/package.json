{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "base64",
  "title": "Base64",
  "description": "Quickly encode or decode base64 from the clipboard",
  "icon": "command-icon.png",
  "author": "DanielSinclair",
  "contributors": [
    "sammarks",
    "vitorlostada"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "text-to-base64",
      "title": "Text to Base64",
      "description": "Convert text to base64",
      "mode": "view"
    },
    {
      "name": "base64-to-text",
      "title": "Base64 to Text",
      "description": "Decode a base64 string",
      "mode": "view"
    },
    {
      "name": "base64-to-image",
      "title": "Base64 to Image",
      "description": "Convert base64 to image",
      "mode": "view"
    },
    {
      "name": "image-to-base64",
      "title": "Image to Base64",
      "description": "Convert image to base64",
      "mode": "view"
    },
    {
      "name": "encode",
      "title": "Base64 Encode",
      "description": "Overwrite the clipboard contents with an encoded string",
      "mode": "no-view"
    },
    {
      "name": "decode",
      "title": "Base64 Decode",
      "description": "Overwrite the clipboard contents with a decoded string",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "defaultAction",
      "description": "The default action to take when encoding / decoding a Base64 string.",
      "type": "dropdown",
      "required": false,
      "title": "Default Action",
      "default": "copyToClipboard",
      "data": [
        {
          "value": "copyToClipboard",
          "title": "Copy to Clipboard"
        },
        {
          "value": "pasteInApp",
          "title": "Paste in App"
        },
        {
          "value": "openInBrowser",
          "title": "Open in Browser"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.79.1",
    "js-base64": "3.7.7"
  },
  "devDependencies": {
    "@types/node": "16.11.7",
    "@types/react": "17.0.34",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "react-devtools": "4.21.0",
    "typescript": "4.4.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "publish": "npx @raycast/api@latest publish",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
