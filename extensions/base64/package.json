{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "base64",
  "title": "Base64",
  "description": "Quickly encode or decode base64 from the clipboard",
  "icon": "command-icon.png",
  "author": "DanielSinclair",
  "contributors": [
    "stelo",
    "sammarks",
    "ridemountainpig"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Base64",
      "description": "Encode / decode Base64",
      "mode": "view"
    },
    {
      "name": "encode",
      "title": "Base64 Encode",
      "description": "Overwrite the clipboard contents with an encoded string",
      "mode": "no-view"
    },
    {
      "name": "decode",
      "title": "Base64 Decode",
      "description": "Overwrite the clipboard contents with a decoded string",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "defaultAction",
      "description": "The default action to take when encoding / decoding a Base64 string.",
      "type": "dropdown",
      "required": false,
      "title": "Default Action",
      "default": "copyToClipboard",
      "data": [
        {
          "value": "copyToClipboard",
          "title": "Copy to Clipboard"
        },
        {
          "value": "pasteInApp",
          "title": "Paste in App"
        },
        {
          "value": "openInBrowser",
          "title": "Open in Browser"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.7",
    "@raycast/utils": "^2.2.1",
    "js-base64": "^3.7.8"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
