{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "capture-raycast-metadata",
  "title": "Capture Raycast Metadata",
  "description": "Capture a screenshot for Raycast extension's metadata.",
  "icon": "capture-icon.png",
  "author": "koinzhang",
  "categories": [
    "Media",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "capture-raycast-metadata",
      "title": "Capture Raycast Metadata",
      "description": "Capture a screenshot for Raycast extension's metadata.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "screenshotName",
      "title": "Screenshot Name",
      "description": "Set the screenshot name.",
      "type": "textfield",
      "required": false,
      "default": "Metadata"
    },
    {
      "name": "screenshotFormat",
      "title": "Screenshot Format",
      "description": "Set the screenshot format.",
      "type": "dropdown",
      "data": [
        {
          "title": "PNG",
          "value": "png"
        },
        {
          "title": "JPEG",
          "value": "jpg"
        },
        {
          "title": "PDF",
          "value": "pdf"
        },
        {
          "title": "TIFF",
          "value": "tiff"
        }
      ],
      "required": false,
      "default": "png"
    },
    {
      "name": "screenshotsDirectory",
      "title": "Screenshots Directory",
      "description": "The directory of screenshots to save. Path format: /Users/Username/Downloads or ~/Downloads.",
      "type": "textfield",
      "required": false,
      "placeholder": "~/Downloads",
      "default": "~/Downloads"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.33.1",
    "fs-extra": "^10.0.1",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
