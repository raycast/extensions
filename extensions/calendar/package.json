{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "calendar",
  "title": "Quick Calendar",
  "description": "View calendar month-by-month",
  "icon": "command-icon.png",
  "author": "fuksman",
  "contributors": ["pernielsentikaer"],
  "categories": ["Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Quick Calendar",
      "description": "Shows calendar for a month",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "weekStart",
      "type": "dropdown",
      "required": true,
      "title": "First Day of Week",
      "data": [
        {
          "title": "Monday",
          "value": "1"
        },
        {
          "title": "Sunday",
          "value": "0"
        }
      ],
      "description": "First Day of Week",
      "default": "1"
    },
    {
      "name": "showWeeks",
      "type": "checkbox",
      "required": true,
      "label": "Show week numbers",
      "title": "Week numbers",
      "description": "Indicated if it is necessary to show week numbers",
      "default": true
    },
    {
      "name": "viewMode",
      "type": "dropdown",
      "required": false,
      "title": "View Mode",
      "data": [
        {
          "title": "Compact",
          "value": "0"
        },
        {
          "title": "Wide",
          "value": "1"
        }
      ],
      "description": "View Mode",
      "default": "1"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "calendar": "^0.1.1",
    "weeknumber": "^1.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/calendar": "^0.1.2",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
