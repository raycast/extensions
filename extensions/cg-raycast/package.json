{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cg-raycast",
  "title": "CG Raycast",
  "description": "A Raycast extension for fast querying of cryptocurrency data.",
  "icon": "icon.png",
  "author": "RealTong",
  "categories": [
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "market-info",
      "title": "Market Info",
      "description": "View cryptocurrency market information",
      "mode": "view",
      "arguments": [
        {
          "name": "symbol",
          "placeholder": "BTC",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "open-interest",
      "title": "Open Interest",
      "description": "View cryptocurrency open interest data",
      "mode": "view",
      "arguments": [
        {
          "name": "symbol",
          "placeholder": "BTC",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "exchange-info",
      "title": "Exchange Info",
      "description": "View cryptocurrency exchange information",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "name": "BASE_URL",
      "title": "Base URL",
      "description": "Base URL for the CG Raycast",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^2.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "eslint": "^9.22.0",
    "react": "^19.0.0",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
