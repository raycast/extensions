{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "google-tasks",
  "title": "Google Tasks",
  "description": "Manage Google Tasks from Raycast.",
  "icon": "google-tasks.png",
  "author": "elliotdes",
  "contributors": [
    "pernielsentikaer"
  ],
  "categories": [
    "Productivity"
  ],
  "keywords": [
    "gtask"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "view-lists",
      "title": "View Lists",
      "description": "View task lists",
      "mode": "view"
    },
    {
      "name": "quick-list",
      "title": "Quick View",
      "description": "View tasks in specified list quickly",
      "mode": "view",
      "preferences": [
        {
          "name": "tasklistTitle",
          "type": "textfield",
          "required": true,
          "title": "Default List Title",
          "description": "Default list"
        }
      ]
    },
    {
      "name": "quick-add",
      "title": "Quick Add",
      "description": "Add task to specified list quickly",
      "mode": "no-view",
      "arguments": [
        {
          "name": "title",
          "type": "text",
          "placeholder": "Task Title",
          "required": true
        },
        {
          "name": "notes",
          "type": "text",
          "placeholder": "Task Note",
          "required": false
        }
      ],
      "preferences": [
        {
          "name": "tasklistTitle",
          "type": "textfield",
          "required": true,
          "title": "Default List Title",
          "description": "Default list"
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "type": "password",
      "required": true,
      "title": "OAuth Client ID",
      "description": "Your OAuth client ID.",
      "placeholder": "See https://console.developers.google.com/apis/credentials"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.3",
    "@raycast/utils": "^1.4.11",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
