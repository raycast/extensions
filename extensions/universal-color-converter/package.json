{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "universal-color-converter",
  "title": "Universal Color Converter",
  "description": "Convert colors between different formats: Hex, RGB, OKLCH, SwiftUI Color, and UIColor",
  "icon": "icon.png",
  "author": "mergesort",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "convert-color",
      "title": "Convert Color",
      "description": "Convert a color to all formats instantly",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.3",
    "culori": "^3.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
