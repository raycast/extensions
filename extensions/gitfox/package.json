{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "gitfox",
  "title": "Gitfox Repositories",
  "description": "Navigate and open your repositories in Gitfox.",
  "icon": "icon.png",
  "author": "L3K0V",
  "version": "1.0.0",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "My Repositories",
      "subtitle": "Gitfox",
      "description": "Navigate and open your repositories in Gitfox.",
      "keywords": [
        "git",
        "gitfox",
        "repositories",
        "repository",
        "repo"
      ],
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "gitfoxCliPath",
      "title": "Gitfox CLI path",
      "description": "Your local Gitfox CLI path",
      "type": "textfield",
      "default": "/usr/local/bin/gitfox",
      "value": "/usr/local/bin/gitfox",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.28.0",
    "bplist-parser": "^0.3.1",
    "node-git-current-branch": "^2.0.1",
    "tildify": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.23.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
