{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "displayplacer",
  "title": "Display Placer",
  "description": "Manage favorite display configurations",
  "icon": "displayplacer.png",
  "author": "eluce2",
  "license": "MIT",
  "preferences": [
    {
      "name": "path",
      "title": "Shell Path",
      "default": "/usr/gnu/bin:/usr/local/bin:/bin:/usr/bin:.:/opt/homebrew/bin",
      "description": "Colon-delimited list of paths to search for displayplacer and homebrew",
      "required": false,
      "type": "textfield"
    }
  ],
  "commands": [
    {
      "name": "config",
      "title": "Help / Configure Extension",
      "subtitle": "Display Placer",
      "description": "Learn how to setup and use this extension",
      "mode": "view"
    },
    {
      "name": "displayplacer",
      "title": "Switch Display Preset",
      "subtitle": "Display Placer",
      "description": "Set display presets and quickly switch between them.",
      "mode": "view"
    },
    {
      "name": "preset1",
      "title": "Load Display Preset #1",
      "subtitle": "Display Placer",
      "description": "Quickly Load Display Preset #1",
      "mode": "no-view"
    },
    {
      "name": "preset2",
      "title": "Load Display Preset #2",
      "subtitle": "Display Placer",
      "description": "Quickly Load Display Preset #2",
      "mode": "no-view"
    },
    {
      "name": "preset3",
      "title": "Load Display Preset #3",
      "subtitle": "Display Placer",
      "description": "Quickly Load Display Preset #3",
      "mode": "no-view"
    },
    {
      "name": "preset4",
      "title": "Load Display Preset #4",
      "subtitle": "Display Placer",
      "description": "Quickly Load Display Preset #4",
      "mode": "no-view"
    },
    {
      "name": "preset5",
      "title": "Load Display Preset #5",
      "subtitle": "Display Placer",
      "description": "Quickly Load Display Preset #5",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.33.0",
    "nanoid": "^3.3.3",
    "react-use": "^17.3.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}