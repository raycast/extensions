{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zotero",
  "title": "Search Zotero",
  "description": "Search Zotero Database from Raycast",
  "icon": "command-icon.png",
  "author": "reckoning-dev",
  "version": "1.0.0",
  "license": "MIT",
  "commands": [
    {
      "name": "commandSearchZotero",
      "title": "Search Database",
      "subtitle": "Zotero",
      "description": "Search Zotero",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "api_token",
      "type": "password",
      "required": true,
      "title": "Zotero API Token",
      "description": "Your Zotero API Token",
      "placeholder": "Enter Your Zotero API Token"
    },
    {
      "name": "user_id",
      "type": "password",
      "required": true,
      "title": "Zotero User ID",
      "description": "Your Zotero User ID",
      "placeholder": "Enter Your Zotero User ID"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "node-fetch": "^3.0.0",
    "he": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
