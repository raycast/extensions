{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zotero",
  "title": "Search Zotero",
  "description": "Search Zotero Database from Raycast",
  "icon": "command-icon.png",
  "author": "reckoning-dev",
  "categories": [
    "Productivity"
  ],
  "contributors": [
    "lazarjov",
    "joshuahhh"
  ],
  "version": "1.0.0",
  "license": "MIT",
  "commands": [
    {
      "name": "commandSearchZotero",
      "title": "Search Database",
      "subtitle": "Zotero",
      "description": "Search Zotero",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "zotero_path",
      "type": "textfield",
      "required": false,
      "default": "~/Zotero/zotero.sqlite",
      "title": "Zotero Path",
      "description": "Path to locate zotero sqlite file",
      "placeholder": "~/Zotero/zotero.sqlite"
    },
    {
      "name": "cache_period",
      "type": "textfield",
      "title": "Cache Period (in minutes)",
      "required": false,
      "default": "10",
      "label": "Number of Minutes to Cache",
      "description": "Minutes after which cache must be updated"
    },
    {
      "name": "use_bibtex",
      "type": "checkbox",
      "required": false,
      "default": false,
      "label": "Use BibTex?",
      "description": "Whether to use BibTex or not?"
    },
    {
      "name": "bibtex_path",
      "type": "textfield",
      "required": false,
      "default": "~/Zotero/lib.json",
      "title": "Better Bibtex CSL JSON File",
      "description": "Path to Better Bibtex CSL JSON File",
      "placeholder": "~/Zotero/lib.json"
    },
    {
      "name": "csl_style",
      "type": "dropdown",
      "required": false,
      "default": "ieee",
      "title": "CSL Format",
      "description": "CSL format for generating references",
      "data": [
        {
          "title": "ACS Applied Materials and Interfaces",
          "value": "acs-applied-materials-and-interfaces"
        },
        {
          "title": "Acta Botanica Croatica",
