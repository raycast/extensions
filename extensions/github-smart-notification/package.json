{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github-smart-notification",
  "title": "Github Smart Notification",
  "description": "Ley you know the necessary notifactions only",
  "icon": "command-icon.png",
  "author": "shopping-jaws",
  "owner": "shoppingjaws",
  "categories": [
    "Productivity"
  ],
  "version": "0.1.0",
  "license": "MIT",
  "commands": [
    {
      "icon": "command-icon.png",
      "subtitle": "List smart notifications",
      "name": "notifications",
      "title": "Github Notifications",
      "description": "List Notifications",
      "mode": "view"
    },
    {
      "icon": "command-icon.png",
      "subtitle": "List configured rule",
      "name": "configurations",
      "title": "List Configuration",
      "description": "Configure mute settings",
      "mode": "view"
    },
    {
      "icon": "command-icon.png",
      "subtitle": "Configure the auto read rule",
      "name": "configurationForm",
      "title": "Create Configuration",
      "description": "Configure mute settings",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "@raycast/utils": "^1.15.0",
    "minimatch": "^9.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "test": "jest",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "ghCommandPath",
      "title": "gh command binary PATH",
      "description": "Installed Path of gh command",
      "type": "textfield",
      "required": true
    },
    {
      "name": "autoReadMergedPr",
      "title": "automatically read merged PR",
      "description": "if true, merged PR will be read",
      "default": true,
      "type": "checkbox",
      "label": "checkbox",
      "required": true
    }
  ]
}
