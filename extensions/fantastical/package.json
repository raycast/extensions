{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fantastical",
  "title": "Fantastical",
  "description": "Create Fantastical events and reminders using Fantasticals natural language processing.",
  "icon": "fantastical.png",
  "author": "devahschaefers",
  "contributors": [
    "xilopaint",
    "ramsay",
    "pernielsentikaer"
  ],
  "categories": [
    "Applications",
    "Productivity"
  ],
  "license": "MIT",
  "keywords": [
    "fantastical",
    "fan",
    "reminder",
    "event"
  ],
  "preferences": [
    {
      "type": "checkbox",
      "name": "hideOnAdd",
      "label": "Hide Raycast on add",
      "description": "Hide the Raycast window after running a quick add command",
      "default": true,
      "required": false
    }
  ],
  "commands": [
    {
      "name": "fan-add-event-editable",
      "title": "Add Fantastical Event",
      "description": "Add a new Fantastical event",
      "mode": "no-view",
      "arguments": [
        {
          "type": "text",
          "name": "add",
          "title": "Add Event",
          "placeholder": "event",
          "required": true
        }
      ],
      "keywords": [
        "fantastical",
        "fan",
        "add",
        "event",
        "fan add event",
        "fan event"
      ]
    },
    {
      "name": "fan-add-reminder-editable",
      "title": "Add Fantastical Reminder",
      "description": "Add a new Fantastical reminder",
      "mode": "no-view",
      "arguments": [
        {
          "type": "text",
          "name": "add",
          "title": "Add Reminder",
          "placeholder": "reminder",
          "required": true
        }
      ],
      "keywords": [
        "fantastical",
        "fan",
        "add",
        "reminder",
        "fan add reminder",
        "fan reminder"
      ]
    },
    {
      "name": "fan-quick-add-reminder",
      "title": "Quickly Add Fantastical Reminder",
      "description": "Add a new reminder without opening Fantastical",
      "mode": "no-view",
      "arguments": [
        {
          "type": "text",
          "name": "add",
          "title": "Add Reminder",
          "placeholder": "reminder",
          "required": true
        }
      ],
      "keywords": [
        "fantastical",
        "fan",
        "add",
        "reminder",
        "fan add reminder",
        "fan reminder",
        "quick"
      ]
    },
    {
      "name": "fan-quick-add-event",
      "title": "Quickly Add Fantastical Event",
      "description": "Add a new event without opening Fantastical",
      "mode": "no-view",
      "arguments": [
        {
          "type": "text",
          "name": "add",
          "title": "Add Event",
          "placeholder": "event",
          "required": true
        }
      ],
      "keywords": [
        "fantastical",
        "fan",
        "add",
        "event",
        "fan add event",
        "fan event",
        "quick"
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.76.0",
    "@raycast/utils": "^1.16.0",
    "default-browser-id": "^5.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "eslint": "^8.56.0",
    "prettier": "^3.3.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
