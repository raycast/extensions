{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "calendly",
  "title": "Calendly Share Meeting Links",
  "description": "Quickly share your Calendly meeting links",
  "icon": "logo.png",
  "author": "eluce2",
  "license": "MIT",
  "commands": [
    {
      "name": "calendly",
      "title": "Share Meeting Link",
      "subtitle": "Calendly",
      "description": "Copy Meeting URL",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.28.0",
    "axios": "^0.23.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1"
  },
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "Personal Access Token",
      "description": "Calendly Personal Access token",
      "link": "https://calendly.com/integrations/api_webhooks",
      "placeholder": "Calendly Personal Access token"
    },
    {
      "name": "defaultAction",
      "type": "dropdown",
      "data": [
        {
          "title": "Copy Meeting Link",
          "value": "meeting"
        },
        {
          "title": "Copy Single Use Link",
          "value": "one-time"
        }
      ],
      "title": "Default Action",
      "description": "The action to use by default",
      "required": false,
      "default": "meeting",
      "value": "meeting"
    }
  ],
  "devDependencies": {
    "@types/lodash": "^4.14.175",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.20.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
