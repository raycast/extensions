{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "inbox-capture",
  "title": "Inbox Capture",
  "description": "Quickly capture thoughts to your inbox",
  "icon": "icon.png",
  "author": "hamilton",
  "categories": ["Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "capture",
      "title": "Capture to Inbox",
      "subtitle": "Quick Capture",
      "description": "Quickly capture a thought to your inbox",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "inboxPath",
      "title": "Inbox Directory Path",
      "description": "Where to save captured notes",
      "type": "textfield",
      "required": true,
      "placeholder": "~/Documents/Notes/inbox"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.72.1",
    "@raycast/utils": "^1.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "@types/react": "18.2.27"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}