{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "v2ex-viewer",
  "title": "V2EX",
  "description": "View V2EX in Raycast.",
  "icon": "v2ex-icon.png",
  "author": "daikaiyu",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "viewNodeTopics",
      "title": "View Topics By Node",
      "subtitle": "V2EX",
      "description": "View the topics of the specified node",
      "mode": "view"
    },
    {
      "name": "viewNotifications",
      "title": "View Notifications",
      "subtitle": "V2EX",
      "description": "View the latest notifications",
      "mode": "view"
    },
    {
      "name": "viewToken",
      "title": "View Token",
      "subtitle": "V2EX",
      "description": "View the currently used tokens",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "description": "Used to access V2EX API 2.0",
      "type": "password",
      "required": true,
      "title": "Token",
      "placeholder": "Please enter an access token"
    },
    {
      "name": "nodes",
      "description": "The nodes you want to visit",
      "type": "textfield",
      "required": true,
      "default": "programmer create share ideas apple jobs all4all qna",
      "title": "Nodes",
      "placeholder": "Please enter the nodes you want to visit"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.2",
    "@raycast/utils": "^1.3.1",
    "dayjs": "^1.11.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
