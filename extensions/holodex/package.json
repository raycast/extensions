    },
    {
      "name": "language",
      "type": "textfield",
      "title": "Video Language",
      "description": "Choose clip langauge from {en, ja, es, zh, id, ru, ko}, separated by comma",
      "placeholder": "en,ja",
      "required": true,
      "default": "en"
    },
    {
      "name": "externalVideoPlayer",
      "type": "dropdown",
      "title": "External Video Player",
      "description": "Add this app to action menu",
      "required": false,
      "default": "",
      "data": [
        {
          "title": "None",
          "value": ""
        },
        {
          "title": "IINA",
          "value": "IINA"
        },
        {
          "title": "mpv",
          "value": "mpv"
        },
        {
          "title": "VLC",
          "value": "VLC"
        }
      ]
    },
    {
      "name": "preferEnglishName",
      "type": "checkbox",
      "title": "Prefer English Name",
      "label": "Show channel name in English",
      "description": "Prefer English channel name over the original name",
      "required": false,
      "default": true
    },
    {
      "name": "preferYouTube",
      "type": "checkbox",
      "title": "Prefer YouTube",
      "label": "Set YouTube as a primary link opener",
      "description": "Prefer YouTube over Holodex as a link opener",
      "required": false,
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "date-fns": "^2.28.0",
    "node-fetch": "^3.2.6",
    "numeral": "^2.0.6"
  },
  "devDependencies": {
    "@types/node": "^17.0.40",
    "@types/numeral": "^2.0.2",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "react-devtools": "^4.24.7",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
