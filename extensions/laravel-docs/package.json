{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "laravel-docs",
  "title": "Laravel Docs",
  "description": "This extension allows you to search through the Laravel docs directly from Raycast.",
  "icon": "command-icon.png",
  "author": "indykoning",
  "contributors": [
    "aglipanci",
    "eth0"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Documentation",
      "subtitle": "Laravel Docs",
      "description": "Search through the Laravel docs directly from Raycast.",
      "mode": "view",
      "preferences": [
        {
          "name": "laravelVersion",
          "type": "dropdown",
          "required": true,
          "title": "Laravel Version",
          "description": "Specify the Laravel version it will search the docs for.",
          "default": "master",
          "data": [
            {
              "title": "Master",
              "value": "master"
            },
            {
              "title": "8",
              "value": "8.x"
            },
            {
              "title": "7",
              "value": "7.x"
            },
            {
              "title": "6",
              "value": "6.x"
            },
            {
              "title": "5.8",
              "value": "5.8"
            },
            {
              "title": "5.7",
              "value": "5.7"
            },
            {
              "title": "5.6",
              "value": "5.6"
            },
            {
              "title": "5.5",
              "value": "5.5"
            },
            {
              "title": "5.4",
              "value": "5.4"
            },
            {
              "title": "5.3",
              "value": "5.3"
            },
            {
              "title": "5.1",
              "value": "5.1"
            },
            {
              "title": "5.0",
              "value": "5.0"
            },
            {
              "title": "4.2",
              "value": "4.2"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.3",
    "algoliasearch": "^4.11.0",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
