{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "coffee",
  "title": "Coffee",
  "description": "Prevent the sleep function on your mac",
  "icon": "logo.png",
  "author": "mooxl",
  "contributors": [
    "bibixx",
    "GastroGeek",
    "pernielsentikaer",
    "oasaleh"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "caffeinate",
      "title": "Caffeinate",
      "subtitle": "Coffee",
      "description": "Prevent your Mac from sleeping",
      "mode": "no-view"
    },
    {
      "name": "decaffeinate",
      "title": "Decaffeinate",
      "subtitle": "Coffee",
      "description": "Turn off the caffeine",
      "mode": "no-view"
    },
    {
      "name": "caffeinateWhile",
      "title": "Caffeinate While",
      "subtitle": "Coffee",
      "description": "Prevent your Mac from sleeping while an certain app is running",
      "mode": "view"
    },
    {
      "name": "index",
      "title": "Caffeinate Status Menu Bar",
      "subtitle": "Coffee",
      "description": "Get the status of the current caffeination in your menu bar",
      "mode": "menu-bar",
      "interval": "1m"
    },
    {
      "name": "caffeinateToggle",
      "title": "Toggle Caffeinate",
      "subtitle": "Coffee",
      "description": "Toggle caffeination",
      "mode": "no-view"
    },
    {
      "name": "caffeinateFor",
      "title": "Caffeinate For",
      "subtitle": "Coffee",
      "description": "Prevent your Mac from sleeping for a certain time",
      "mode": "view"
    },
    {
      "name": "status",
      "title": "Caffeinate Status",
      "description": "Show the current caffeination status",
      "mode": "no-view",
      "interval": "1m"
    }
  ],
  "preferences": [
    {
      "name": "preventDisplay",
      "description": "Prevent the display from sleeping",
      "type": "checkbox",
      "required": false,
      "default": true,
      "title": "Options",
      "label": "Prevent Display Sleep"
    },
    {
      "name": "preventSystem",
      "description": "Prevent the system from sleeping",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Prevent System Sleep"
    },
    {
      "name": "preventDisk",
      "description": "Prevent the disk from sleeping",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Prevent Disk Sleep"
    },
    {
      "name": "icon",
      "description": "Select icon set for Menu Bar",
      "type": "dropdown",
      "required": false,
      "default": "coffee-pot",
      "title": "Menu Bar Icon",
      "data": [
        {
          "title": "Coffee Pot",
          "value": "coffee-pot"
        },
        {
          "title": "Coffee Mug 1",
          "value": "coffee-mug-1"
        },
        {
          "title": "Coffee Mug 2",
          "value": "coffee-mug-2"
        },
        {
          "title": "Coffee Paper Cup",
          "value": "paper-cup"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.0",
    "@raycast/utils": "^1.12.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.11.19",
    "@types/react": "18.2.57",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
