{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bing-wallpaper",
  "title": "Bing Wallpaper",
  "description": "Get and set Bing wallpapers within 15 days.",
  "icon": "wallpaper-icon.png",
  "author": "koinzhang",
  "categories": [
    "Media",
    "System"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "applyTo",
      "title": "Apply Wallpaper To",
      "description": "Apply the wallpaper to which screen.",
      "type": "dropdown",
      "data": [
        {
          "title": "Current Desktop",
          "value": "current"
        },
        {
          "title": "Every Desktop",
          "value": "every"
        }
      ],
      "required": false,
      "default": "every"
    },
    {
      "name": "downloadSize",
      "title": "Download Size",
      "description": "The size of the image to download. Default is Original.",
      "type": "dropdown",
      "data": [
        {
          "title": "Original",
          "value": "raw"
        },
        {
          "title": "Full",
          "value": "full"
        },
        {
          "title": "Regular",
          "value": "regular"
        },
        {
          "title": "Small",
          "value": "small"
        }
      ],
      "required": false,
      "default": "raw"
    }
  ],
  "commands": [
    {
      "name": "bing-wallpaper",
      "icon": "bing-wallpaper-icon.png",
      "title": "Bing Wallpaper",
      "description": "Get and set Bing wallpapers within 15 days.",
      "mode": "view"
    },
    {
      "name": "random-wallpaper",
      "icon": "random-wallpaper-icon.png",
      "title": "Random Wallpaper",
      "description": "Set Random Bing wallpapers to desktop.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.31.0",
    "node-fetch": "^3.2.3",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
