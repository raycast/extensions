{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "convertible-bond-reminder",
  "title": "Convertible bond reminder",
  "description": "Remind me for the convertible bond",
  "icon": "extension_icon.png",
  "author": "toxic_johann",
  "categories": [
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "convertible-bond",
      "title": "convertible bond",
      "subtitle": "convertible bond",
      "description": "Check convertible bond today",
      "mode": "menu-bar",
      "interval": "1h"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.56.3",
    "@slack/web-api": "^6.9.0",
    "dayjs": "^1.11.9",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/node-notifier": "^8.0.2",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
