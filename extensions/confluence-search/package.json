{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "confluence",
  "title": "Confluence",
  "description": "Quickly navigate, create and search Confluence through Raycast.",
  "icon": "command-icon.png",
  "author": "tbrown",
  "contributors": [
    "xmok",
    "litomore"
  ],
  "categories": [
    "Productivity",
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search",
      "subtitle": "Confluence",
      "description": "Search for pages and blogs across Confluence.",
      "mode": "view",
      "preferences": [
        {
          "name": "searchAttachments",
          "label": "Include Attachments",
          "description": "Include attachments in search results.",
          "type": "checkbox",
          "default": false,
          "required": false
        },
        {
          "name": "sort",
          "type": "dropdown",
          "required": false,
          "title": "Sort by",
          "description": "Sort search results by",
          "data": [
            {
              "value": "",
              "title": "--"
            },
            {
              "value": "lastmodified desc",
              "title": "Last modified (desc)"
            },
            {
              "value": "created desc",
              "title": "Created (desc)"
            },
            {
              "value": "title",
              "title": "Title"
            }
          ]
        }
      ]
    },
    {
      "name": "people",
      "title": "People",
      "subtitle": "Confluence",
      "description": "Search for people in Confluence.",
      "mode": "view"
    },
    {
      "name": "recent",
      "title": "Recent",
      "subtitle": "Confluence",
      "description": "See your recently viewed pages.",
      "mode": "view"
    },
    {
      "name": "popular",
      "title": "Popular",
      "subtitle": "Confluence",
      "description": "See what's popular in Confluence.",
      "mode": "view"
    },
    {
      "name": "go",
      "title": "Go",
      "subtitle": "Confluence",
      "description": "Quickly jump to useful places in Confluence.",
      "mode": "view"
    },
    {
      "name": "switch-site",
      "title": "Switch Site",
      "subtitle": "Confluence",
      "description": "Switch your active Confluence site.",
      "mode": "view"
    },
    {
      "name": "new-page",
      "title": "Create Page",
      "subtitle": "Confluence",
      "description": "Create a new page.",
      "mode": "no-view"
    },
    {
      "name": "new-blog",
      "title": "Create Blog",
      "subtitle": "Confluence",
      "description": "Create a new blog.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@raycast/api": "^1.100.2",
    "@raycast/utils": "^2.0.0",
    "apollo-link-rest": "^0.9.0",
    "apollo3-cache-persist": "^0.15.0",
    "async-mutex": "^0.5.0",
    "cross-fetch": "^4.1.0",
    "graphql": "^15.0.0",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
