{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github-gist",
  "title": "GitHub Gist",
  "description": "Create, search and display GitHub gists.",
  "icon": "github.png",
  "author": "koinzhang",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "access-token",
      "type": "password",
      "required": true,
      "title": "Personal access tokens",
      "description": "GitHub personal access tokens."
    }
  ],
  "commands": [
    {
      "name": "search-gists",
      "title": "Search Gists",
      "subtitle": "GitHub",
      "description": "Search and display GitHub gists.",
      "mode": "view",
      "preferences": [
        {
          "name": "remember-tag",
          "type": "checkbox",
          "required": false,
          "title": "Preferences",
          "label": "Remember Filter Tag",
          "description": "Remember gist filter tag.",
          "default": false
        },
        {
          "name": "detail",
          "type": "checkbox",
          "required": false,
          "label": "Show Gist Content",
          "description": "Show gist content details.",
          "default": true
        },
        {
          "name": "perPage",
          "type": "dropdown",
          "description": "Number of gist loaded per page.",
          "required": false,
          "title": "Per Page",
          "default": "30",
          "data": [
            {
              "title": "30",
              "value": "30"
            },
            {
              "title": "50",
              "value": "50"
            },
            {
              "title": "80",
              "value": "80"
            },
            {
              "title": "100",
              "value": "100"
            }
          ]
        }
      ]
    },
    {
      "name": "create-gist",
      "title": "Create Gist",
      "subtitle": "GitHub",
      "description": "Create GitHub gist from selection or clipboard.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@octokit/core": "^3.6.0",
    "@raycast/api": "^1.37.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
