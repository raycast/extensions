{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github-gist",
  "title": "GitHub Gist",
  "description": "Create, search and display GitHub Gist.",
  "icon": "github.png",
  "author": "koinzhang",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "access-token",
      "type": "password",
      "required": true,
      "title": "Personal access tokens",
      "description": "GitHub personal access tokens.",
      "default": ""
    }
  ],
  "commands": [
    {
      "name": "search-gist",
      "title": "Search Gist",
      "description": "Search and display GitHub Gist.",
      "mode": "view",
      "preferences": [
        {
          "name": "remember-tag",
          "type": "checkbox",
          "required": false,
          "title": "Preferences",
          "label": "Remember Filter Tag",
          "description": "Remember Gist Filter Tag.",
          "default": false
        },
        {
          "name": "detail",
          "type": "checkbox",
          "required": false,
          "label": "Show Gist Content",
          "description": "Show Gist Content on the right.",
          "default": true
        },
        {
          "name": "primary-action",
          "type": "dropdown",
          "description": "Set the primary action.",
          "required": false,
          "title": "Primary action",
          "default": "copy",
          "data": [
            {
              "title": "Copy to Clipboard",
              "value": "copy"
            },
            {
              "title": "Paste to Active App",
              "value": "paste"
            }
          ]
        }
      ]
    },
    {
      "name": "create-gist",
      "title": "Create Gist",
      "description": "Create GitHub Gist from selection or clipboard.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@octokit/core": "^3.6.0",
    "@raycast/api": "^1.31.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
