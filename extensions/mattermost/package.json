{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mattermost",
  "title": "Mattremost",
  "description": "Search for chats, see unread messages and set your presence status.",
  "icon": "mattermost-icon-rounded.png",
  "author": "ernest0n",
  "categories": [
    "Communication",
    "Productivity"
  ],
  "keywords": [
    "chat"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "channels",
      "title": "Search Channel",
      "subtitle": "Mattremost",
      "description": "Search for all teams directs, channels and open them directly in your Mattremost app.",
      "mode": "view",
      "keywords": [
        "chat"
      ]
    },
    {
      "name": "set-custom-status",
      "title": "Set Custom Status",
      "subtitle": "Mattremost",
      "description": "Set custom user status.",
      "mode": "view"
    },
    {
      "name": "set-precense-status",
      "title": "Set Precense Status",
      "subtitle": "Mattremost",
      "description": "Set user precense status.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "baseUrl",
      "description": "Mattermost host server.",
      "placeholder": "https://www.your-mattermost-url.com/api/v4",
      "required": true,
      "title": "URL",
      "type": "textfield"
    },
    {
      "name": "authorizationType",
      "description": "Way to authorize user to mattermost.",
      "required": true,
      "title": "Authorization Type",
      "type": "dropdown",
      "data": [
        {
          "title": "username:password",
          "value": "logpass"
        },
        {
          "title": "access token",
          "value": "token"
        }
      ]
    },
    {
      "name": "credentials",
      "description": "Username with password or personal access token of mattermost user.",
      "placeholder": "username:password or access token",
      "required": true,
      "title": "Authorization Credentials",
      "type": "textfield"
    },
    {
      "name": "teamName",
      "description": "Mattermost team name that should open by default if you are on multiple teams",
      "placeholder": "MySuperComany",
      "required": false,
      "title": "Default team name",
      "type": "textfield"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.2",
    "@raycast/utils": "^1.7.1",
    "luxon": "^3.1.1",
    "mattermost-redux": "5.31.2",
    "axios": "^0.26.1",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@types/luxon": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.4"
  }
}
