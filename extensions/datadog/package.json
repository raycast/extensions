{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-datadog",
  "title": "Datadog",
  "description": "Access Datadog resources",
  "icon": "icon@light.png",
  "author": "bgnfu7re",
  "contributors": [
    "rcruzper",
    "aexvir",
    "albertoxamin"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "command-list-dashboards",
      "title": "List Dashboards",
      "subtitle": "Datadog",
      "description": "List Dashboards",
      "mode": "view"
    },
    {
      "name": "command-list-notebooks",
      "title": "List Notebooks",
      "subtitle": "Datadog",
      "description": "List notebooks",
      "mode": "view"
    },
    {
      "name": "command-list-monitors",
      "title": "List Monitors",
      "subtitle": "Datadog",
      "description": "List monitors",
      "mode": "view",
      "preferences": [
        {
          "name": "tags",
          "title": "Tags",
          "description": "Comma separated list indicating what service and/or custom tags, if any, should be used to filter the list of monitors.",
          "type": "textfield",
          "required": false
        }
      ]
    },
    {
      "name": "command-list-apm",
      "title": "List APM",
      "subtitle": "Datadog",
      "description": "List available APM",
      "mode": "view",
      "preferences": [
        {
          "name": "envs",
          "title": "Environments",
          "description": "Comma-separated environments for listing",
          "type": "textfield",
          "required": true
        }
      ]
    }
  ],
  "preferences": [
    {
      "type": "password",
      "name": "api-key",
      "title": "API Key",
      "description": "Datadog API Key",
      "required": true
    },
    {
      "type": "password",
      "name": "app-key",
      "title": "App Key",
      "description": "Datadog Application Key",
      "required": true
    },
    {
      "type": "textfield",
      "name": "domain",
      "title": "Domain",
      "description": "Custom domain for Datadog URLs",
      "required": false
    },
    {
      "type": "dropdown",
      "name": "server",
      "title": "Server",
      "description": "Datadog server",
      "required": true,
      "data": [
        {
          "title": "US",
          "value": "datadoghq.com"
        },
        {
          "title": "US3",
          "value": "us3.datadoghq.com"
        },
        {
          "title": "US5",
          "value": "us5.datadoghq.com"
        },
        {
          "title": "EU",
          "value": "datadoghq.eu"
        },
        {
          "title": "US1-FED",
          "value": "ddog-gov.com"
        }
      ],
      "default": "datadoghq.com"
    }
  ],
  "dependencies": {
    "@datadog/datadog-api-client": "^1.0.0-beta.7",
    "@raycast/api": "^1.36.0",
    "node-fetch": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
