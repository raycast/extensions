{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "claris-snippets",
  "title": "Claris Snippets",
  "description": "Create and use snippets for Claris (FileMaker) Pro",
  "icon": "command-icon.png",
  "author": "eluce2",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "view-snippets",
      "title": "View Snippets",
      "subtitle": "Claris Snippets",
      "description": "View and use your saved snippets",
      "mode": "view"
    },
    {
      "name": "create-snippet",
      "title": "Create Snippet",
      "subtitle": "Claris Snippets",
      "description": "Create a new snippet",
      "mode": "view"
    },
    {
      "name": "manage-locations",
      "title": "Manage Snippet Locations",
      "subtitle": "Claris Snippets",
      "description": "Manage where your snippets are stored",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.43.0",
    "@raycast/utils": "^1.4.8",
    "lodash": "^4.17.21",
    "run-applescript": "^6.0.0",
    "uuid": "^8.3.2",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.185",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
