{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tw-colorpicker",
  "title": "TailwindCSS ColorPicker",
  "description": "Search TailwindCSS colors to use the hex or rgb color value in projects that don't use TailwindCSS classes.",
  "icon": "icon-tw-logo.png",
  "author": "magicjaqk",
  "categories": [
    "Developer Tools",
    "Design Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Colors",
      "subtitle": "TailwindCSS",
      "description": "Show color list.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.33.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
