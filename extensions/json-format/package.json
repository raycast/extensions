{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "json-format",
  "title": "Format JSON",
  "description": "Formats a JSON file with a selected indentation. If the JSON is stringified, it will be parsed before formatting.",
  "icon": "command-icon.png",
  "author": "destiner",
  "contributors": [
    "Aayush9029",
    "devlos",
    "lachero",
    "alexs"
  ],
  "categories": [
    "Data",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "formatClipboard",
      "title": "Format Clipboard JSON",
      "description": "Formats a JSON/JS Object string stored in clipboard and copies it back",
      "mode": "no-view"
    },
    {
      "name": "index",
      "title": "Format JSON",
      "description": "Formats a JSON/JS Object",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "default": false,
      "description": "Paste the formatted JSON to an active app",
      "label": "Automatically paste the formatted JSON",
      "name": "autopaste",
      "required": false,
      "title": "Auto Paste",
      "type": "checkbox"
    },
    {
      "data": [
        {
          "title": "Tab",
          "value": "tab"
        },
        {
          "title": "Spaces: 2",
          "value": "2"
        },
        {
          "title": "Spaces: 4",
          "value": "4"
        },
        {
          "title": "Spaces: 8",
          "value": "8"
        }
      ],
      "description": "Output file indentation",
      "name": "indent",
      "required": false,
      "title": "Indentation",
      "type": "dropdown"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.3",
    "js-beautify": "^1.14.7"
  },
  "devDependencies": {
    "@types/js-beautify": "^1.13.3",
    "@types/node": "~18.13.0",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.4",
    "react-devtools": "^4.27.2",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
