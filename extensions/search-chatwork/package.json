{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "chatwork-search",
  "title": "Chatwork Search",
  "description": "Search chats through all the room",
  "icon": "cw-icon.png",
  "author": "nagauta",
  "categories": [
    "Communication",
    "Applications",
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-chatwork",
      "title": "Search Chats",
      "subtitle": "Chatwork",
      "description": "search chats at Chatwork",
      "mode": "view"
    },
    {
      "name": "search-rooms",
      "title": "Search Rooms",
      "subtitle": "Chatwork",
      "description": "search rooms at Chatwork",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "useChatworkApiKey",
      "type": "checkbox",
      "required": false,
      "default": false,
      "title": "use Chatwork API Key",
      "description": "Show Connection Driver",
      "label": "switch auth way to api key"
    },
    {
      "name": "chatworkApiKey",
      "type": "password",
      "title": "Chatwork API Key",
      "required": false,
      "description": "type your Chatwork api key for auth",
      "placeholder": "xxxxxxxxxx",
      "label": "Chatwork api key"
    }],
  "dependencies": {
    "@raycast/api": "^1.42.2",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
