{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "signal",
  "title": "Signal",
  "description": "Open Signal chats",
  "icon": "signal.png",
  "author": "leeraymond78",
  "license": "MIT",
  "commands": [
    {
      "name": "open-chat",
      "title": "Open Chat",
      "subtitle": "Signal",
      "description": "Open quickly added Signal chats",
      "mode": "view"
    },
    {
      "name": "add-chat",
      "title": "Add Chat",
      "subtitle": "Signal",
      "description": "Add Signal chats to open them later",
      "mode": "view"
    }
  ],
  "categories": [
    "Applications",
    "Communication",
    "Productivity"
  ],
  "dependencies": {
    "@raycast/api": "^1.31.0",
    "nanoid": "^3.3.1",
    "fromnow": "^3.0.1",
    "phone": "^3.1.10",
    "osascript-tag": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
