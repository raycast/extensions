{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "library-genesis",
  "title": "Library Genesis",
  "description": "Search books on Library Genesis and view them.",
  "icon": "command-icon.png",
  "author": "yz3440",
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-books",
      "title": "Search Books",
      "subtitle": "Library Genesis",
      "description": "Search books on Library Genesis.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "copySearchContentFromClipboard",
      "description": "Copy search content from clipboard",
      "type": "checkbox",
      "default": true,
      "label": "Automatically copy from clipboard",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "cheerio": "^1.0.0-rc.12",
    "libgen": "^2.1.2",
    "node-fetch": "^3.2.8",
    "node-html-parser": "^5.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
