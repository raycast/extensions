{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "laravel-livewire",
  "title": "Laravel Livewire",
  "description": "Quickly search through Laravel Livewire documentation and open it in the browser",
  "icon": "livewire-icon-transparent.png",
  "author": "tafhyseni",
  "contributors": [
    "patrikkernke"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Documentation",
      "subtitle": "Laravel Livewire",
      "description": "Search Livewire",
      "mode": "view",
      "preferences": [
        {
          "name": "livewireVersion",
          "type": "dropdown",
          "required": true,
          "title": "Livewire Version",
          "description": "Specify the Laravel livewire version it will search the docs for.",
          "default": "2.x",
          "data": [
            {
              "title": "3.x",
              "value": "3.x"
            },
            {
              "title": "2.x",
              "value": "2.x"
            },
            {
              "title": "1.x",
              "value": "1.x"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.67.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "eslint": "^7.32.0",
    "react": "^18.2.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
