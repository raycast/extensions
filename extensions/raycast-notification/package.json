{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-notification",
  "title": "Raycast Notification",
  "description": "This extension makes it easy to display system built-in Notification Center and Raycast HUD via a quicklink or cross-extension launch, making the Raycast interface accessible to other applications or scripts.",
  "icon": "command-icon.png",
  "author": "maxnyby",
  "contributors": [
    "stelo",
    "litomore"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Notification",
      "description": "Deeplink for making a notification",
      "mode": "no-view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text",
          "required": true
        },
        {
          "name": "message",
          "placeholder": "Message",
          "type": "text",
          "required": false
        },
        {
          "name": "type",
          "type": "dropdown",
          "placeholder": "Type",
          "required": false,
          "data": [
            {
              "title": "Standard",
              "value": "standard"
            },
            {
              "title": "Success",
              "value": "success"
            },
            {
              "title": "Failure",
              "value": "failure"
            },
            {
              "title": "Notification Center",
              "value": "notification-center"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.87.0",
    "raycast-cross-extension": "^0.2.3",
    "raycast-notifier": "^0.1.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "eslint": "^8.57.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
