{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-timezone-converter",
  "title": "Timezone Converter",
  "version": "1.0.4",
  "description": "Converts any time to any timezone",
  "icon": "command-icon.png",
  "author": "joao.mainka",
  "contributors": [
    "pernielsentikaer",
    "ridemountainpig"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Timezone Converter",
      "description": "Converts any time to any timezone",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.5",
    "@raycast/utils": "^1.4.16",
    "luxon": "^3.2.1"
  },
  "devDependencies": {
    "@types/luxon": "^3.2.0",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "preferences": [
    {
      "name": "sortTimezones",
      "description": "Sort added timezones",
      "type": "dropdown",
      "required": true,
      "title": "Sort Options",
      "placeholder": "Sort the list of added timezones",
      "data": [
        {
          "title": "Sort Alphabetically",
          "value": "alphabetically"
        },
        {
          "title": "Sort Manually",
          "value": "manually"
        }
      ]
    },
    {
      "name": "hideWorldMap",
      "description": "Hide world map to display more time zones in the list",
      "label": "Hide World Map",
      "type": "checkbox",
      "required": false,
      "title": "Hide World Map",
      "default": false
    }
  ]
}
