{
  "name": "sabnzbd",
  "title": "SABnzbd",
  "description": "Manage SABnzbd locally",
  "icon": "sabnzbdplus.png",
  "author": "jns",
  "license": "MIT",
  "commands": [
    {
      "name": "show-queue",
      "title": "Show Queue",
      "subtitle": "SABnzbd",
      "description": "Show all slots in queue",
      "mode": "view"
    },
    {
      "name": "pause-queue",
      "title": "Pause Queue",
      "subtitle": "SABnzbd",
      "description": "Pause queue globally",
      "mode": "no-view"
    },
    {
      "name": "resume-queue",
      "title": "Resume Queue",
      "subtitle": "SABnzbd",
      "description": "Resume queue globally",
      "mode": "no-view"
    },
    {
      "name": "history",
      "title": "History",
      "subtitle": "SABnzbd",
      "description": "Full history output with details about all jobs",
      "mode": "view"
    },
    {
      "name": "shutdown",
      "title": "Shutdown",
      "subtitle": "SABnzbd",
      "description": "Shutdown SABnzbd",
      "mode": "no-view"
    },
    {
      "name": "restart",
      "title": "Restart",
      "subtitle": "SABnzbd",
      "description": "Restart SABnzbd",
      "mode": "no-view"
    },
    {
      "name": "change-complete-action",
      "title": "Change Complete Action",
      "subtitle": "SABnzbd",
      "description": "Set an end-of-queue action",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Enter your API Token",
      "placeholder": "api-token"
    },
    {
      "name": "url",
      "type": "textfield",
      "required": true,
      "title": "URL",
      "description": "Enter your URL",
      "placeholder": "http://127.0.0.1:8080/sabnzbd/"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.1",
    "moment": "^2.29.1",
    "sabnzbd-api": "^1.3.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
