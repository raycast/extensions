{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "single-focus",
  "title": "Single Focus",
  "description": "Get reminded on what is your current focus",
  "icon": "icon.png",
  "author": "vimtor",
  "categories": [
    "Productivity",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "menu-bar",
      "title": "Menu Bar",
      "description": "See current focus in the menu bar",
      "mode": "menu-bar",
      "interval": "1m"
    },
    {
      "name": "set-focus",
      "title": "Set Focus",
      "description": "Set current focus",
      "mode": "view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "required": false,
          "type": "text"
        }
      ]
    },
    {
      "name": "current-focus",
      "title": "Current Focus",
      "description": "Show current focus",
      "mode": "no-view",
      "interval": "10s"
    },
    {
      "name": "pause-reminder",
      "title": "Pause Reminder",
      "description": "Pause the reminder until a new focus is set",
      "mode": "no-view"
    },
    {
      "name": "clipboard-focus",
      "title": "Clipboard Focus",
      "description": "Set clipboard content as current focus",
      "mode": "no-view"
    },
    {
      "name": "selected-focus",
      "title": "Selected Text Focus",
      "description": "Set current focus using the selected text",
      "mode": "no-view"
    },
    {
      "name": "application-focus",
      "title": "Application Focus",
      "description": "Set current focus using front-most application (e.g. Things 3)",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "type": "dropdown",
      "name": "interval",
      "title": "Reminder Interval",
      "description": "How often to show the reminder",
      "default": "3m",
      "data": [
        {
          "title": "10 seconds",
          "value": "10s"
        },
        {
          "title": "30 seconds",
          "value": "30s"
        },
        {
          "title": "1 minute",
          "value": "1m"
        },
        {
          "title": "2 minutes",
          "value": "2m"
        },
        {
          "title": "3 minutes",
          "value": "3m"
        },
        {
          "title": "5 minutes",
          "value": "5m"
        },
        {
          "title": "10 minutes",
          "value": "10m"
        },
        {
          "title": "30 minutes",
          "value": "30m"
        }
      ],
      "required": false,
      "label": "Show reminder"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.11",
    "run-applescript": "^6.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/lodash": "^4.14.191",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}