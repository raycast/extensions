{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "single-focus",
  "title": "Single Focus",
  "description": "Closes all the open apps except the frontmost one",
  "icon": "command-icon.png",
  "author": "Mmehdi06",
  "contributors": [
    "litomore"
  ],
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Quit Non-Focused",
      "subtitle": "Single Focus",
      "description": "Close All The Open Apps Except Frontmost",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.71.4",
    "@raycast/utils": "^1.10.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
