{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "network-speed",
  "title": "Network Speed",
  "description": "Quickly check your internet connection speed",
  "icon": "extension-icon.png",
  "author": "koinzhang",
  "categories": [
    "Developer Tools",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "network-speed",
      "title": "Network Speed",
      "description": "Quickly check your internet connection speed",
      "mode": "view",
      "preferences": [
        {
          "name": "testSequentially",
          "type": "checkbox",
          "required": true,
          "title": "Test Method",
          "label": "Run tests sequentially instead of parallel",
          "description": "Running the tests in parallel better reflects real-world situations",
          "default": false
        },
        {
          "name": "loadingStyle",
          "type": "dropdown",
          "required": true,
          "title": "Loading style",
          "description": "Loading animation style when detecting internet speed",
          "default": "-1",
          "data": [
            {
              "title": "Random",
              "value": "-1"
            },
            {
              "title": "Circle",
              "value": "0"
            },
            {
              "title": "Graph",
              "value": "1"
            },
            {
              "title": "Speed Test (Blue)",
              "value": "2"
            },
            {
              "title": "Speed Test (Red)",
              "value": "3"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.41.1"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
