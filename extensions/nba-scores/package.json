{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nba-scores",
  "title": "NBA Scores",
  "description": "Various commands for NBA Scores via ESPN API",
  "icon": "command-icon.png",
  "author": "andyjsiegel",
  "license": "MIT",
  "commands": [
    {
      "name": "menu-scores",
      "title": "Show Scores",
      "description": "Show Live NBA Scores in the Mac Menu Bar",
      "mode": "menu-bar"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.2",
    "@raycast/utils": "^1.4.8",
    "axios": "^1.6.1",
    "cheerio": "^1.0.0-rc.12",
    "moment-timezone": "^0.5.43",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
