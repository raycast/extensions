{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "focustask",
  "title": "FocusTask",
  "description": "Manage and search for tasks in FocusTask",
  "icon": "focustask.png",
  "author": "vojto",
  "license": "MIT",
  "categories": [
    "Productivity"
  ],
  "commands": [
    {
      "name": "current-menubar",
      "title": "Show in Menubar",
      "subtitle": "FocusTask",
      "description": "Show current tasks in the menubar",
      "mode": "menu-bar",
      "interval": "1m"
    },
    {
      "name": "search",
      "title": "Search",
      "subtitle": "FocusTask",
      "description": "Find anything in FocusTask",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "key",
      "type": "textfield",
      "required": true,
      "title": "API Key",
      "description": "Your API Key. Find it Settings.",
      "placeholder": "Enter your API Key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.2",
    "@raycast/utils": "^1.3.3",
    "date-fns": "^2.28.0",
    "heroicons": "^2.0.4",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.10",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.36",
    "@types/react": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
