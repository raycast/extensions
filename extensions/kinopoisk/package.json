{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kinopoisk",
  "title": "Kinopoisk",
  "description": "Search for movies using kinopoisk.ru",
  "icon": "kinopoisk.png",
  "author": "mattisssa",
  "license": "MIT",
  "commands": [
    {
      "name": "searchMovie",
      "title": "Search Movie",
      "subtitle": "Kinopoisk",
      "description": "Search for a movie",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "API Token",
      "link": "https://kinopoiskapiunofficial.tech",
      "description": "Register token at https://kinopoiskapiunofficial.tech",
      "placeholder": "8ae44d3a-fd4c-4cb7-b919-1209e09f4c18"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
