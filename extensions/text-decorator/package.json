{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "text-decorator",
  "title": "Text Decorator",
  "description": "Super cool unicode text magic. Use ğ›ğ¨ğ¥ğ, ğ’Šğ’•ğ’‚ğ’ğ’Šğ’„ğ’”, and ğŸ…œğŸ…ğŸ…¡ğŸ…” ğŸ„²ğŸ…ğŸ„°ğŸ…‰ğŸ…ˆ ğ”©ğ”¬ğ”¬ğ”¨ğ”¦ğ”«ğ”¤ fonts on Facebook, Twitter, and everywhere else.",
  "icon": "text-decorator.png",
  "author": "koinzhang",
  "categories": [
    "Design Tools",
    "Fun"
  ],
  "keywords": [
    "yaytext",
    "text",
    "decorator",
    "font",
    "unicode",
    "convert"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "decorate-text",
      "title": "Decorate Text",
      "subtitle": "With Font",
      "description": "Decorate text from selection or clipboard.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "font",
          "type": "dropdown",
          "required": false,
          "placeholder": "With Font",
          "data": [
            {
              "title": "Bold serif",
              "value": "bold_serif"
            },
            {
              "title": "Italic serif",
              "value": "italic_serif"
            },
            {
              "title": "Bold italic serif",
              "value": "bold_italic_serif"
            },
            {
              "title": "Script",
              "value": "script"
            },
            {
              "title": "Bold script",
              "value": "bold_script"
            },
            {
              "title": "Fraktur",
              "value": "fraktur"
            },
            {
              "title": "Bold fraktur",
              "value": "bold_fraktur"
            },
            {
              "title": "Double struck",
              "value": "double_struck"
            },
            {
              "title": "Sans serif",
              "value": "sans_serif"
            },
            {
              "title": "Bold sans serif",
              "value": "bold_sans_serif"
            },
            {
              "title": "Italic sans serif",
              "value": "italic_sans_serif"
            },
            {
              "title": "Bold italic sans serif",
              "value": "bold_italic_sans_serif"
            },
            {
              "title": "Monospace",
              "value": "monospace"
            },
            {
              "title": "Regional indicator",
              "value": "regional_indicator"
            },
            {
              "title": "Circle",
              "value": "circle"
            },
            {
              "title": "Black circle",
              "value": "black_circle"
            },
            {
              "title": "Square",
              "value": "square"
            },
            {
              "title": "Parenthesized",
              "value": "parenthesized"
            },
            {
              "title": "Fullwidth",
              "value": "fullwidth"
            }
          ]
        }
      ]
    },
    {
      "name": "undecorate-text",
      "title": "Undecorate Text",
      "icon": "text-undecorator.png",
      "description": "Undecorate text from selection or clipboard.",
      "mode": "no-view"
    },
    {
      "name": "decorate-text-with-font",
      "title": "Decorate Text with Font",
      "icon": "text-decorator-with-font.png",
      "description": "Decorate text with specific font and set font of Decorate Text command.",
      "mode": "view",
      "preferences": [
        {
          "name": "itemLayout",
          "type": "dropdown",
          "description": "Set the layout of the font items.",
          "required": false,
          "title": "Font Layout",
          "default": "Grid",
          "data": [
            {
              "title": "Grid",
              "value": "Grid"
            },
            {
              "title": "List",
              "value": "List"
            }
          ]
        },
        {
          "name": "columns",
          "type": "dropdown",
          "description": "Set the number of columns of the font items. (Only works with Grid layout)",
          "required": false,
          "title": "Font Item Columns",
          "default": "7",
          "data": [
            {
              "title": "1",
              "value": "1"
            },
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            },
            {
              "title": "7",
              "value": "7"
            },
            {
              "title": "8",
              "value": "8"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "fontFallback",
      "type": "checkbox",
      "required": false,
      "label": "Fallback to Unsupported Fonts",
      "title": "Font Fallback",
      "description": "Even with the fallback mode, unexisting characters (non-ASCII like Ã³ ) will be ignored.",
      "default": true
    },
    {
      "name": "actionAfterDecoration",
      "type": "dropdown",
      "required": false,
      "title": "Action After Decoration",
      "description": "Paste the result or copy the result to the clipboard after decorating text.",
      "default": "Paste",
      "data": [
        {
          "title": "Paste to Active App",
          "value": "Paste"
        },
        {
          "title": "Copy to Clipboard",
          "value": "Copy"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.76.0"
  },
  "devDependencies": {
    "@types/node": "~20.12.13",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
