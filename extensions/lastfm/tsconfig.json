{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*", "src/types"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonjs",
    "target": "ES2022",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "typeRoots": ["src/types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}