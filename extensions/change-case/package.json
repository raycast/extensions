{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "change-case",
  "title": "Change Case",
  "description": "Transform a string between camelCase, snake_case, CONSTANT_CASE, and more",
  "icon": "command-icon.png",
  "author": "es183923",
  "license": "MIT",
  "commands": [
    {
      "name": "change-case",
      "title": "Change Case",
      "description": "Change the text in the clipboard",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "source",
      "type": "dropdown",
      "title": "Preferred source",
      "description": "Choose a preferred text source. If not available, both are tried.",
      "data": [
        {
          "title": "Selected",
          "value": "selected"
        },
        {
          "title": "Clipboard",
          "value": "clipboard"
        }
      ],
      "default": "selected",
      "required": false
    },
    {
      "name": "CamelCase",
      "type": "checkbox",
      "title": "Enabled Transformations",
      "description": "Enable the Camel Case Transformation",
      "label": "Capital Case",
      "default": true,
      "required": false
    },
    {
      "name": "CapitalCase",
      "type": "checkbox",
      "title": "",
