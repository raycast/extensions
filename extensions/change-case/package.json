      "label": "Snake Case",
      "default": true,
      "required": false
    },
    {
      "name": "SwapCase",
      "type": "checkbox",
      "title": "",
      "description": "Enable the \"sWAP cASE\" Transformation",
      "label": "Swap Case",
      "default": true,
      "required": false
    },
    {
      "name": "TitleCase",
      "type": "checkbox",
      "title": "",
      "description": "Enable the \"Title Case\" Transformation",
      "label": "Title Case",
      "default": true,
      "required": false
