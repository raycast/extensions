      "description": "Enable the \"SPonGE CasE\" Transformation",
      "label": "Sponge Case",
      "default": true,
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "1.44.0",
    "change-case-all": "^1.0.14",
    "execa": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "~18.6.4",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "react-devtools": "^4.25.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
