{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "change-case",
  "title": "Change Case",
  "description": "Transform a string between camelCase, snake_case, CONSTANT_CASE, and more",
  "type": "module",
  "icon": "command-icon.png",
  "author": "erics118",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "contributors": [
    "pernielsentikaer",
    "nagauta",
    "PWrzesinski"
  ],
  "keywords": [
    "text",
    "transform",
    "capital",
    "header",
    "lower",
    "pascal",
    "random",
    "sentence",
    "title"
  ],
  "license": "MIT",
  "debug": {
    "reloadShortcut": {
      "key": "r",
      "modifiers": [
        "command",
        "shift"
      ]
    }
  },
  "commands": [
    {
      "name": "change-case",
      "title": "Change Case",
      "description": "Change the case of the selected text or text in the clipboard",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "preserveCase",
      "type": "checkbox",
      "default": true,
      "title": "Behavior",
      "description": "Uncheck this option to preserve the original case of text before applying transformation. See README for details.",
      "label": "Lowercase text before transforming Sentence and Title Cases",
      "required": true
    },
    {
      "name": "popToRoot",
      "type": "checkbox",
      "default": false,
      "description": "Usually, you only need to change the case for one text at a time - check this to pop back to root transforming the text.",
      "label": "Pop to Root After Action",
      "required": true
    },
    {
      "name": "exceptions",
      "type": "textfield",
      "title": "Title and Sentence Case Exceptions",
      "description": "Words or phrases that should not be modified, separated by commas.",
      "default": "iOS, iPadOS, iPhone, macOS, tvOS, watchOS",
      "placeholder": "Comma-separated list of words or phrases",
      "label": "label",
      "required": false
    },
    {
      "name": "source",
      "type": "dropdown",
      "title": "Preferred Source",
      "description": "Choose a preferred text source. If no text is selected, clipboard is used.",
      "data": [
        {
          "title": "Selected",
          "value": "selected"
        },
        {
          "title": "Clipboard",
          "value": "clipboard"
        }
      ],
      "default": "selected",
      "required": false
    },
    {
      "name": "action",
      "type": "dropdown",
      "title": "Primary Action",
      "description": "Choose whether the primary action should copy or paste the output.",
      "data": [
        {
          "title": "Copy",
          "value": "copy"
        },
        {
          "title": "Paste",
          "value": "paste"
        }
      ],
      "default": "paste",
      "required": false
    },
    {
      "name": "CamelCase",
      "type": "checkbox",
      "title": "Enabled Transformations",
      "description": "Enable the \"camelCase\" Transformation",
      "label": "Camel Case",
      "default": true,
      "required": false
    },
    {
      "name": "CapitalCase",
      "type": "checkbox",
      "description": "Enable the \"Capital Case\" Transformation",
      "label": "Capital Case",
      "default": true,
      "required": false
    },
    {
      "name": "ConstantCase",
      "type": "checkbox",
      "description": "Enable the \"CONSTANT_CASE\" Transformation",
      "label": "Constant Case",
      "default": true,
      "required": false
    },
    {
      "name": "DotCase",
      "type": "checkbox",
      "description": "Enable the \"dot.case\" Transformation",
      "label": "Dot Case",
      "default": true,
      "required": false
    },
    {
      "name": "HeaderCase",
      "type": "checkbox",
      "description": "Enable the \"Header-Case\" Transformation",
      "label": "Header Case",
      "default": true,
      "required": false
    },
    {
      "name": "LowerCase",
      "type": "checkbox",
      "description": "Enable the \"lower case\" Transformation",
      "label": "Lower Case",
      "default": true,
      "required": false
    },
    {
      "name": "LowerFirst",
      "type": "checkbox",
      "description": "Enable the \"lower First\" Transformation",
      "label": "Lower First",
      "default": true,
      "required": false
    },
    {
      "name": "NoCase",
      "type": "checkbox",
      "description": "Enable the \"no case\" Transformation",
      "label": "No Case",
      "default": true,
      "required": false
    },
    {
      "name": "KebabCase",
      "type": "checkbox",
      "description": "Enable the \"kebab-case\" Transformation",
      "label": "Kebab Case",
      "default": true,
      "required": false
    },
    {
      "name": "KebabUpperCase",
      "type": "checkbox",
      "description": "Enable the \"KEBAB-UPPER-CASE\" Transformation",
      "label": "Kebab Upper Case",
      "default": true,
      "required": false
    },
    {
      "name": "PascalCase",
      "type": "checkbox",
      "description": "Enable the \"PascalCase\" Transformation",
      "label": "Pascal Case",
      "default": true,
      "required": false
    },
    {
      "name": "PascalSnakeCase",
      "type": "checkbox",
      "description": "Enable the \"Pascal_Snake_Case\" Transformation",
      "label": "Pascal Snake Case",
      "default": true,
      "required": false
    },
    {
      "name": "PathCase",
      "type": "checkbox",
      "description": "Enable the \"path/case\" Transformation",
      "label": "Path Case",
      "default": true,
      "required": false
    },
    {
      "name": "RandomCase",
      "type": "checkbox",
      "description": "Enable the \"rAndOm cAsE\" Transformation",
      "label": "Random Case",
      "default": true,
      "required": false
    },
    {
      "name": "SentenceCase",
      "type": "checkbox",
      "description": "Enable the \"Sentence case\" Transformation",
      "label": "Sentence Case",
      "default": true,
      "required": false
    },
    {
      "name": "SnakeCase",
      "type": "checkbox",
      "description": "Enable the \"snake_case\" Transformation",
      "label": "Snake Case",
      "default": true,
      "required": false
    },
    {
      "name": "SwapCase",
      "type": "checkbox",
      "description": "Enable the \"sWAP cASE\" Transformation",
      "label": "Swap Case",
      "default": true,
      "required": false
    },
    {
      "name": "TitleCase",
      "type": "checkbox",
      "description": "Enable the \"Title Case\" Transformation",
      "label": "Title Case",
      "default": true,
      "required": false
    },
    {
      "name": "UpperCase",
      "type": "checkbox",
      "description": "Enable the \"UPPER CASE\" Transformation",
      "label": "Upper Case",
      "default": true,
      "required": false
    },
    {
      "name": "UpperFirst",
      "type": "checkbox",
      "description": "Enable the \"Upper first\" Transformation",
      "label": "Upper First",
      "default": true,
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "change-case": "^5.4.4",
    "sponge-case": "^2.0.3",
    "swap-case": "^3.0.3",
    "title-case": "^4.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.13.0",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
