{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "curator-bio",
  "title": "Curator Bio",
  "description": "Control your curator.bio account from Raycast",
  "icon": "icon.png",
  "author": "Yukai",
  "categories": [
    "Productivity",
    "News"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "feed",
      "title": "My Feed",
      "subtitle": "Curator Bio",
      "description": "Show your feed",
      "mode": "view"
    },
    {
      "name": "discover",
      "title": "Discover",
      "subtitle": "Curator Bio",
      "description": "Discover new items",
      "mode": "view"
    },
    {
      "name": "my-page",
      "title": "My Page",
      "subtitle": "Curator Bio",
      "description": "Show your page",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "title": "Email",
      "description": "Your curator.bio email",
      "name": "email",
      "required": true
    },
    {
      "type": "password",
      "title": "Password",
      "description": "Your curator.bio password",
      "name": "password",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.11",
    "got": "^12.5.3",
    "linkifyjs": "^4.0.2",
    "lodash": "^4.17.21",
    "tough-cookie": "^4.1.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.190",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/tough-cookie": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
