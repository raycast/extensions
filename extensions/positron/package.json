{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "positron",
  "title": "Positron",
  "description": "Manage Positron projects",
  "icon": "positron.png",
  "author": "rrmaximiliano",
  "license": "MIT",
  "version": "1.0.0",
  "homepage": "https://github.com/posit-dev/positron",
  "keywords": [
    "positron",
    "ide",
    "data-science",
    "projects",
    "recent",
    "finder",
    "window",
    "posit"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "commands": [
    {
      "name": "index",
      "title": "List Recent Projects",
      "description": "List recent Positron projects",
      "mode": "view"
    },
    {
      "name": "open-with-positron",
      "title": "Open with Positron",
      "description": "Open selected Finder items or current directory in Positron",
      "mode": "no-view"
    },
    {
      "name": "open-new-window",
      "title": "Open New Window",
      "description": "Open a new Positron window",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.101.1",
    "@raycast/utils": "^1.17.0",
    "run-applescript": "^7.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
