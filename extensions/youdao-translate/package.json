{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "youdao-translate",
  "title": "Youdao Translate",
  "description": "Translate text using Youdao",
  "icon": "translate.png",
  "author": "tiancheng92",
  "license": "MIT",
  "commands": [
    {
      "name": "youdao_translate",
      "title": "Translate",
      "subtitle": "Youdao",
      "description": "Translate text using Youdao",
      "mode": "view"
    },
    {
      "name": "quickly_translate",
      "title": "Quickly Translate",
      "subtitle": "Youdao",
      "description": "Quickly translate text using Youdao",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "app_key",
      "type": "textfield",
      "required": true,
      "title": "APP Key",
      "description": "You can get Youdao Translate APP code at https://ai.youdao.com/console/",
      "placeholder": "Youdao Translate APP code"
    },
    {
      "name": "app_secret",
      "type": "password",
      "required": true,
      "title": "APP Secret",
      "description": "You can get Youdao Translate APP secret at https://ai.youdao.com/console/",
      "placeholder": "Youdao Translate APP Secret"
    },
    {
      "name": "handle_annotation",
      "type": "checkbox",
      "required": false,
      "title": "Handle Annotation",
      "description": "You can decide whether you want to remove comments from the input text",
      "placeholder": "Handle Annotation",
      "label": "Allow Handle Annotation"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.2",
    "@raycast/utils": "^1.19.1",
    "node-fetch": "^3.2.9"
  },
  "devDependencies": {
    "@types/node": "^18.6.1",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.5.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
